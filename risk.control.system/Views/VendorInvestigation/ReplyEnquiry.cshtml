@model CaseInvestigationVendorsModel

@{
    ViewData["Title"] = " Send Enquiry";
}
<section class="content">
    <form id="query-form" method="post" asp-controller="CaseVendorPost" asp-action="ReplyQuery" enctype="multipart/form-data" autocomplete="off">
        <input type="hidden" id="claimId" name="claimId" value="@Model.ClaimsInvestigation.Id" />
        <div id="article" class="card shadow-lg border-1 rounded-lg">
            <div class="card-header bg-secondary text-white text-center">
                <h3 class="card-title">
                    <i class="fas fa-newspaper"></i> Reply Enquiry
                    <span class="hover-text">
                        <i class="fas fa-info-circle"></i>
                        <span class="tooltip-text" id="information">

                            <li>
                                <i class='far fa-hand-point-right'></i> <i class="far fa-file-powerpoint"></i> Policy: @Model.ClaimsInvestigation?.PolicyDetail?.ContractNumber
                            </li>
                            <li>

                                <i class='far fa-hand-point-right'></i> Agency Report  <i class="fas fa-newspaper"></i>
                            </li>
                            <li>
                                <i class='far fa-hand-point-right'></i> Complete Enquiry info</b> </button>
                            </li>

                            <li>
                                <i class='far fa-thumbs-up'></i> <button class='btn btn-warning btn-xs'><i class='fa fa-edit'></i> <b>Reply Enquiry</b> </button>
                            </li>

                        </span>
                    </span>
                </h3>
            </div>
        </div>

        <partial name="_PolicyDetails" model="@Model" />

        <partial name="_AgencyReport" model="@Model" />

        <div class="card shadow-lg border-1 rounded-lg">
            <div class="card-header bg-secondary text-white text-center">
                <h3 class="card-title">
                    <i class="fa fa-edit"></i>  Reply
                    <span class="hover-text">
                        <i class="fas fa-info-circle"></i>
                        <span class="tooltip-text" id="information">
                            <li>

                                <i class='far fa-hand-point-right'></i> Enquiry Info  <i class="fas fa-newspaper"></i>
                            </li>
                            <li>
                                <i class='far fa-hand-point-right'></i>  Enquiry Response <i class="far fa-file-powerpoint"></i>
                            </li>
                        </span>
                    </span>
                </h3>
            </div>

            <div class="card-body">
                <div class="submit-progress hidden">
                    <i class="fas fa-sync fa-spin fa-4x fa-fw"></i>
                </div>
                <div class="row">
                    <div class="col-sm-12 d-flex align-items-stretch flex-column">
                        <div class="card bg-light d-flex flex-fill">
                            <div class="card-footer text-muted border-bottom-0">
                                <i class="far fa-file-powerpoint"></i> <strong> Enquiry Response </strong>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-11">
                                        <div class="form-group">
                                            <div class="col-lg-12">
                                                <div class="input-group">
                                                    <div class="row">
                                                        <div class="col-md-12">
                                                            <b>  <i class="fa fa-comment"></i> Descriptive Question </b>:  @Model.InvestigationReport.EnquiryRequest.Description
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-1">
                                        <div class="btn btn-default btn-file">
                                            <small>File Sent</small>
                                            @if (Model.InvestigationReport.EnquiryRequest.QuestionImageAttachment is not null)
                                            {
                                                <img id="profileImage" class="form-Image" src="data:image/*;base64,@(Convert.ToBase64String(Model.InvestigationReport.EnquiryRequest.QuestionImageAttachment))">
                                                <a asp-controller="Download" asp-action="EnquiryFileAttachment" asp-route-id="InvestigationReport.EnquiryRequest.QueryRequestId" class="mailbox-attachment-name"><i class="fas fa-paperclip"></i></a>
                                            }
                                            else
                                            {
                                                <img id="profileImage" class="form-Image" src="@Applicationsettings.NO_IMAGE">
                                            }
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-11">
                                        <div class="form-group">
                                            <div class="col-lg-12">
                                                <textarea id="description" class="form-control remarks" asp-for="InvestigationReport.EnquiryRequest.Answer" placeholder="Enquiry Description" rows="3" required>this is test </textarea>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-1">
                                        <div class="btn btn-default btn-file">
                                            <i class="fas fa-paperclip"></i><small>Attachment</small>
                                            <img class="file-image doc-profile-image" id="documentImage0" src=@Applicationsettings.NO_IMAGE>
                                            <input id="document" name="document" asp-for="InvestigationReport.EnquiryRequest.AnswerImageAttachment" type="file" accept=".png, .jpg, .jpeg, image/png, image/jpeg" class="form-control remarks" />
                                        </div>
                                        <div class="help-block text-center"><small>Max. size 2MB</small> </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    @if(Model.InvestigationReport.EnquiryRequests.Count > 0)
                    {
                        <div class="col-sm-12 d-flex align-items-stretch flex-column">

                        <div class="card bg-light d-flex flex-fill">
                            <div class="card-footer text-muted border-bottom-0">
                                <i class="fas fa-newspaper"></i> <strong> Enquiry Info </strong>
                            </div>
                            <div class="card-body">
                            @for (int i = 0; i < Model.InvestigationReport.EnquiryRequests.Count; i++)
                            {
                                <input type="hidden" name="InvestigationReport.EnquiryRequests[@i].QueryRequestId" asp-for="InvestigationReport.EnquiryRequests[@i].QueryRequestId" value="@Model.InvestigationReport.EnquiryRequests[i].QueryRequestId"/>
                                
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <div class="input-group">
                                                <div class="row">
                                                    <div class="col-md-12">
                                                        <b><i class="fa fa-comment"></i> Multiple Choice Question @(i + 1)</b>:
                                                        @Model.InvestigationReport.EnquiryRequests[i].Subject
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-check form-switch">
                                            <input asp-for="InvestigationReport.EnquiryRequests[@i].AnswerSelected"
                                            name="InvestigationReport.EnquiryRequests[@i].AnswerSelected"
                                                   class="form-check-input selected-case"
                                                   type="radio"
                                                   checked
                                                   value="@Model.InvestigationReport.EnquiryRequests[i].AnswerA" />
                                            <label class="form-check-label">
                                                @Model.InvestigationReport.EnquiryRequests[i].AnswerA
                                            </label>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-check form-switch">
                                            <input asp-for="InvestigationReport.EnquiryRequests[@i].AnswerSelected"
                                            name="InvestigationReport.EnquiryRequests[@i].AnswerSelected"
                                                   class="form-check-input selected-case"
                                                   type="radio"
                                                   value="@Model.InvestigationReport.EnquiryRequests[i].AnswerB" />
                                            <label class="form-check-label">
                                                @Model.InvestigationReport.EnquiryRequests[i].AnswerB
                                            </label>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-check form-switch">
                                            <input asp-for="InvestigationReport.EnquiryRequests[@i].AnswerSelected"
                                            name="InvestigationReport.EnquiryRequests[@i].AnswerSelected"
                                                   class="form-check-input selected-case"
                                                   type="radio"
                                                   value="@Model.InvestigationReport.EnquiryRequests[i].AnswerC"  />
                                            <label class="form-check-label">
                                                @Model.InvestigationReport.EnquiryRequests[i].AnswerC
                                            </label>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-check form-switch">
                                            <input asp-for="InvestigationReport.EnquiryRequests[@i].AnswerSelected"
                                            name="InvestigationReport.EnquiryRequests[@i].AnswerSelected"
                                                   class="form-check-input selected-case"
                                                   type="radio"
                                                   value="@Model.InvestigationReport.EnquiryRequests[i].AnswerD" />
                                            <label class="form-check-label">
                                                @Model.InvestigationReport.EnquiryRequests[i].AnswerD
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <hr />
                            }
                        </div>

                        </div>
                    </div>
                    }
                    
                </div>
            </div>

            <div class="card-footer">
                <div class="row">
                    <div class="col-md-12">
                        <div class="float-right">
                            <a id="back" asp-controller="VendorInvestigation" asp-action="Allocate" class="btn btn-secondary">
                                <i class="fas fa-times"></i> @Applicationsettings.CANCEL
                            </a>

                            <button id="send-query" type="submit" class="btn btn-warning">
                                <i class="fa fa-edit"></i>  Reply Enquiry
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </form>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/case-map.js"></script>
    <script src="~/js/common/case-details.js"></script>
    <script src="~/js/supervisor/get-report.js"></script>
}