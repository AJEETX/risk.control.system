@model CaseInvestigationVendorsModel
<div class="col-12 col-md-6">

<div class="card card-light border-secondary">

    <div class="card-header">
        <h3 class="card-title">
            <i class="fas fa-user-edit"></i> Supervisor:
            <span class="hover-text">
                <i class="fas fa-info-circle"></i>
                <span class="tooltip-text" id="information">
                    <span>
                        <i class="fas fa-user-shield"></i><b> Supervisor</b> remark
                    </span>

                </span>
            </span>
        </h3>
    </div>

    <div class="card-body">
        <div class="row">
            <div class="col-12">

                <div class="form-group">
                    <span class="input-group-label"> Additional Document:</span>
                    <div class="input-group mb-3">
                            <img class="form-Image" id="policyImage" src=@Applicationsettings.NO_POLICY_IMAGE data-bs-toggle="tooltip" title="No Additional Document" data-preview-id="createProfileImage" />
                            <input name="supervisorAttachment"
                                   accept=".jpg,.jpeg,.png" asp-for="InvestigationReport.SupervisorAttachment" type="file" class="form-control remarks" id="documentImageInput" data-bs-toggle="tooltip" title="Add Additional Document" />
                    </div>
                </div>

                <div class="form-group">
                    <span class="input-group-label"> Remarks :</span>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" asp-for="InvestigationReport.AgentRemarks"><i class="fas fa-comment"></i>  <i class="fa fa-asterisk asterik-style"></i></span>
                        </div>
                        <textarea required name="supervisorRemarks" id="supervisorRemarks" asp-for="InvestigationReport.SupervisorRemarks" class="form-control remarks" data-bs-toggle="tooltip" title="Enter Remarks" rows="2"></textarea>
                        <span asp-validation-for="InvestigationReport.SupervisorRemarks" class="text-danger"></span>
                    </div>
                </div>
            </div>

        </div>

    </div>
</div>
</div>