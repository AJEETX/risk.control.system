@using risk.control.system.Helpers;
@model CaseInvestigationVendorsModel
<article>
	<div class="bb-blog-inner">
		<div class="card shadow-lg border-1 rounded-lg">
			<div class="card-header bg-light text-white"
				<h3 class="card-title">
					<i class="fas fa-user-shield"></i> Report (@Model.ClaimsInvestigation?.PolicyDetail.InsuranceType.GetEnumDisplayName()): <span class="badge badge-light"> @Model.InvestigationReport.AgentEmail </span>
					<span class="hover-text">
						<i class="fas fa-info-circle"></i>
						<span class="tooltip-text" id="information">
							<span>
								<i class="fas fa-user-shield"></i><b> @Model.InvestigationReport.AgentEmail</b> report
							</span>
						</span>
					</span>
				</h3>

				<div class="card-tools">
					<span data-toggle="tooltip" title="Agent report (@Model.ClaimsInvestigation?.PolicyDetail.InsuranceType.GetEnumDisplayName()): @Model.InvestigationReport.AgentEmail" class="badge badge-light">
						<i class='far fa-hand-point-right'></i>
					</span>
					<button type="button" class="btn btn-tool" data-card-widget="collapse">
						<i class="fas fa-minus"></i>
					</button>
				</div>
			</div>
			<div class="submit-progress hidden">
				<i class="fas fa-sync fa-spin fa-4x fa-fw"></i>
			</div>
			<div class="card-body pb-0">
				<div class="row">

					@{
						var template = Model.InvestigationReport.ReportTemplate;
						template.CaseId = Model.ClaimsInvestigation.Id;
					}
					<input type="hidden" id="caseId" value="@Model.ClaimsInvestigation.Id" />
					<partial name="_Location" model="@template" />

				</div>
				<div class="row">
					<partial name="_AgencyAgentAnswer" model="@Model" />
					<partial name="_SupervisorRemarks" model="@Model" />

				</div>
			</div>
		</div>
	</div>
</article>


