@using risk.control.system.Helpers
@model CaseAgencyModel

<article>
    <div class="bb-blog-inner">

        <div class="card shadow-lg border-1 rounded-lg collapsed-card">
            <div class="card-header bg-light text-white text-center">
                <h3 class="card-title"><i class="fas fa-print nav-icon"></i> Agency Report: <span class="badge badge-light">@Model.CaseTask.Vendor.Email</span>

                    <span class="hover-text">
                        <i class="fas fa-info-circle"></i>
                        <span class="tooltip-text" id="information">
                            <span>

                                <i class="fas fa-user-shield"></i><b> @Model.CaseTask.Vendor.Email</b> report
                            </span>
                        </span>
                    </span>
                </h3>

                <div class="card-tools">
                    <span data-bs-toggle="tooltip" title="Agency report (@Model.CaseTask?.PolicyDetail.InsuranceType.GetEnumDisplayName()): @Model.CaseTask.Vendor.Email" class="badge badge-light">
                        <i class='far fa-hand-point-right'></i>
                        </span>
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-plus"></i>
                    </button>
                </div>
            </div>

            <div class="card-body">
                <div class="row">

                    @{
                        var template = Model.InvestigationReport.ReportTemplate;
                        template.CaseId = Model.CaseTask.Id;
                    }
                    <input type="hidden" id="caseId" value="@Model.CaseTask.Id" />
                    <partial name="_Location" model="@template" />
                </div>
                <div class="row">
                    <partial name="_AgencyAgentAnswer" model="@Model" />
                    <partial name="_AgencySupervisorAnswer" model="@Model" />
                </div>
            </div>
        </div>
    </div>
</article>