@model CaseTransactionModel

<div class="col-12 d-flex align-items-stretch flex-column">
    <div class="card bg-light d-flex flex-fill">
        <div class="card-header">
            <h3 class="card-title"><i class="fas fa-user-check"></i> Enquiry Reply : <span class="badge badge-light">@Model.ClaimsInvestigation.Vendor.Email</span> </h3>
            <div class="card-tools">
                <span data-bs-toggle="tooltip" title="Response Time" class="badge badge-light">
                    <i class="nav-icon fas fa-clock"></i> @Model.ClaimsInvestigation.InvestigationReport.EnquiryRequest.Updated.Value.ToString("dd-MMM-yy hh:mm tt")
                </span>
                
            </div>
        </div>
        <div class="card-body">

            <table id="dataTable" class="table table-bordered table-hover dt-responsive nowrap w-100">
                <thead>
                    <tr>

                        <th>
                            Document Requested
                        </th>
                        <th>
                            Assessor Question
                        </th>
                        <th>
                            Document Sent
                        </th>
                        <th>
                            Agency Response
                        </th>
                    </tr>
                </thead>
                <tr>
                    <td>
                        @if (Model.ClaimsInvestigation.InvestigationReport.EnquiryRequest.QuestionImageAttachment != null)
                        {
                            <img title="enquiry response document" id="enquiryDocument" class="img-fluid doc-profile-image" src="data:image/*;base64,@(Convert.ToBase64String(@Model.ClaimsInvestigation.InvestigationReport.EnquiryRequest.QuestionImageAttachment))">
                            <a asp-controller="Download" asp-action="EnquiryReplyFileAttachment"
                               asp-route-id="@Model.ClaimsInvestigation.InvestigationReport.EnquiryRequest.QueryRequestId" class="mailbox-attachment-name"><i class="fas fa-paperclip"></i> </a>
                        }
                        else
                        {
                            <img title="no response document" id="enquiryDocument" alt="face image" class="img-fluid doc-profile-image" src=@Applicationsettings.NO_IMAGE>
                        }

                    </td>
                    <td>
                        @Model.ClaimsInvestigation.InvestigationReport.EnquiryRequest.DescriptiveQuestion
                    </td>
                    
                    <td>
                        @if (Model.ClaimsInvestigation.InvestigationReport.EnquiryRequest.AnswerImageAttachment != null)
                        {
                            <img title="enquiry response document" id="enquiryDocument" class="img-fluid doc-profile-image" src="data:image/*;base64,@(Convert.ToBase64String(@Model.ClaimsInvestigation.InvestigationReport.EnquiryRequest.AnswerImageAttachment))">
                            <a asp-controller="Download" asp-action="EnquiryReplyFileAttachment"
                               asp-route-id="@Model.ClaimsInvestigation.InvestigationReport.EnquiryRequest.QueryRequestId" class="mailbox-attachment-name"><i class="fas fa-paperclip"></i> </a>
                        }
                        else
                        {
                            <img title="no response document" id="enquiryDocument" alt="face image" class="img-fluid doc-profile-image" src=@Applicationsettings.NO_IMAGE>
                        }
                    </td>
                    <td>
                        <i class="fas fa-user-check"></i> @Model.ClaimsInvestigation.InvestigationReport.EnquiryRequest.DescriptiveAnswer
                    </td>
                </tr>
            </table>

            @if (Model.ClaimsInvestigation.InvestigationReport.EnquiryRequests.Count > 0)
            {

                <table id="dataTable" class="table table-bordered table-hover dt-responsive nowrap w-100">
                    <thead>
                        <tr>
                            <th>
                                Question
                            </th>
                            <th>
                                 Options
                            </th>

                            <th>
                                Agency Response
                            </th>
                        </tr>
                    </thead>
                    @foreach (var request in Model.ClaimsInvestigation.InvestigationReport.EnquiryRequests)
                        @if (!string.IsNullOrWhiteSpace(request?.AnswerSelected))
                        {
                            <tr>
                                <td>
                                    @request.MultipleQuestionText
                                </td>
                                <td>
                                    <ul class="multiple-question">
                                        <li>
                                            @request.AnswerA
                                        </li>
                                        <li>
                                            @request.AnswerB
                                        </li>
                                        <li>
                                            @request.AnswerC
                                        </li>
                                        <li>
                                            @request.AnswerD
                                        </li>
                                    </ul>
                                </td>
                                <td>
                                    <i class="fas fa-user-check"></i> @request.AnswerSelected
                                </td>
                            </tr>
                        }
                </table>
            }

        </div>
    </div>
</div>
