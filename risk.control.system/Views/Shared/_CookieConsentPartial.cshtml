<!-- Cookie Consent Popup -->
@if (Context.Request.Cookies["analyticsCookies"] == null && Context.Request.Cookies["perfomanceCookies"] == null)
{
    <div id="cookiePopup" class="popup">
        <div class="popup-content">
            <h3>Accept Cookie Consent</h3>
            <p id="cookie-content">
                This application uses some cookies and records your IP address for the purposes of accessibility, security, and managing your access to the telecommunication network.
                You can disable data collection and cookies by changing your browser settings, but it may affect how this application functions. <a href="#" id="privacy">Learn More</a>
            </p>
            
            <div class="popup-buttons">
                <button id="acceptCookies" class="btn-accept">Accept All Cookies</button>
                <button id="manageCookies" class="btn-manage">Manage </button>
                <button id="revokeConsent" class="btn-revoke">Close</button>
            </div>
        </div>
    </div>

    <!-- Cookie Management Popup -->
    <div id="cookieManagePopup" class="popup">
    <div class="popup-content">
        <h3>Manage Cookie Preferences</h3>
        <form id="manageCookieForm text-sm">
            <div class="cookie-info">
                <input type="checkbox" id="essentialCookies" disabled checked>
                <label for="essentialCookies">Essential Cookies (Required)</label>
                <p class="cookie-description">
                    These cookies are necessary for the website to function properly and cannot be disabled. They include things like authentication and security features, ensuring you can navigate the site securely.
                </p>
            </div>
            <div class="cookie-info">
                <input type="checkbox" id="analyticsCookies" name="analyticsCookies">
                <label for="analyticsCookies">Analytics Cookies</label>
                <p class="cookie-description">
                    These cookies help us gather data on how users interact with the website. We use this information to improve the user experience and optimize the content and layout of the site. They help us understand what works and what doesn't.
                </p>
            </div>
            <div class="cookie-info">
                <input type="checkbox" id="perfomanceCookies" name="perfomanceCookies">
                <label for="perfomanceCookies">Performance Cookies</label>
                <p class="cookie-description">
                    Performance cookies collect information about how users interact with the site, such as page loading times and the functionality of specific elements. This helps us improve overall site performance and efficiency.
                </p>
            </div>
            <div class="popup-buttons">
                <button type="button" id="savePreferences" class="btn-accept">Save Preferences</button>
                <button type="button" id="cancelManage" class="btn-revoke">Cancel</button>
            </div>
        </form>
    </div>
</div>


    <div id="customAlert" class="alert-popup">
        <div class="alert-content">
            <span id="alertMessage">Cookies accepted! Get the best experience on our website.</span>
        </div>
    </div>
}