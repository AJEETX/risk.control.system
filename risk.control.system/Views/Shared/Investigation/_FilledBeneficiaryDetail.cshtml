@using risk.control.system.Helpers
@model CaseTransactionModel

@{
	// Progress and existence flags
	bool customerExists = Model.ClaimsInvestigation?.CustomerDetail != null;
	bool beneficiaryExists = Model.Beneficiary?.BeneficiaryDetailId > 0;

	// Default progress bar colors
	string beneficiaryProgressColor = "progress-bar-lightgrey";

	// Update progress bar colors based on conditions
	if (customerExists)
	{
		beneficiaryProgressColor = beneficiaryExists ? "progress-bar-green" : "progress-bar-grey";
	}

	var beneficiaryAddress = $"{Model.Beneficiary.Addressline} {Model.Beneficiary.District?.Name} {Model.Beneficiary.State?.Name} {Model.Beneficiary.Country?.Name} {Model.Beneficiary.PinCode?.Code}";
	var beneficiaryAgeInYears = $"{(int)(DateTime.UtcNow.Subtract(Model.Beneficiary.DateOfBirth.GetValueOrDefault()).TotalDays / 365)} years";
	var imgPath = "/flags/" + @Model.Beneficiary.Country.Code.ToLower() + ".png";
	var map = string.Format(Model.Beneficiary?.BeneficiaryLocationMap, "200", "200");

}

<div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch flex-column">
	<div class="card bg-light d-flex flex-fill">
		<!-- Card Header -->
		<div class="card-header text-muted border-bottom-0">
			<i class="fas fa-user-tie"></i> Beneficiary Details
			<span class="hover-text">
				<i class="fas fa-info-circle"></i>
				<span class="tooltip-text" id="beneficiary-information">
					<i class='fas fa-user-tie'></i> Beneficiary Details
				</span>
			</span>
		</div>

		<!-- Progress Bar -->
		<div class="progress">
			<i class="far fa-bookmark bookmark-green"></i>
			<div class="progress-bar @beneficiaryProgressColor" role="progressbar">
				<i class="fas fa-user-tie"></i>
			</div>
		</div>

		<!-- Card Body -->
		<div class="card-body">
			<div class="row">
				<!-- Beneficiary Details -->
				<div class="col-7">
					<h2 class="lead"><b>@Model.Beneficiary?.Name</b></h2>
					<p class="text-muted text-sm">
						<b>Relation: </b> @Model.Beneficiary?.BeneficiaryRelation?.Name
					</p>
					<ul class="ml-4 mb-0 fa-ul text-muted">
						<li class="small">
							<span class="fa-li"><i class="fa fa-money"></i></span>
							Annual Income: (@Model.Currency)<b> @Model.Beneficiary?.Income.GetEnumDisplayName()</b>
						</li>
						<li class="small">
							<span class="fa-li"><i class="fas fa-user-alt"></i></span>
							Age:<b> @beneficiaryAgeInYears</b>
						</li>
						<li class="small">
							<span class="fa-li"><i class="fas fa-lg fa-building"></i></span>
							Address:<b> @beneficiaryAddress</b>
						</li>
						<li class="small">
							<span class="fa-li"><i class="fas fa-lg fa-globe"></i></span>
							Country:<img src="@imgPath" class="flag-icon" data-bs-toggle="tooltip" /> @Model.Beneficiary?.Country.Name
						</li>
						<li class="small">
							<span class="fa-li"><i class="fas fa-lg fa-phone"></i></span>
							Mobile #: (+@Model.Beneficiary?.Country.ISDCode)<b> @Model.Beneficiary?.PhoneNumber</b>
						</li>
					</ul>
				</div>

				<!-- Beneficiary Image and Map -->
				<div class="col-5 text-center">
					<p class="text-muted text-sm">
						<img id="bImage" class="img-fluid block-data" src="/Document/GetBeneficiaryDocument/@Model.Beneficiary.BeneficiaryDetailId" data-bs-toggle="tooltip" title="@Model.Beneficiary?.Name Photo" alt="@Model.Beneficiary?.Name" />
					</p>
					<p class="text-muted text-sm">
						<img id="beneficiaryGoogleMap" class="img-fluid block-data" src="@map" title="Display Beneficiary Address on Map" data-bs-toggle="tooltip" alt="Beneficiary Address " />
					</p>
				</div>
			</div>
		</div>

		<!-- Card Footer -->
		<div class="card-footer">
			<div class="text-right">
				@if (customerExists)
				{
					if (beneficiaryExists)
					{
						<input type="hidden" asp-for="ClaimsInvestigation.Id" />
						<a id="edit-beneficiary" class="btn btn-warning" asp-controller="Beneficiary" asp-action="Edit" asp-route-id="@Model.ClaimsInvestigation.Id">
							<i class="fas fa-user-tie"></i> Edit Beneficiary
						</a>
					}
					else
					{
						<a id="add-beneficiary" class="btn btn-success" asp-controller="Beneficiary" asp-action="Create" asp-route-id="@Model.ClaimsInvestigation.Id">
							<i class="fas fa-user-tie"></i> Add Beneficiary
						</a>
					}
				}
				else
				{
					<a class="btn btn-outline-secondary">
						<i class="fas fa-user-tie"></i> Beneficiary
					</a>
				}
			</div>
		</div>
	</div>
</div>