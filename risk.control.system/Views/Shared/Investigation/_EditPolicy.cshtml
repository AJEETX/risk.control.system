@model risk.control.system.Models.InvestigationTask

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<input type="hidden" asp-for="Id" />
<div id="article" class="card shadow-lg border-1 rounded-lg">
    <div class="card-header bg-secondary text-white text-center">
        <h3 class="card-title">
            <i class="far fa-file-powerpoint"></i> @Applicationsettings.EDIT  Case
            <span class="hover-text">
                <i class="fas fa-info-circle"></i>
                <span class="tooltip-text" id="information">
                    <li>
                        <i class='far fa-hand-point-right'></i> Edit Case details
                    </li>
                    <li>
                        <i class='far fa-thumbs-up'></i> Complete wizard
                    </li>
                    <li>
                        <i class='fa fa-hand-peace-o'></i> <b> Assign</b> to Agency
                    </li>
                </span>
            </span>
        </h3>
    </div>
    <div class="container d-flex justify-content-center align-items-center">
        <div class="progresses">

            <div class="steps-edit">
                <span> <i class="far fa-file-powerpoint"></i></span>
            </div>

            <span class="line"></span>

            <div class="steps2">
                <span class="font-weight-bold"><i class="fa fa-user-plus"></i></span>
            </div>
            <span class="line"></span>
            <div class="steps2">
                <span class="font-weight-bold"><i class="fas fa-user-tie"></i></span>
            </div>
        </div>
    </div>
    <div class="card-body pt-0">
        <div class="submit-progress hidden">
            <i class="fas fa-sync fa-spin fa-4x fa-fw"></i>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <label class="input-group-label"> Case #:</label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" asp-for="ContractNumber"><i class="far fa-file-powerpoint"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                        </div>
                        <input id="ContractNumber" required asp-for="PolicyDetail.ContractNumber" class="form-control remarks" type="text" placeholder="Policy #" maxlength="20" autocomplete="off" />
                        <span asp-validation-for="PolicyDetail.ContractNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="input-group-label"> Case Type:</label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" asp-for="InsuranceType"><i class="nav-icon fas fa-tools"></i> <i class="fa fa-asterisk asterik-style"></i> </span>
                        </div>
                        <select id="InsuranceType" required asp-for="PolicyDetail.InsuranceType" class="form-control remarks" asp-items="Html.GetEnumSelectList<InsuranceType>()">
                            <option value="">--- SELECT ---</option>
                        </select>
                        <span asp-validation-for="PolicyDetail.InsuranceType" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="input-group-label"> Verification Type:</label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" asp-for="InvestigationServiceTypeId"><i class="nav-icon fas fa-tools"></i> <i class="fa fa-asterisk asterik-style"></i> </span>
                        </div>
                        <select id="InvestigationServiceTypeId" required asp-for="PolicyDetail.InvestigationServiceTypeId" class="form-control remarks" asp-items="ViewBag.InvestigationServiceTypeId">
                            <option value="">--- SELECT ---</option>
                        </select>
                        <span asp-validation-for="PolicyDetail.InvestigationServiceTypeId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="input-group-label"> Reason To Verify:</label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" asp-for="CaseEnablerId"><i class="nav-icon fas fa-puzzle-piece"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                        </div>
                        <select required asp-for="PolicyDetail.CaseEnablerId" class="form-control remarks" asp-items="ViewBag.CaseEnablerId">
                            <option value="">--- SELECT ---</option>
                        </select>
                        <span asp-validation-for="PolicyDetail.CaseEnablerId" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="form-group">
                    <label class="input-group-label"> Assured Amount (@ViewBag.Currency):</label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" asp-for="SumAssuredValue"><i class="fa fa-money"></i>  <i class="fa fa-asterisk asterik-style"></i></span>
                        </div>
                        <input id="SumAssuredValue" required asp-for="PolicyDetail.SumAssuredValue" class="form-control remarks" type="text" placeholder="Assured Amount (@ViewBag.Currency) of minimum 100"
                               min="100" maxlength="10" autocomplete="off" title="Assured Amount (@ViewBag.Currency) of minimum 100" data-toggle="tooltip"/>
                        <span asp-validation-for="PolicyDetail.SumAssuredValue" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <div class="col-sm-6">
                <div class="form-group">
                    <label class="input-group-label"> Issue Date:</label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" asp-for="ContractIssueDate"><i class="nav-icon far fa-calendar-check"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                        </div>
                        <input required asp-for="PolicyDetail.ContractIssueDate" id="ContractIssueDate" class="form-control remarks" type="date" />
                        <span asp-validation-for="PolicyDetail.ContractIssueDate" class="text-danger"></span>
                    </div>
                </div>
                <label class="input-group-label"> Incident Date:</label>
                <div class="form-group">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" asp-for="DateOfIncident"><i class="nav-icon far fa-calendar-alt"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                        </div>
                        <input required asp-for="PolicyDetail.DateOfIncident" id="DateOfIncident" class="form-control remarks" type="date" />
                        <span asp-validation-for="PolicyDetail.DateOfIncident" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="input-group-label"> Cause Of Incident:</label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" asp-for="CauseOfLoss"><i class="nav-icon far fa-flag"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                        </div>
                        <input required id="CauseOfLoss" asp-for="PolicyDetail.CauseOfLoss" class="form-control remarks" type="text" placeholder="Cause Of Incident" maxlength="70" autocomplete="off" />
                        <span asp-validation-for="PolicyDetail.CauseOfLoss" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="input-group-label"> Budget Centre:</label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" asp-for="CostCentreId"><i class="nav-icon fas fa-building"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                        </div>
                        <select required asp-for="PolicyDetail.CostCentreId" class="form-control remarks" asp-items="@ViewBag.CostCentreId">
                            <option value="">--- SELECT ---</option>
                        </select>
                        <span asp-validation-for="PolicyDetail.CostCentreId" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="input-group-label"> Document:</label>
                    <div class="input-group mb-3">
                        @if (Model?.PolicyDetail.DocumentPath is not null)
                        {
                            <img id="createProfileImage" class="form-Image" data-preview-id="createProfileImage" src="@Model?.PolicyDetail.DocumentPath"
                                 data-toggle="tooltip" title="Policy Document" />
                            <i class="fa fa-asterisk asterik-style"></i>
                            <input accept=".jpg,.jpeg,.png" asp-for="PolicyDetail.Document" type="file"
                                   class="form-control remarks document-image-input valid-border" id="createImageInput" data-preview-id="createProfileImage" data-toggle="tooltip" title="Case Document" data-default-image="@Applicationsettings.NO_POLICY_IMAGE" />
                        }
                        else
                        {
                            <img id="createProfileImage" class="form-Image" data-preview-id="createProfileImage" src=@Applicationsettings.NO_POLICY_IMAGE data-toggle="tooltip" title="No Case Document" />
                            <i class="fa fa-asterisk asterik-style"></i>
                            <input accept=".jpg,.jpeg,.png" asp-for="PolicyDetail.Document" type="file"
                                   class="form-control remarks document-image-input invalid-border" id="createImageInput" data-preview-id="createProfileImage" required data-toggle="tooltip" title="Case Document" data-default-image="@Applicationsettings.NO_POLICY_IMAGE" />
                        }
                        <span asp-validation-for="PolicyDetail.DocumentPath" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card-footer">
        <div class="text-right">
            <a id="cancel" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                <i class="fa fa-window-close"></i>
                @Applicationsettings.CANCEL
            </a>
            <button id="edit" type="submit" class="btn btn-warning">
                <i class="far fa-file-powerpoint"></i> Save Case
            </button>
        </div>
    </div>
</div>