@model InvestigationCreateModel

<div class="container d-flex justify-content-center align-items-center">

    <div class="progresses">
        <div class="steps2">
            <span> <i class="far fa-file-powerpoint"></i></span>
        </div>
        <span class="line"></span>
        <div class="steps3">
            <span class="font-weight-bold"><i class="fa fa-user-plus"></i></span>
        </div>
        <span class="line"></span>
        <div class="steps3">
            <span class="font-weight-bold"><i class="fas fa-user-tie"></i></span>
        </div>
    </div>
</div>
<div class="card-body">
    <div class="submit-progress hidden">
        <i class="fas fa-sync fa-spin fa-4x fa-fw"></i>
    </div>
    <div class="row">
        <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch flex-column">
            <div class="card bg-light d-flex flex-fill">
                <div class="card-header bg-light border-bottom">
                    <i class="far fa-file-powerpoint"></i> Case Details
                    <span class="hover-text">
                        <i class="fas fa-info-circle"></i>
                        <span class="tooltip-text" id="policy-information">
                            <i class='far fa-file-powerpoint'></i> Add Case details
                        </span>
                    </span>
                </div>
                <div class="progress">
                    <i class="far fa-bookmark bookmark-green"></i>
                    <div class="progress-bar progress-bar-grey" role="progressbar">
                        <i class="far fa-file-powerpoint"></i>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-7">
                            <h2 class="lead"><b>Case #: ...</b></h2>
                            <p class="text-muted text-sm">
                                <b>Case Type: </b>...
                            </p>
                            <ul class="ml-4 mb-0 fa-ul text-muted">
                                <li class="small">
                                    <span class="fa-li">
                                        <i class="fas fa-money-bill-wave"></i>
                                    </span>
                                    Assured Amount: ...
                                </li>
                                <li class="small">
                                    <span class="fa-li">
                                        <i class="far fa-calendar-check"></i>
                                    </span>
                                    Issue Date: ...
                                </li>
                                <li class="small">
                                    <span class="fa-li">
                                        <i class="fas fa-tools"></i>
                                    </span>
                                    Verification Type: ...
                                </li>
                                <li class="small">
                                    <span class="fa-li">
                                        <i class="far fa-calendar-alt"></i>
                                    </span>
                                    Incident Date: ...
                                </li>

                                <li class="small">
                                    <span class="fa-li">
                                        <i class="fas far fa-flag"></i>
                                    </span>
                                    Cause: ...
                                </li>
                                
                                <li class="small">
                                    <span class="fa-li">
                                        <i class="fas fa-building"></i>
                                    </span>
                                    Budget center:...
                                </li>
                               
                            </ul>
                        </div>
                        <div class="col-5 text-center">
                            <img id="documentImage" alt="policy-image" class="img-fluid form-Image" src=@Applicationsettings.POLICY_BLANK_IMAGE data-bs-toggle="tooltip" title="Case Document" />
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="text-right">
                        @if (Model.AllowedToCreate)
                        {
                            <a id="create-policy" class="btn btn-success" asp-action="CreatePolicy"><i class="far fa-file-powerpoint"></i> Add Case</a>
                        }
                        else
                        {
                            <button disabled id="create-policy" class="btn btn-secondary"><i class="far fa-file-powerpoint"></i> Add Case</button>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch flex-column">
            <div class="card bg-light d-flex flex-fill">
                <div class="card-header text-muted border-bottom-0">
                    <i class="fa fa-user-plus"></i> Customer Details
                    <span class="hover-text">
                        <i class="fas fa-info-circle"></i>
                        <span class="tooltip-text" id="customer-information">
                            <i class='fa fa-user-plus'></i> Add Customer detail
                        </span>
                    </span>
                </div>
                <div class="progress">
                    <i class="far fa-bookmark bookmark-green"></i>
                    <div class="progress-bar progress-bar-lightgrey" role="progressbar">
                        <i class="fa fa-user-plus"></i>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-7">
                            <h2 class="lead text-lightgray">
                                <b>Customer Name</b>
                            </h2>
                            <p class="text-sm">
                                <b>Occupation:</b> ---
                            </p>
                            <ul class="ml-4 mb-0 fa-ul text-sm">
                                <li class="small">
                                    <span class="fa-li"><i class="fas fa-restroom"></i></span>
                                    Gender: ----
                                </li>
                                <li class="small">
                                    <span class="fa-li"><i class="fas fa-user-alt"></i></span>
                                    Age: ---
                                </li>
                                <li class="small">
                                    <span class="fa-li"><i class="fa fa-money"></i></span>
                                    Annual Income: ----
                                </li>
                                
                                <li class="small">
                                    <span class="fa-li"><i class="fas fa-building"></i></span>
                                    Address: ---
                                </li>
                                <li class="small">
                                    <span class="fa-li"><i class="fas fa-lg fa-phone"></i></span>
                                    Contact: ---
                                </li>
                            </ul>
                        </div>
                        <div class="col-5 text-center">
                            <img class="form-Image img-fluid" src="@Applicationsettings.NO_USER" alt="Beneficiary Image">
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="text-right">
                            <a class="btn btn-outline-secondary"><i class="CaseReadyToAssign fa fa-user-plus"></i> Customer</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch flex-column">
            <div class="card bg-light d-flex flex-fill">
                <div class="card-header text-muted border-bottom-0">
                    <i class="fas fa-user-tie user-icon"></i>  Beneficiary Details
                    <span class="hover-text">
                        <i class="fas fa-info-circle"></i>
                        <span class="tooltip-text" id="beneficiary-information">

                            <i class='fas fa-user-tie'></i> Add Beneficiary details
                        </span>
                    </span>
                </div>
                <div class="progress">
                    <i class="far fa-bookmark bookmark-green"></i>
                    <div class="progress-bar progress-bar-lightgrey" role="progressbar">
                        <i class="fas fa-user-tie user-icon"></i>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-7 text-lightgray">
                            <h2 class="lead">
                                <b>Beneficiary Name</b>
                            </h2>
                            <p class="text-sm">
                                <b>Relation:</b> ---
                            </p>
                            <ul class="ml-4 mb-0 fa-ul text-sm">
                                <li class="small">
                                    <span class="fa-li"><i class="fas fa-user-alt"></i></span>
                                    Age: ---
                                </li>
                                <li class="small">
                                    <span class="fa-li"><i class="fa fa-money"></i></span>
                                    Annual Income: ----
                                </li>
                                
                                <li class="small">
                                    <span class="fa-li"><i class="fas fa-building"></i></span>
                                    Address: ---
                                </li>
                                <li class="small">
                                    <span class="fa-li"><i class="fas fa-lg fa-phone"></i></span>
                                    Contact: ---
                                </li>
                            </ul>
                        </div>
                        <div class="col-5 text-center">
                            <img class="form-Image img-fluid" id="profileImage" src="@Applicationsettings.NO_USER" alt="Document Image">
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="text-right">
                        <a class="CaseReadyToAssign btn btn-outline-secondary"><i class="fas fa-user-tie"></i> Beneficiary</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>