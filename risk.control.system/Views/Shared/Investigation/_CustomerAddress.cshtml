@model risk.control.system.Models.CustomerDetail
<input asp-for="SelectedCountryId" type="hidden" id="SelectedCountryId" name="SelectedCountryId" value="@Model?.CountryId" />
<input type="hidden" id="CountryId" asp-for="CountryId" />

<div class="form-group">
    <label class="input-group-label" for="PinCodeId">Pincode:</label>
    <div class="input-group mb-3 autocomplete-wrapper">
        <div class="input-group-prepend">
            <span class="input-group-text" for="PinCodeId">
                <i class="fas fa-map-pin"></i>
                <i class="fa fa-asterisk asterik-style"></i>
            </span>
        </div>
        <input type="text" id="PinCodeId" class="form-control remarks auto-dropdown" data-placeholder="pincode" placeholder="Type pincode or name" asp-for="PinCodeId"
               required value="" autocomplete="off" />
        <span asp-validation-for="PinCodeId" class="text-danger"></span>
        <input asp-for="SelectedPincodeId" type="hidden" id="SelectedPincodeId" name="SelectedPincodeId" value="@Model?.PinCodeId" />
        <div id="pincode-loading" class="loading-spinner">
            <i class="fas fa-spinner fa-spin"></i>
        </div>
    </div>
</div>

<div class="form-group">
    <label class="input-group-label" for="DistrictId">District:</label>
    <div class="input-group mb-3 autocomplete-wrapper">
        <div class="input-group-prepend">
            <span class="input-group-text" for="DistrictId">
                <i class="fas fa-city"></i>
                <i class="fa fa-asterisk asterik-style-disabled"></i>
            </span>
        </div>
        <input readonly type="text" id="DistrictId" class="form-control remarks" data-placeholder="district" data-bs-toggle="tooltip" placeholder="..." asp-for="DistrictId" required value="" tabindex="-1" />
        <span asp-validation-for="DistrictId" class="text-danger"></span>
        <input asp-for="SelectedDistrictId" type="hidden" id="SelectedDistrictId" name="SelectedDistrictId" value="@Model?.DistrictId" title="Auto-selected based on Pincode" />
        <div id="district-loading" class="loading-spinner">
            <i class="fas fa-spinner fa-spin"></i>
        </div>
    </div>
</div>
<div class="form-group">
    <label class="input-group-label" for="StateId"> State:</label>
    <div class="input-group mb-3 autocomplete-wrapper">
        @{
            var img = "/flags/" + @Model.Country.Code.ToLower() + ".png";
        }
        <div class="input-group-prepend">

            <span class="input-group-text country-code-text" data-bs-toggle="tooltip" title="Registered Country: @Model?.Country.Name">
                <img src="@img" class="flag-icon" data-bs-toggle="tooltip" /> @Model?.Country.Code<i class="fa fa-asterisk asterik-style-info"></i>
            </span>
        </div>
        <input readonly type="text" id="StateId" class="form-control remarks" data-placeholder="state" data-bs-toggle="tooltip"  placeholder="..." asp-for="StateId" required value="" tabindex="-1" />
        <span asp-validation-for="StateId" class="text-danger"></span>
        <input asp-for="SelectedStateId" type="hidden" id="SelectedStateId" name="SelectedStateId" value="@Model?.StateId" title="Auto-selected based on Pincode" />
        <div id="state-loading" class="loading-spinner">
            <i class="fas fa-spinner fa-spin"></i>
        </div>
    </div>
</div>
