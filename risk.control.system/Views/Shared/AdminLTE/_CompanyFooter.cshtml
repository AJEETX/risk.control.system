@using risk.control.system.Models;
@model ClientCompany
<footer class="main-footer text-sm no-print">
    @if (Model.LicenseType == Standard.Licensing.LicenseType.Trial)
    {
        var expires = Model.ExpiryDate.Value.Subtract(DateTime.Now).Days;
        <marquee behavior="scroll" direction="left">
            <span class="trial-banner"> Trial Version with limited features</span> !
            <i> { MAX Allowed Claim Creation = @Model.TotalCreatedClaimAllowed].</i>
            <span class="badge badge-light"></span>
            <b> Expire in @expires days </b>
        </marquee>
    }

    <div class="float-right d-none d-sm-block">
        <a href="https://hostedscan.com"><img src="https://hostedscan.com/hostedscan-badge-dark.svg" alt="HostedScan | An automated vulnerability scanner" height="30px" width="auto" /></a>
    </div>
    <span class="info-item footer-item"><i class="fas fa-globe"></i> <span class="info-title"> copyright&copy;:</span><b> <span class="info-data  badge badge-light">iCheckify</span></b></span>
    <span id="city" class="info-item footer-item"><i class="fas fa-city"></i> <span class="info-title"> city:</span><b> <span class="info-data badge badge-light">Loading...</span></b></span>
    <span id="ipAddress" class="info-item footer-item"><i class="fas fa-sitemap"></i> <span class="info-title"> ip:</span><b> <span class="info-data  badge badge-light">Loading...</span></b></span>
    <span class="info-item footer-item"><i class="fas fa-clock"></i> <span class="info-title"> time:</span> <span id="clock" class="badge badge-light"> Loading</span></span>

</footer>