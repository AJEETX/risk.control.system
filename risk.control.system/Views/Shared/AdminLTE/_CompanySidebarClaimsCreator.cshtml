@using risk.control.system.Helpers;
@model ClientCompany

@{
    <li class="nav-item">
        <a is-active-page class="navlink-border nav-link  @Url.MakeActiveClass("CreatorAuto","")
                                                                @Url.MakeActiveClass("CreatorManual","")  @Url.MakeActiveClass("Question","")
                                                                    @Url.MakeActiveClass("ClaimsActive","") @Url.MakeActiveClass("CaseUpload","")">
            <i class="nav-icon far fa-money-bill-alt"></i>
            <p class="sidebar-menu-header-label">
                CASES
                <i class="right fas fa-angle-right"></i>
            </p>
        </a>
    </li>
    if (Model.BulkUpload)
    {
        <li class="nav-item">
            <a is-active-page asp-controller="CaseUpload" asp-action="Uploads" class="actual-link nav-link @Url.MakeActiveClass("CaseUpload","Uploads")">
                <i class="nav-icon fa fa-upload"></i>
                <p>
                    <span class="badge badge-secondary"> UPLOAD <sub>file</sub></span>
                </p>
            </a>
        </li>
    }
    <li class="nav-item">
            <a is-active-page asp-controller="CreatorAuto" asp-action="New" class="actual-link nav-link
                        @Url.MakeActiveClass("CreatorAuto","New")
                        @Url.MakeActiveClass("CreatorManual","New")
                        @Url.MakeActiveClass("CreatorAuto","Details")
                            @Url.MakeActiveClass("CreatorAuto","Create")
                            @Url.MakeActiveClass("CreatorAuto","CreatePolicy")
                        @Url.MakeActiveClass("CreatorAuto","EditPolicy")
                                @Url.MakeActiveClass("CreatorAuto","CreateCustomer")
                            @Url.MakeActiveClass("CreatorAuto","EditCustomer")
                                @Url.MakeActiveClass("CreatorAuto","CreateBeneficiary")
                                @Url.MakeActiveClass("CreatorAuto","EditBeneficiary")
                            @Url.MakeActiveClass("CreatorAuto","Delete") 
                            @Url.MakeActiveClass("CreatorAuto","EmpanelledVendors")
                                @Url.MakeActiveClass("CreatorAuto","VendorDetail")
                            @Url.MakeActiveClass("CreatorManual","Details")
                                            @Url.MakeActiveClass("CreatorManual","Create")
                                        @Url.MakeActiveClass("CreatorManual","CreatePolicy")
                                    @Url.MakeActiveClass("CreatorManual","EditPolicy")
                                            @Url.MakeActiveClass("CreatorManual","CreateCustomer")
                                                    @Url.MakeActiveClass("CreatorManual","EditCustomer")
                                                            @Url.MakeActiveClass("CreatorManual","CreateBeneficiary")
                                                                    @Url.MakeActiveClass("CreatorManual","EditBeneficiary")
                                                                        @Url.MakeActiveClass("CreatorManual","Delete")
                                                             @Url.MakeActiveClass("CreatorManual", "VendorDetail")
                                    @Url.MakeActiveClass("CreatorManual","EmpanelledVendors")">
                <i class="fas fa-random nav-icon"></i>
                <p>
                    <span class="badge badge-warning">ADD/ASSIGN</span>
                </p>
            </a>
        </li>
    <li class="nav-item">
        <a is-active-page asp-controller="ClaimsActive" asp-action="Active" class="actual-link nav-link @Url.MakeActiveClass("ClaimsActive","Active")
                                                @Url.MakeActiveClass("ClaimsActive","ActiveDetail") ">
            <i class="fa fa-toggle-on nav-icon"></i>
            <p>
                <span class="badge badge-primary">ACTIVE</span>
            </p>
        </a>
    </li>
}