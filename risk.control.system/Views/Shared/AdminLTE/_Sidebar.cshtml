                <i class="nav-icon fas fa-users-cog"></i>
                <p>
                investigation cases
                </p>
                </a>
                </li>*@
                <li class="nav-item">
                    <a is-active-page class="nav-link @Url.MakeActiveClass("LineOfBusiness","") @Url.MakeActiveClass("InvestigationServiceTypes","") @Url.MakeActiveClass("InvestigationCaseStatus","")">
                        <i class="nav-icon fas fa-cog"></i>
                        <p class="sidebar-menu-header-label">
                            @Applicationsettings.INVESTIGATION_CASE_SETTINGS
