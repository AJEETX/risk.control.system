                    </a>
                </li>

                <li class="nav-item">
                    <a is-active-page asp-controller="Global" asp-action="Profile" class="actual-link nav-link @Url.MakeActiveClass("Global","")">
                        <i class="nav-icon fas fa-wrench"></i>
                        <p>
                            @Applicationsettings.GLOBAL_SETTINGS
