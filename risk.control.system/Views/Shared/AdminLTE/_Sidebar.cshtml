                                <i class="nav-icon fas fa-wrench"></i>
                                <p class="sidebar-menu-header-label">
                                    @Applicationsettings.GENERAL_SETUP
                                    <i class="right fas fa-angle-right"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a is-active-page asp-controller="Country" asp-action="Index" class="nav-link @Url.MakeActiveClass("Country","")">
                                        <i class="nav-icon fas fa-map-marked-alt"></i>
                                        <p>
                                            @Applicationsettings.COUNTRY
                                        </p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a is-active-page asp-controller="State" asp-action="Index" class="nav-link @Url.MakeActiveClass("State","")">
                                        <i class="nav-icon fas fa-user-lock"></i>
                                        <p>
                                            @Applicationsettings.STATE
                                        </p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a is-active-page asp-controller="District" asp-action="Index" class="nav-link @Url.MakeActiveClass("District","")">
                                        <i class="nav-icon fas fa-city"></i>
                                        <p>
                                            @Applicationsettings.DISTRICT
                                        </p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a is-active-page asp-controller="PinCodes" asp-action="Index" class="nav-link @Url.MakeActiveClass("PinCodes","")">
                                        <i class="nav-icon fas fa-file"></i>
                                        <p>
