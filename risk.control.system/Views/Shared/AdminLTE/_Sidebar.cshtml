                <li class="nav-item">
                    <a is-active-page asp-controller="ContactMessage" asp-action="Create" class="actual-link nav-link @Url.MakeActiveClass("ContactMessage","Create")">
                        <i class="fas fa-pen nav-icon"></i>
                        <p>
                            @Applicationsettings.COMPOSE
                        </p>
                    </a>
                </li>
                <li class="nav-item">
                    <a is-active-page class="actual-link nav-link @Url.MakeActiveClass("ContactMessage","Draft")">
                        <i class="fas fa-book-reader nav-icon"></i>
                        <p>
                            @Applicationsettings.DRAFT_MAIL
                        </p>
                    </a>
                </li>
                <li class="nav-item">
                    <a is-active-page class="navlink-border nav-link @Url.MakeActiveClass("Claim","") @Url.MakeActiveClass("Underwriting","") @Url.MakeActiveClass("ClaimsInvestigation","")">
                        <i class="nav-icon fas fa-search"></i>
                        <p class="sidebar-menu-header-label">
                            @Applicationsettings.INVESTIGATION_MAIN
                            <i class="right fas fa-angle-right"></i>
