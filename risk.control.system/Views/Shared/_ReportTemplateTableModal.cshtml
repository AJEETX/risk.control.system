<!-- Add Question Modal -->
<div class="modal fade" id="addQuestionModal" tabindex="-1" aria-labelledby="questionAddModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <!-- Centered & slightly larger -->
        <div class="modal-content shadow-lg border-0 rounded-4">

            <!-- Header -->
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title fw-semibold" id="questionAddModalLabel">
                    <i class="fas fa-question-circle me-2"></i> Add Question
                </h5>
                <!-- Bootstrap 5 close button -->
                <button type="button" class="btn-close btn-close-white" data-dismiss="modal" aria-label="Close">X</button>
            </div>

            <!-- Body -->
            <div class="modal-body">
                <form id="questionAddForm" autocomplete="off">
                    <input type="hidden" name="LocationId" />

                    <!-- Question Text -->
                    <div class="mb-3">
                        <label for="QuestionText" class="form-label fw-bold">
                            Question Text <span class="text-danger">*</span>
                        </label>
                        <input type="text" class="form-control remarks" id="QuestionText" name="QuestionText"
                               placeholder="Enter your question here..." required autofocus>
                    </div>

                    <!-- Question Type -->
                    <div class="mb-3">
                        <label for="QuestionType" class="form-label fw-bold">
                            Question Type <span class="text-danger">*</span>
                        </label>
                        <select class="form-select form-control remarks" id="QuestionType" name="QuestionType" required>
                            <option value="">-- Select Question Type --</option>
                            <option value="text">Text</option>
                            <option value="dropdown">Dropdown</option>
                            <option value="date">Date</option>
                            <option value="radiobutton">Radio Button</option>
                            <option value="checkbox">Checkbox</option>
                        </select>
                    </div>

                    <!-- Options (only visible for certain types) -->
                    <div class="mb-3 d-none" id="optionsContainer">
                        <label for="optionsInput" class="form-label fw-bold">
                            Options (comma-separated)
                        </label>
                        <input type="text" class="form-control" id="optionsInput" name="options"
                               placeholder="e.g. Yes,No,Maybe">
                        <div class="form-text">
                            Example: <code>Yes,No,Maybe</code>
                        </div>
                    </div>

                    <!-- Required Toggle -->
                    <div class="form-check form-switch mb-4">
                        <input type="checkbox" class="form-check-input" id="isRequired" name="isRequired">
                        <label class="form-check-label fw-bold" for="isRequired">Mark as Required</label>
                    </div>

                    <!-- Actions -->
                    <div class="text-end">
                        <button type="button" class="btn btn-outline-secondary me-2" data-dismiss="modal">
                            <i class="fas fa-times me-1"></i> Cancel
                        </button>
                        <button type="submit" class="btn btn-outline-success">
                            <i class="fas fa-save me-1"></i> Save Question
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
