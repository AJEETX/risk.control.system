@model ClaimTransactionModel
<div class="card-header">
    <h3 class="card-title">
        <i class="fas fa-newspaper"></i> Delete
        <span class="hover-text">
            <i class="fas fa-info-circle"></i>
            <span class="tooltip-text" id="information">
                <li>
                    <i class='far fa-hand-point-right'></i> Deletes the claim info permanently.
                </li>
                <li>
                    <i class='far fa-thumbs-up'></i> Please make sure before you delete.
                </li>
            </span>
        </span>

    </h3>
</div>

<article>
    <input type="hidden" id="policyDetailId" asp-for="ClaimsInvestigation.PolicyDetailId" />
    <input type="hidden" id="customerDetailId"  asp-for="ClaimsInvestigation.CustomerDetail.CustomerDetailId" />
    <input type="hidden" id="beneficiaryId" asp-for="ClaimsInvestigation.BeneficiaryDetail.BeneficiaryDetailId" />
    <input id="claimId" type="hidden" asp-for="ClaimsInvestigation.ClaimsInvestigationId" />
    <div class="bb-blog-inner">
        <div class="card shadow-lg border-0 rounded-lg expand-card">
            <div class="card-header bg-light">
                <h3 class="card-title">Claim: <span class="badge badge-light"><i class="far fa-file-powerpoint"></i>  @Model.ClaimsInvestigation?.PolicyDetail?.ContractNumber</span></h3>
                <div class="card-tools">
                    <span data-toggle="tooltip" title="Claim # : @Model.ClaimsInvestigation?.PolicyDetail?.ContractNumber" class="badge badge-light"> <i class="far fa-file-powerpoint"></i> </span>
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>

            <div class="card-body">
                <div class="submit-progress hidden">
                    <i class="fas fa-sync fa-spin fa-4x fa-fw"></i>
                </div>
                <div class="row">
                    <partial name="Creator/_DeletePolicy" model="Model" />
                    <partial name="Creator/_DeleteCustomer" model="Model" />
                    <partial name="Creator/_DeleteBeneficiary" model="Model" />
                </div>
            </div>
        </div>
    </div> <!-- class bb-blog-inner -->
</article>