@model ClaimTransactionModel
<div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch flex-column">
    <div class="card bg-light d-flex flex-fill">
        <div class="card-header text-muted border-bottom-0">
            <i class="fa fa-user-plus"></i> Customer Details
            <span class="hover-text">
                <i class="fas fa-info-circle"></i>
                <span class="tooltip-text" id="customer-information">
                    <i class='fa fa-user-plus'></i> <b>Add Customer Information.</b>
                </span>
            </span>
        </div>
        <div class="progress">
            <i class="far fa-bookmark bookmark-green"></i>
            <div class="progress-bar progress-bar-grey" role="progressbar">
                <i class="fa fa-user-plus"></i>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-7">
                    <h2 class="lead">
                        <b>Customer Name</b>
                    </h2>
                    <p class="text-muted text-sm">
                        <b>Occupation:</b> ---
                    </p>
                    <ul class="ml-4 mb-0 fa-ul text-muted">
                        <li class="small">
                            <span class="fa-li"><i class="fas fa-restroom"></i></span>
                            Gender: ----
                        </li>
                        <li class="small">
                            <span class="fa-li"><i class="fas fa-rupee-sign"></i></span>
                            Income: ----
                        </li>
                        <li class="small">
                            <span class="fa-li"><i class="fas fa-user-alt"></i></span>
                            Age: ---
                        </li>
                        <li class="small">
                            <span class="fa-li"><i class="fas fa-building"></i></span>
                            Address: ---
                        </li>
                        <li class="small">
                            <span class="fa-li"><i class="fas fa-lg fa-phone"></i></span>
                            Contact: ---
                        </li>
                    </ul>
                </div>
                <div class="col-5 text-center">
                    <img class="form-Image img-fluid" src="@Applicationsettings.NO_USER" alt="Beneficiary Image">
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="text-right">
                @{
                    if (Model.ClaimsInvestigation?.CustomerDetail != null)
                    {
                        <input type="hidden" asp-for="ClaimsInvestigation.ClaimsInvestigationId" />
                        <a id="edit-customer" class="btn btn-warning" asp-action="EditCustomer" asp-route-id="@Model.ClaimsInvestigation.ClaimsInvestigationId"><i class="fa fa-user-plus"></i>  Edit Customer</a>
                    }
                    else
                    {
                        <a id="add-customer" class="btn btn-success" asp-action="CreateCustomer" asp-route-id="@Model.ClaimsInvestigation.ClaimsInvestigationId"><i class="fa fa-user-plus"></i> Add Customer</a>
                    }
                }
            </div>
        </div>
    </div>
</div>