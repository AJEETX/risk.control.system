@model ErrorViewModel
@{
    ViewData["Title"] = "Authentication Error";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger shadow">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-exclamation-triangle-fill"></i> Sign-in Trouble</h4>
                </div>
                <div class="card-body text-center py-5">
                    <h2 class="text-danger">Oops! Something went wrong.</h2>
                    <p class="lead text-muted">
                        We encountered an issue while processing your external login.
                    </p>

                    <div class="alert alert-light border my-4">
                        <strong>Detail:</strong> @Model.Message
                    </div>

                    @if (Model.ShowRequestId)
                    {
                        <p class="small text-secondary">
                            <strong>Request ID:</strong> <code>@Model.RequestId</code>
                        </p>
                    }

                    <div class="mt-4">
                        <a asp-controller="Account" asp-action="Login" class="btn btn-primary px-4">
                            Try Again
                        </a>
                        <a href="mailto:hi@icheckify.co.in" class="btn btn-outline-secondary px-4">
                            Contact Support
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>