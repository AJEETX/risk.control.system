 @model risk.control.system.Models.Vendor

<div class="row">
    <input type="hidden" id="Isd" value="@Model?.Country.ISDCode" />
    <input type="hidden" id="countryCode" value="@Model?.Country.Code" />
    <div class="col-sm-6">
        <div class="form-group">
            <label class="input-group-label"> Agency Name: </label>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fas fa-building"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                </div>
                <input type="text" id="Name" asp-for="Name" class="form-control remarks title-name" required placeholder="Enter Agency Name" maxlength="30" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label class="input-group-label"> Mobile #:</label>
            <div class="input-group">

                <div class="input-group-prepend">
                    @{
                        var imgPath = "/flags/" + @Model.Country.Code.ToLowerInvariant() + ".png";
                    }
                    <span class="input-group-text country-code-text" data-toggle="tooltip" title="Country Code :+@Model?.Country.ISDCode">
                        <img src="@imgPath" class="flag-icon" data-toggle="tooltip" />  +@Model?.Country.ISDCode<i class="fa fa-asterisk asterik-style"></i>
                    </span>
                </div>
                <input id="PhoneNumber" type="text" asp-for="PhoneNumber" class="form-control remarks" required maxlength="10" placeholder="Enter mobile # without country-code" title="Enter mobile # without country-code" data-toggle="tooltip" />
                <span id="phone-spinner" class="text-secondary phone-icon d-none">
                    <i class="fas fa-spinner fa-spin"></i>
                </span>
                <span id="phone-valid" class="text-success phone-icon d-none">
                </span>
                <span id="phone-invalid" class="text-danger phone-icon d-none">
                    <i class="fas fa-times-circle"></i>
                </span>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>
        @* <div class="form-group">
        <span class="input-group-label"> Branch Name: </span>
        <div class="input-group mb-3">
        <div class="input-group-prepend">
        <span class="input-group-text"><i class="far fa-building"></i> <i class="fa fa-asterisk asterik-style"></i></span>
        </div>
        <input type="text" id="Branch" asp-for="Branch" class="form-control remarks title-name" required placeholder="Enter Branch Name" maxlength="30">
        <span asp-validation-for="Branch" class="text-danger"></span>
        </div>
        </div> *@

        <div class="form-group">
            <label class="input-group-label"> IFSC Code: </label>
            <div class="input-group mb-3 position-relative">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <i class="fas fa-code"></i>
                        <i class="fa fa-asterisk asterik-style"></i>
                    </span>
                </div>
                <input type="text" id="IFSCCode" asp-for="IFSCCode" class="form-control remarks asterikx" required placeholder="IFSC Code" maxlength="11" title="Enter valid IFSC code" data-toggle="tooltip" />
                <span id="ifsc-spinner" class="text-secondary phone-icon d-none">
                    <i class="fas fa-spinner fa-spin"></i>
                </span>
                <span id="ifsc-valid-icon" class="ifsc-valid-icon">
                </span>
                <span asp-validation-for="IFSCCode" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="input-group-label"> Bank Name: </label>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <i class="fas fa-landmark"></i>
                        <i class="fa fa-asterisk asterik-style"></i>
                    </span>
                </div>
                <input type="text" id="BankName" asp-for="BankName" class="form-control remarks title-name" required placeholder="..." maxlength="50" readonly tabindex="-1" title="Auto-selected" data-toggle="tooltip" />
                <span asp-validation-for="BankName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="input-group-label"> Bank Account #: </label>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fab fa-btc"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                </div>
                <input type="text" id="BankAccountNumber" asp-for="BankAccountNumber" class="form-control remarks" required placeholder="Bank Account #" maxlength="20" />
                <span asp-validation-for="BankAccountNumber" class="text-danger"></span>
            </div>
        </div>

        @if (Model.SelectedByCompany)
        {
            <input asp-for="CanChangePassword" id="CanChangePassword" type="hidden" />
        }
        else
        {
            <div class="row toggle-row">

                @* <div class="col-md-6">
                    <div class="form-group">
                        <label class="input-group-label"> Enable Mailbox:</label>
                        <div class="checkbox-wrapper">
                            <input asp-for="EnableMailbox" type="checkbox" id="EnableMailboxCheckbox" class="custom-checkbox">
                            <label for="EnableMailboxCheckbox" class="custom-checkbox-label"></label>
                        </div>
                        
                    </div>
                </div> *@

                <div class="col-md-6">

                    <div class="form-group">
                        <label class="input-group-label"> Edit Profile:</label>
                        <div class="checkbox-wrapper">
                            <input asp-for="CanChangePassword" type="checkbox" id="CanChangePasswordCheckbox" class="custom-checkbox">
                            <label for="CanChangePasswordCheckbox" class="custom-checkbox-label"></label>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
    <div class="col-sm-6">
        <partial name="Vendor/_AgencyAddress" model="@Model" />

        <div class="form-group">
            <label class="input-group-label"> Address:</label>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fa fa-home"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                </div>
                <input type="text" id="Addressline" asp-for="Addressline" class="form-control remarks" type="text" placeholder="Street Address..." required maxlength="70" />
                <span asp-validation-for="Addressline" class="text-danger"></span>
            </div>
        </div>

        @*
        <div class="form-group">
        <span class="input-group-label"> Note:</span>
        <div class="input-group mb-3">
        <div class="input-group-prepend">
        <span class="input-group-text" ><i class="fas fa-pencil-alt"></i> <i class="fa fa-asterisk asterik-style"></i></span>
        </div>
        <input type="text" id="Description" asp-for="Description" class="form-control remarks" placeholder="Enter Remarks" required maxlength="50" />
        </div>
        <span asp-validation-for="Description" class="text-danger"></span>
        </div> *@
        @if (Model.SelectedByCompany)
        {
            <input type="hidden" id="Status" asp-for="Status" />
        }
        else
        {
            <div class="form-group">
                <label class="input-group-label"> Status:</label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" for="Status"><i class="fa fa-toggle-on"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                    </div>
                    <select required id="Status" asp-for="Status" class="form-control remarks" asp-items="Html.GetEnumSelectList<VendorStatus>()">
                        <option value="">--- SELECT ---</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>

                </div>
            </div>
        }
        <div class="form-group">
            <label class="input-group-label"> Document:</label>
            <div class="input-group mb-3">
                @if (Model?.DocumentUrl is not null)
                {
                    <img id="createProfileImage" class="form-Image" data-preview-id="createProfileImage" src="data:image/*;base64,@(Convert.ToBase64String(Model?.DocumentImage))" data-toggle="tooltip" title="Document" />
                    <i class="fa fa-asterisk asterik-style"></i>
                    <input accept=".jpg,.jpeg,.png" asp-for="Document" type="file"
                           class="form-control remarks document-image-input valid-border" id="createImageInput" data-preview-id="createProfileImage" data-toggle="tooltip" title="Document" data-default-image="@Applicationsettings.NO_IMAGE" />
                }
                else
                {
                    <img id="createProfileImage" class="form-Image" data-preview-id="createProfileImage" src=@Applicationsettings.NO_IMAGE data-toggle="tooltip" title="No Document" />
                    <i class="fa fa-asterisk asterik-style"></i>
                    <input accept=".jpg,.jpeg,.png" asp-for="Document" type="file"
                           class="form-control remarks document-image-input" id="createImageInput" data-preview-id="createProfileImage" required data-toggle="tooltip" title="Document" data-default-image="@Applicationsettings.NO_IMAGE" />
                    <span asp-validation-for="Document" class="text-danger"></span>
                }
            </div>
        </div>

    </div>
</div>