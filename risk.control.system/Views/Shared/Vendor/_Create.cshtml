            <div class="form-group">
                <label class="input-group-label"> Bank Name: </label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i class="fas fa-landmark"></i>
                            <i class="fa fa-asterisk asterik-style"></i>
                        </span>
                    </div>
                    <input type="text" id="BankName" asp-for="BankName" class="form-control remarks title-name" required placeholder="..." maxlength="50" readonly tabindex="-1" title="Auto-selected" data-toggle="tooltip"/>
                    <span asp-validation-for="BankName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label class="input-group-label"> Bank Account #: </label>
