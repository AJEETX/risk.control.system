@model risk.control.system.Models.Vendor

<div class="card-body">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-sm-6">

            <div class="form-group">
                <span class="input-group-label"> Agency Name: </span>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" asp-for="Name"><i class="fas fa-building"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                    </div>
                    <input type="text" id="Name" asp-for="Name" class="form-control remarks title-name" required placeholder="Agency Name" maxlength="30" value="Proper">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <span class="input-group-label"> Document:</span>
                <div class="input-group mb-3">
                    <img id="createProfileImage" class="form-Image" data-preview-id="createProfileImage" src="@Applicationsettings.NO_POLICY_IMAGE" data-toggle="tooltip" title="No Document" />
                    <i class="fa fa-asterisk asterik-style"></i>
                    <input accept=".jpg,.jpeg,.png" asp-for="DocumentImage" type="file"
                           class="form-control remarks document-image-input" id="createImageInput" data-preview-id="createProfileImage" required data-toggle="tooltip" title="Upload Document"
                           data-default-image="@Applicationsettings.NO_POLICY_IMAGE" />
                    <span asp-validation-for="DocumentImage" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <span class="input-group-label"> Agency Code:</span>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-code"></i><i class="fa fa-asterisk asterik-style"></i></span>
                    </div>
                    <input type="text" id="Code" asp-for="Code" class="form-control remarks asterikx" required placeholder="Agency Code" maxlength="5" value="pro">
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <span class="input-group-label"> Phone #: </span>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-phone"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                    </div>
                    <input type="text" id="PhoneNumber" asp-for="PhoneNumber" class="form-control remarks" required maxlength="14" value="61432854196" placeholder="61432854196"
                           />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group">
                <span class="input-group-label"> Branch Name: </span>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" ><i class="far fa-building"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                    </div>
                    <input type="text" id="Branch" asp-for="Branch" class="form-control remarks title-name" required placeholder="Branch Name" value="PROPER101" maxlength="20">
                    <span asp-validation-for="Branch" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <span class="input-group-label"> Bank Name: </span>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fas fa-landmark"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                    </div>
                    <input type="text" id="BankName" asp-for="BankName" class="form-control remarks title-name" required placeholder="Bank Name" value="Commonwealth" maxlength="30">
                    <span asp-validation-for="BankName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <span class="input-group-label"> Bank Account #: </span>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fab fa-btc"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                    </div>
                    <input type="text" id="BankAccountNumber" asp-for="BankAccountNumber" class="form-control remarks" required placeholder="Bank Account #" value="123456789"
                     maxlength="20">
                    <span asp-validation-for="BankAccountNumber" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <span class="input-group-label"> IFSC Code: </span>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" ><i class="fas fa-rupee-sign"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                    </div>
                    <input type="text" id="IFSCCode" asp-for="IFSCCode" class="form-control remarks asterikx" required placeholder="Bank IFSC Code" value="IFSC1234" maxlength="10">
                    <span asp-validation-for="IFSCCode" class="text-danger"></span>
                </div>
            </div>

        </div>
        <div class="col-sm-6">


            <div class="form-group">
                <span class="input-group-label"> Agreement Date: </span>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="far fa-calendar-check"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                    </div>
                    <input type="date" id="AgreementDate" asp-for="AgreementDate" id="AgreementDate" class="form-control remarks" required placeholder="Agreement Date" value="@DateTime.Now">
                    <span asp-validation-for="AgreementDate" class="text-danger"></span>
                </div>
            </div>

