            <div class="form-group">
                <label class="input-group-label"> Agency Name: </label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" asp-for="Name"><i class="fas fa-building"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                    </div>
                    <input type="text" id="Name" asp-for="Name" class="form-control remarks title-name" required placeholder="Agency Name" maxlength="30" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

