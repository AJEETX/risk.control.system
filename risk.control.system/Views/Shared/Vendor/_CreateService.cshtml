@model risk.control.system.Models.VendorInvestigationServiceType
<input type="hidden" id="CountryId" asp-for="CountryId" />
<input asp-for="SelectedCountryId" type="hidden" id="SelectedCountryId" name="SelectedCountryId" value="@Model?.CountryId" />
<div class="row">
    <div class="col-md-6">
        
        <div class="form-group">
            <label class="input-group-label"> Line Of Business:</label>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" for="LineOfBusinessId">
                        <i class="fas fa-business-time"></i> <i class="fa fa-asterisk asterik-style"></i>
                    </span>
                </div>
                <select id="LineOfBusinessId" aria-label="Line of Business" asp-for="LineOfBusinessId" class="form-control remarks" asp-items="ViewBag.LineOfBusinessId" required>
                    <option value="">--SELECT--</option>
                </select>
                <span asp-validation-for="LineOfBusinessId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="input-group-label"> Type of Service:</label>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" for="InvestigationServiceTypeId">
                        <i class="fas fa-tools"></i> <i class="fa fa-asterisk asterik-style"></i>
                    </span>
                </div>
                <select id="InvestigationServiceTypeId" name="InvestigationServiceTypeId" asp-for="InvestigationServiceTypeId"
                        class="form-control remarks" required>
                    <option value="">--SELECT--</option>
                </select>
                <span asp-validation-for="InvestigationServiceTypeId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label class="input-group-label"> Service Price (Rs.):</label>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" for="Price"> <i class="fas fa-rupee-sign"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                </div>
                <input id="Price" asp-for="Price" class="form-control remarks" type="text" placeholder="Service Price (Rs.)" value="" required maxlength="10" autocomplete="off" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="input-group-label" for="StateId"> State:</label>
            <div class="input-group mb-3 autocomplete-wrapper">
                <div class="input-group-prepend">
                    @{
                        var imgPath = "/flags/" + @Model.Country.Code.ToLower() + ".png";
                    }
                    <span class="input-group-text country-code-text" data-toggle="tooltip" title="Registered Country : @Model?.Country.Name">
                        <img src="@imgPath" class="flag-icon" data-toggle="tooltip" />  @Model?.Country.Code
                    </span>
                </div>
                <input type="text" id="StateId" class="form-control remarks auto-dropdown" data-placeholder="state" placeholder="Search state ..." asp-for="StateId" required value=""/>
                <span asp-validation-for="StateId" class="text-danger"></span>
                <input asp-for="SelectedStateId" type="hidden" id="SelectedStateId" name="SelectedStateId" value="@Model?.StateId" />
                <div id="state-loading" class="loading-spinner">
                    <i class="fas fa-spinner fa-spin"></i>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="input-group-label" for="DistrictId">District:</label>
            <div class="input-group mb-3 autocomplete-wrapper">
                <div class="input-group-prepend">
                    <span class="input-group-text" for="DistrictId">
                        <i class="fas fa-city"></i>
                        <i class="fa fa-asterisk asterik-style"></i>
                    </span>
                </div>
                <input type="text" id="DistrictId" class="form-control remarks auto-dropdown" data-placeholder="district" placeholder="Search district ..." asp-for="DistrictId" required />
                <span asp-validation-for="DistrictId" class="text-danger"></span>
                <input asp-for="SelectedDistrictId" type="hidden" id="SelectedDistrictId" name="SelectedDistrictId" value="@Model?.DistrictId" />
                <div id="district-loading" class="loading-spinner">
                    <i class="fas fa-spinner fa-spin"></i>
                </div>
            </div>
        </div>

    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label class="input-group-label" for="SelectedMultiPincodeId"> <i class="fas fa-map-pin"></i> Pincodes: <i class='far fa-hand-point-down'></i></label>
            <div class="input-group">
                <select id="PinCodeId" asp-for="SelectedMultiPincodeId" class="form-control remarks selectPincode" asp-items="ViewBag.PinCodeId" multiple required>
                </select>
                <span asp-validation-for="SelectedMultiPincodeId" class="text-danger"></span>
            </div>

        </div>
    </div>
</div>