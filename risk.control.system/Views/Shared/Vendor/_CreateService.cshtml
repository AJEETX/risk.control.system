@model risk.control.system.Models.VendorInvestigationServiceType

<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <span class="input-group-label"> Line Of Business:</span>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" for="LineOfBusinessId"><i class="fas fa-business-time"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                </div>
                <select id="LineOfBusinessId" asp-for="LineOfBusinessId" class="form-control remarks" asp-items="ViewBag.LineOfBusinessId" onchange="loadInvestigationServices(this)" required>
                    <option value="">--SELECT--</option>
                </select>
                <span asp-validation-for="LineOfBusinessId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <span class="input-group-label"> Type of Service:</span>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" for="InvestigationServiceTypeId"><i class="fas fa-tools"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                </div>
                <select id="InvestigationServiceTypeId" name="InvestigationServiceTypeId" asp-for="InvestigationServiceTypeId" onchange="setInvestigationServices(this)" 
                class="form-control remarks" asp-items="ViewBag.InvestigationServiceTypeId" required>
                    <option value="">--SELECT--</option>
                </select>
                <span asp-validation-for="InvestigationServiceTypeId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <span class="input-group-label"> Service Price (Rs.):</span>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" for="Price"> <i class="fas fa-rupee-sign"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                </div>
                <input asp-for="Price" class="form-control remarks" type="text" placeholder="Service Price (Rs.)" value="" required oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*)\./g, '$1');" maxlength="10" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <span class="input-group-label" for="CountryId" data-toggle="tooltip" title="Registered Country"> Country:</span>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" for="CountryId" data-toggle="tooltip" title="Registered Country"><i class="fas fa-map-marked-alt"></i> <i class="fa fa-asterisk asterik-style-info"></i></span>
                </div>
                <input readonly type="text" id="CountryId" class="form-control" data-placeholder="country" asp-for="CountryId" data-toggle="tooltip" title="Registered Country" value="" tabindex="-1" />
                <span asp-validation-for="CountryId" class="text-danger"></span>
                <input asp-for="SelectedCountryId" type="hidden" id="SelectedCountryId" name="SelectedCountryId" value="@Model?.CountryId" />
                <div id="country-loading" class="loading-spinner">
                    <i class="fas fa-spinner fa-spin"></i>
                </div>
            </div>
        </div>
        <div class="form-group">
            <span class="input-group-label" for="StateId"> State:</span>
            <div class="input-group mb-3 autocomplete-wrapper">
                <div class="input-group-prepend">
                    <span class="input-group-text" for="StateId"><i class="fas fa-map-marker-alt"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                </div>
                <input type="text" id="StateId" class="form-control remarks auto-dropdown" data-placeholder="state" placeholder="Type state..." asp-for="StateId" required value="" onblur="clearPinCodeField()" />
                <span asp-validation-for="StateId" class="text-danger"></span>
                <input asp-for="SelectedStateId" type="hidden" id="SelectedStateId" name="SelectedStateId" value="@Model?.StateId" />
                <div id="state-loading" class="loading-spinner">
                    <i class="fas fa-spinner fa-spin"></i>
                </div>
            </div>
        </div>
        <div class="form-group">
            <span class="input-group-label" for="DistrictId">District:</span>
            <div class="input-group mb-3 autocomplete-wrapper">
                <div class="input-group-prepend">
                    <span class="input-group-text" for="DistrictId">
                        <i class="fas fa-city"></i>
                        <i class="fa fa-asterisk asterik-style"></i>
                    </span>
                </div>
                <input type="text" id="DistrictId" class="form-control remarks auto-dropdown" data-placeholder="district" placeholder="Type district..." asp-for="DistrictId" required
                       onblur="GetRemainingServicePinCode(false,'@Model.Vendor.VendorId', '@Model.LineOfBusinessId')" onchange="GetRemainingServicePinCode(false,'@Model.Vendor.VendorId', '@Model.LineOfBusinessId')" />
                <span asp-validation-for="DistrictId" class="text-danger"></span>
                <input asp-for="SelectedDistrictId" type="hidden" id="SelectedDistrictId" name="SelectedDistrictId" value="@Model?.DistrictId" />
                <div id="district-loading" class="loading-spinner">
                    <i class="fas fa-spinner fa-spin"></i>
                </div>
            </div>
        </div>

    </div>
    <div class="col-md-12">
        <div class="form-group">
            <div class="form-group">
                <label asp-for="SelectedMultiPincodeId" class="control-label"></label>
                <select id="PinCodeId" asp-for="SelectedMultiPincodeId" class="form-control remarks selectPincode" asp-items="ViewBag.PinCodeId" multiple required>
                </select>
                <span asp-validation-for="SelectedMultiPincodeId" class="text-danger"></span>
            </div>

        </div>
    </div>
</div>