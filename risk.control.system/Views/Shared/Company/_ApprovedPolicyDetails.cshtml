@model ClaimTransactionModel

<article>
    <div class="bb-blog-inner">
        <div class="card shadow-lg border-0 rounded-lg collapsed-card">
            <div class="card-header bg-light text-white">
                <h3 class="card-title">
                    <i class="far fa-file-powerpoint"></i> Claim #: <span class="badge badge-light"> @Model.ClaimsInvestigation.PolicyDetail.ContractNumber</span>
                    <span class="hover-text">
                        <i class="fas fa-info-circle"></i>
                        <span class="tooltip-text" id="information">
                            <li>
                                <i class='far fa-file-powerpoint'></i> Policy details.
                            </li>
                            <li>
                                <i class='fa fa-user-plus'></i> Customer details.
                            </li>
                            <li> <i class='fas fa-user-tie'></i> Beneficiary details </li>

                        </span>
                    </span>
                </h3>

                <div class="card-tools">
                    <span data-toggle="tooltip" title="Claim # :  @Model.ClaimsInvestigation.PolicyDetail.ContractNumber" class="badge badge-light">
                        <i class='far fa-hand-point-right'></i>
                    </span>
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-plus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body pb-0">
                <div class="row">
                    <partial name="Creator/_DeletePolicy" model="Model" />
                    <partial name="Creator/_DeleteCustomer" model="Model" />
                    <partial name="Creator/_DeleteBeneficiary" model="Model" />
                </div>
            </div>
        </div>
    </div>
</article>