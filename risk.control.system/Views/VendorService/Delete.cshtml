@using risk.control.system.Helpers;
@model risk.control.system.Models.VendorInvestigationServiceType

@{
    ViewData["Title"] = @Applicationsettings.DELETE;
    var district = Model.District == null ? "ALL DISTRICTS" : Model.District.Name;
    var type = Model.InsuranceType.GetEnumDisplayName();
}
<section class="content">
    <div class="card shadow-lg border-1 rounded-lg">
        <div class="card-header bg-secondary text-white text-center">
            <h3 class="card-title"><i class="fas fa-truck"></i> Delete Service</h3>
        </div>
        <div class="card-body">
            <div class="submit-progress hidden">
                <i class="fas fa-sync fa-spin fa-4x fa-fw"></i>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-5">
                            @Html.DisplayNameFor(model => model.InsuranceType)
                        </dt>
                        <dd class="col-sm-5">
                            @Html.DisplayFor(model => type)
                        </dd>
                        <dt class="col-sm-5">
                            @Html.DisplayNameFor(model => model.InvestigationServiceType)
                        </dt>
                        <dd class="col-sm-5">
                            @Html.DisplayFor(model => model.InvestigationServiceType.Name)
                        </dd>
                        <dt class="col-sm-5">
                            @Html.DisplayNameFor(model => model.District)
                        </dt>
                        
                        <dd class="col-sm-5">
                            @Html.DisplayFor(model => @district)
                        </dd>

                        <dt class="col-sm-5">
                            @Html.DisplayNameFor(model => model.State)
                        </dt>
                        <dd class="col-sm-5">
                            @Html.DisplayFor(model => model.State.Name)
                        </dd>
                        <dt class="col-sm-5">
                            @Html.DisplayNameFor(model => model.Country)
                        </dt>
                        <dd class="col-sm-5">
                            @Html.DisplayFor(model => model.Country.Name)
                        </dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row">

                        <dt class="col-sm-5">
                            @Html.DisplayNameFor(model => model.Price) (@ViewBag.Currency)
                        </dt>
                        <dd class="col-sm-5">
                            @Html.DisplayFor(model => model.Price)
                        </dd>

                        <dt class="col-sm-5">
                            @Html.DisplayNameFor(model => model.Created)
                        </dt>
                        <dd class="col-sm-5">
                            @Html.DisplayFor(model => model.Created)
                        </dd>
                        <dt class="col-sm-5">
                            @Html.DisplayNameFor(model => model.Updated)
                        </dt>
                        <dd class="col-sm-5">
                            @Html.DisplayFor(model => model.Updated)
                        </dd>
                        <dt class="col-sm-5">
                            @Html.DisplayNameFor(model => model.UpdatedBy)
                        </dt>
                        <dd class="col-sm-5">
                            @Html.DisplayFor(model => model.UpdatedBy)
                        </dd>
                    </dl>
                </div>
            </div>

        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-md-12 text-right">
                    <form id="create-form" asp-action="Delete">
                        <input type="hidden" asp-for="VendorInvestigationServiceTypeId" name="id" />
                        <a id="back" asp-controller="Vendors" asp-action="Service" asp-route-id="@Model.Vendor.VendorId" class="btn btn-secondary">
                            <i class="fa fa-window-close"></i>
                            @Applicationsettings.CANCEL
                        </a> &nbsp;
                        <input type="submit" value="Delete" class="btn btn-danger trash-icon" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/common/delete-user.js">

    </script>
}
