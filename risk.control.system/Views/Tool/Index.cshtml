@model risk.control.system.Models.ViewModel.ToolHubViewModel

@{
    ViewData["Title"] = "AI Tool Hub";
    Layout = "~/Views/Shared/_LayoutGuest.cshtml";
}

<section class="content py-5">
    <div class="container">
        <div class="submit-progress hidden">
            <i class="fas fa-sync fa-spin fa-4x fa-fw"></i>
        </div>
        <div class="text-center mb-5">
            <h2 class="font-weight-bold text-dark">Intelligent System Tools</h2>
            <p class="text-muted">Select a tool below to begin. Each tool has a 5-use limit.</p>
        </div>

        <div class="row">
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 tool-card shadow-sm p-3 border border-primary @(Model.FaceMatchRemaining <= 0 ? "bg-light" : "")">
                    <div class="card-body text-center">
                        <div class="icon-box bg-soft-primary mb-2">
                            <i class="fas fa-user-check fa-2x text-primary"></i>
                        </div>
                        <h5 class="card-title font-weight-bold">Face Match</h5>

                        <span class="badge @(Model.FaceMatchRemaining > 0 ? "badge-primary" : "badge-danger") mb-3">
                            @Model.FaceMatchRemaining tries left
                        </span>

                        <p class="card-text text-muted small">Biometric comparison between two images.</p>

                        @if (Model.FaceMatchRemaining > 0)
                        {
                            <a class="btn btn-primary btn-block rounded-pill launch-btn"
                               href="/FaceMatch/Index">
                                Launch Face Match
                            </a>
                        }
                        else
                        {
                            <button class="btn btn-secondary btn-block rounded-pill disabled" disabled>Limit Reached</button>
                        }
                    </div>
                </div>
            </div>

            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 tool-card shadow-sm p-3 border border-success @(Model.OcrRemaining <= 0 ? "bg-light" : "")">
                    <div class="card-body text-center">
                        <div class="icon-box bg-soft-success mb-2">
                            <i class="fas fa-file-invoice fa-2x text-success"></i>
                        </div>
                        <h5 class="card-title font-weight-bold">OCR Extraction</h5>

                        <span class="badge @(Model.OcrRemaining > 0 ? "badge-success" : "badge-danger") mb-3">
                            @Model.OcrRemaining tries left
                        </span>

                        <p class="card-text text-muted small">Extract data from ID cards and documents.</p>

                        @if (Model.OcrRemaining > 0)
                        {
                            <a class="btn btn-success btn-block rounded-pill launch-btn"
                               href="/Ocr/Index">
                                Launch OCR Tool
                            </a>
                        }
                        else
                        {
                            <button class="btn btn-secondary btn-block rounded-pill disabled" disabled>Limit Reached</button>
                        }
                    </div>
                </div>
            </div>

            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 tool-card shadow-sm p-3 border border-info @(Model.PdfRemaining <= 0 ? "bg-light" : "")">
                    <div class="card-body text-center">
                        <div class="icon-box bg-soft-info mb-2">
                            <i class="fas fa-file-signature fa-2x text-info"></i>
                        </div>
                        <h5 class="card-title font-weight-bold">PDF Summarizer</h5>

                        <span class="badge @(Model.PdfRemaining > 0 ? "badge-info" : "badge-danger") mb-3">
                            @Model.PdfRemaining tries left
                        </span>

                        <p class="card-text text-muted small">Get AI-generated insights from PDF reports.</p>

                        @if (Model.PdfRemaining > 0)
                        {
                            <a class="btn btn-info btn-block rounded-pill launch-btn"
                               href="/PdfSummary/Index">
                                Launch PDF Tool
                            </a>
                        }
                        else
                        {
                            <button class="btn btn-secondary btn-block rounded-pill disabled" disabled>Limit Reached</button>
                        }
                    
                    </div>
                </div>
            </div>

            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 tool-card shadow-sm p-3 border border-warning @(Model.DocumentAnalysisRemaining <= 0 ? "bg-light" : "")">
                    <div class="card-body text-center">
                        <div class="icon-box bg-soft-warning mb-2">
                            <i class="fas fa-microscope fa-2x text-warning"></i>
                        </div>
                        <h5 class="card-title font-weight-bold">Tamper Detection</h5>

                        <span class="badge @(Model.DocumentAnalysisRemaining > 0 ? "badge-warning" : "badge-danger") mb-3">
                            @Model.DocumentAnalysisRemaining tries left
                        </span>

                        <p class="card-text text-muted small">Analyze images for digital tampering using ELA forensics.</p>

                        @if (Model.DocumentAnalysisRemaining > 0)
                        {
                            <a class="btn btn-warning btn-block rounded-pill launch-btn text-white"
                               href="/DocumentVerification/Index">
                                Launch Analysis
                            </a>
                        }
                        else
                        {
                            <button class="btn btn-secondary btn-block rounded-pill disabled" disabled>Limit Reached</button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/tool/home.js"></script>
}