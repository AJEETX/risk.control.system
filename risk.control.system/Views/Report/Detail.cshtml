@model ClaimTransactionModel

@{
    ViewData["Title"] = "Claim: Report ";
}
<section class="page-content">
    <div id="article" class="card card-default">
        @{
            var address = @Model.Claim.Addressline + " " + @Model.Claim.District.Name + " " + @Model.Claim.State.Name + " " + @Model.Claim.Country.Name + " " + @Model.Claim.PinCode.Code;
            var baddress = @Model.Location != null ?  @Model.Location?.Addressline + " " +
            @Model.Location?.District?.Name + " " + @Model.Location?.State?.Name + " " +
            @Model.Location?.Country?.Name + " " + @Model.Location?.PinCode?.Code : string.Empty;
            <div class="card-body">
                <article>
                    <div class="bb-blog-inner">
                        <header class="bb-blog-header">
                            <h5 class="bb-blog-title" itemprop="name">Customer name : @Model.Claim.CustomerName</h5>
                        </header>
                        <div class="card card-solid">
                            <div class="card-body pb-0">
                                <div class="row">
                                    <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch flex-column">
                                        <div class="card bg-light d-flex flex-fill">
                                            <div class="card-header text-muted border-bottom-0">
                                                Policy Details
                                            </div>
                                            <div class="card-body pt-0">
                                                <div class="row">
                                                    <div class="col-7">
                                                        <h2 class="lead"><b>@Model.Claim.LineOfBusiness.Name</b></h2>
                                                        <p class="text-muted text-sm">
                                                            <b>Claim Type: </b>@Model.Claim.ClaimType
                                                        </p>
                                                        <ul class="ml-4 mb-0 fa-ul text-muted">
                                                            <li class="small">
                                                                <span class="fa-li">
                                                                    <i class="fas fa-tools"></i>
                                                                </span>
                                                                Service: @Model.Claim.InvestigationServiceType.Name
                                                            </li>
                                                            <li class="small">
                                                                <span class="fa-li">
                                                                    <i class="fas fa-money-check-alt"></i>
                                                                </span>
                                                                Budget center: @Model.Claim.CostCentre.Name
                                                            </li>
                                                            <li class="small">
                                                                <span class="fa-li">
                                                                    <i class="fas fa-sun"></i>
                                                                </span>
                                                                Reason: @Model.Claim.CaseEnabler.Name;
                                                            </li>
                                                            <li class="small">
                                                                <span class="fa-li">
                                                                    <i class="far fa-clock"></i>
                                                                </span>
                                                                Issue Date: @Model.Claim.ContractIssueDate.ToString("dd-MMM-yyyy")
                                                            </li>
                                                        </ul>
                                                    </div>
                                                    <div class="col-5 text-center">
                                                        @if (Model?.Claim.DocumentImage is not null)
                                                        {
                                                            <img id="documentImage" class="form-Image" src="data:image/*;base64,@(Convert.ToBase64String(Model?.Claim.DocumentImage))">
                                                        }
                                                        else
                                                        {
                                                            <img id="documentImage" alt="user-avatar"
                                                                 class="img-circle img-fluid form-Image" src="/img/document.jpeg">
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="card-footer">
                                                <div class="text-right">
                                                    <a href="#" class="btn btn-sm bg-teal">
                                                        <i class="fas fa-comments"></i>
                                                    </a>
                                                    <a href="#" class="btn btn-sm btn-primary">
                                                        <i class="fas fa-print"></i> Details ...
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch flex-column">
                                        <div class="card bg-light d-flex flex-fill">
                                            <div class="card-header text-muted border-bottom-0">
                                                Customer Details
                                            </div>
                                            <div class="card-body pt-0">
                                                <div class="row">
                                                    <div class="col-7">
                                                        <h2 class="lead"><b>@Model.Claim.CustomerName</b></h2>
                                                        <p class="text-muted text-sm">
                                                            <b>Occupation: </b> @Model.Claim.CustomerOccupation
                                                        </p>
                                                        <ul class="ml-4 mb-0 fa-ul text-muted">
                                                            <li class="small">
                                                                <span class="fa-li">
                                                                    <i class="fas fa-rupee-sign"></i>
                                                                </span>
                                                                Income: @Model.Claim.CustomerIncome
                                                            </li>
                                                            <li class="small">
                                                                <span class="fa-li">
                                                                    <i class="fas fa-lg fa-building"></i>
                                                                </span>
                                                                Address: @address
                                                            </li>
                                                            <li class="small">
                                                                <span class="fa-li">
                                                                    <i class="fas fa-lg fa-phone"></i>
                                                                </span>
                                                                Phone #: + @Model.Claim.ContactNumber
                                                            </li>
                                                        </ul>
                                                    </div>
                                                    <div class="col-5 text-center">
                                                        @if (Model?.Claim.ProfilePicture is not null)
                                                        {
                                                            <img id="profileImage" class="form-Image" src="data:image/*;base64,@(Convert.ToBase64String(Model?.Claim.ProfilePicture))">
                                                        }
                                                        else
                                                        {
                                                            <img id="profileImage" class="form-Image" src="/img/user.png">
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="card-footer">
                                                <div class="text-right">
                                                    
                                                    <a href="#" class="btn btn-sm btn-success">
                                                        <i class="fas fa-user"></i> Profile ...
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    @{
                                        if(Model.Location != null)
                                        {
                                            <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch flex-column">
                                                <div class="card bg-light d-flex flex-fill">
                                                    <div class="card-header text-muted border-bottom-0">
                                                        Beneficiary Details
                                                    </div>
                                                    <div class="card-body pt-0">
                                                        <div class="row">
                                                            <div class="col-7">
                                                                <h2 class="lead"><b>@Model.Location.BeneficiaryName</b></h2>
                                                                <p class="text-muted text-sm">
                                                                    <b>Relation: </b> @Model.Location.BeneficiaryRelation.Name
                                                                </p>
                                                                <ul class="ml-4 mb-0 fa-ul text-muted">
                                                                    <li class="small">
                                                                        <span class="fa-li">
                                                                            <i class="fas fa-rupee-sign"></i>
                                                                        </span>
                                                                        Income: @Model.Location.BeneficiaryIncome
                                                                    </li>
                                                                    <li class="small">
                                                                        <span class="fa-li">
                                                                            <i class="fas fa-lg fa-building"></i>
                                                                        </span>
                                                                        Address: @baddress
                                                                    </li>
                                                                    <li class="small">
                                                                        <span class="fa-li">
                                                                            <i class="fas fa-lg fa-phone"></i>
                                                                        </span>
                                                                        Phone #: + @Model.Location.BeneficiaryContactNumber
                                                                    </li>
                                                                </ul>
                                                            </div>
                                                            <div class="col-5 text-center">

                                                                @if (Model?.Location.ProfilePicture is not null)
                                                                {
                                                                    <img id="profileImage" alt="user-avatar"
                                                                         class="img-circle img-fluid form-Image" src="data:image/*;base64,@(Convert.ToBase64String(Model?.Location.ProfilePicture))">
                                                                }
                                                                else
                                                                {
                                                                    <img class="form-Image" id="profileImage" src="/img/user.png">
                                                                }

                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="card-footer">
                                                        <div class="text-right">
                                                            
                                                            <a href="#" class="btn btn-sm btn-warning">
                                                                <i class="fas fa-user"></i> Beneficiary...
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                        }
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="bb-blog-content" itemprop="articleBody">
                            <div class="timeline">
                                @{
                                    var firstOnly = false;
                                    var lastOnly = true;
                                    foreach (var log in Model.Log)
                                    {
                                        <div class="time-label"><span class="bg-red">@log.Created.ToString("dd-MMM-yyyy")</span></div>

                                        <div>
                                            <i class="nav-icon fas fa-envelope bg-blue"></i>
                                            <div class="timeline-item">
                                                <span class="time"><i class="nav-icon fas fa-clock"></i> @log.Created.ToString("hh:mm tt")</span>
                                                @if (@firstOnly)
                                                {
                                                    <h3 class="timeline-header"><a href="#">@log.UpdatedBy</a> has actioned the case to: <span class="badge badge-success"> @log.InvestigationCaseStatus.Name.</span></h3>
                                                }
                                                else
                                                {
                                                    <h3 class="timeline-header"><a href="#">@log.UpdatedBy</a> has actioned the case: <span class="badge badge-success"> ....</span></h3>
                                                }
                                                <div class="timeline-body">
                                                    The status has been updated to <span class="badge badge-info">@log.InvestigationCaseSubStatus.Name</span>
                                                </div>

                                            </div>
                                        </div>
                                        firstOnly = true;
                                    }
                                }

                                <div><i class="nav-icon fas fa-clock bg-gray"></i></div>
                            </div>
                        </div> <!-- class bb-blog-content -->

                    </div> <!-- class bb-blog-inner -->
                </article>
                <div class="row">
                    <div class="col-md-12 text-right">
                        <a asp-asp-controller="Report" asp-action="Index" class="btn btn-default"><i class="fas fa-arrow-left"></i> @Applicationsettings.BACK</a> &nbsp;&nbsp;&nbsp;
                    </div>
                </div>
            </div>
        }
    </div>
</section>