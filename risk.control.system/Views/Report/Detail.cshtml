@model ClaimTransactionModel

@{
    ViewData["Title"] = "Claim: Report ";
}
<style>
    body {
        background-color: #eee;
        font-family: "Poppins", sans-serif;
        font-weight: 300;
    }

    .container {
        width: 100%;
    }

    .progresses {
        display: flex;
        align-items: center;
        width: 100%;
        margin:1rem 0;
    }

    .line {
        width: 100%;
        height: 6px;
        background: lightgrey;
    }

    .steps {
        display: flex;
        background-color: green;
        color: #fff;
        font-size: 1rem;
        width: 200px;
        height: 30px;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
    }

    .steps1 {
        background-color: green;
    }

    .steps2 {
        background-color: lightgray;
    }

    .steps3 {
        background-color: lightgray;
    }

    .steps4 {
        background-color: lightgray;
    }

    .steps5 {
        background-color: lightgray;
    }

    .steps6 {
        background-color: lightgray;
    }

    .steps7 {
        background-color: lightgray;
    }
</style>
<section class="content pt-2">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div id="article" class="card card-secondary">
                    <div class="card-header">
                        <h3 class="card-title"><i class="fas fa-newspaper"></i> Detail</h3>
                    </div>
                    @{
                        string address = string.Empty;
                        string baddress = string.Empty;
                        int currentAgeinYrs = 0;
                        if (Model.Claim.CustomerDetail != null)
                        {
                            address = @Model.Claim?.CustomerDetail.Addressline + " " + @Model.Claim?.CustomerDetail.District.Name + " " + @Model.Claim?.CustomerDetail.State.Name + " " + @Model.Claim?.CustomerDetail.Country.Name + " " + @Model.Claim?.CustomerDetail.PinCode.Code;
                            baddress = @Model.Location != null ? @Model.Location?.Addressline + " " +
                            @Model.Location?.District?.Name + " " + @Model.Location?.State?.Name + " " +
                            @Model.Location?.Country?.Name + " " + @Model.Location?.PinCode?.Code : string.Empty;
                            var age = DateTime.Now.Subtract(Model.Claim.CustomerDetail.CustomerDateOfBirth).TotalDays;
                            currentAgeinYrs = (int)age / 365;
                        }

                        <div class="card-body">
                            <article>
                                <input type="hidden" id="policyDetailId" value="@Model.Claim?.PolicyDetail.PolicyDetailId" />
                                <input type="hidden" id="customerDetailId" value="@Model.Claim?.CustomerDetail.CustomerDetailId" />
                                <input type="hidden" id="beneficiaryId" value="@Model.Location?.CaseLocationId" />
                                <input type="hidden" id="claimId" value="@Model.Claim?.ClaimsInvestigationId" />
                                <div class="bb-blog-inner">
                                    <header class="bb-blog-header">
                                        <h5 class="bb-blog-title" itemprop="name"><i class="far fa-file-powerpoint"></i> Policy # : @Model.Claim.PolicyDetail.ContractNumber</h5>
                                    </header>
                                    
                                    <div class="card card-solid">
                                        <div class="card-body pb-0">
                                            <div class="row">
                                                <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch flex-column">
                                                    <div class="card bg-light d-flex flex-fill">
                                                        <div class="card-header text-muted border-bottom-0">
                                                            <i class="far fa-file-powerpoint"></i> Policy Details
                                                        </div>
                                                        <div class="card-body pt-0">
                                                            <div class="row">
                                                                <div class="col-7">
                                                                    <h2 class="lead"><b>@Model.Claim?.PolicyDetail.LineOfBusiness.Name</b></h2>
                                                                    <p class="text-muted text-sm">
                                                                        <b>Claim Type: </b>@Model.Claim?.PolicyDetail.ClaimType
                                                                    </p>
                                                                    <ul class="ml-4 mb-0 fa-ul text-muted">
                                                                        <li class="small">
                                                                            <span class="fa-li">
                                                                                <i class="fas fa-money-bill-wave"></i>
                                                                            </span>
                                                                            Amount: <i class="fas fa-rupee-sign"></i>@Model.Claim?.PolicyDetail.SumAssuredValue
                                                                        </li>
                                                                        <li class="small">
                                                                            <span class="fa-li">
                                                                                <i class="fas fa-tools"></i>
                                                                            </span>
                                                                            Service: @Model.Claim?.PolicyDetail.InvestigationServiceType.Name
                                                                        </li>
                                                                        <li class="small">
                                                                            <span class="fa-li">
                                                                                <i class="fas fa-money-check-alt"></i>
                                                                            </span>
                                                                            Budget center: @Model.Claim?.PolicyDetail.CostCentre.Name
                                                                        </li>
                                                                        <li class="small">
                                                                            <span class="fa-li">
                                                                                <i class="fas fa-sun"></i>
                                                                            </span>
                                                                            Reason: @Model.Claim?.PolicyDetail.CaseEnabler.Name;
                                                                        </li>
                                                                        <li class="small">
                                                                            <span class="fa-li">
                                                                                <i class="far fa-clock"></i>
                                                                            </span>
                                                                            Issue Date: @Model.Claim?.PolicyDetail.ContractIssueDate.ToString("dd-MMM-yyyy")
                                                                        </li>
                                                                    </ul>
                                                                </div>
                                                                <div class="col-5 text-center">
                                                                    @if (Model?.Claim?.PolicyDetail.DocumentImage is not null)
                                                                    {
                                                                        <img id="documentImage" class="form-Image" src="data:image/*;base64,@(Convert.ToBase64String(Model?.Claim.PolicyDetail.DocumentImage))">
                                                                    }
                                                                    else
                                                                    {
                                                                        <img id="documentImage" alt="user-avatar"
                                                                             class="img-circle img-fluid form-Image" src="/img/document.jpeg">
                                                                    }
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="card-footer">
                                                            <div class="text-right">
                                                                <button id="policy-comments" class="btn btn-sm bg-teal">
                                                                    <i class="fas fa-comments"></i>
                                                                </button>
                                                                <button id="policy-detail" class="btn btn-sm btn-danger">
                                                                    <i class="far fa-file-powerpoint"></i> ...
                                                                </button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch flex-column">
                                                    <div class="card bg-light d-flex flex-fill">
                                                        <div class="card-header text-muted border-bottom-0">
                                                            <i class="fa fa-user-plus"></i> Customer Details
                                                        </div>
                                                        <div class="card-body pt-0">
                                                            <div class="row">
                                                                <div class="col-7">
                                                                    <h2 class="lead"><b>@Model.Claim.CustomerDetail.CustomerName</b></h2>
                                                                    <p class="text-muted text-sm">
                                                                        <b>Occupation: </b> @Model.Claim.CustomerDetail.CustomerOccupation
                                                                    </p>
                                                                    <ul class="ml-4 mb-0 fa-ul text-muted">
                                                                        <li class="small">
                                                                            <span class="fa-li">
                                                                                <i class="fas fa-rupee-sign"></i>
                                                                            </span>
                                                                            Income: @Model.Claim.CustomerDetail.CustomerIncome
                                                                        </li>
                                                                        <li class="small">
                                                                            <span class="fa-li">
                                                                                <i class="fas fa-rupee-sign"></i>
                                                                            </span>
                                                                            Age: @currentAgeinYrs
                                                                        </li>
                                                                        <li class="small">
                                                                            <span class="fa-li">
                                                                                <i class="fas fa-lg fa-building"></i>
                                                                            </span>
                                                                            Address: @address
                                                                        </li>

                                                                        <li class="small">
                                                                            <span class="fa-li">
                                                                                <i class="fas fa-lg fa-phone"></i>
                                                                            </span>
                                                                            Phone #: + @Model.Claim.CustomerDetail.ContactNumber
                                                                        </li>
                                                                    </ul>
                                                                </div>
                                                                <div class="col-5 text-center">
                                                                    @if (Model?.Claim.CustomerDetail.ProfilePicture is not null)
                                                                    {
                                                                        <img id="profileImage" class="form-Image" src="data:image/*;base64,@(Convert.ToBase64String(Model?.Claim.CustomerDetail.ProfilePicture))">
                                                                    }
                                                                    else
                                                                    {
                                                                        <img id="profileImage" class="form-Image" src="/img/user.png">
                                                                    }
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="card-footer">
                                                            <div class="text-right">
                                                                <button id="customer-comments" class="btn btn-sm bg-teal">
                                                                    <i class="fas fa-comments"></i>
                                                                </button>
                                                                <button id="customer-detail" class="btn btn-sm btn-warning">
                                                                    <i class="fa fa-user-plus"></i> ...
                                                                </button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch flex-column">
                                                    <div class="card bg-light d-flex flex-fill">
                                                        <div class="card-header text-muted border-bottom-0">
                                                            <i class="fas fa-user-tie"></i>  Beneficiary Details
                                                        </div>
                                                        <div class="card-body pt-0">
                                                            <div class="row">
                                                                <div class="col-7">
                                                                    <h2 class="lead"><b>@Model.Location?.BeneficiaryName</b></h2>
                                                                    <p class="text-muted text-sm">
                                                                        <b>Relation: </b> @Model.Location?.BeneficiaryRelation.Name
                                                                    </p>
                                                                    <ul class="ml-4 mb-0 fa-ul text-muted">
                                                                        <li class="small">
                                                                            <span class="fa-li">
                                                                                <i class="fas fa-rupee-sign"></i>
                                                                            </span>
                                                                            Income: @Model.Location?.BeneficiaryIncome
                                                                        </li>
                                                                        <li class="small">
                                                                            <span class="fa-li">
                                                                                <i class="fas fa-lg fa-building"></i>
                                                                            </span>
                                                                            Address: @baddress
                                                                        </li>
                                                                        <li class="small">
                                                                            <span class="fa-li">
                                                                                <i class="fas fa-lg fa-phone"></i>
                                                                            </span>
                                                                            Phone #: + @Model.Location?.BeneficiaryContactNumber
                                                                        </li>
                                                                    </ul>
                                                                </div>
                                                                <div class="col-5 text-center">

                                                                    @if (Model?.Location?.ProfilePicture is not null)
                                                                    {
                                                                        <img id="profileImage" alt="user-avatar"
                                                                             class="img-circle img-fluid form-Image" src="data:image/*;base64,@(Convert.ToBase64String(Model?.Location?.ProfilePicture))">
                                                                    }
                                                                    else
                                                                    {
                                                                        <img class="form-Image" id="profileImage" src="/img/user.png">
                                                                    }

                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="card-footer">
                                                            <div class="text-right">
                                                                <button id="beneficiary-comments" class="btn btn-sm bg-teal">
                                                                    <i class="fas fa-comments"></i>
                                                                </button>
                                                                <button id="beneficiary-detail" class="btn btn-sm btn-success">
                                                                    <i class="fas fa-user-tie"></i> ...
                                                                </button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>

                                            @{
                                                if (!string.IsNullOrWhiteSpace(Model.Location?.ClaimReport?.AgentRemarks))
                                                {

                                                    <div class="row">
                                                        <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch flex-column">
                                                            <div class="card bg-light d-flex flex-fill">
                                                                <div class="card-header text-muted border-bottom-0">
                                                                    <i class="fas fa-mobile-alt"></i> Investigation data <span style="float:right;"><i class="nav-icon fas fa-clock"></i> @Model.Location.ClaimReport?.AgentRemarksUpdated</span>
                                                                </div>
                                                                <div class="card-body pt-0">
                                                                    <div class="row">
                                                                        <div class="col-6">
                                                                            <h2 class="lead"><b> @Model.Location.BeneficiaryName</b></h2>
                                                                            <p class="text-muted text-sm">
                                                                                @{
                                                                                    var QR1 = @Model.Location?.ClaimReport?.QrData ?? "QR SAMPLE DATA";
                                                                                    var LongLat2 = @Model.Location?.ClaimReport?.LongLat ?? "SAMPLE CITY";
                                                                                }
                                                                                <b>QR data:<i class="fas fa-paperclip"></i> </b> @QR1
                                                                            </p>
                                                                            <ul class="ml-4 mb-0 fa-ul text-muted">
                                                                                <li class="small">
                                                                                    <span class="fa-li">
                                                                                        <i class="fas fa-money-bill-wave"></i>
                                                                                    </span>
                                                                                    Long Lat: <i class="fas fa-rupee-sign"></i> @LongLat2

                                                                                </li>
                                                                            </ul>
                                                                        </div>
                                                                        <div class="col-6 text-center">
                                                                            Location: <i class="fas fa-rupee-sign"></i>
                                                                            @{
                                                                                if (Model.Location.ClaimReport?.AgentLocationPicture != null)
                                                                                {
                                                                                    <img id="agentLocationPicture" class="report-Image" src="/img/no-image.png">
                                                                                }
                                                                                else
                                                                                {
                                                                                    <img id="documentImage" alt="user-avatar"
                                                                                         class="img-fluid form-Image" src="/img/no-photo.png">
                                                                                }
                                                                            }
                                                                            <br />
                                                                            OCR Doc: <i class="fas fa-rupee-sign"></i>
                                                                            @{
                                                                                if (Model.Location.ClaimReport?.AgentLocationPicture != null)
                                                                                {
                                                                                    <img id="agentLocationPicture" class="report-Image" src="/img/no-image.png">
                                                                                }
                                                                                else
                                                                                {
                                                                                    <img id="documentImage" alt="user-avatar"
                                                                                         class="img-fluid form-Image" src="/img/no-photo.png">
                                                                                }
                                                                            }
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch flex-column">
                                                            <div class="card bg-light d-flex flex-fill">
                                                                <div class="card-header text-muted border-bottom-0">
                                                                    <i class="fas fa-user-shield"></i> Agent remarks <span style="float:right;"><i class="nav-icon fas fa-clock"></i> @Model.Location.ClaimReport?.AgentRemarksUpdated</span>
                                                                </div>
                                                                <div class="card-body pt-0">
                                                                    <div class="row">
                                                                        <div class="col-12">

                                                                            <ul class="ml-4 mb-0 fa-ul text-muted">

                                                                                <li class="small">
                                                                                    <span class="fa-li">
                                                                                        <i class="far fa-comment"></i>
                                                                                    </span>
                                                                                    @Model.Location.ClaimReport?.AgentRemarks <i class="far fa-comment"></i>
                                                                                </li>
                                                                            </ul>
                                                                        </div>

                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch flex-column">
                                                            <div class="card bg-light d-flex flex-fill">
                                                                <div class="card-header text-muted border-bottom-0">
                                                                    <i class="fas fa-user-edit"></i> Supervisor comments <span style="float:right;"><i class="nav-icon fas fa-clock"></i> @Model.Location.ClaimReport?.SupervisorRemarksUpdated</span>
                                                                </div>
                                                                <div class="card-body pt-0">
                                                                    <div class="row">
                                                                        <div class="col-12">

                                                                            <ul class="ml-4 mb-0 fa-ul text-muted">

                                                                                <li class="small">
                                                                                    <span class="fa-li">
                                                                                        <i class="far fa-comment"></i>
                                                                                    </span>
                                                                                    @Model.Location.ClaimReport?.SupervisorRemarks <i class="far fa-comment"></i>
                                                                                </li>
                                                                            </ul>
                                                                        </div>

                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-12 d-flex align-items-stretch flex-column">
                                                            <div class="card bg-light d-flex flex-fill">
                                                                <div class="card-header text-muted border-bottom-0">
                                                                    <i class="fas fa-user-check"></i> Assessor Remarks <span style="float:right;"><i class="nav-icon fas fa-clock"></i> @Model.Location.ClaimReport?.AssessorRemarksUpdated</span>
                                                                </div>
                                                                <div class="card-body pt-0">
                                                                    <div class="row">
                                                                        <div class="col-12">
                                                                            <h2 class="lead"><b> @Model?.Location?.BeneficiaryName</b></h2>
                                                                            <p class="text-muted text-sm">

                                                                                <b>Assessor remarks: </b>
                                                                            </p>
                                                                            <ul class="ml-4 mb-0 fa-ul text-muted">
                                                                                <li class="small">
                                                                                    <span class="fa-li">
                                                                                        <i class="fas fa-money-bill-wave"></i>
                                                                                    </span>
                                                                                    <i class="fas fa-rupee-sign"></i> @Model.Location.ClaimReport.AssessorRemarks
                                                                                </li>
                                                                            </ul>
                                                                        </div>

                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                }


                                            }
                                        </div>
                                    </div>
                                    <div class="card card-solid">
                                        <div class="container d-flex justify-content-center align-items-center">

                                            <div class="progresses">

                                                <span class="font-weight-bold badge badge-success"><i class="fa fa-check-circle"></i> </span>
                                                <div class="steps steps1">
                                                    <span> <i class="far fa-file-powerpoint"></i></span>
                                                </div>

                                                <span class="line"></span>

                                                <span class="font-weight-bold badge badge-success"><i class="fa fa-check-circle"></i> </span>
                                                <div class="steps steps1">
                                                    <span class="font-weight-bold"><i class="fa fa-user-plus"></i></span>
                                                </div>


                                                <span class="line"></span>
                                                <span class="font-weight-bold badge badge-success"><i class="fa fa-check-circle"></i> </span>

                                                <div class="steps steps1">
                                                    <span class="font-weight-bold"><i class="fas fa-user-tie"></i></span>
                                                </div>
                                                <span class="line"></span>

                                                <div class="steps steps4">
                                                    <span class="font-weight-bold"><i class="fas fa-user-tie"></i></span>
                                                </div>
                                                <span class="line"></span>

                                                <div class="steps steps5">
                                                    <span class="font-weight-bold"><i class="fas fa-user-tie"></i></span>
                                                </div>
                                                <span class="line"></span>

                                                <div class="steps steps6">
                                                    <span class="font-weight-bold"><i class="fas fa-user-tie"></i></span>
                                                </div>
                                                <span class="line"></span>

                                                <div class="steps steps7">
                                                    <span class="font-weight-bold"><i class="fas fa-user-tie"></i></span>
                                                </div>
                                            </div>

                                        </div>
                                        
                                    </div>
                                    <div class="card card-solid">
                                        <div class="card-body pb-0">
                                            <div class="row">
                                                <div class="col-12 d-flex align-items-stretch flex-column">
                                                    <div class="bb-blog-content" itemprop="articleBody">
                                                        <div class="timeline">
                                                            @{
                                                                var firstOnly = false;
                                                                var lastOnly = true;
                                                                foreach (var log in Model.Log)
                                                                {
                                                                    <div class="time-label"><span class="bg-red">@log.Created.ToString("dd-MMM-yyyy")</span></div>

                                                                    <div>
                                                                        <i class="nav-icon fas fa-envelope bg-blue"></i>
                                                                        <div class="timeline-item">
                                                                            <span class="time"><i class="nav-icon fas fa-clock"></i> @log.Created.ToString("hh:mm tt")</span>
                                                                            @if (@firstOnly)
                                                                            {
                                                                                <h3 class="timeline-header"><a href="#">@log.UpdatedBy</a> has actioned the case to: <span class="badge badge-success"> @log.InvestigationCaseStatus.Name.</span></h3>
                                                                            }
                                                                            else
                                                                            {
                                                                                <h3 class="timeline-header"><a href="#">@log.UpdatedBy</a> has actioned the case: <span class="badge badge-success"> ....</span></h3>
                                                                            }
                                                                            <div class="timeline-body">
                                                                                The status has been updated to <span class="badge badge-info">@log.InvestigationCaseSubStatus.Name</span>
                                                                            </div>

                                                                        </div>
                                                                    </div>
                                                                    firstOnly = true;
                                                                }
                                                            }

                                                            <div><i class="nav-icon fas fa-clock bg-gray"></i></div>
                                                        </div>
                                                    </div> <!-- class bb-blog-content -->

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div> <!-- class bb-blog-inner -->
                            </article>
                            <div class="row">
                                <div class="col-md-12 text-right">
                                    <a asp-asp-controller="Report" asp-action="Index" class="btn btn-default"><i class="fas fa-arrow-left"></i> @Applicationsettings.BACK</a> &nbsp;&nbsp;&nbsp;
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>

        $(document).ready(function () {

            $('#policy-detail').click(function () {
                $.confirm({
                    columnClass: 'medium',
                    content: function () {
                        var self = this;
                        return $.ajax({
                            url: '/api/ClaimsInvestigation/GetPolicyDetail?id=' + $('#policyDetailId').val(),
                            dataType: 'json',
                            method: 'get'
                        }).done(function (response) {
                            self.setContent('Policy #: ' + response.contractNumber);
                            self.setContentAppend('<br>Issue date: ' + response.contractIssueDate);
                            self.setTitle(response.causeOfLoss);
                        }).fail(function () {
                            self.setContent('Something went wrong.');
                        });
                    }
                })
            })

            $('#customer-detail').click(function () {
                $.confirm({
                    columnClass: 'medium',
                    content: function () {
                        var self = this;
                        return $.ajax({
                            url: '/api/ClaimsInvestigation/GetCustomerDetail?id=' + $('#customerDetailId').val(),
                            dataType: 'json',
                            method: 'get'
                        }).done(function (response) {
                            self.setContent('Customer: ' + response.customerName);
                            self.setContentAppend('<br>Phone #: ' + response.contactNumber);
                            self.setTitle(response.addressline);
                        }).fail(function () {
                            self.setContent('Something went wrong.');
                        });
                    }
                })
            })

            $('#beneficiary-detail').click(function () {
                $.confirm({
                    columnClass: 'medium',
                    content: function () {
                        var self = this;
                        return $.ajax({
                            url: '/api/ClaimsInvestigation/GetBeneficiaryDetail?id=' + $('#beneficiaryId').val() + '&claimId=' + $('#claimId').val(),
                            dataType: 'json',
                            method: 'get'
                        }).done(function (response) {
                            self.setContent('Beneficiary: ' + response.beneficiaryName);
                            self.setContentAppend('<br>Phone #: ' + response.beneficiaryContactNumber);
                            self.setTitle(response.beneficiaryIncome);
                        }).fail(function () {
                            self.setContent('Something went wrong.');
                        });
                    }
                })
            })
            $('#policy-comments').click(function () {

                $.confirm({
                    title: 'Policy Note!!!',
                    content: '' +
                        '<form action="" class="formName">' +
                        '<div class="form-group">' +
                        '<label>Enter note about Policy</label>' +
                        '<input type="text" placeholder="Enter note" class="name form-control" required />' +
                        '</div>' +
                        '</form>',
                    buttons: {
                        formSubmit: {
                            text: 'Add Note',
                            btnClass: 'btn-blue',
                            action: function () {
                                var name = this.$content.find('.name').val();
                                if (!name) {
                                    $.alert('provide a note on Policy !!!');
