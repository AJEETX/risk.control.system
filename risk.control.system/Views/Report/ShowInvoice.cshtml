@model VendorInvoice

@{
    ViewData["Title"] = "Invoice: Approved Report ";
}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div id="article" class="card card-secondary">
                    <div class="card-header">
                        <h3 class="card-title"><i class="fas fa-pen-alt"></i> Invoice
                            <span class="hover-text">
                                <i class="fas fa-info-circle"></i>
                                <span class="tooltip-text" id="information">
                                    <span>
                                        CLAIM INVESTIGATION SERVICE INVOICE
                                        <i class='far fa-file-powerpoint'></i> Policy details.
                                        <i class='fa fa-user-plus'></i> <b> Customer Information.</b>
                                        <b> <i class='fas fa-user-tie'></i> Beneficiary Details </b>
                                    </span>

                                </span>
                            </span>
                        </h3>
                        
                    </div>
                    <div class="card-body">
                        <div class="submit-progress hidden">
                            <i class="fas fa-sync fa-spin fa-4x fa-fw"></i>
                        </div>
                        <div class="pad margin no-print">
                            <div class="callout callout-info" style="margin-bottom: 0!important;">
                                <h4><i class="fa fa-info"></i> Note:</h4>
                                This page has been enhanced for printing. Click the print button at the bottom to print.
                            </div>
                        </div>
                        <section class="invoice">

                            <!-- title row -->
                            <div class="row">
                                <div class="col-xs-12">
                                    <h3 class="page-header">
                                        <i class="fa fa-globe"></i> Agency Invoice:
                                        <small class="pull-right">Date: @Model.InvoiceDate.ToString("dd-MMM-yyyy")</small>
                                    </h3>
                                </div>
                                <!-- /.col -->
                            </div>
                            <hr />
                            <!-- info row -->
                            <div class="row invoice-info">
                                <div class="col-sm-4 invoice-col">
                                    Bill To
                                    <address>
                                        <strong>@Model.ClientCompany.Name</strong><br>
                                        @Model.ClientCompany.Branch<br>
                                        @Model.ClientCompany.Addressline <br>
                                        @Model.ClientCompany.District.Name<br>
                                        @Model.ClientCompany.Email<br>
                                        attn: @Model.ClientCompany.PhoneNumber
                                    </address>
                                </div>
                                <!-- /.col -->
                                <div class="col-sm-4 invoice-col">
                                    From
                                    <address>
                                        <strong>@Model.Vendor.Name</strong><br>
                                        @Model.Vendor.Branch<br>
                                        @Model.Vendor.Addressline<br>
                                        @Model.Vendor.District.Name<br>
                                        @Model.Vendor.Email<br>
                                        attn: @Model.Vendor.PhoneNumber

                                    </address>
                                </div>
                                <!-- /.col -->
                                <div class="col-sm-4 invoice-col">
                                    <b>Invoice Number:</b> @Model.InvoiceNumber<br>
                                    <b>Invoice Date:</b> @Model.InvoiceDate.ToString("dd-MMM-yyyy")<br>
                                    <b>Invoice Due:</b> @Model.DueDate.ToString("dd-MMM-yyyy")<br>

                                </div>
                                <!-- /.col -->
                            </div>
                            <!-- /.row -->
                            <!-- Table row -->
                            <div class="row">
                                <div class="col-xs-12 table-responsive">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>Vendor name</th>
                                                <th>Service</th>
                                                <th>Subtotal</th>
                                                <th>Total</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>@Model.Vendor.Name</td>
                                                <td>@Model.InvestigationServiceType.Name</td>
                                                <td>@Model.SubTotal</td>
                                                <td>$ @Model.GrandTotal</td>
                                            </tr>

                                        </tbody>
                                    </table>
                                </div>
                                <!-- /.col -->
                            </div>
                            <!-- /.row -->
                            <div class="row invoice-info">
                                <!-- accepted payments column -->
                                <div class="col-sm-8 invoice-col">
                                    <p class="lead">Note to recipients:</p>
                                    <p class="text-muted well well-sm no-shadow">
                                        @Model.NoteToRecipient
                                    </p>
                                </div>
                                <!-- /.col -->
                                <div class="col-sm-4 invoice-col">
                                    <p class="lead">Amount Details</p>
                                    <div class="table-responsive">
                                        <table class="table">
                                            <tr>
                                                <th style="width:50%">Subtotal:</th>
                                                <td>$ @Model.SubTotal.ToString()</td>
                                            </tr>

                                            <tr>
                                                <th>Tax</th>
                                                <td>$ @Model.TaxAmount.ToString()</td>
                                            </tr>
                                            <tr>
                                                <th>Total:</th>
                                                <td>$ @Model.GrandTotal</td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                                <!-- /.col -->
                            </div>
                            <!-- /.row -->
                            <!-- this row will not appear when printing -->
                            <div class="row no-print">
                                <div class="col-xs-12">
                                    <a id="back" asp-action="Detail" asp-route-id="@Model.ClaimId" class="btn btn-outline-secondary"><i class="fas fa-arrow-left"></i> @Applicationsettings.BACK</a> 

                                    <a href="@Url.Action("PrintInvoice", new { id = Model.VendorInvoiceId })" class="btn btn-primary"><i class="fa fa-print"></i> Print Invoice</a>
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
