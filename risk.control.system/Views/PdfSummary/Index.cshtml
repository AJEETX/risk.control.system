@model PdfSummaryViewModel

@{
    ViewData["Title"] = "PDF Summarizer";
    Layout = "~/Views/Shared/_LayoutGuest.cshtml";
}

<section class="content py-4">
    <div id="article" class="card shadow-lg summarizer-card">
        <div class="card-header bg-dark text-white d-flex align-items-center">
            <i class="fas fa-brain mr-2"></i>
            <h5 class="mb-0">PDF Summarizer</h5>
        </div>
        <div class="card-body p-4">
            <div class="submit-progress hidden">
                <i class="fas fa-sync fa-spin fa-4x fa-fw"></i>
            </div>
            <form id="summaryForm" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label font-weight-bold" for="pdfFile">1. Select Document</label>
                        <div id="drop-zone" class="rounded d-flex flex-column align-items-center justify-content-center p-4 bg-light">
                            <input id="pdfFile" name="pdfFile" type="file" class="d-none" accept=".pdf" required />
                            <div class="text-center">
                                <img id="previewDoc" src="/img/pdf-placeholder.png" alt="PDF Icon" class="pdf-icon-preview mb-3" />
                                <h6 class="text-dark">Drop PDF Here</h6>
                                <p class="small text-muted mb-0">or click to browse your files</p>
                                <hr />
                                <div id="fileNameDisplay" class="badge badge-info p-2 d-none text-truncate" ></div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 mb-3 std-height">
                        <label class="form-label font-weight-bold" for="summaryResult">2. AI Summary Result</label>

                        <div id="loader" class="text-center d-none py-5">
                            <div class="spinner-grow text-info" role="status"></div>
                            <div class="mt-3">
                                <h6 class="pulse-loading text-info">Generating insights...</h6>
                                <p class="text-muted small">This may take a minute for larger documents</p>
                            </div>
                        </div>

                        <textarea id="summaryResult" class="form-control summary-box shadow-sm"
                                  placeholder="Insights and key points will be listed here..." readonly></textarea>

                        <div id="summaryActions" class="mt-3 d-none">
                            <button type="button" class="btn btn-sm btn-outline-primary" id="copyBtn">
                                <i class="fas fa-copy"></i> Copy to Clipboard
                            </button>
                        </div>
                    </div>
                </div>

                <div class="mt-4">
                    <button type="submit" id="btnSubmit" class="btn btn-info btn-lg w-100 shadow rounded-pill">
                        <i class="fas fa-magic mr-2"></i> Generate Summary
                    </button>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/tool/summarizer.js"></script>
}