@model PdfSummaryViewModel

@{
    ViewData["Title"] = "PDF Summarizer";
    Layout = "~/Views/Shared/_LayoutGuest.cshtml";
}
<section class="content py-4">
    <div id="article" class="card shadow-lg border-0 summarizer-card">
        
        <div class="card-header d-flex align-items-center bg-info">
            <i class="fas fa-file-pdf mr-2"></i>
            <h5 class="mb-0 font-weight-bold">PDF Summarizer</h5>

            <div class="ml-auto ms-auto">
                <span id="usageBadge"
                      class="badge usage-badge-custom shadow-sm @(Model.RemainingTries <= 1 ? "badge-soft-danger" : "badge-soft-info")">
                    <i class="fas @(Model.RemainingTries <= 1 ? "fa-exclamation-circle" : "fa-clock") mr-1 small"></i>
                    <span id="remainingCount">@Model.RemainingTries</span> tries left
                </span>
            </div>
        </div>

        <div class="card-body p-4">
            <div class="submit-progress hidden">
            <i class="fas fa-sync fa-spin fa-4x fa-fw"></i>
        </div>
        
            <form id="summaryForm" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-md-6 mb-4 text-center">
                        <label class="h6 font-weight-bold text-secondary mb-3" for="drop-zone">
                            <span class="badge badge-info rounded-circle mr-1 text-white">1</span> Select Document
                        </label>
                        <div id="drop-zone" class="pdf-drop-zone d-flex flex-column align-items-center justify-content-center p-4">
                            <input id="pdfFile" name="pdfFile" type="file" class="d-none" accept=".pdf" required />
                            
                            <div class="text-center">
                                <img id="previewDoc" src="/img/pdf-placeholder.png" alt="PDF Icon" class="pdf-icon-preview mb-3" />
                                <h6 class="text-info font-weight-bold">Drop PDF Here</h6>
                                <p class="small text-muted mb-0">or click to browse your files</p>
                                
                                <div id="fileNameDisplay" class="badge badge-light p-2 mt-3 d-none text-truncate border"></div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 mb-4 text-center">
                        <label class="h6 font-weight-bold text-secondary mb-3" for="summaryResult">
                            <span class="badge badge-info rounded-circle mr-1 text-white">2</span> AI Summary Result
                        </label>

                        <div class="summary-box-container text-left">
                            <div id="loader" class="pdf-loader-overlay d-none">
                                <div class="spinner-grow text-info" role="status"></div>
                                <div class="mt-3 text-center">
                                    <h6 class="pulse-loading text-info font-weight-bold">Generating insights...</h6>
                                    <p class="text-muted small px-3">Analyzing document structure and extracting key concepts</p>
                                </div>
                            </div>

                            <textarea id="summaryResult" class="form-control summary-box shadow-sm"
                                      placeholder="AI analysis will appear here. Points will be organized by relevance..." 
                                      readonly></textarea>
                        </div>
                    </div>
                </div>

                <div class="mt-2">
                    <button type="submit" id="btnSubmit" 
                            class="btn btn-outline-info btn-lg w-100 shadow rounded-pill btn-generate-summary"
                            @(Model.RemainingTries <= 0 ? "disabled" : "")>
                        @if (Model.RemainingTries <= 0)
                        {
                            <i class="fas fa-lock mr-2"></i> <span>Limit Reached</span>
                        }
                        else
                        {
                            <i class="fas fa-magic mr-2"></i> <span>Generate AI Summary</span>
                        }
                    </button>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/tool/summarizer.js"></script>
}