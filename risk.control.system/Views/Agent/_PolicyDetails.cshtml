@model ClaimsInvestigationVendorsModel

@{
    <input type="hidden" id="policyDetailId" value="@Model.ClaimsInvestigation?.PolicyDetail.PolicyDetailId" />
    <input type="hidden" id="customerDetailId" value="@Model.ClaimsInvestigation?.CustomerDetail.CustomerDetailId" />
    <input type="hidden" id="beneficiaryId" value="@Model.Location?.BeneficiaryDetailId" />
    <input type="hidden" id="claimId" value="@Model.ClaimsInvestigation?.ClaimsInvestigationId" />
    <div class="card shadow-lg border-1 rounded-lg collapsed-card">
        <div class="card-header bg-light text-white text-center">
            <h3 class="card-title">
                Case: <span class="badge badge-light"><i class="far fa-file-powerpoint"></i>  @Model.ClaimsInvestigation?.PolicyDetail?.ContractNumber</span>
                <span class="hover-text">
                    <i class="fas fa-info-circle"></i>
                    <span class="tooltip-text" id="information">
                        <li>

                            <i class='far fa-file-powerpoint'></i> Case details
                        </li>
                        @if (Model.ClaimsInvestigation.PolicyDetail.ClaimType == ClaimType.HEALTH)
                        {
                            <li>
                                <i class='fa fa-user-plus'></i> Customer details
                            </li>
                        }
                        else
                        {
                            <li> <i class='fas fa-user-tie'></i> Beneficiary details </li>
                        }
                    </span>
                </span>
            </h3>
            <div class="card-tools">
                <span data-toggle="tooltip" title="Claim # : @Model.ClaimsInvestigation?.PolicyDetail?.ContractNumber" class="badge badge-light">
                    <b><i class='far fa-hand-point-right'></i></b>
                </span>
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-plus"></i>
                </button>
            </div>
        </div>

        <div class="card-body pb-0">

            <div class="row">
                <partial name="_ClaimPolicyDetails" model="@Model" />
                @if (Model.ClaimsInvestigation.PolicyDetail.ClaimType == ClaimType.HEALTH)
                {
                    <partial name="_ClaimCustomerDetails" model="@Model" />
                }
                @if(Model.ClaimsInvestigation.PolicyDetail.ClaimType == ClaimType.DEATH)
                {
                    <partial name="_ClaimBeneficiaryDetails" model="@Model" />
                }
            </div>
        </div>
    </div>
}
