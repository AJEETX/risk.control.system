@{
    ViewData["Title"] = "Index";
}

<section class="content">
    <div class="card card-secondary">
        <div class="card-header">
            <h3 class="card-title">
                <i class="fa fa-binoculars" aria-hidden="true"></i> Tasks
                <span class="hover-text">
                    <i class="fas fa-info-circle"></i>
                    <span class="tooltip-text" id="information">
                        <li>
                            <i class='far fa-hand-point-right'></i> Select <input type='radio' /> <strong>TASK</strong>
                        </li>
                        <li>
                            <i class='far fa-thumbs-up'></i>  <button class='btn btn-danger btn-xs'>
                                <span class='badge badge-danger btn-xs'>
                                    <i class="fa fa-binoculars" aria-hidden="true"></i>
                                </span>
                                Investigate
                            </button>
                        </li>
                    </span>

                </span>
                </span>
            </h3>
        </div>
        <div class="card-body">
            <div class="submit-progress hidden">
                <i class="fas fa-sync fa-spin fa-4x fa-fw"></i>
            </div>
            <form id="checkboxes" asp-action="GetInvestigate" method="get" enctype="multipart/form-data">

                <div class="table-responsive mailbox-messages">
                    <table id="dataTable" class="table table-bordered table-hover dt-responsive nowrap w-100">
                        <thead>
                            <tr>
                                <th><img class="action-image" src="~/headers/arrow-down.gif" title="Action Type" alt="Action Type" /></th>
                                <th><img class="action-image" src="~/headers/policy-doc.gif" title="Case Document" alt="Case Document" /></th>
                                <th><img class="action-image" src="~/headers/policy-num.gif" title="Case Number" alt="Case Number" /></th>
                                <th><img class="action-image" src="~/headers/amount.gif" title="Insured Amount" alt="Insured Amount" /></th>
                                <th><img class="action-image" src="~/headers/portrait.gif" title="Customer Photo" alt="Customer" /></th>
                                <th><img class="action-image" src="~/headers/customer.gif" title="Customer Name" alt="Customer Name" /></th>
                                <th><img class="action-image" src="~/headers/portrait.gif" title="Beneficiary Photo" alt="Beneficiary " /></th>
                                <th><img class="action-image" src="~/headers/customer.gif" title="Beneficiary Name" alt="Beneficiary Name" /></th>
                                <th><img class="action-image" src="~/headers/claim-type.gif" title="Claim Type" alt="Claim Type" /></th>
                                <th><img class="action-image" src="~/headers/service.gif" title="Service" alt="Service" /></th>

                                <th><img class="action-image" src="~/headers/pincode.gif" title="Pincode" alt="Pincode" /></th>
                                <th><img class="action-image" src="~/headers/status.gif" title="Status" alt="Status" /></th>
                                <th><img class="action-image" src="~/headers/created.gif" title="Created date" alt="Created Date" /></th>
                                <th>
                                    <img class="action-image" src="~/headers/timer.gif" title="Days since Tasked" alt="time" />
                                </th>
                            </tr>
                        </thead>


                    </table>

                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-md-12">
                            <a id="back" asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-secondary"><i class="fas fa-arrow-left"></i> @Applicationsettings.BACK</a>

                            <button disabled id="allocatedcase" type="submit" class="btn btn-danger">
                                <span class="badge badge-danger"> <i class="fa fa-binoculars" aria-hidden="true"></i> </span>Investigate
                            </button>
                        </div>
                    </div>
                </div>
            </form>
            <div id="maps" class="col-md-12">
                <div id="map"></div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/agent/agent-claims.js"></script>
}