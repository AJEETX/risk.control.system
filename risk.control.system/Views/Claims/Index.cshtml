@using Microsoft.AspNetCore.Authorization
@using risk.control.system.Helpers;
@inject IAuthorizationService AuthorizationService

<div class="card">
    <div id="viewAll" class="card-body table-responsive">
<h4>claims permissions</h4>
<br />
@if ((AuthorizationService.AuthorizeAsync(User, Permissions.CaseClaims.Create)).Result.Succeeded)
{
    <button class="btn btn-success">Create</button>
}
@if ((AuthorizationService.AuthorizeAsync(User, Permissions.CaseClaims.View)).Result.Succeeded)
{
    <button class="btn btn-info">View</button>
}
@if ((AuthorizationService.AuthorizeAsync(User, Permissions.CaseClaims.Edit)).Result.Succeeded)
{
    <button class="btn btn-warning">Modify</button>
}
@if ((AuthorizationService.AuthorizeAsync(User, Permissions.CaseClaims.Delete)).Result.Succeeded)
{
    <button class="btn btn-danger">Delete</button>
}
    </div>
</div>