@model ClaimsInvestigationVendorsModel

@{
    var questionTime = @Model.AgencyReport.AgentRemarksUpdated != null ?
    @Model.AgencyReport.AgentRemarksUpdated.Value.ToString("dd-MMM-yy hh:mm tt") : null;
}

@if (!string.IsNullOrWhiteSpace(Model.ClaimsInvestigation.AgencyReport.AgentRemarks))
{
    <div class="card border-success">
        <div class="card direct-chat-warning collapsed-card">
            <div class="card-header text-muted border-bottom-0">
                <h3 class="card-title">
                    <i class="far fa-comment"></i> Questionnaire
                    <span class="hover-text">
                        <i class="fas fa-info-circle"></i>
                        <span class="tooltip-text" id="information">
                            <span>
                                <i class='far fa-hand-point-right'></i> Review <i class="far fa-comment"></i> Questionnaire
                            </span>

                        </span>
                    </span>
                </h3>
                <div class="card-tools">
                    <span data-toggle="tooltip" title="Agent report time" class="badge badge-light"> <i class="nav-icon fas fa-clock"></i> @questionTime </span>
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-plus"></i>
                    </button>
                </div>
            </div>
            <div class="card-footer text-muted border-bottom-0">
                <i class="fas fa-user-shield"></i>  Agent :<span class="badge badge-light">  @Model.AgencyReport.AgentEmail </span>
            </div>
            <div class="progress">
                <i class="far fa-bookmark bookmark-green"></i>
                <div class="progress-bar progress-bar-green" role="progressbar">
                    questionnaire
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-6">
                        <p class="text-muted text-sm">
                            <span class="badge badge-light"><i class="fas fa-film"></i> Questions</span>:
                            <br />
                            <ul class="ml-4 mb-0 fa-ul text-muted">
                                <li class="small">
                                    @Model.AgencyReport.ReportQuestionaire.Question1
                                    <span class="fa-li">
                                        <i class="far fa-comment"></i>
                                    </span>
                                </li>
                                <br />
                                <li class="small">
                                    @Model.AgencyReport.ReportQuestionaire.Question2
                                    <span class="fa-li">
                                        <i class="far fa-comment"></i>
                                    </span>
                                </li>
                                <br />
                                <li class="small">
                                    @Model.AgencyReport.ReportQuestionaire.Question3

                                    <span class="fa-li">
                                        <i class="far fa-comment"></i>
                                    </span>
                                </li>
                                <br />
                                <li class="small">
                                    @Model.AgencyReport.ReportQuestionaire.Question4

                                    <span class="fa-li">
                                        <i class="far fa-comment"></i>
                                    </span>
                                </li>
                                <br />
                                <li class="small">
                                    Remarks?
                                    <span class="fa-li">
                                        <i class="far fa-comment"></i>
                                    </span>
                                </li>
                            </ul>
                        </p>
                    </div>
                    <div class="col-6">
                        <p class="text-muted text-sm">
                            <span class="badge badge-light"><i class="fas fa-film"></i> Answers</span>:
                            <br />
                            <ul class="ml-4 mb-0 fa-ul text-muted">
                                <li class="small">
                                    <span class="fa-li">
                                        <i class="far fa-comment"></i>
                                    </span>
                                    @Model.AgencyReport?.ReportQuestionaire?.Answer1
                                </li>
                                <br />
                                <li class="small">

                                    <span class="fa-li">
                                        <i class="far fa-comment"></i>
                                    </span>
                                    @Model.AgencyReport?.ReportQuestionaire?.Answer2
                                </li>
                                <br />
                                <li class="small">
                                    <span class="fa-li">
                                        <i class="far fa-comment"></i>
                                    </span>
                                    @Model.AgencyReport?.ReportQuestionaire?.Answer3
                                </li>
                                <br />
                                <li class="small">
                                    <span class="fa-li">
                                        <i class="far fa-comment"></i>
                                    </span>
                                    @Model.AgencyReport?.ReportQuestionaire?.Answer4
                                </li>
                                <br />
                                <li class="small">
                                    <span class="fa-li">
                                        <i class="far fa-comment"></i>
                                    </span>

                                    @if (Model.ClaimsInvestigation.UpdateAgentAnswer)
                                    {
                                        <input required name="remarks" asp-for="AgencyReport.AgentRemarks" class="form-control remarks" data-toggle="tooltip" title="Edit Agent Remarks"
                                               type="text" placeholder="Remarks" maxlength="50" />
                                        <span asp-validation-for="AgencyReport.AgentRemarks" class="text-danger"></span>
                                    }
                                    else
                                    {
                                        @Model.AgencyReport?.AgentRemarks

                                    }

                                </li>
                            </ul>
                        </p>
                    </div>
                </div>
            </div>

        </div>

        <div class="text-center">
            <i class='fas fa-check-circle i-green'></i>
        </div>

    </div>
    <partial name="_Chat" model="@Model" />

}
