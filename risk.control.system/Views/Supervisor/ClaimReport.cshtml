@{
    ViewData["Title"] = "Index";
}

<section class="content">
    <div class="card card-secondary">
        <div class="card-header">
            <h3 class="card-title">
                <i class="far fa-file-archive"></i> Submit<span class="badge badge-secondary">report</span>
                <span class="hover-text">
                    <i class="fas fa-info-circle"></i>
                    <span class="tooltip-text" id="information">
                        <li>
                            <i class='far fa-hand-point-right'></i> Select <input type='radio' /> report
                        </li>
                        <li>
                            <i class='far fa-thumbs-up'></i> <b> <button class='btn btn-info btn-xs'>
                                    <span class='badge badge-info btn-xs'>
                                        <i class='far fa-file-archive'></i>
                                    </span> Submit <sub> report</sub>
                                </button>
                            </b>
                        </li>
                    </span>
                </span>
            </h3>
            @* <h3 id="view-type" class="card-title">
            <a href="#" id="map-type" class="input-group-label"> <i class="far fa-map"></i> Map</a>
            <a href="#" id="list-type" class="input-group-label"> <i class="fas fa-server"></i> List</a>
            </h3> *@
        </div>
        <div class="card-body">
            <div class="submit-progress hidden">
                <i class="fas fa-sync fa-spin fa-4x fa-fw"></i>
            </div>
            <form id="checkboxes" asp-action="GetInvestigateReport" method="get" enctype="multipart/form-data">

                <table id="customerTable" class="table table-bordered table-hover dt-responsive nowrap w-100">
                    <thead>
                        <tr>

                            <th><img class="action-image" src="~/headers/arrow-down.gif" data-toggle="tooltip" title="Select Claim to submit (report)" /></th>
                            <th><img class="action-image" src="~/headers/policy-doc.gif" data-toggle="tooltip" title="Policy Document" alt="Policy Document" /></th>
                            <th><img class="action-image" src="~/headers/policy-num.gif" data-toggle="tooltip" title="Policy Number" alt="Policy Number" /></th>
                            <th><img class="action-image" src="~/headers/amount.gif" data-toggle="tooltip" title="Insured Amount" alt="Insured Amount" /></th>
                            <th><img class="action-image" src="~/headers/portrait.gif" data-toggle="tooltip" title="Customer Photo" alt="Customer Photo" /></th>
                            <th><img class="action-image" src="~/headers/customer.gif" data-toggle="tooltip" title="Customer Name" alt="Customer Name" /></th>
                            <th><img class="action-image" src="~/headers/claim-type.gif" data-toggle="tooltip" title="Claim Type" alt="Claim Type" /></th>
                            <th><img class="action-image" src="~/headers/service.gif" data-toggle="tooltip" title="Service" alt="Service" /></th>

                            <th><img class="action-image" src="~/headers/pincode.gif" data-toggle="tooltip" title="Pincode" alt="Pincode" /></th>
                            <th><img class="action-image" src="~/headers/status.gif" data-toggle="tooltip" title="Status" alt="Status" /></th>
                            <th><img class="action-image" src="~/headers/created.gif" data-toggle="tooltip" title="Created date" alt="Created Date" /></th>
                            <th>
                                <img class="action-image" src="~/headers/timer.gif" data-toggle="tooltip" title="Days since Submitted" />
                            </th>
                            <th><img class="action-image" src="~/headers/owner.gif" data-toggle="tooltip" title="Insurer" /></th>
                        </tr>
                    </thead>


                </table>

                <div class="card-footer">
                    <div class="row">
                        <div class="col-md-12">
                            <a id="back" asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-secondary"><i class="fas fa-arrow-left"></i> @Applicationsettings.BACK</a>

                            <button disabled id="allocatedcase" type="submit" class="btn btn-info">
                                <span class="badge badge-info"> <i class="far fa-file-archive" aria-hidden="true"></i> </span>
                                Submit <sub>report</sub>
                            </button>
                        </div>
                    </div>
                </div>

            </form>
            <div id="maps" class="col-md-12">
                <div id="map"></div>

            </div>
        </div>
    </div>
</section>

@section Scripts {
    @* <script src="https://polyfill.io/v3/polyfill.min.js?features=default"></script>
    <script src="~/js/all.js"></script> *@
    <script src="~/js/supervisor/report.js"></script>
    @* <script src="~/js/map-list.js"></script> *@
}