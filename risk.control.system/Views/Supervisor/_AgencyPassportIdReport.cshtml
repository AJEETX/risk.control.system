@model ClaimsInvestigationVendorsModel

@{
    var imageCapturedTime = @Model.AgencyReport?.PassportIdReport?.DocumentIdImageLongLatTime != null ? @Model.AgencyReport?.PassportIdReport?.DocumentIdImageLongLatTime.Value.ToString("dd-MMM-yy hh:mm tt") : null;

    string documentIdColor = "grey";
    var borderColor = "";
    if (Model.AgencyReport.PassportIdReport?.DocumentIdImageLongLat == null)
    {

    }
    else if (Model.AgencyReport.PassportIdReport?.DocumentIdImageLongLat != null && (
    Model.AgencyReport?.PassportIdReport?.DocumentIdImageValid != null && Model.AgencyReport?.PassportIdReport?.DocumentIdImageValid == true))
    {
        documentIdColor = "green";
        borderColor = "border-success";
    }
    else
    {
        documentIdColor = "#dc3545!important";
        borderColor = "border-danger";
    }

    <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch flex-column">
        <div class="card bg-light d-flex flex-fill @borderColor">
            <div class="card-header text-muted border-bottom-0">
                <h3 class="card-title">
                    <i class="fas fa-mobile-alt"></i> PASSPORT
                    <span class="hover-text">
                        <i class="fas fa-info-circle"></i>

                        @if (@borderColor == "border-danger")
                        {
                            <span class="tooltip-text" id="beneficiary-information">
                                <div>
                                    <i class='far fa-hand-point-right'></i>
                                    <b> Upload</b> Max image size 2 MB
                                </div>
                                <div>
                                    <i class='far fa-thumbs-down'></i> <i style='color:orangered;' class='fa fa-times' aria-hidden='true'></i> UnMatched PASSPORT
                                </div>
                            </span>
                        }
                        else if (@borderColor == "border-success")
                        {
                            <span class="tooltip-text" id="beneficiary-information">
                                <div>
                                    <i class='far fa-hand-point-right'></i>
                                    <b> Upload</b> Max image size 2 MB
                                </div>
                                <div>
                                    <i class='far fa-thumbs-up'></i> <i style='color:green;' class='fas fa-check-circle'></i> Matched PASSPORT
                                </div>
                            </span>
                        }
                        else
                        {
                            <span class="tooltip-text" id="beneficiary-information">
                                <div>
                                    <i class='far fa-hand-point-right'></i>
                                    <b> Upload</b> Max image size 2 MB
                                </div>
                                <div>
                                    <i class='far fa-hand-point-right'></i>
                                    <button class='btn btn-info btn-xs'>
                                        <span class='badge badge-info btn-xs'>
                                            <i class='fa fa-upload'></i>
                                        </span> Upload
                                    </button>  PASSPORT
                                </div>
                            </span>

                        }

                    </span>
                </h3>
                <div class="card-tools">
                    <span data-toggle="tooltip" title="Agent report # : @Model.AgencyReport.AgentEmail" class="badge badge-light">
                        <i class="nav-icon fas fa-clock"></i>
                        @imageCapturedTime
                    </span>

                </div>

            </div>

            <div class="card-footer text-center">
                <span class="badge badge-light"><i class="far fa-image"></i> Valid : </span>
                @if (@documentIdColor == "grey")
                {
                    <i style='color:grey;' class='fa fa-times' aria-hidden='true'></i>
                }
                else if (@Model.AgencyReport?.PassportIdReport?.DocumentIdImageValid.Value ?? false)
                {
                    <i style='color:green;' class='fas fa-check-circle'></i>
                }

                else
                {
                    <i style='color:orangered;' class='fa fa-times' aria-hidden='true'></i>
                }
            </div>
            <div class="progress">
                <i class="far fa-bookmark bookmark-green"></i>
                <div class="progress-bar" role="progressbar" style="width:100%;background-color:@documentIdColor;">
                    passport
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-6">
                        <p class="text-muted text-sm">
                            <span class="badge badge-light"><i class="fas fa-film"></i> PASSPORT Image</span>:
                            <br />
                            @{
                                if (Model.AgencyReport?.PassportIdReport?.DocumentIdImage != null)
                                {
                                    <img id="agentPassportPicture" class="img-fluid passport-Image" data-toggle="tooltip" title="Passport Image"
                                         src="data:image/*;base64,@(Convert.ToBase64String(@Model.AgencyReport?.PassportIdReport?.DocumentIdImage))">
                                }
                                else
                                {
                                    <img id="agentPassportPicture" class="img-fluid no-Image" data-toggle="tooltip" title="No PASSPORT Image"
                                         src=@Applicationsettings.NO_PHOTO_IMAGE>
                                }
                            }
                        </p>
                        <p class="text-muted text-sm">

                            <span class="badge badge-light"><i class="fas fa-info"></i> Image Scan Info</span>
                            <br />
                            <label class="img-fluid ocr-data"> @Model.AgencyReport?.PassportIdReport?.DocumentIdImageData</label>
                        </p>
                    </div>
                    <div class="col-6 text">

                        <p class="text-muted text-sm">
                            <span class="badge badge-light"><i class="fas fa-map-pin"></i> Location visited</span>
                            <br />
                            @if (@Model.AgencyReport?.PassportIdReport?.DocumentIdImageLocationUrl != null)
                            {
                                <img class="img-fluid passportlocationImage" src="@Model.AgencyReport?.PassportIdReport?.DocumentIdImageLocationUrl" data-toggle="tooltip" title="Map Location" />
                            }
                            else
                            {
                                <img class="img-fluid no-Image" src="@Applicationsettings.NO_MAP" data-toggle="tooltip" title="No Map Location" />
                            }
                        </p>

                        <p class="text-muted text-sm">

                            <span class="badge badge-light"><i class="fas fa-map-marker-alt"></i> Address visited</span>
                            <br />
                            <label class="img-fluid ocr-data"> @Model.AgencyReport?.PassportIdReport?.DocumentIdImageLocationAddress</label>
                        </p>
                    </div>
                </div>
            </div>
            @if (Model.ClaimsInvestigation.UpdateAgentReport)
            {
                <form id="upload-passport" method="post" enctype="multipart/form-data" asp-controller="Uploads" asp-action="PassportUpload">
                    <input type="hidden" id="passportIdLatitude" name="passportIdLatitude" />
                    <input type="hidden" id="passportIdLongitude" name="passportIdLongitude" />
                    <input type="hidden" id="supervisorPassportUpdate" name="supervisorPassportUpdate" value="true" />
                    <input type="hidden" id="selectedclaim" name="selectedclaim" value="@Model.ClaimsInvestigation.ClaimsInvestigationId" />
                    <div class="card-footer">

                        <div class="form-group">
                            <span class="input-group-label"> Upload PASSPORT : </span>
                            <div class="input-group mb-3">
                                <img class="form-Image" id="passport-Image" src="@Applicationsettings.NO_IMAGE" title="Passport" />
                                <input accept=".jpg,jpeg,png" type="file" class="form-control remarks" name="passportImage" id="passportImage" data-toggle="tooltip" title="Upload Passport Image" />
                                <button id="UploadPassportImageButton" disabled type="submit" class="btn btn-info upload"><i class="nav-icon fa fa-upload"></i> Upload</button>
                            </div>
                        </div>
                    </div>
                </form>
            }
        </div>
        @if (@Model.AgencyReport?.PassportIdReport?.DocumentIdImageLocationUrl != null)
        {
            <div class="card direct-chat direct-chat-warning collapsed-card">
                <div class="card-header">
                    <i class="fas fa-film"></i> <h3 class="card-title">Map<span class="badge badge-light">Expected and visited</span></h3>

                    <div class="card-tools">
                        <span data-toggle="tooltip" title="Map Location: Expected and visited" class="badge badge-light"> <i class='far fa-hand-point-right'></i></span>
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-plus"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div id="passport-map">
                    </div>
                    <div id="passport-msg">
                    </div>
                </div>
            </div>

        }
    </div>
}