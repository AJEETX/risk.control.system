@model ClaimTransactionModel

@{
    if (Model.ClaimsInvestigation.AgencyReport?.PassportIdReport?.DocumentIdImageData != null && @Model.ClaimsInvestigation.AgencyReport?.PassportIdReport?.DocumentIdImageLongLatTime != null)
    {
        var imageCapturedTime = @Model.ClaimsInvestigation.AgencyReport?.PassportIdReport?.DocumentIdImageLongLatTime != null ? @Model.ClaimsInvestigation.AgencyReport?.PassportIdReport?.DocumentIdImageLongLatTime.Value.ToString("dd-MMM-yy hh:mm tt") : null;

        string passportIdColor = "progress-bar-grey";
        var passportBorderColor = "";
        if (Model.ClaimsInvestigation.AgencyReport.PassportIdReport?.DocumentIdImageLongLat == null)
        {

        }
        else if (Model.ClaimsInvestigation.AgencyReport.PassportIdReport?.DocumentIdImageLongLat != null && (
        Model.ClaimsInvestigation.AgencyReport?.PassportIdReport?.DocumentIdImageValid != null && Model.ClaimsInvestigation.AgencyReport?.PassportIdReport?.DocumentIdImageValid == true))
        {
            passportIdColor = "progress-bar-green";
            passportBorderColor = "border-success";
        }
        else
        {
            passportIdColor = "progress-bar-red";
            passportBorderColor = "border-danger";
        }

        <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch flex-column">
            <div class="card bg-light d-flex flex-fill @passportBorderColor">
                <div class="card-header text-muted border-bottom-0">
                    <h3 class="card-title">
                        <i class="fas fa-mobile-alt"></i> PASSPORT
                        <span class="hover-text">
                            <i class="fas fa-info-circle"></i>

                            @if (passportBorderColor == "border-danger")
                            {
                                <span class="tooltip-text" id="beneficiary-information">
                                    <div>
                                        <i class='far fa-hand-point-right'></i>
                                        <b> Upload</b> Max image size 2 MB
                                    </div>
                                    <div>
                                        <i class='far fa-thumbs-down'></i> <i class='fa fa-times i-orangered' aria-hidden='true'></i> UnMatched PASSPORT
                                    </div>
                                </span>
                            }
                            else if (passportBorderColor == "border-success")
                            {
                                <span class="tooltip-text" id="beneficiary-information">
                                    <div>
                                        <i class='far fa-hand-point-right'></i>
                                        <b> Upload</b> Max image size 2 MB
                                    </div>
                                    <div>
                                        <i class='far fa-thumbs-up'></i> <i class='fas fa-check-circle i-green'></i> Matched PASSPORT
                                    </div>
                                </span>
                            }
                            else
                            {
                                <span class="tooltip-text" id="beneficiary-information">
                                    <div>
                                        <i class='far fa-hand-point-right'></i>
                                        <b> Upload</b> Max image size 2 MB
                                    </div>
                                    <div>
                                        <i class='far fa-hand-point-right'></i>
                                        <button class='btn btn-info btn-xs'>
                                            <span class='badge badge-info btn-xs'>
                                                <i class='fa fa-upload'></i>
                                            </span> Upload
                                        </button>  PASSPORT
                                    </div>
                                </span>

                            }

                        </span>
                    </h3>
                    <div class="card-tools">
                        <span data-toggle="tooltip" title="Agent report # : @Model.ClaimsInvestigation.AgencyReport.AgentEmail" class="badge badge-light">
                            <i class="nav-icon fas fa-clock"></i>
                            @imageCapturedTime
                        </span>

                    </div>

                </div>

                <div class="card-footer text-center">
                    <span class="badge badge-light"><i class="far fa-image"></i> Valid : </span>
                    @if (@passportIdColor == "grey")
                    {
                        <i  class='fa fa-times i-grey' aria-hidden='true'></i>
                    }
                    else if (@Model.ClaimsInvestigation.AgencyReport?.PassportIdReport?.DocumentIdImageValid.Value ?? false)
                    {
                        <i class='fas fa-check-circle i-green'></i>
                    }

                    else
                    {
                        <i class='fa fa-times i-orangered' aria-hidden='true'></i>
                    }
                </div>
                <div class="progress">
                    <i class="far fa-bookmark bookmark-green"></i>
                    <div class="progress-bar @passportIdColor" role="progressbar">
                        passport
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-6">
                            <p class="text-muted text-sm">
                                <span class="badge badge-light"><i class="fas fa-film"></i> PASSPORT Image</span>:
                                <br />
                                @{
                                    if (Model.ClaimsInvestigation.AgencyReport?.PassportIdReport?.DocumentIdImage != null)
                                    {
                                        <img id="agentPassportPicture" class="img-fluid passport-Image" data-toggle="tooltip" title="PASSPORT Image"
                                             src="data:image/*;base64,@(Convert.ToBase64String(@Model.ClaimsInvestigation.AgencyReport?.PassportIdReport?.DocumentIdImage))">
                                    }
                                    else
                                    {
                                        <img id="agentPassportPicture" class="img-fluid no-Image" data-toggle="tooltip" title="No PASSPORT Image"
                                             src=@Applicationsettings.NO_PHOTO_IMAGE>
                                    }
                                }
                            </p>
                            <p class="text-muted text-sm">

                                <span class="badge badge-light"><i class="fas fa-info"></i> Image Scan Info</span>
                                <br />
                                <label class="img-fluid ocr-data"> @Model.ClaimsInvestigation.AgencyReport?.PassportIdReport?.DocumentIdImageData</label>
                            </p>
                        </div>
                        <div class="col-6 text">

                            <p class="text-muted text-sm">
                                <span class="badge badge-light"><i class="fas fa-map-pin"></i> Location visited</span>
                                <br />
                                @if (@Model.ClaimsInvestigation.AgencyReport?.PassportIdReport?.DocumentIdImageLocationUrl != null)
                                {
                                    <img class="img-fluid passportlocationImage" src="@Model.ClaimsInvestigation.AgencyReport?.PassportIdReport?.DocumentIdImageLocationUrl" data-toggle="tooltip" title="Map Location" />
                                }
                                else
                                {
                                    <img class="img-fluid no-Image" src="@Applicationsettings.NO_MAP" data-toggle="tooltip" title="No Map Location" />
                                }
                            </p>

                            <p class="text-muted text-sm">

                                <span class="badge badge-light"><i class="fas fa-map-marker-alt"></i> Address visited</span>
                                <br />
                                <label class="img-fluid ocr-data"> @Model.ClaimsInvestigation.AgencyReport?.PassportIdReport?.DocumentIdImageLocationAddress</label>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            @if (@Model.ClaimsInvestigation.AgencyReport?.PassportIdReport?.DocumentIdImageLocationUrl != null)
            {
                <div class="card direct-chat direct-chat-warning collapsed-card">
                    <div class="card-header">
                        <i class="fas fa-film"></i> <h3 class="card-title">Map<span class="badge badge-light">Expected and visited</span></h3>

                        <div class="card-tools">
                            <span data-toggle="tooltip" title="Map Location: Expected and visited" class="badge badge-light"> <i class='far fa-hand-point-right'></i></span>
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-plus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div id="passport-map">
                        </div>
                        <div id="passport-msg">
                        </div>
                    </div>
                </div>

            }
        </div>
    }
}