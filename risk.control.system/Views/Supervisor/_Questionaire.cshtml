@model ClaimsInvestigationVendorsModel

@{
    var questionTime = @Model.AgencyReport.AgentRemarksUpdated != null ? @Model.AgencyReport.AgentRemarksUpdated.Value.ToString("dd-MMM-yy hh:mm tt") : null;

    string questionaire = "progress-bar-grey";
    if (Model.AgencyReport.AgentRemarks != null)
    {
        questionaire = "progress-bar-green";
    }
    <div class="col-12 col-sm-4 d-flex align-items-stretch flex-column">
        <div id="questionaire-border" class="card bg-light d-flex flex-fill">
            <div class="card-header text-muted border-bottom-0">

                <h3 class="card-title">
                    <i class="far fa-comment"></i> Questionnaire 
                    <span class="hover-text">
                        <i class="fas fa-info-circle"></i>
                        <span class="tooltip-text" id="information">
                            <span>
                                <i class="fas fa-comment"></i> Fill-up Questionnaire
                            </span>

                        </span>
                    </span>
                </h3>
                <div class="card-tools">
                    <span data-toggle="tooltip" title="Claim #" class="badge badge-light"> <i class="nav-icon fas fa-clock"></i> @questionTime </span>
                    
                </div>
                
            </div>
            <div class="card-footer text-muted border-bottom-0">
                <i class="fas fa-user-shield"></i>  Agent :<span class="badge badge-light">  @Model.AgencyReport.AgentEmail </span>
            </div>
            <div class="progress">
                <i class="far fa-bookmark bookmark-green"></i>
                <div id="questionaire" class="progress-bar @questionaire" role="progressbar">
                    questionaire
                </div>
            </div>
            <div class="card-body">
                <partial name="_Chat" model="@Model" />
                <div class="row">
                    <div class="col-12">
                        <div class="form-group">
                            <label for="question1" class="input-group-label">Ownership of residence?</label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="nav-icon fas fa-home"></i>
                                        <i class="fa fa-asterisk asterik-style"></i>
                                    </span>
                                </div>
                                <select disabled name="question1" id="question1"
                                        required
                                        asp-for="AgencyReport.ReportQuestionaire.Answer1"
                                        class="form-control remarks"
                                        asp-items="@ViewBag.DwellTypeList">
                                    <option value="">--- SELECT ---</option>
                                </select>
                                <span asp-validation-for="AgencyReport.ReportQuestionaire.Answer1" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <span class="input-group-label"> Perceived financial status (@ViewBag.Currency)?</span>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" asp-for="AgencyReport.ReportQuestionaire.Answer2">
                                        <i class="far fa-money-bill-alt"></i>
                                        <i class="fa fa-asterisk asterik-style"></i>
                                    </span>
                                </div>
                                <select disabled name="question2" id="question2"
                                        required
                                        asp-for="AgencyReport.ReportQuestionaire.Answer2"
                                        class="form-control remarks"
                                        asp-items="ViewBag.IncomeList">
                                    <option value="">--- SELECT ---</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <span class="input-group-label"> Name of neighbour met ?</span>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" asp-for="AgencyReport.ReportQuestionaire.Answer3">
                                    <i class="fas fa-user-check"></i>
                                        <i class="fa fa-asterisk asterik-style"></i>
                                    </span>
                                </div>
                                <input disabled id="ContractNumber" required name="question3" id="question3" asp-for="AgencyReport.ReportQuestionaire.Answer3"
                                       class="form-control remarks" type="text" placeholder="Neighbour name" maxlength="20" />
                            </div>
                        </div>
                        <div class="form-group">
                            <span class="input-group-label"> Date met with neighbour ?:</span>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" asp-for="AgencyReport.ReportQuestionaire.Answer4">
                                    <i class="nav-icon far fa-calendar-check"></i>
                                        <i class="fa fa-asterisk asterik-style"></i>
                                    </span>
                                </div>
                                <input disabled required asp-for="AgencyReport.ReportQuestionaire.Answer4" name="question4" id="question4"
                                       class="form-control remarks date-width" type="date" />
                            </div>
                        </div>
                        <div class="form-group">
                            <span class="input-group-label"> Edit Agent Remarks :</span>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" asp-for="AgencyReport.AgentRemarks"><i class="fas fa-comment"></i>
                                        <i class="fa fa-asterisk asterik-style"></i>
                                    </span>
                                </div>
                                <input required name="remarks" id="remarks" asp-for="AgencyReport.AgentRemarks" class="form-control remarks" data-toggle="tooltip" title="Edit Agent Remarks"
                                       type="text" placeholder="Remarks" maxlength="50" />
                                <span asp-validation-for="AgencyReport.AgentRemarks" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>

}
