@model ClaimsInvestigationVendorAgentModel

<form id="radioButtons" method="post" asp-controller="ClaimsVendorPost" asp-action="AllocateToVendorAgent" enctype="multipart/form-data">
    <div class="card-body">
        <div class="submit-progress hidden">
            <i class="fas fa-sync fa-spin fa-4x fa-fw"></i>
        </div>
        <input type="hidden" id="claimId" name="claimId" value="@Model.ClaimsInvestigation.ClaimsInvestigationId" />
        <input type="hidden" id="policyDetailId" name="policyDetailId" value="@Model.ClaimsInvestigation.PolicyDetail.PolicyDetailId" />
        <input type="hidden" id="customerDetailId" name="customerDetailId" value="@Model.ClaimsInvestigation.CustomerDetail.CustomerDetailId" />
        <input type="hidden" id="beneficiaryId" name="beneficiaryId" value="@Model.CaseLocation.BeneficiaryDetailId" />
        <input type="hidden" id="CaseLocationId" name="CaseLocationId" value="@Model.CaseLocation.BeneficiaryDetailId" />
        <table id="customerTable" class="table table-bordered table-hover dt-responsive nowrap w-100">
            <thead>
                <tr>
                    <th><img class="action-image" src="~/headers/arrow-down.gif" data-toggle="tooltip" title="Select Claim to Assign(manual)" /></th>
                    <th>Email</th>
                    <th>Photo</th>
                    <th>Phone #</th>
                    <th>Map</th>
                    <th>Distance</th>
                    <th>Duration</th>
                    <th>Address </th>
                    <th>Pincode </th>
                    <th>Case(s)</th>
                </tr>
            </thead>
            <tbody>
                <!-- Add your dynamic data here -->
            </tbody>
        </table>
    </div>
    <div class="card-footer">
        <div class="row">
            <div class="col-md-12">
                @if (Model.ReSelect)
                {
                    <a id="back" asp-action="GetInvestigateReport" asp-route-selectedcase="@Model.ClaimsInvestigation.ClaimsInvestigationId" class="btn btn-outline-secondary"><i class="fas fa-arrow-left"></i> @Applicationsettings.BACK</a>
                    <button disabled="disabled" id="allocatedcase" type="submit" class="btn btn-danger">
                        <i class="fas fa-external-link-alt" aria-hidden="true"></i> Re-Allocate
                    </button>
                }
                else
                {
                    <a id="back" asp-action="Allocate" class="btn btn-outline-secondary"><i class="fas fa-arrow-left"></i> @Applicationsettings.BACK</a>
                    <button disabled="disabled" id="allocatedcase" type="submit" class="btn btn-danger">
                        <i class="fas fa-external-link-alt" aria-hidden="true"></i> Allocate
                    </button>
                }
            </div>
        </div>
    </div>
</form>