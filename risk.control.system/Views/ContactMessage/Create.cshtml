@model risk.control.system.Models.ContactMessage

@{
    ViewData["Title"] = "Create";
}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <form asp-controller="ContactMessage" id="email-form" method="post">
                    <div class="card card-success card-outline">
                        <div class="card-header">
                            <h3 class="card-title">Compose New Mail</h3>
                        </div>

                        <div class="card-body">
                            <div class="form-group">
                                <input asp-for="ReceipientEmail" class="form-control" placeholder="To:">
                            </div>
                            <div class="form-group">
                                <input class="form-control" asp-for="Subject" placeholder="Subject:">
                            </div>
                            <div class="form-group">
                                <textarea class="form-control input-lg textarea-editor" asp-for="Message" style="resize:none;width:400px;" rows="20">

                                                </textarea>
                            </div>
                            <div class="form-group">
                                <div class="btn btn-default btn-file"><i class="fas fa-paperclip"></i> Attachment
                                    <input type="file" name="attachment" asp-for="Attachments" onchange="document.getElementById('documentImage').src = window.URL.createObjectURL(this.files[0])">
                                </div>
                                <p class="help-block">Max. 10MB</p>

                            </div>
                        </div>

                        <div class="card-footer">
                            <div class="float-right">
                                <button type="submit" asp-action="Draft" class="btn btn-secondary"><i class="fas fa-pencil-alt"></i> Draft</button>
                                <button type="submit" asp-action="Create" class="btn btn-success"><i class="far fa-envelope"></i> Send</button>
                            </div>
                            <button type="reset" class="btn btn-secondary"><i class="fas fa-times"></i> @Applicationsettings.CANCEL</button>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>

</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
