@model risk.control.system.Models.ClientCompanyApplicationUser

@{
    ViewData["Title"] = @Applicationsettings.EDIT;
    var email = Model.ClientCompany.Email.Substring(Model.ClientCompany.Email.IndexOf('@'));
}

<section class="content pt-2">
    <div class="container-fluid ">
        <form asp-action="EditUser" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-secondary">
                        <div class="card-header">
                            <h3 class="card-title">
                                <i class="fas fa-user-plus"></i> Edit  User
                            </h3>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <input type="hidden" asp-for="Id" />
                                    <div class="form-group hide-id">
                                        <label asp-for="ClientCompany" class="control-label"></label>
                                        <input asp-for="ClientCompanyId" class="form-control" value="@Model.ClientCompany.ClientCompanyId" />
                                        <span asp-validation-for="ClientCompanyId" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Email" class="control-label"></label>
                                        <input readonly asp-for="Email" class="form-control" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="basic-addon1">First Name</span>
                                            </div>
                                            <input type="text" asp-for="FirstName" class="form-control" required placeholder="Enter First Name">
                                            <span asp-validation-for="FirstName" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="basic-addon1">Last Name</span>
                                            </div>
                                            <input type="text" asp-for="LastName" class="form-control" required placeholder="Enter Last Name">
                                            <span asp-validation-for="LastName" class="text-danger"></span>
                                        </div>
                                    </div><div class="form-group">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="basic-addon1">Phone Number</span>
                                            </div>
                                            <input type="password" asp-for="PhoneNumber" class="form-control" required type="number" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" placeholder="Enter Phone Number [Format: 123-456-7890]" />
                                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="ProfileImage" class="control-label"></label>
                                        <div class="input-group mb-3">
                                            @if (Model?.ProfilePictureUrl is not null)
                                            {
                                                <img id="ProfileImage" class="form-Image" src="@Model?.ProfilePictureUrl">
                                            }
                                            else
                                            {
                                                <img id="ProfileImage" class="form-Image" src="@Applicationsettings.NO_IMAGE">
                                            }

                                            <input asp-for="ProfileImage" class="form-control" type="file" onchange="document.getElementById('ProfileImage').src = window.URL.createObjectURL(this.files[0])" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group">
                                        <div class="input-group mb-3">
                                            <select asp-for="CountryId" class="custom-select" id="inputGroupSelect01" asp-items="ViewBag.CountryId" onchange="loadState(this)">
                                                <option selected>--- SELECT COUNTRY ---</option>
                                            </select>
                                            <div class="input-group-append">
                                                <label class="input-group-text" for="inputGroupSelect01">SELECT COUNTRY</label>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="input-group mb-3">
                                            <select id="StateId" asp-for="StateId" class="custom-select" asp-items="ViewBag.StateId" onchange="loadDistrict(this)">
                                                <option>--- SELECT STATE ---</option>
                                            </select>
                                            <div class="input-group-append">
                                                <label class="input-group-text" for="inputGroupSelect01">SELECT STATE</label>
                                            </div>
                                            <span asp-validation-for="StateId" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="input-group mb-3">

                                            <select id="DistrictId" asp-for="DistrictId" class="custom-select" asp-items="ViewBag.DistrictId" onchange="loadPinCode(this)">
                                                <option>--- SELECT DISTRICT ---</option>
                                            </select>
                                            <div class="input-group-append">
                                                <label class="input-group-text" for="inputGroupSelect01">SELECT DISTRICT</label>
                                            </div>
                                            <span asp-validation-for="DistrictId" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="input-group mb-3">

                                            <select id="PinCodeId" asp-for="PinCodeId" class="form-control" asp-items="ViewBag.PinCodeId">
                                                <option>--- SELECT PINCODE ---</option>
                                            </select>
                                            <div class="input-group-append">
                                                <label class="input-group-text" for="inputGroupSelect01">SELECT PINCODE</label>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="basic-addon1">Comment</span>
                                            </div>
                                            <input type="password" asp-for="Comments" class="form-control" required type="text" placeholder="Enter Comment" />
                                            <span asp-validation-for="Comments" class="text-danger"></span>
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <div class="=row">
                                <div class="col-md-12">
                                    <div class="form-group text-right">
                                        <a asp-controller="Company" asp-action="User" class="btn btn-secondary">
                                            <i class="fa fa-window-close"></i>
                                            @Applicationsettings.CANCEL
                                        </a>
                                        <button type="submit" class="btn btn-warning">
                                            <i class="fas fa-user-plus"></i> Edit User
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
