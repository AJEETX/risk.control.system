@model risk.control.system.Models.ClientCompany

@{
    ViewData["Title"] = @Applicationsettings.EDIT;
}

<section class="content pt-2">
    <div class="container-fluid ">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-secondary">
                        <div class="card-header">
                            <h3 class="card-title"><i class="fas fa-building"></i>  @Applicationsettings.CLIENT_COMPANY Profile</h3>
                        </div>
                        <div class="card-body">
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <input type="hidden" asp-for="ClientCompanyId" />

                                    <div class="form-group">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="email">Email Address</span>
                                            </div>
                                            <input readonly asp-for="Email" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="FirstName">Company Name</span>
                                            </div>
                                            <input type="text" asp-for="Name" class="form-control" required placeholder="Enter Company Name" maxlength="50">
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="Code">Company Code</span>
                                            </div>
                                            <input type="text" asp-for="Code" class="form-control" required placeholder="Enter Company Code" maxlength="5">
                                            <span asp-validation-for="Code" class="text-danger"></span>
                                        </div>
                                    </div>
                                   
                                    <div class="form-group">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="PhoneNumber">Phone Number</span>
                                            </div>
                                            <input type="text" asp-for="PhoneNumber" class="form-control" required placeholder="Enter Phone Number">
                                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                        </div>
                                    </div>


                                    <div class="form-group">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="Branch">Branch Name</span>
                                            </div>
                                            <input type="text" asp-for="Branch" class="form-control" required placeholder="Enter Branch Name">
                                            <span asp-validation-for="Branch" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="BankName">Bank Name</span>
                                            </div>
                                            <input type="text" asp-for="BankName" class="form-control" required placeholder="Enter Bank Name">
                                            <span asp-validation-for="BankName" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="BankAccountNumber">Bank Account Number</span>
                                            </div>
                                            <input type="text" asp-for="BankAccountNumber" class="form-control" required placeholder="Bank Account Number">
                                            <span asp-validation-for="BankAccountNumber" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="IFSCCode">Bank IFSC Code</span>
                                            </div>
                                            <input type="text" asp-for="IFSCCode" class="form-control" required placeholder="Bank IFSC Code">
                                            <span asp-validation-for="IFSCCode" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">

                                    <div class="form-group">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="AgreementDate">Agreement Date</span>
                                            </div>
                                            <input readonly type="text" asp-for="AgreementDate" class="form-control" required placeholder="Agreement Date">
                                            <span asp-validation-for="AgreementDate" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="ActivatedDate">Activated Date</span>
                                            </div>
                                            <input readonly type="text" asp-for="ActivatedDate" class="form-control" required placeholder="Activated Date">
                                            <span asp-validation-for="ActivatedDate" class="text-danger"></span>
                                        </div>
                                    </div>


                                    @*<div class="form-group">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="ActivatedDate">Status</span>
                                            </div>
                                            <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<CompanyStatus>()">
                                                <option>--- SELECT STATUS ---</option>
                                            </select>
                                            <span asp-validation-for="Status" class="text-danger"></span>
                                        </div>
                                    </div>
*@
                                    <div class="form-group">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <label class="input-group-text" for="CountryId">Country</label>
                                            </div>
                                            <select asp-for="CountryId" class="form-control" id="inputGroupSelect01" asp-items="ViewBag.CountryId" onchange="loadState(this)">
                                                <option selected>--- SELECT COUNTRY ---</option>
                                            </select>

                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <label class="input-group-text" for="StateId">State</label>
                                            </div>
                                            <select id="StateId" asp-for="StateId" class="form-control" asp-items="ViewBag.StateId" onchange="loadDistrict(this)">
                                                <option>--- SELECT STATE ---</option>
                                            </select>

                                            <span asp-validation-for="StateId" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <label class="input-group-text" for="DistrictId">District</label>
                                            </div>
                                            <select id="DistrictId" asp-for="DistrictId" class="form-control" asp-items="ViewBag.DistrictId" onchange="loadPinCode(this)">
                                                <option>--- SELECT DISTRICT ---</option>
                                            </select>

                                            <span asp-validation-for="DistrictId" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <label class="input-group-text" for="PinCodeId">Pincode</label>
                                            </div>
                                            <select id="PinCodeId" asp-for="PinCodeId" class="form-control" asp-items="ViewBag.PinCodeId">
                                                <option>--- SELECT PINCODE ---</option>
                                            </select>

                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="Addressline">Address line</span>
                                            </div>
                                            <input type="text" asp-for="Addressline" class="form-control" type="text" placeholder="Enter Address line" />
                                        </div>
                                    </div>


                                    <div class="form-group">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="documentImage">Document Image</span>
                                            </div>
                                            @if (Model?.DocumentImage is not null)
                                            {
                                                <img id="documentImage" class="form-Image" src="data:image/*;base64,@(Convert.ToBase64String(Model?.DocumentImage))">
                                            }
                                            else
                                            {
                                                <img id="documentImage" class="form-Image" src="@Applicationsettings.NO_IMAGE">
                                            }
                                            <input asp-for="DocumentImage" type="file" class="form-control" onchange="document.getElementById('documentImage').src = window.URL.createObjectURL(this.files[0])" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="Comments">Remarks</span>
                                            </div>
                                            <input type="text" asp-for="Description" class="form-control" type="text" placeholder="Enter Remarks" />
                                        </div>
                                    </div>

                                    <div class="form-group text-right">
                                        <a asp-action="Index" class="btn btn-secondary">
                                            <i class="fa fa-window-close"></i>
                                            @Applicationsettings.CANCEL
                                        </a>
                                        <button type="submit" class="btn btn-warning">
                                            <i class="fas fa-building"></i>  Edit Company Profile
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
