@model risk.control.system.Models.ClientCompany

@{
    ViewData["Title"] = @Applicationsettings.EDIT;
}

<section class="content">
    <form id="edit-form" asp-action="Edit" enctype="multipart/form-data">
        <div class="card shadow-lg border-1 rounded-lg">
            <div class="card-header bg-secondary text-white text-center">
                <h3 class="card-title"><i class="fas fa-building"></i> @Applicationsettings.EDIT Company</h3>
            </div>
            <div class="card-body pb-0">
                <div class="submit-progress hidden">
                    <i class="fas fa-sync fa-spin fa-4x fa-fw"></i>
                </div>
                <input type="hidden" asp-for="ClientCompanyId" />
                <input type="hidden" asp-for="AddressMapLocation" value="@Model.AddressMapLocation" />
                <input type="hidden" asp-for="AddressLatitude" value="@Model.AddressLatitude" />
                <input type="hidden" asp-for="AddressLongitude" value="@Model.AddressLongitude" />
                <input type="hidden" id="Isd" value="@Model?.Country.ISDCode" />
                <input type="hidden" id="countryCode" value="@Model?.Country.Code" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-sm-6">

                        <div class="form-group">
                            <label class="input-group-label" for="Email"> Domain:</label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="email"> <i class="fa fa-globe"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                                </div>
                                <input readonly asp-for="Email" class="form-control remarks valid-border" />
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label class="input-group-label" for="Name"> Name: </label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-business-time"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                                </div>
                                <input type="text" id="Name" asp-for="Name" class="form-control title-name remarks" required placeholder="Company Name" maxlength="30" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        @* <div class="form-group">
                            <span class="input-group-label"> Code: </span>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"> <i class="fas fa-code"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                                </div>
                                <input type="text" id="Code" asp-for="Code" class="form-control asterikx remarks" required placeholder="Company Code" maxlength="5">
                                <span asp-validation-for="Code" class="text-danger"></span>
                            </div>
                        </div> *@
                        <div class="form-group">
                            <label class="input-group-label" for="PhoneNumber"> Mobile #:</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    @{
                                        var imgPath = "/flags/" + @Model.Country.Code.ToLower() + ".png";
                                    }
                                    <span class="input-group-text country-code-text" data-bs-toggle="tooltip" title="Country Code :+@Model?.Country.ISDCode">
                                        <img src="@imgPath" class="flag-icon" data-bs-toggle="tooltip" title="@Model.Country.Name" />  +@Model?.Country.ISDCode
                                    </span>
                                </div>
                                <input id="PhoneNumber" type="text" asp-for="PhoneNumber" class="form-control remarks" required maxlength="10" placeholder="Mobile # only (e.g., 9876543210)" data-bs-toggle="tooltip" />
                                <span id="phone-spinner" class="text-secondary phone-icon d-none">
                                    <i class="fas fa-spinner fa-spin"></i>
                                </span>
                                <span id="phone-valid" class="text-success phone-icon d-none">
                                </span>
                                <span id="phone-invalid" class="text-danger phone-icon d-none">
                                    <i class="fas fa-times-circle"></i>
                                </span>
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="input-group-label" for="Branch"> Branch Name: </label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="far fa-building"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                                </div>
                                <input type="text" id="Branch" asp-for="Branch" class="form-control  title-name remarks" required placeholder="Branch Name" maxlength="30">
                                <span asp-validation-for="Branch" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="input-group-label" for="IFSCCode"> IFSC Code: </label>
                            <div class="input-group mb-3 position-relative">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="fas fa-code"></i>
                                        <i class="fa fa-asterisk asterik-style"></i>
                                    </span>
                                </div>
                                <input type="text" id="IFSCCode" asp-for="IFSCCode" class="form-control remarks asterikx" required placeholder="IFSC Code" maxlength="11" title="Enter valid IFSC code" data-bs-toggle="tooltip" />
                                <span id="ifsc-spinner" class="text-secondary phone-icon d-none">
                                    <i class="fas fa-spinner fa-spin"></i>
                                </span>
                                <span id="ifsc-valid-icon" class="ifsc-valid-icon">
                                </span>
                                <span asp-validation-for="IFSCCode" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="input-group-label" for="BankName"> Bank Name: </label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="fas fa-landmark"></i>
                                        <i class="fa fa-asterisk asterik-style"></i>
                                    </span>
                                </div>
                                <input type="text" id="BankName" asp-for="BankName" class="form-control remarks title-name" required placeholder="..." maxlength="50" readonly tabindex="-1" title="Auto-selected" data-bs-toggle="tooltip" />
                                <span asp-validation-for="BankName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="input-group-label" for="BankAccountNumber"> Bank Account #: </label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fab fa-btc"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                                </div>
                                <input type="text" id="BankAccountNumber" asp-for="BankAccountNumber" class="form-control remarks" required placeholder="Bank Account #" maxlength="20" />
                                <span asp-validation-for="BankAccountNumber" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">


                        <div class="form-group">
                            <label class="input-group-label" for="AgreementDate"> Agreement Date: </label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="far fa-calendar-check"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                                </div>
                                <input readonly type="text" id="AgreementDate" asp-for="AgreementDate" class="form-control remarks valid-border" placeholder="Agreement Date">
                                <span asp-validation-for="AgreementDate" class="text-danger"></span>
                            </div>
                        </div>
@* 
                        <div class="form-group">
                            <span class="input-group-label"> Activated Date: </span>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"> <i class="fas fa-calendar-check"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                                </div>
                                <input readonly type="text" id="ActivatedDate" asp-for="ActivatedDate" class="form-control remarks" required placeholder="Activated Date">
                                <span asp-validation-for="ActivatedDate" class="text-danger"></span>
                            </div>
                        </div> *@

                        <div class="form-group">
                            <label class="input-group-label" for="PinCodeText">Pincode:</label>
                            <div class="input-group mb-3 autocomplete-wrapper">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" for="PinCodeId">
                                        <i class="fas fa-map-pin"></i>
                                        <i class="fa fa-asterisk asterik-style"></i>
                                    </span>
                                </div>
                                <input type="text" id="PinCodeText" class="form-control remarks auto-dropdown" data-placeholder="pincode" placeholder="Type pincode or name" value="" autocomplete="off" />
                                <span asp-validation-for="PinCodeId" class="text-danger"></span>
                                <input asp-for="SelectedPincodeId" type="hidden" id="SelectedPincodeId" name="SelectedPincodeId" value="@Model?.PinCodeId" />
                                <input type="hidden" asp-for="PinCodeId" id="PinCodeId" />
                                <div id="pincode-loading" class="loading-spinner">
                                    <i class="fas fa-spinner fa-spin"></i>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="input-group-label" for="DistrictText">District:</label>
                            <div class="input-group mb-3 autocomplete-wrapper">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" for="DistrictId">
                                        <i class="fas fa-city"></i>
                                        <i class="fa fa-asterisk asterik-style-disabled"></i>
                                    </span>
                                </div>
                                <input readonly type="text" id="DistrictText" class="form-control remarks" data-placeholder="district" data-bs-toggle="tooltip" placeholder="..." value="" tabindex="-1" />
                                <span asp-validation-for="DistrictId" class="text-danger"></span>
                                <input asp-for="SelectedDistrictId" type="hidden" id="SelectedDistrictId" name="SelectedDistrictId" value="@Model?.DistrictId" title="Auto-selected based on Pincode" />
                                <input type="hidden" asp-for="DistrictId" id="DistrictId" />
                                <div id="district-loading" class="loading-spinner">
                                    <i class="fas fa-spinner fa-spin"></i>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="input-group-label" for="StateText"> State:</label>
                            <div class="input-group mb-3 autocomplete-wrapper">
                                @{
                                    var img = "/flags/" + @Model.Country.Code.ToLower() + ".png";
                                }
                                <div class="input-group-prepend">

                                    <span class="input-group-text country-code-text" data-bs-toggle="tooltip" title="Registered Country: @Model?.Country.Name">
                                        <img src="@img" class="flag-icon" data-bs-toggle="tooltip" /> @Model?.Country.Code<i class="fa fa-asterisk asterik-style-info"></i>
                                    </span>
                                </div>
                                <input readonly type="text" id="StateText" class="form-control remarks" data-placeholder="state" data-bs-toggle="tooltip" placeholder="..." value="" tabindex="-1" />
                                <span asp-validation-for="StateId" class="text-danger"></span>
                                <input asp-for="SelectedStateId" type="hidden" id="SelectedStateId" name="SelectedStateId" value="@Model?.StateId" title="Auto-selected based on Pincode" />
                                <input type="hidden" asp-for="StateId" id="StateId" />
                                <div id="state-loading" class="loading-spinner">
                                    <i class="fas fa-spinner fa-spin"></i>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="input-group-label" for="CountryId"> Country:</label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    
                                    <span class="input-group-text country-code-text " data-bs-toggle="tooltip" title="Company Registered Country: @Model?.Country.Name">
                                        <img src="@imgPath" class="flag-icon" data-bs-toggle="tooltip" />  @Model?.Country.Code
                                    </span>
                                </div>
                                <input readonly type="text" id="CountryId" class="form-control remarks valid-border" data-placeholder="country" asp-for="CountryId" data-bs-toggle="tooltip" title="Registered Country" value="" tabindex="-1" />
                                <span asp-validation-for="CountryId" class="text-danger"></span>
                                <input asp-for="SelectedCountryId" type="hidden" id="SelectedCountryId" name="SelectedCountryId" value="@Model?.CountryId" />
                                <div id="country-loading" class="loading-spinner">
                                    <i class="fas fa-spinner fa-spin"></i>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="input-group-label" for="Addressline"> Address:</label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fa fa-home"></i>  <i class="fa fa-asterisk asterik-style"></i></span>
                                </div>
                                <input type="text" id="Addressline" asp-for="Addressline" class="form-control remarks" placeholder="Street Address..." maxlength="70" required/>
                                <span asp-validation-for="Addressline" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="input-group-label" for="createImageInput"> Document: </label>
                            <div class="input-group mb-3">
                                @if (Model?.DocumentUrl is not null)
                                {
                                    <img id="createProfileImage" class="form-Image" data-preview-id="createProfileImage" src="/Document/GetCompanyDocument/@Model.ClientCompanyId" title="Company Document" data-bs-toggle="tooltip" />
                                }
                                else
                                {
                                    <img id="createProfileImage" class="form-Image" data-preview-id="createProfileImage" src="@Applicationsettings.NO_IMAGE" data-bs-toggle="tooltip" />
                                }
                                <i class="fa fa-asterisk asterik-style"></i>
                                <input asp-for="Document" type="file" class="form-control remarks document-image-input valid-border" id="createImageInput" data-preview-id="createProfileImage" data-title-id="company-document" title="Upload Company Document" data-bs-toggle="tooltip" />
                            </div>
                        </div>
@* 

                        <div class="form-group">
                            <span class="input-group-label"> Note:</span>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-edit"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                                </div>
                                <input type="text" id="Description" asp-for="Description" class="form-control remarks" placeholder="Note" maxlength="50" />
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div> *@
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row  float-right">
                        <div class="col-md-12">
                            <a id="cancel" asp-controller="Company" asp-action="Index" class="btn btn-secondary">
                                <i class="fa fa-window-close"></i>
                                @Applicationsettings.CANCEL
                            </a>
                            <button id="edit" type="submit" class="btn btn-warning">
                                <i class="fas fa-building"></i>  Save Company
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/company-admin/edit-company.js"></script>
    <script src="~/js/company-admin/pincode.js"></script>
    <script src="~/js/common/profile-image-upload.js">    </script>
    <script src="~/js/common/form-validation.js"></script>
}
