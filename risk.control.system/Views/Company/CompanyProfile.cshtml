        @model risk.control.system.Models.ClientCompany

@{
    ViewData["Title"] = "Manage Company";
}
<section class="content">
    <input type="hidden" id="Latitude" asp-for="@Model.PinCode.Latitude" />
    <input type="hidden" id="Longitude" asp-for="@Model.PinCode.Longitude" />
    <div class="card card-secondary expand-card">
        <div class="card-header">
            <h3 class="card-title"><i class="fas fa-building"></i> Company Profile</h3>
        </div>

        <div class="card-body">
            <div class="submit-progress hidden">
                <i class="fas fa-sync fa-spin fa-4x fa-fw"></i>
            </div>
            <div class="row">
                <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch flex-column">
                    <div class="card bg-light d-flex flex-fill">
                        <div class="card-footer">
                            <i class="fas fa-building"></i> Company Details
                        </div>
                        <div class="progress">
                            <i class="far fa-bookmark bookmark-green"></i>
                            <div class="progress-bar" role="progressbar" style="width:100%;background-color:green;">
                                <i class="fas fa-building"></i>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-7">
                                    <p class="text-muted text-sm">
                                        <i class="fa fa-globe"></i>  <a href="#">@Model.Email</a>
                                    </p>
                                    <ul class="ml-4 mb-0 fa-ul text-muted">
                                        <li class="small">
                                            <span class="fa-li">
                                                <i class="fas fa-building"></i>
                                            </span>
                                            Company Name: <i class="fas fa-business-time"></i> @Model.Name
                                        </li>
                                        <li class="small">
                                            <span class="fa-li">
                                                <i class="fas fa-code"></i>
                                            </span>
                                            Company Code:  <i class="fas fa-code"></i> </i>@Model.Code
                                        </li>
                                        <li class="small">
                                            <span class="fa-li">
                                                <i class="fas fa-tools"></i>
                                            </span>
                                            Branch : <i class="fas fa-landmark"></i> @Model.Description
                                        </li>
                                        <li class="small">
                                            <span class="fa-li">
                                                <i class="fas fa-phone"></i>
                                            </span>
                                            Phone #: <i class="fas fa-phone"></i> @Model.PhoneNumber
                                        </li>
                                        <li class="small">
                                            <span class="fa-li">
                                                <i class="far fa-building"></i>
                                            </span>
                                            Branch: <i class="far fa-building"></i> @Model.Branch
                                        </li>
                                        <li class="small">
                                            <span class="fa-li">
                                                <i class="fas fa-home"></i>
                                            </span>
                                            Address:  @Model.Addressline @Model.District.Name @Model.State.Name @Model.PinCode.Code
                                        </li>
                                        <li class="small">
                                            <span class="fa-li">
                                                <i class="fas fa-key"></i>
                                            </span>
                                            License Type: @Html.DisplayFor(model => model.LicenseType)
                                        </li>
                                        <li class="small">
                                            <span class="fa-li">
                                                <i class="fas fa-calendar-check"></i>
                                            </span>
                                            License Expiry Date: @Html.DisplayFor(model => model.ExpiryDate)
                                        </li>
                                    </ul>
                                </div>
                                <div class="col-5 text-center">
                                    <p class="text-muted text-sm">

                                    </p>
                                    <p class="text-muted text-sm">
                                        @if (Model?.DocumentUrl is not null)
                                        {
                                            <img id="documentImage" class="img-fluid" src="@Model?.DocumentUrl">
                                        }
                                        else
                                        {
                                            <img id="documentImage" alt="user-avatar"
                                                 class="img-fluid form-Image" src="@Applicationsettings.NO_IMAGE">
                                        }
                                    </p>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch flex-column">
                    <div class="card bg-light d-flex flex-fill">
                        <div class="card-footer">
                            <i class="fas fa-sitemap"></i> APIs Details
                        </div>
                        <div class="progress">
                            <i class="far fa-bookmark bookmark-green"></i>
                            <div class="progress-bar" role="progressbar" style="width:100%;background-color:green;">
                                <i class="fas fa-sitemap"></i>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-12">
                                    <p class="text-muted text-sm">
                                        <i class="fas fa-code-branch"></i> <b> External URl : </b>
                                    </p>
                                    <ul class="ml-4 mb-0 fa-ul text-muted">
                                        <li class="small">
                                            <span class="fa-li">
                                                <i class="fas fa-project-diagram"></i>
                                            </span>
                                            <b>API endpoint: </b>  <i class="fas fa-project-diagram"></i>  <a href="#">  @Model.PanIdfyUrl</a>
                                        </li>
                                        <li class="small">
                                            <span class="fa-li">
                                                <i class="fas fa-key"></i>
                                            </span>
                                            Api Key: <i class="fas fa-key"></i> <a href="#">  @Model.RapidAPIKey</a>
                                        </li>
                                        <li class="small">
                                            <span class="fa-li">
                                                <i class="fas fa-code"></i>
                                            </span>
                                            Api TaskId:  <i class="fas fa-code"></i> </i> <a href="#">  @Model.RapidAPITaskId</a>
                                        </li>
                                        <li class="small">
                                            <span class="fa-li">
                                                <i class="fas fa-landmark"></i>
                                            </span>
                                            Api GroupId : <i class="fas fa-landmark"></i> <a href="#">  @Model.RapidAPIGroupId</a>
                                        </li>
                                        <li class="small">
                                            <span class="fa-li">
                                                <i class="fas fa-code"></i>
                                            </span>
                                            Mobile App Url : <i class="fas fa-code"></i> <a href="#">  @Model.MobileAppUrl</a>
                                        </li>
                                        <li class="small">
                                            <span class="fa-li">
                                                <i class="fas fa-sitemap"></i>
                                            </span>
                                            Whitelist Ip Addresses : <i class="fas fa-sitemap"></i> <a href="#">  @Model.WhitelistIpAddress</a>
                                        </li>
                                       
                                        <li class="small">
                                            <span class="fa-li">
                                                <i class="fas fa-phone"></i>
                                            </span>
                                            <a href="#">  @Model.RapidAPIPanRemainCount</a> Remaining count
                                        </li>
                                        <li class="small">
                                            <span class="fa-li">
                                                <i class="far fa-paper-plane"></i>
                                            </span>
                                            @Html.DisplayFor(model => model.AutoAllocation) Auto-Allocation
                                        </li>
                                        <li class="small">
                                            <span class="fa-li">
                                                <i class="fas fa-business-time"></i>
                                            </span>
                                            <a href="#">  @Html.DisplayFor(model => model.VerifyOcr)</a> Verify Pan
                                        </li>
                                        <li class="small">
                                            <span class="fa-li">
                                                <i class="fas fa-comments"></i>
                                            </span>
                                            @Html.DisplayFor(model => model.SendSMS) Enable SMS:  
                                        </li>
                                        <li class="small">
                                            <span class="fa-li">
                                                <i class="fa fa-upload"></i>
                                            </span>
                                            @Html.DisplayFor(model => model.BulkUpload) Bulk Upload:  
                                        </li>
                                        <li class="small">
                                            <span class="fa-li">
                                                <i class="fas fa-key"></i>
                                            </span>
                                            @Html.DisplayFor(model => model.CanChangePassword)  Edit Profile
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch flex-column">
                    <div class="card bg-light d-flex flex-fill">
                        <div class="card-footer">
                            <i class="fas fa-map-marked-alt"></i> Map View
                        </div>
                        <div class="progress">
                            <i class="far fa-bookmark bookmark-green"></i>
                            <div class="progress-bar" role="progressbar" style="width:100%;background-color:green;">
                                <i class="fas fa-map-marked-alt"></i>
                            </div>
                        </div>
                        <div class="card-body">

                            <div class="row">
                                <div class="col-md-12">

                                    <div id="maps">
                                    </div>
                                    <div id="company-map"></div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <a asp-controller="Dashboard" asp-action="Index" id="back-button" class="btn btn-outline-secondary"><i class="fas fa-arrow-left"></i> @Applicationsettings.BACK</a>
                        <a id="edit-company" asp-controller="Company" asp-action="Edit" class="btn btn-warning"><i class='fas fa-building'></i> Edit Company</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/companies.js"></script>

}
