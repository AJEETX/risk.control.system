@model risk.control.system.Models.Vendor

@{
    ViewData["Title"] = @Applicationsettings.EDIT;
}
<section class="content">
    <form id="edit-form" asp-action="EditAgency" enctype="multipart/form-data">
        <div class="card bg-light card-secondary">
            <div class="card-header">
                <h3 class="card-title"><i class="fas fa-building"></i> @Applicationsettings.EDIT  Agency</h3>
            </div>

            <div class="card-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input id ="vendorId" type="hidden" name="vendorId" asp-for="VendorId" />
                <input type="hidden" asp-for="AddressLatitude" />
                <input type="hidden" asp-for="AddressLongitude" />
                <input type="hidden" asp-for="AddressMapLocation" />
                <input type="hidden" asp-for="MobileAppUrl" />
                <div class="submit-progress hidden">
                    <i class="fas fa-sync fa-spin fa-4x fa-fw"></i>
                </div>
                <div class="row">

                    <div class="col-sm-6">
                        <div class="form-group">
                            <span class="input-group-label"> Domain:</span>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="email"><i class="fa fa-globe"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                                </div>
                                <input readonly asp-for="Email" class="form-control readonly-input" />
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-sm-6">
                        <div class="form-group">
                            <span class="input-group-label"> Activated Date: </span>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="ActivatedDate"> <i class="fas fa-calendar-check"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                                </div>
                                <input readonly type="date" asp-for="ActivatedDate" class="form-control remarks" required placeholder="Agreement Date">
                                <span asp-validation-for="ActivatedDate" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <partial name="Vendor/_Edit" model="Model" />

                
            </div>
            <div class="card-footer">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group text-right">
                        @* <button id="reset" type="submit" onclick="clearAllInputs()" class="btn btn-outline-secondary">
                        <i class="fas fa-undo"></i> Reset
                        </button> *@
                            <a id="cancel" asp-action="AgencyDetail" asp-route-id="@Model.VendorId" class="btn btn-secondary">
                            <i class="fa fa-window-close"></i>
                            @Applicationsettings.CANCEL
                        </a>
                        <button id="edit" type="submit" class="btn btn-warning">
                            <i class="fas fa-building"></i>  Save Agency
                        </button>
                    </div>
                </div>
            </div>
            </div>
        </div>
    </form>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/company-admin/edit-agency.js"></script>
    <script src="~/js/company-admin/pincode.js"></script>
    <script src="~/js/common/profile-image-upload.js">    </script>
    <script src="~/js/common/form-validation.js"></script>
}
