@model risk.control.system.Models.VendorApplicationUser

@{
    ViewData["Title"] = @Applicationsettings.EDIT;
    var email = Model.Vendor.Email;
}
<section class="content">
    <form id="edit-form" asp-controller="Vendors" asp-action="EditUser" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" id="editby" name="editby" value="empanelled" />
        <input type="hidden" asp-for="VendorId" value="@Model.Vendor.VendorId" />
        <div class="card bg-light card-secondary">
            <div class="card-header">
                <h3 class="card-title"><i class="fas fa-user-plus"></i> @Applicationsettings.EDIT   User </h3>
            </div>
            <div class="card-body">
                <div class="submit-progress hidden">
                    <i class="fas fa-sync fa-spin fa-4x fa-fw"></i>
                </div>
                <partial name="Vendor/_EditUser" model="Model" />

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group text-right">
                            @* <button id="reset" type="submit" onclick="clearAllInputs()" class="btn btn-outline-secondary">
                                <i class="fas fa-undo"></i> Reset
                            </button> *@
                            <a id="back" asp-controller="Company" asp-action="AgencyUsers" asp-route-id="@Model.VendorId" class="btn btn-secondary">
                                <i class="fa fa-window-close"></i>
                                @Applicationsettings.CANCEL
                            </a>
                            <button id="edit-user" type="submit" class="btn btn-warning">
                                <i class="fas fa-user-plus"></i> @Applicationsettings.EDIT  User
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/common/manage-user.js"></script>
    <script src="~/js/company-admin/pincode.js"></script>
    <script src="~/js/common/profile-image-upload.js"></script>
    <script src="~/js/common/form-validation.js"></script>
}
