@model risk.control.system.Models.CaseEnabler
@{
    ViewData["Title"] = @Applicationsettings.CREATE;
}
<section class="content">
    <div id="article" class="card shadow-lg border-1 rounded-lg">
        <div class="card-header bg-secondary text-white text-center">
            <h3 class="card-title"><i class="fas fa-puzzle-piece"></i> Add New</h3>
        </div>
        <div class="card-body">
            <div class="submit-progress hidden">
                <i class="fas fa-sync fa-spin fa-4x fa-fw"></i>
            </div>
            <form id="create-form" asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <span class="input-group-label"> Reason Name:</span>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="Name"><i class="fas fa-puzzle-piece"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                        </div>
                        <input type="text" asp-for="Name" class="form-control remarks title-name" required placeholder="Reason Name" value="" maxlength="20">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <span class="input-group-label"> Reason Code:</span>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="Code"><i class="fas fa-code"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                        </div>
                        <input type="text" asp-for="Code" class="form-control remarks title-name" required placeholder="Reason Code" value="" maxlength="5">
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group text-right">
                    <a id="back" asp-action="Index" class="btn btn-secondary"><i class="fa fa-window-close"></i> @Applicationsettings.CANCEL</a> &nbsp;
                    <button type="submit" class="btn btn-success"> <i class="fas fa-puzzle-piece"></i>  @Applicationsettings.CREATE New </button>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/company-admin/case-enabler.js">
       
    </script>
    <script src="~/js/common/form-validation.js"></script>
}
