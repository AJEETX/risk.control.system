@model IEnumerable<risk.control.system.Models.InvestigationCaseStatus>

@{
    ViewData["Title"] = "Index";
}
<section class="content pt-2">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card card-light">
                    <div class="card-header">
                        <h3 class="card-title">case status</h3>
                    </div>
                    <form method="post" action="roles/create" asp-antiforgery="true">
                        <div class="card-body dataTable-search-form">
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <input autocomplete="off" name="roleCode" type="text" class="form-control" placeholder="enter role code or role name">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 text-right">
                                    <button id="btnFilter" type="submit" class="btn btn-primary btn-sm"><i class="fas fa-search"></i> Search</button>
                                    <a class="btn btn-info btn-sm" href="/InvestigationCaseStatus/Create"><i class="fas fa-plus"></i> Create</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card card-light">
                    <div class="card-body">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Name)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Code)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Created)
                                        </th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)

                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Code)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Created)
                                            </td>
                                            <td>
                                                <a class="btn btn-xs btn-info" asp-action="Details" asp-route-id="@item.InvestigationCaseStatusId">
                                                    <i class="fa fa-search"></i> View
                                                </a> &nbsp;
                                                <a class="btn btn-xs btn-warning" asp-action="Edit" asp-route-id="@item.InvestigationCaseStatusId">
                                                    <i class="fas fa-pen"></i> Edit
                                                </a> &nbsp;
                                                <a class="btn btn-xs btn-danger" asp-action="Delete" asp-route-id="@item.InvestigationCaseStatusId">
                                                    <i class="fas fa-trash"></i> Delete
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>