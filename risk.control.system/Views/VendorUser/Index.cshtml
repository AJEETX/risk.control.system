@using risk.control.system.Models.ViewModel;
@model VendorUsersViewModel

@{
    ViewData["Title"] = @Applicationsettings.VENDOR;
}

<section class="content pt-2">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-secondary">
                    <div class="card-header">
                        <h3 class="card-title"><i class="fas fa-user-friends"></i> Manage Agency User</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12 text-right">
                                @*<a asp-controller="Vendors" asp-action="Details" asp-route-id="@Model.Vendor.VendorId" class="btn btn-secondary"><i class='fas fa-undo'></i> @Applicationsettings.BACK</a>*@
                                <a class="btn btn-success" asp-controller="VendorApplicationUsers" asp-action="Create" asp-route-id="@Model.Vendor.VendorId"><i class="fas fa-user-plus"></i> Add User</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card card-secondary">
                    <div class="card-header">
                        <h3 class="card-title"><i class="fas fa-list"></i> Agency User list</h3>
                    </div>

                    <div class="card-body">
                        <table id="datatable" class="table table-bordered table-hover dt-responsive nowrap w-100">

                            <thead>
                                <tr>
                                    <th></th>
                                    <th>
                                        Email
                                    </th>
                                    <th>
                                        Name
                                    </th>
                                    <th>
                                        Pincode
                                    </th>
                                    <th>State</th>
                                    <th>Country</th>
                                    <th>Roles</th>
                                    <th>Code</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model.Users)
                                {
                                    <tr>
                                        <td>
                                            <img src="@user?.ProfileImage" height="30" alt="No image" />
                                        </td>
                                        <td style="width: 10%;">@user.Email</td>
                                        <td>@user.FirstName @user.LastName</td>
                                        <td>@user.PinCode</td>
                                        <td>@user.State</td>
                                        <td>@user.Country</td>
                                        <td style="width:20%">
                                            @foreach (var role in user.Roles)
                                            {
                                                if(role != null)
                                                {
                                                    <span class="badge badge-light">@role</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-danger">N.A.</span>
                                                }
                                            }
                                            @if (user.Roles == null || user.Roles.Count() == 0 )
                                            {
                                                <span class="badge badge-danger">No Role Assigned</span>
                                            }
                                        </td>
                                        <td>
                                            @{
                                                if (user.Roles.Contains(AppRoles.PortalAdmin.ToString()))

                                                {
                                                    <span class="badge badge-danger">PA</span>
                                                }

                                                else if (user.Roles.Contains(AppRoles.ClientAdmin.ToString()))

                                                {
                                                    <span class="badge badge-danger">CA</span>
                                                }

                                                else if (user.Roles.Contains(AppRoles.VendorAdmin.ToString()))

                                                {
                                                    <span class="badge badge-warning">VA</span>
                                                }
                                                else if (user.Roles.Contains(AppRoles.VendorSupervisor.ToString()))

                                                {
                                                    <span class="badge badge-warning">VS</span>
                                                }
                                                else if (user.Roles.Contains(AppRoles.VendorAgent.ToString()))

                                                {
                                                    <span class="badge badge-warning">VA</span>
                                                }
                                                else

                                                {
                                                    <span class="badge badge-danger">No Role Assigned</span>
                                                }

                                            }
                                        </td>
                                        <td>
                                            <a class="btn btn-xs btn-warning" asp-controller="VendorApplicationUsers" asp-action="Edit" asp-route-userId="@user.UserId">
                                                <i class="fas fa-pen"></i> @Applicationsettings.EDIT
                                            </a>&nbsp;
                                            <a class="btn btn-xs btn-info" asp-controller="VendorUserRoles" asp-action="Index"
                                           asp-route-userId="@user.UserId"><i class="fas fa-pen"></i> @Applicationsettings.ROLE</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group text-right">

                    <a asp-controller="Vendors" asp-action="Details" asp-route-id="@Model.Vendor.VendorId" class="btn btn-default"><i class="fas fa-arrow-left"></i> @Applicationsettings.BACK</a>
                </div>
            </div>
        </div>
    </div>
</section>