@model Text2SpeechData

@{
    ViewData["Title"] = "Text to Speech";
    Layout = "~/Views/Shared/_LayoutGuest.cshtml";
}

<section class="content tool-match-section">
    <div id="article" class="card shadow-lg border-0 tts-card">

        <div class="card-header d-flex align-items-center bg-secondary">
            <i class="fas fa-volume-up mr-2"></i>
            <h5 class="mb-0 font-weight-bold">Text to Speech</h5>

            <div class="ml-auto ms-auto">
                <span id="usageBadge" class="badge usage-badge-custom shadow-sm @(Model.RemainingTries <= 1 ? "badge-soft-danger" : "badge-soft-secondary")">
                    <i class="fas @(Model.RemainingTries <= 1 ? "fa-exclamation-circle" : "fa-clock") mr-1 small"></i>
                    <span id="remainingCount">@Model.RemainingTries</span> tries left
                </span>
            </div>
        </div>
        <div class="card-body">
            <div class="submit-progress hidden">
                <i class="fas fa-sync fa-spin fa-4x fa-fw"></i>
            </div>

            <div class="row">
                <div class="col-md-6 border-right">
                    <div class="text-center">
                    <h5 class="text-muted mb-3"><i class="fas fa-edit mr-2"></i>Input</h5>
                    </div>
                    @using (Html.BeginForm("GenerateSpeech", "Text2Speech", FormMethod.Post, new { id = "ttsForm" }))
                    {
                        <div class="form-group">
                            <label class="font-weight-bold" for="TextData">Enter Text to Convert</label>
                            <textarea id="TextData" asp-for="TextData" class="form-control" rows="8"
                                      placeholder="Type or paste your content here..." required></textarea>
                        </div>

                        <div class="mt-3">
                            @if (Model.RemainingTries > 0)
                            {
                                <button type="submit" class="btn btn-outline-secondary btn-block rounded-pill" id="btnConvert">
                                    <i class="fas fa-magic mr-2"></i> Synthesize Speech
                                </button>
                            }
                            else
                            {
                                <button class="btn btn-outline-secondary btn-block rounded-pill disabled" disabled>Limit Reached</button>
                            }
                        </div>
                    }
                </div>

                <div class="col-md-6 bg-light">
                    <h5 class="text-muted mb-3 text-center"><i class="fas fa-headphones mr-2"></i>Output</h5>
                    <hr />

                    @if (Model.TextOutputAudio != null && Model.TextOutputAudio.Length > 0)
                    {
                        <div class="audio-result text-center p-3 animate__animated animate__fadeIn">
                            <div class="mb-4">
                                <i class="fas fa-file-audio fa-4x text-secondary mb-3"></i>
                                <p class="small text-secondary font-weight-bold">Audio Generated Successfully!</p>
                            </div>

                            <audio controls class="w-100 mb-3">
                                <source src="data:audio/mpeg;base64,@Convert.ToBase64String(Model.TextOutputAudio)" type="audio/mpeg">
                                Your browser does not support the audio element.
                            </audio>

                            <a href="data:audio/mpeg;base64,@Convert.ToBase64String(Model.TextOutputAudio)"
                               download="SpeechOutput.mp3" class="btn btn-outline-secondary btn-sm btn-block">
                                <i class="fas fa-download mr-1"></i> Download MP3
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-5">
                            <i class="fas fa-wave-square fa-3x mb-3"></i>
                            <p>Generated audio will <br /> appear here.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/tool/tts.js"></script>
}