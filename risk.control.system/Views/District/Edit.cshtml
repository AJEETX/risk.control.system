@model risk.control.system.Models.District

@{
    ViewData["Title"] = @Applicationsettings.EDIT;
    
}
<section class="content">
    <div id="article" class="card shadow-lg border-1 rounded-lg">
        <div class="card-header bg-secondary text-white text-center">
            <h3 class="card-title"> <i class="fas fa-city"></i> Edit </h3>
        </div>
        <div class="card-body">
            <div class="submit-progress hidden">
                <i class="fas fa-sync fa-spin fa-4x fa-fw"></i>
            </div>
            <form id="edit-form" asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="DistrictId" />
                <div class="form-group">
                    <span class="input-group-label" for="CountryId"> Country:</span>
                    <div class="input-group mb-3 autocomplete-wrapper">
                        <div class="input-group-prepend">
                            <span class="input-group-text" for="CountryId">
                                <i class="fas fa-map-marked-alt"></i>
                                <i class="fa fa-asterisk asterik-style"></i>
                            </span>
                        </div>
                        <!-- Country Name input -->
                        <input type="text"
                               id="CountryId"
                               readonly
                               class="form-control remarks auto-dropdown"
                               data-placeholder="country"
                               asp-for="CountryId"
                               required
                               value="@Model?.Country?.Name" /> <!-- Display country name -->
                        <span asp-validation-for="CountryId" class="text-danger"></span>

                        <!-- Hidden input to store the country ID -->
                        <input asp-for="SelectedCountryId"
                               type="hidden"
                               id="SelectedCountryId"
                               name="SelectedCountryId"
                               value="@Model?.CountryId" />
                    </div>
                </div>


                <div class="form-group">
                    <span class="input-group-label" for="StateId"> State:</span>
                    <div class="input-group mb-3 autocomplete-wrapper">
                        <div class="input-group-prepend">
                            <span class="input-group-text" for="StateId"><i class="fas fa-map-marker-alt"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                        </div>
                        <input type="text" id="StateId" class="form-control remarks auto-dropdown" data-placeholder="state" placeholder="Type state..." asp-for="StateId" required 
                        value="@Model.State.Name"/>
                        <span asp-validation-for="StateId" class="text-danger"></span>
                        <input asp-for="SelectedStateId" type="hidden" id="SelectedStateId" name="SelectedStateId" value="@Model?.StateId" />
                    </div>
                </div>
                <div class="form-group">
                    <span class="input-group-label"> Distict:</span>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-city"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                        </div>
                        <input type="text" id="Name" asp-for="Name" class="form-control remarks title-name" required placeholder="District Name" maxlength="50">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <span class="input-group-label"> Distict Code:</span>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-code"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                        </div>
                        <input type="text" id="Code" asp-for="Code" class="form-control remarks title-name" required placeholder="District Code" maxlength="30">
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group text-right">
                    <a id="back" asp-action="Profile" class="btn btn-secondary">
                        <i class="fa fa-window-close"></i>
                        @Applicationsettings.CANCEL
                    </a>
                    <button id="edit" type="submit" class="btn btn-warning">
                        <i class="fas fa-city"></i>  Edit
                    </button>
                </div>
            </form>
        </div>
    </div>
</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/company-admin/district.js"></script>
    <script src="~/js/common/form-validation.js"></script>

}
