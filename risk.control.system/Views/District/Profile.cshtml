@{
    ViewData["Title"] = "District List";
}

<section class="content">
    <div id="article" class="card shadow-lg border-1 rounded-lg">
        <div class="card-header bg-secondary text-white text-center">
            <h3 class="card-title"><i class="fas fa-city"></i> District</h3>
        </div>
        <div class="card-body">
            <div class="submit-progress hidden">
                <i class="fas fa-sync fa-spin fa-4x fa-fw"></i>
            </div>
            <form id="antiForgeryForm">
                @Html.AntiForgeryToken()
            </form>
            <table id="dataTable" class="table table-bordered table-hover dt-responsive nowrap w-100">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>State</th>
                        <th>Country</th>
                        <th>Date Updated</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- The table body will be populated dynamically by DataTables -->
                </tbody>
            </table>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <a id="back" asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left"></i> @Applicationsettings.BACK
                        </a>
                        <a class="btn btn-success create" asp-controller="District" asp-action="Create">
                            <i class="fas fa-city"></i> Add New
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/company-admin/district.js">
    </script>
}
