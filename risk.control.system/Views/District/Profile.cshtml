@model IEnumerable<risk.control.system.Models.District>

@{
    ViewData["Title"] = @Applicationsettings.DISTRICT;
}
<section class="content pt-2">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-secondary">
                    <div class="card-header">
                        <h3 class="card-title"><i class="fas fa-city"></i>  @Applicationsettings.DISTRICT</h3>
                    </div>
                    <div class="card-body dataTable-search-form">
                        <div class="row">
                            <div class="col-6">
                                <div class="card card-light">
                                    <a asp-controller="Dashboard" asp-action="Index" class="btn btn-default"><i class="fas fa-arrow-left"></i> @Applicationsettings.BACK</a>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="card card-light">
                                    <a class="btn btn-success" asp-controller="District" asp-action="Create"><i class="fas fa-city"></i>  @Applicationsettings.CREATE New</a>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 d-flex align-items-stretch flex-column">
                                <div class="card card-light bg-light d-flex flex-fill">
                                    <div class="card-header">
                                        <h3 class="card-title"><i class="fas fa-city"></i> <span class="badge badge-light"> Districts</span></h3>
                                        <div class="card-tools">
                                            <span data-toggle="tooltip" title="Districts" class="badge badge-light"><i class="fas fa-city"></i></span>
                                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                                <i class="fas fa-minus"></i>
                                            </button>
                                        </div>
                                    </div>
                                    <div class="card-body pt-0">
                                        <table id="datatable" class="table table-bordered table-hover dt-responsive nowrap w-100">
                                            <thead>
                                                <tr>
                                                    <th>
                                                        Name
                                                    </th>
                                                    <th>
                                                        State
                                                    </th>
                                                    <th>
                                                        Country
                                                    </th>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model)
                                                {
                                                    <tr>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Name)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.State.Name)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Country.Name)
                                                        </td>
                                                        <td>
                                                           
                                                            <a class="btn btn-xs btn-warning" asp-action="Edit" asp-route-id="@item.DistrictId">
                                                                <i class="fas fa-pen"></i>  @Applicationsettings.EDIT
                                                            </a> &nbsp;
                                                            <a class="btn btn-xs btn-danger" asp-action="Delete" asp-route-id="@item.DistrictId">
                                                                <i class="fas fa-trash"></i>  @Applicationsettings.DELETE
                                                            </a>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                    <div class="card-footer">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <a asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-secondary"><i class="fas fa-arrow-left"></i> @Applicationsettings.BACK</a>
                                                    <a class="btn btn-success" asp-controller="District" asp-action="Create"><i class="fas fa-city"></i>  @Applicationsettings.CREATE New</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
       
    </div>
</section>
