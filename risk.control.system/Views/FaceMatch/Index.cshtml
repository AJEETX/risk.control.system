@model FaceMatchData

@{
    ViewData["Title"] = "Face Match Tool";
    Layout = "~/Views/Shared/_LayoutGuest.cshtml";
}

<section class="content py-4">
    <div id="article" class="card shadow-lg border-0 face-card">
        <div class="card-header bg-dark text-white d-flex align-items-center">
            <i class="fas fa-user-check mr-2"></i>
            <h5 class="mb-0">Face Match</h5>
        </div>

        <div class="card-body">
            <div class="submit-progress hidden">
                <i class="fas fa-sync fa-spin fa-4x fa-fw"></i>
            </div>
            <form id="faceMatchForm" enctype="multipart/form-data">
                <div class="row align-items-center">
                    <div class="col-md-5  text-center">
                        <label class="form-label font-weight-bold" for="OriginalFaceImage">Source Image</label>
                        <div id="drop-zone-original" class="drop-zone rounded d-flex flex-column align-items-center justify-content-center bg-light">
                            <input id="OriginalFaceImage" asp-for="OriginalFaceImage" type="file" class="d-none" accept="image/*" required />
                            <div class="text-center">
                                <img id="previewOriginal" src="/img/user.png" alt="Source" class="face-preview-image mb-3" />
                                <p class="small text-primary font-weight-bold mb-0">Drag or Click to Upload</p>
                                <small class="text-muted">ID Photo / Reference</small>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-2 text-center vs-divider my-3 my-md-0">
                        <span class="bg-white px-3 py-2 rounded-circle border shadow-sm">VS</span>
                    </div>

                    <div class="col-md-5  text-center">
                        <label class="form-label font-weight-bold" for="MatchFaceImage">Target Image</label>
                        <div id="drop-zone-match" class="drop-zone rounded d-flex flex-column align-items-center justify-content-center bg-light">
                            <input id="MatchFaceImage" asp-for="MatchFaceImage" type="file" class="d-none" accept="image/*" required />
                            <div class="text-center">
                                <img id="previewMatch" src="/img/user.png" alt="Target" class="face-preview-image mb-3" />
                                <p class="small text-primary font-weight-bold mb-0">Drag or Click to Upload</p>
                                <small class="text-muted">Selfie / Live Photo</small>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mt-4">
                    <button type="submit" id="btnSubmit" class="btn btn-primary btn-lg w-100 shadow-sm rounded-pill">
                        <span id="btnText"><i class="fas fa-barcode"></i> Run Face Match Analysis</span>
                        <span id="btnSpinner" class="spinner-border spinner-border-sm d-none"></span>
                    </button>
                </div>
            </form>

            <div id="resultContainer" class="mt-5 d-none">
                <div class="card border-0 shadow-sm bg-light">
                    <div class="card-body text-center">
                        <h4 class="text-muted mb-3">Analysis Results</h4>
                        <div id="resultStatus" class="mb-3">
                        </div>
                        <div class="row justify-content-center">
                            <div class="col-md-6">
                                <span id="matchPercentage" class="match-score-badge text-primary">0%</span>
                                <div class="progress rounded-pill">
                                    <div id="scoreBar" class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar"></div>
                                </div>
                                <p class="mt-2 text-muted">Similarity Confidence Score</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/tool/facematch.js"></script>
}