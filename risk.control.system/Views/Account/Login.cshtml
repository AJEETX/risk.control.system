@model LoginViewModel

@{
    ViewData["Title"] = "login: checkify";

    Layout = null;
}
<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="~/css/login.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
    <div class="container">
        <input type="checkbox" id="flip">
        <div class="cover">
            <div class="front">
                <img src="~/agency/bg.jpg" alt="">
                <div class="text">
                    <span class="text-1">Simplify <br> business process</span>
                    <span class="text-2">checkify does...</span>
                </div>
            </div>
            <div class="back">
                <img class="backImg" src="images/backImg.jpg" alt="">
                <div class="text">
                    <span class="text-1">Complete miles of journey <br> with one step</span>
                    <span class="text-2">Let's get started</span>
                </div>
            </div>
        </div>
        <div class="forms">
            <div class="form-content">
                <div class="login-form">
                    <div class="title">Login to checkify <i class="fas fa-bug"></i> </div>
                    <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                        <div class="input-boxes">
                            <div class="input-box">
                                <i class="fas fa-envelope"></i>
                                <input asp-for=Email id="email" type="text" placeholder="Enter your email" autocomplete="off" required>
                            </div>
                            <div class="input-box">
                                <i class="fas fa-lock"></i>
                                <input asp-for=Password id="password" type="password" placeholder="Enter your password" autocomplete="off" required>
                            </div>
                            <div class="button input-box">
                                <button type="submit" class="btn btn-secondary btn-block"> Login</button>
                            </div>
                            <div class="text sign-up-text"><label for="flip">Forgot Password?</label></div>
                        </div>
                    </form>
                </div>
                <div class="signup-form">
                    <div class="title">Forgot Password</div>
                    <form action="#">
                        <div class="input-boxes">
                            <div class="input-box">
                                <i class="fas fa-user"></i>
                                <input type="text" placeholder="Enter your name" required>
                            </div>
                            <div class="input-box">
                                <i class="fas fa-envelope"></i>
                                <input type="text" placeholder="Enter your email" required>
                            </div>
                            <div class="input-box">
                                <i class="fa fa-mobile" aria-hidden="true"></i>
                                <input type="number" placeholder="Enter 10 digit mobile number" required>
                            </div>
                            <div class="button input-box">
                                <button type="submit" class="btn btn-secondary btn-block"> Reset Password</button>
                            </div>
                            <div class="text sign-up-text">Already have an account? <label for="flip">Login now</label></div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
