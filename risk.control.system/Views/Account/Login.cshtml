@model LoginViewModel

@{
    ViewData["Title"] = "login: icheckify";

    Layout = null;
}
<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>icheckify: login</title>
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
    <meta name="probely-verification" content="93cf265b-0271-4833-bcfc-ab2f04e9bf9d" />
    <link rel="icon" href="/favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="~/css/login.css">
    <link rel="stylesheet" href="~/css/all.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="Content-Security-Policy" content="default-src 'none';connect-src 'self'; script-src 'self';  style-src 'self' https://cdnjs.cloudflare.com; font-src 'self' https://fonts.gstatic.com https://fonts.googleapis.com; img-src 'self' https://hostedscan.com; frame-src 'self';form-action 'self';upgrade-insecure-requests;" />

</head>
<body>
    <div class="container">
        <input type="checkbox" id="flip">
        <div class="cover">
            <div class="front">
                <img src="~/agency/bgs.jpg" alt="verify">
                <div class="text">
                    <span class="text-2">Simple verification process</span>
                </div>
            </div>
            <div class="back">
                <img class="backImg" src="~/agency/bgs.jpg" alt="verify">
                <div class="text">
                    <span class="text-1">Complete miles of journey <br> with one step</span>
                    <span class="text-2">Let's get started</span>
                </div>
            </div>
        </div>
        <div class="forms">
            <a href="https://hostedscan.com"><img id="hostedscan" src="https://hostedscan.com/hostedscan-badge-light.svg" alt="HostedScan | An automated vulnerability scanner" /></a>

            <div class="form-content">
                <div class="login-form">
                    <img class="login-logo" src="/img/iCheckifyLogo.png" />™️
                    <div id="watermark">
                       - DEMO -
                    </div>
                    <div class="title">Login</div>
                    @Html.AntiForgeryToken()
                    <form asp-route-returnurl="@ViewData["ReturnUrl"]" asp-controller="account" asp-action="login" method="post">
                        <div class="input-boxes">
                            <div class="input-box">
                                <i class="fas fa-envelope"></i>
                                <input asp-for=Email id="email" type="email" placeholder="Enter your email" title="Enter your email" value="" autocomplete="off" required />
                            </div>
                            <div class="input-box">
                                <i class="fas fa-lock"></i>
                                <input asp-for=Password id="password" type="password" placeholder="Enter your password" title="Enter your password" value="" autocomplete="off" required />
                            </div>
                            
                            <p class="account">By clicking login, you agree to our <a href="#">Terms & Conditions!</a></p>
                            <div class="button input-box">
                                <button type="submit" class="btn btn-secondary btn-block"><span class="fa fa-key" aria-hidden="true"></span> Login</button>
                            </div>
                            <div class="text"><label for="flip" class="login-link">Forgot Password?</label></div>
                        </div>
                    </form>
                    <div class="error-message">

                        @if (Model?.Error != null)
                        {
                            <p class="account">
                                <a  class="error"> @Model?.Error</a>
                            </p>
                        }
                    </div>
                </div>
                <div class="signup-form">
                    <img class="login-logo" src="/img/iCheckifyLogo.png" />™️

                    <div class="title">Forgot Password</div>
                    @Html.AntiForgeryToken()
                    <form action="Forgot" method="post">
                        <div class="input-boxes">
                            <div class="input-box">
                                <i class="fas fa-envelope"></i>
                                <input name="useremail" id="useremail" type="email" placeholder="Enter your email" autocomplete="off" required>
                            </div>
                            <div class="input-box">
                                <i class="fa fa-mobile" aria-hidden="true"></i>
                                <input id="mobile" name="mobile" maxlength="14" type="text" placeholder="Phone # with country code"
                                       oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*)\./g, '$1');">
                            </div>
                            <p class="account">By clicking Reset, you agree to our <a href="#">Terms & Conditions!</a></p>

                            <div class="button input-box">
                                <button type="submit" class="btn btn-secondary btn-block"> Reset Password</button>
                            </div>
                            <div class="text">Already member? <label for="flip" class="login-link">Login now</label></div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
