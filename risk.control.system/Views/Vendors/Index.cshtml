@model IEnumerable<risk.control.system.Models.Vendor>

@{
    ViewData["Title"] = @Applicationsettings.VENDOR;
}

<section class="content pt-2">
    <div class="container-fluid">
        <div class="card card-secondary">
            <div class="card-header">
                <h3 class="card-title"><i class="fa fa-binoculars"></i> All Agencies</h3>
            </div>

            <div class="card-body">
                <table id="datatable" class="table table-bordered table-hover dt-responsive nowrap w-100">
                    <thead>
                        <tr>

                            <th>
                                @Html.DisplayNameFor(model => model.Document)
                            </th>
                            <th>
                                Domain
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Code
                            </th>
                            <th>
                                Phone #
                            </th>
                            
                            <th>
                                Address
                            </th>
                            <th>
                                State
                            </th>

                            <th>
                                Country
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>
                                    @if (item?.DocumentUrl is not null)
                                    {
                                        <img id="documentImage" class="table-row-image" src="@item?.DocumentUrl">
                                    }
                                    else
                                    {
                                        <img id="documentImage" class="table-row-image" src="@Applicationsettings.NO_IMAGE">
                                    }
                                </td>
                                <td>
                                    <a href="#"> @Html.DisplayFor(modelItem => item.Email)</a>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Code)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                                </td>
                                
                                <td>
                                    @Html.DisplayFor(modelItem => item.Addressline)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.State.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Country.Name)
                                </td>
                                <td>
                                    <a class="btn btn-xs btn-info" asp-action="Details" asp-route-id="@item.VendorId">
                                        <i class="fa fa-search"></i> @Applicationsettings.DETAILS
                                    </a> &nbsp;
                                    <a class="btn btn-xs btn-warning" asp-action="Edit" asp-route-id="@item.VendorId">
                                        <i class="fas fa-pen"></i> @Applicationsettings.EDIT
                                    </a> &nbsp;
                                    <a class="btn btn-xs btn-danger" asp-action="Delete" asp-route-id="@item.VendorId">
                                        <i class="fas fa-trash"></i> @Applicationsettings.DELETE
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>