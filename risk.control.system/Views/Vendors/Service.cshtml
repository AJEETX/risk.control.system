@model IEnumerable<risk.control.system.Models.VendorInvestigationServiceType>

@{
    ViewData["Title"] = @Applicationsettings.DETAILS;
}

<section class="content pt-2">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card card-success">
                    <div class="card-header">
                        <h3 class="card-title">@Model.FirstOrDefault().Vendor.Name @Applicationsettings.SERVICE</h3>
                    </div>
                    <form asp-action="index">
                        <div class="card-body dataTable-search-form">
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <input autocomplete="off" name="SearchString" type="text" class="form-control" placeholder="enter service name or any other detail to search">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 text-right">
                                    <a asp-controller="Vendors" asp-action="Details" asp-route-id="@Model.FirstOrDefault().VendorId" class="btn btn-secondary"><i class='fas fa-undo'></i> @Applicationsettings.BACK</a>
                                    <button id="btnFilter" type="submit" class="btn btn-primary"><i class="fas fa-search"></i> @Applicationsettings.SEARCH</button>
                                    <a class="btn btn-success" asp-controller="VendorService" asp-action="Create" asp-route-id="@Model.FirstOrDefault().VendorId"><i class="fas fa-plus"></i> @Applicationsettings.CREATE</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card card-light">
                    <div class="card-body contained-width">
                        <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>
                                                    Line of Business
                                                </th>
                                                <th>
                                                    Type of Investigation Service
                                                </th>
                                                <th>
                                                    District
                                                </th>
                                                <th>
                                                    State
                                                </th>
                                                <th>
                                                    Rate
                                                </th>

                                                <th>
                                                    Pincode Services
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.UpdatedBy)
                                                </th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.LineOfBusiness.Name)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.InvestigationServiceType.Name)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.District.Name)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.State.Name)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Price)
                                                    </td>
                                                    <td>
                                                        @foreach (var svc in item?.PincodeServices)
                                                        {
                                                            var pinCodeDetail = svc.Pincode;
                                                            <span class="badge badge-light">@Html.DisplayFor(modelItem => pinCodeDetail)</span>
                                                        }
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.UpdatedBy)
                                                    </td>
                                                    <td>
                                                        <a class="btn btn-xs btn-info" asp-controller="VendorService" asp-action="Details" asp-route-id="@item.VendorInvestigationServiceTypeId"> <i class="fa fa-search"></i>   @Applicationsettings.DETAILS</a>&nbsp;
                                                        <a class="btn btn-xs btn-warning" asp-controller="VendorService" asp-action="Edit" asp-route-id="@item.VendorInvestigationServiceTypeId"><i class="fas fa-pen"></i>   @Applicationsettings.EDIT</a> &nbsp;
                                                        <a class="btn btn-xs btn-danger" asp-controller="VendorService" asp-action="Delete" asp-route-id="@item.VendorInvestigationServiceTypeId"> <i class="fas fa-trash"></i>   @Applicationsettings.DELETE</a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
 
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>