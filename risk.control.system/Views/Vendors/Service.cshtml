@model risk.control.system.Models.Vendor

@{
    ViewData["Title"] = @Applicationsettings.SERVICE;
}

<section class="content pt-2">
    <div class="container-fluid">
        <div class="row">
            <div class="card card-success">
                <div class="card-header">
                    <h3 class="card-title">@Applicationsettings.MANAGE_SERVICE</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="card card-light">
                            <div class="card-header">
                                <h3 class="card-title">@Model.Name</h3>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <dl class="row">
                                            <dt class="col-sm-3">
                                                @Html.DisplayNameFor(model => model.Name)
                                            </dt>
                                            <dd class="col-sm-8">
                                                @Html.DisplayFor(model => model.Name)
                                            </dd>
                                            <dt class="col-sm-3">
                                                @Html.DisplayNameFor(model => model.Code)
                                            </dt>
                                            <dd class="col-sm-8">
                                                @Html.DisplayFor(model => model.Code)
                                            </dd>
                                            <dt class="col-sm-3">
                                                @Html.DisplayNameFor(model => model.Description)
                                            </dt>
                                            <dd class="col-sm-8">
                                                @Html.DisplayFor(model => model.Description)
                                            </dd>
                                            <dt class="col-sm-3">
                                                @Html.DisplayNameFor(model => model.PhoneNumber)
                                            </dt>
                                            <dd class="col-sm-8">
                                                @Html.DisplayFor(model => model.PhoneNumber)
                                            </dd>
                                            <dt class="col-sm-3">
                                                @Html.DisplayNameFor(model => model.Email)
                                            </dt>
                                            <dd class="col-sm-8">
                                                @Html.DisplayFor(model => model.Email)
                                            </dd>
                                            <dt class="col-sm-3">
                                                @Html.DisplayNameFor(model => model.Branch)
                                            </dt>
                                            <dd class="col-sm-8">
                                                @Html.DisplayFor(model => model.Branch)
                                            </dd>

                                        </dl>
                                    </div>
                                    <div class="col-md-6">
                                        <dl class="row">
                                            <dt class="col-sm-3">
                                                @Html.DisplayNameFor(model => model.DocumentUrl)
                                            </dt>
                                            <dd class="col-sm-8">
                                                @if (Model?.DocumentImage is not null)
                                                {
                                                    <img id="documentImage" src="data:image/*;base64,@(Convert.ToBase64String(Model?.DocumentImage))">
                                                }
                                                else
                                                {
                                                    <img id="documentImage" src="~/img//no-image.png">
                                                }
                                            </dd>
                                            <dt class="col-sm-3">
                                                @Html.DisplayNameFor(model => model.State)
                                            </dt>
                                            <dd class="col-sm-8">
                                                @Html.DisplayFor(model => model.State.Name)
                                            </dd>
                                            <dt class="col-sm-3">
                                                @Html.DisplayNameFor(model => model.PinCode)
                                            </dt>
                                            <dd class="col-sm-8">
                                                @Html.DisplayFor(model => model.PinCode.Name)
                                            </dd>

                                        </dl>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card card-light">
                                <div class="card-header">
                                    <h3 class="card-title">@Applicationsettings.SERVICE</h3>
                                </div>
                                <div class="card-body contained-width">
                                    <table class="table  table-striped fixed-with-height">
                                        <thead>
                                            <tr>
                                                <th>
                                                    Line of Business
                                                </th>
                                                <th>
                                                    Type of Investigation Service
                                                </th>
                                                <th>
                                                    District
                                                </th>
                                                <th>
                                                    State
                                                </th>
                                                <th>
                                                    Rate
                                                </th>

                                                <th>
                                                    Pincode Services
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.UpdatedBy)
                                                </th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.VendorInvestigationServiceTypes)
                                            {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.LineOfBusiness.Name)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.InvestigationServiceType.Name)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.District.Name)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.State.Name)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Price)
                                                    </td>
                                                    <td>
                                                        @foreach (var svc in item?.PincodeServices)
                                                        {
                                                            var pinCodeDetail = svc.Pincode;
                                                            <span class="badge badge-light">@Html.DisplayFor(modelItem => pinCodeDetail)</span>
                                                        }
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.UpdatedBy)
                                                    </td>
                                                    <td>
                                                        <a class="btn btn-xs btn-info" asp-controller="VendorService" asp-action="Details" asp-route-id="@item.VendorInvestigationServiceTypeId"> <i class="fa fa-search"></i>   @Applicationsettings.DETAILS</a>&nbsp;
                                                        <a class="btn btn-xs btn-warning" asp-controller="VendorService" asp-action="Edit" asp-route-id="@item.VendorInvestigationServiceTypeId"><i class="fas fa-pen"></i>   @Applicationsettings.EDIT</a> &nbsp;
                                                        <a class="btn btn-xs btn-danger" asp-controller="VendorService" asp-action="Delete" asp-route-id="@item.VendorInvestigationServiceTypeId"> <i class="fas fa-trash"></i>   @Applicationsettings.DELETE</a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>