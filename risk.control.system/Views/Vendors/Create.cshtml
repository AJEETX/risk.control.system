@model risk.control.system.Models.Vendor

@{
    ViewData["Title"] = @Applicationsettings.CREATE;
}
<section class="content">
    <div class="card shadow-lg border-1 rounded-lg">
        <div class="card-header bg-secondary text-white text-center">
            <h3 class="card-title"><i class="fas fa-building"></i>  Add @Applicationsettings.VENDOR</h3>
        </div>
        <div class="card-body">
            <div class="submit-progress hidden">
                <i class="fas fa-sync fa-spin fa-4x fa-fw"></i>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="input-group-label"> Domain: <small>(minimum 5 character)</small></label>
                        <div class="input-group mb-3">
                            <div class="input-group-append">
                                <span class="input-group-text" id="emailid"><i class="fa fa-globe"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                            </div>
                            <input asp-for="Email" id="emailAddress" class="form-control email-address remarks" type="text" required
                                   placeholder="domain name" maxlength="15" autocomplete="name" title="Enter unique domain name with minimum 5 character" />
                            <div class="input-group-append">
                                <select id="domain" name="domain" asp-for="DomainName" required class="form-control remarks" asp-items="Html.GetEnumSelectList<Domain>()">
                                </select>
                                <div class="input-group-append" data-toggle="tooltip" title="Click to validate domain">
                                    <button disabled id="check-domain" class="input-group-text disabled-btn validate-user">
                                        <i class="far fa-question-circle"></i>
                                    </button>
                                    <span id="result"></span>
                                </div>
                                <span asp-validation-for="Email" class="text-danger" id="result"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <form id="create-form" asp-action="Create" enctype="multipart/form-data" method="post" autocomplete="off">
            <input type="hidden" asp-for="Email" id="mailAddress" name="mailAddress" required/>
            <input type="hidden" asp-for="DomainName" id="domainAddress" name="domainAddress" required/>
            <partial name="Vendor/_Create" model="Model" />

            <div class="card-footer">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group text-right">
                            @* <button id="reset" type="submit" onclick="clearAllInputs()" class="btn btn-outline-secondary">
                            <i class="fas fa-undo"></i> Reset
                            </button> *@
                            <a id="cancel" asp-controller="Dashboard" asp-action="Index" class="btn btn-secondary">
                                <i class="fa fa-window-close"></i>
                                @Applicationsettings.CANCEL
                            </a>
                            <button disabled id="create" type="submit" class="btn btn-success">
                                <i class="fas fa-building"></i> Add Agency
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </form>

    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/company-admin/create-agency.js"></script>
    <script src="~/js/company-admin/pincode.js"></script>
    <script src="~/js/common/profile-image-upload.js"></script>
    <script src="~/js/common/form-validation.js"></script>
}
