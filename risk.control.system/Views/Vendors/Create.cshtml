                                            <input asp-for="DocumentImage" class="form-control" type="file" onchange="document.getElementById('documentImage').src = window.URL.createObjectURL(this.files[0])" />

                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="Description">Remarks <i class="fa fa-asterisk" style="font-size:.4rem;color:red"></i></span>
                                            </div>
                                            <input type="text" asp-for="Description" class="form-control" value="" placeholder="Enter remarks" required />
                                            <span asp-validation-for="Description" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group text-right">
                                        <a asp-action="Index" class="btn btn-secondary">
                                            <i class="fa fa-window-close"></i>
                                            @Applicationsettings.CANCEL
                                        </a>
                                        <button disabled id="create-agency" type="submit" class="btn btn-success">
                                            <i class="fas fa-building"></i> Add Agency
                                        </button>
                                    </div>
                                    </>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script type="text/jscript">
        function alphaOnly(event) {
            var key = event.keyCode;
            return ((key >= 65 && key <= 90) || key == 8);
        };
        AgreementDate.max = new Date().toISOString().split("T")[0];
        $("input#email").on({
            keydown: function (e) {
                if (e.which === 32)
                    return false;
            },
            change: function () {
                this.value = this.value.replace(/\s/g, "");
            }
        });


        $('#email').blur(function () {
            var url = "/Account/CheckUserName";
            var name = $('#email').val();
            if(name){
                $.get(url, { input: name }, function (data) {
                    
                    if (data == 0) { //available
                        $("#result").html("<span style='color:green;padding-top:.5rem;'> <i class='fas fa-check' style='color:#298807'></i> Available</span>");
                        $('#result').css('padding', '.5rem')
                        $('#result').fadeOut(2000); // 1.5 seconds
                        $('#result').fadeOut('slow'); // 1.5 seconds
                        $("#email").css('background-color', '');
                        $("#email").css('border-color', '#ccc');
                        $('#create-agency').prop('disabled', false);
                        $("#Name").focus();
                    }
                    else if (data == 1) {//domain exists
                        $("#result").html("<span style='color:red;padding-top:.5rem;display:inline !important'><i class='fa fa-times-circle' style='color:red;'></i> Domain exists </span>");
                        $('#result').css('padding', '.5rem')
                        $('#result').css('display', 'inline')
                        $("#email").css('border-color', '#e97878');
                        $('#create-agency').prop('disabled', 'true !important');
                    }
                    else if (data = null || data == undefined) {
                    }
                });
            }
           
        })
    </script>
}
