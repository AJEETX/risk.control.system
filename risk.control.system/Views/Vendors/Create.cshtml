@model risk.control.system.Models.Vendor

@{
    ViewData["Title"] = @Applicationsettings.CREATE;
    Layout = "/Views/Shared/AdminLTE/_FormLayout.cshtml";
}
<section class="content pt-2">
    <div class="container-fluid ">
        <form asp-action="Create" enctype="multipart/form-data" method="post" autocomplete="off">
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-secondary">
                        <div class="card-header">
                            <h3 class="card-title"><i class="fas fa-building"></i>  Add @Applicationsettings.VENDOR</h3>
                        </div>
                        <div class="card-body">
                            </div>
                        <div class="card-body">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="emailid">Agency Domain <i class="fa fa-asterisk" style="font-size:.4rem;color:red"></i></span>
                                            </div>
                                            <input asp-for="Email" id="email" class="form-control email-address" type="text" value="" required placeholder="Enter Agency Domain e.g. agency" maxlength="10" onkeydown='return alphaOnly(event);'>
                                            <div class="input-group-append">
                                                <span class="input-group-text" id="Email">.com</span>
                                            </div>
                                            <span asp-validation-for="Email" class="text-danger" id="result"></span>

                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="Name">Agency Name <i class="fa fa-asterisk" style="font-size:.4rem;color:red"></i></span>
                                            </div>
                                            <input type="text" asp-for="Name" class="form-control" required placeholder="Enter Agency Name" maxlength="30">
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="Code">Agency Code<i class="fa fa-asterisk" style="font-size:.4rem;color:red"></i></span>
                                            </div>
                                            <input type="text" asp-for="Code" class="form-control" required placeholder="Enter Agency Code" maxlength="5" value="">
                                            <span asp-validation-for="Code" class="text-danger"></span>
                                        </div>
                                    </div>
                                    
                                    <div class="form-group">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="PhoneNumber">Phone # <i class="fa fa-asterisk" style="font-size:.4rem;color:red"></i></span>
                                            </div>
                                            <input type="number" asp-for="PhoneNumber" class="form-control" required value="" placeholder="Enter Phone # (10 digit)" />
                                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                        </div>
                                    </div>


                                    <div class="form-group">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="Branch">Branch Name <i class="fa fa-asterisk" style="font-size:.4rem;color:red"></i></span>
                                            </div>
                                            <input type="text" asp-for="Branch" class="form-control" required placeholder="Enter Branch Name" value="">
                                            <span asp-validation-for="Branch" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="BankName">Bank Name <i class="fa fa-asterisk" style="font-size:.4rem;color:red"></i></span>
                                            </div>
                                            <input type="text" asp-for="BankName" class="form-control" required placeholder="Enter Bank Name" value="">
                                            <span asp-validation-for="BankName" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="BankAccountNumber">Bank Account # <i class="fa fa-asterisk" style="font-size:.4rem;color:red"></i></span>
                                            </div>
                                            <input type="text" asp-for="BankAccountNumber" class="form-control" required placeholder="Bank Account #" value="">
                                            <span asp-validation-for="BankAccountNumber" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="IFSCCode">IFSC Code <i class="fa fa-asterisk" style="font-size:.4rem;color:red"></i></span>
                                            </div>
                                            <input type="text" asp-for="IFSCCode" class="form-control" required placeholder="Bank IFSC Code" value="">
                                            <span asp-validation-for="IFSCCode" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    

                                    <div class="form-group">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="AgreementDateId">Agreement Date <i class="fa fa-asterisk" style="font-size:.4rem;color:red"></i></span>
                                            </div>
                                            <input type="date" asp-for="AgreementDate" id="AgreementDate" class="form-control" required placeholder="Agreement Date">
                                            <span asp-validation-for="AgreementDate" class="text-danger"></span>
                                        </div>
                                    </div>
                                  
