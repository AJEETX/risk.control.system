@model risk.control.system.Models.Vendor

@{
    ViewData["Title"] = @Applicationsettings.EDIT;
    
}
<section class="content">
    <form id="create-form" asp-action="Edit" enctype="multipart/form-data">
        <div class="card bg-light card-secondary">
            <div class="card-header">
                <h3 class="card-title"><i class="fas fa-building"></i> Edit  Agency</h3>
            </div>

            <div class="card-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" name="vendorId" asp-for="VendorId" />
                <div class="submit-progress hidden">
                    <i class="fas fa-sync fa-spin fa-4x fa-fw"></i>
                </div>
                <div class="row">

                    <div class="col-sm-4">
                        <div class="form-group">
                            <span class="input-group-label"> Domain:</span>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="email"><i class="fa fa-globe"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                                </div>
                                <input readonly asp-for="Email" class="form-control readonly-input" />
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <span class="input-group-label"> Agreement Date: </span>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="AgreementDate"><i class="far fa-calendar-check"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                                </div>
                                <input readonly type="date" asp-for="AgreementDate" class="form-control remarks" required placeholder="Agreement Date">
                                <span asp-validation-for="AgreementDate" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <span class="input-group-label"> Activated Date: </span>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="ActivatedDate"> <i class="fas fa-calendar-check"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                                </div>
                                <input readonly type="date" asp-for="ActivatedDate" class="form-control remarks" required placeholder="Agreement Date">
                                <span asp-validation-for="ActivatedDate" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-6">


                        <div class="form-group">
                            <span class="input-group-label"> Document:</span>
                            <div class="input-group mb-3">

                                @if (Model?.DocumentUrl is not null)
                                {
                                    <img id="profileImage" class="form-Image" src="@Model?.DocumentUrl">
                                }
                                else
                                {
                                    <img id="profileImage" class="form-Image" src="@Applicationsettings.NO_IMAGE">
                                }
                                <input asp-for="DocumentImage" type="file" class="form-control remarks" id="documentImageInput" />
                            </div>
                        </div>
                        <div class="form-group">
                            <span class="input-group-label"> Agency Name: </span>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="Name"><i class="fas fa-building"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                                </div>
                                <input type="text" asp-for="Name" class="form-control remarks title-name" required placeholder="Enter Agency Name" maxlength="30">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <span class="input-group-label"> Agency Code:</span>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="Code"><i class="fas fa-code"></i><i class="fa fa-asterisk asterik-style"></i></span>
                                </div>
                                <input type="text" asp-for="Code" class="form-control remarks asterikx" required placeholder="Enter Agency Code" maxlength="5">
                                <span asp-validation-for="Code" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <span class="input-group-label"> Phone #: </span>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="PhoneNumber"><i class="fas fa-phone"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                                </div>
                                <input type="text" asp-for="PhoneNumber" class="form-control remarks" required maxlength="14" placeholder="Phone # with country code"
                                       oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*)\./g, '$1');" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>


                        <div class="form-group">
                            <span class="input-group-label"> Branch Name: </span>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="Branch"><i class="far fa-building"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                                </div>
                                <input type="text" asp-for="Branch" class="form-control remarks title-name" required placeholder="Enter Branch Name" maxlength="30">
                                <span asp-validation-for="Branch" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <span class="input-group-label"> Bank Name: </span>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="BankName"> <i class="fas fa-landmark"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                                </div>
                                <input type="text" asp-for="BankName" class="form-control remarks title-name" required placeholder="Enter Bank Name" maxlength="30">
                                <span asp-validation-for="BankName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <span class="input-group-label"> Bank Account #: </span>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="BankAccountNumber"><i class="fab fa-btc"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                                </div>
                                <input type="text" asp-for="BankAccountNumber" class="form-control remarks" required placeholder="Bank Account #" oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*)\./g, '$1');" maxlength="20">
                                <span asp-validation-for="BankAccountNumber" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <span class="input-group-label"> IFSC Code: </span>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="IFSCCode"><i class="fas fa-rupee-sign"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                                </div>
                                <input type="text" asp-for="IFSCCode" class="form-control remarks asterikx" required placeholder="Bank IFSC Code" maxlength="10">
                                <span asp-validation-for="IFSCCode" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <span class="input-group-label"> Profile edit:</span>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="CanChangePassword"><i class="fas fa-portrait"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                                </div>

                                <span class="checkbox">
                                    <input asp-for="CanChangePassword" type="checkbox" data-toggle="toggle" data-on="<i class='fas fa-lock-open'></i> Active " data-off="<i class='fas fa-lock'></i> Lock" data-onstyle="success" data-offstyle="danger" data-width="120">

                                </span>
                            </div>
                        </div>
                        <div class="form-group">
                            <span class="input-group-label"> Enable Mailbox:</span>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="EnableMailbox"><i class="far fa-comment-alt"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                                </div>

                                <span class="checkbox">
                                    <input asp-for="EnableMailbox" type="checkbox" data-toggle="toggle" data-on="<i class='fas fa-lock-open'></i> Active " data-off="<i class='fas fa-lock'></i> Lock" data-onstyle="success" data-offstyle="danger" data-width="120">

                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">


                        <div class="form-group">
                            <span class="input-group-label"> Country:</span>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" for="CountryId"><i class="fas fa-map-marked-alt"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                                </div>    <select asp-for="CountryId" class="form-control remarks" id="CountryId" asp-items="ViewBag.CountryId" onchange="loadState(this)" required>
                                    <option value="">--- SELECT ---</option>
                                </select>
                                <span asp-validation-for="CountryId" class="text-danger"></span>

                            </div>
                        </div>

                        <div class="form-group">
                            <span class="input-group-label"> State:</span>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" for="StateId"><i class="fas fa-map-marker-alt"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                                </div>
                                <select id="StateId" asp-for="StateId" class="form-control remarks" asp-items="ViewBag.StateId" onchange="loadDistrict(this)" required>
                                    <option value="">--- SELECT ---</option>
                                </select>

                                <span asp-validation-for="StateId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <span class="input-group-label"> District:</span>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" for="DistrictId"><i class="fas fa-city"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                                </div>

                                <select id="DistrictId" asp-for="DistrictId" class="form-control remarks" asp-items="ViewBag.DistrictId" onchange="loadPinCode(this)" required>
                                    <option value="">--- SELECT ---</option>
                                </select>

                                <span asp-validation-for="DistrictId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <span class="input-group-label"> Pincode:</span>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" for="PinCodeId"><i class="fas fa-map-pin"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                                </div>
                                <select id="PinCodeId" asp-for="PinCodeId" class="form-control remarks" asp-items="ViewBag.PinCodeId" required>
                                    <option value="">--- SELECT ---</option>
                                </select>
                                <span asp-validation-for="PinCodeId" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="form-group">
                            <span class="input-group-label"> Address:</span>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="Addressline"><i class="fa fa-home"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                                </div>
                                <input type="text" asp-for="Addressline" class="form-control remarks" type="text" placeholder="Enter Address line" required maxlength="50" />
                                <span asp-validation-for="Addressline" class="text-danger"></span>
                            </div>
                        </div>


                        <div class="form-group">
                            <span class="input-group-label"> Note:</span>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="Comments"><i class="fas fa-pencil-alt"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                                </div>
                                <input type="text" asp-for="Description" class="form-control remarks" placeholder="Enter Remarks" required maxlength="50" />
                            </div>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <span class="input-group-label"> Mobile App Url:</span>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="MobileApiBaseUrl"><i class="fas fa-code-branch"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                                </div>
                                <input type="text" asp-for="MobileAppUrl" class="form-control remarks" placeholder="mobile app url" maxlength="100"/>
                                <span asp-validation-for="MobileAppUrl" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <span class="input-group-label"> Status:</span>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" for="Status"><i class="fa fa-toggle-on"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                                </div>
                                <select required id="Status" asp-for="Status" class="form-control remarks" asp-items="Html.GetEnumSelectList<VendorStatus>()">
                                    <option value="">--- SELECT ---</option>
                                </select>
                                <span asp-validation-for="Status" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="form-group text-right">
                            <button id="reset" type="submit" onclick="clearAllInputs()" class="btn btn-outline-secondary">
                                <i class="fas fa-undo"></i> Reset
                            </button>
                            <a id="back" asp-action="Details" asp-route-id="@Model.VendorId" class="btn btn-secondary">
                                <i class="fa fa-window-close"></i>
                                @Applicationsettings.CANCEL
                            </a>
                            <button id="create-agency" type="submit" class="btn btn-warning">
                                <i class="fas fa-building"></i>  @Applicationsettings.EDIT Agency
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/edit-agency.js">

    </script>
}
