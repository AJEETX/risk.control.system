@model ClaimTransactionModel


@if (!string.IsNullOrWhiteSpace(Model.ClaimsInvestigation.AgencyReport?.EnquiryRequest?.Answer))
{
    var time = string.Empty;
    if (@Model.ClaimsInvestigation.AgencyReport.Updated.HasValue)
    {
        time = @Model.ClaimsInvestigation.AgencyReport?.Updated.Value.ToString("dd-MMM-yy hh:mm tt");
    }
    <div class="col-12 d-flex align-items-stretch flex-column">
        <div class="card bg-light d-flex flex-fill">
            <div class="card-header">
                <h3 class="card-title"><i class="fas fa-user-check"></i> Enquiry Reply : <span class="badge badge-light">@Model.ClaimsInvestigation.UserEmailActioned</span> </h3>
                <div class="card-tools">
                    <span data-toggle="tooltip" title="Assessor: : @Model.ClaimsInvestigation.UserEmailActioned" class="badge badge-light"><i class="nav-icon fas fa-clock"></i> @time</span>
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>

            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-12">
                        <h4 class="lead"><span class="badge badge-light"> @Model?.ClaimsInvestigation.UserEmailActioned</span></h4>
                        <p class="text-muted text-sm">

                            <span>Agency  enquiry answer: </span>
                        </p>
                        <ul class="ml-4 mb-0 fa-ul text-muted">
                            <li class="small">
                                <span class="fa-li">
                                    <i class="far fa-comment"></i>
                                </span>
                                @Model.ClaimsInvestigation.AgencyReport.EnquiryRequest.Answer <i class="far fa-comment"></i>
                            </li>
                        </ul>
                    </div>

                </div>
            </div>
        </div>
    </div>
}