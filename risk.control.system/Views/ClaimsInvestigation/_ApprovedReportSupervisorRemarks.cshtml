@model ClaimTransactionModel


@if (!string.IsNullOrWhiteSpace(Model.ClaimsInvestigation.AgencyReport?.SupervisorRemarks))
{
    <div class="col-12 d-flex align-items-stretch flex-column">
        <div class="card bg-light d-flex flex-fill">
            <div class="card-header">
                <h3 class="card-title"><i class="fas fa-user-edit"></i> Supervisor : <span class="badge badge-light"> @Model?.ClaimsInvestigation.AgencyReport?.SupervisorEmail</span> </h3>
                <div class="card-tools">
                    <span data-toggle="tooltip" title=" Supervisor :  @Model?.ClaimsInvestigation.AgencyReport?.SupervisorEmail" class="badge badge-light"><i class="nav-icon fas fa-clock"></i> @Model.ClaimsInvestigation.AgencyReport?.SupervisorRemarksUpdated.Value.ToString("dd-MMM-yy hh:mm tt")</span>
                </div>

            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-12">
                        <h4 class="lead"><span class="badge badge-light"> @Model?.ClaimsInvestigation.AgencyReport?.SupervisorEmail</span></h4>
                        <p class="text-muted text-sm">

                            <span>Supervisor comments: </span>
                        </p>
                        <ul class="ml-4 mb-0 fa-ul text-muted">
                            <li class="small">
                                <span class="fa-li">
                                    <i class="far fa-comment"></i>
                                </span>

                                @if (Model.ClaimsInvestigation.AgencyReport?.SupervisorAttachment != null)
                                {
                                    <img title="enquiry document" id="enquiryDocument" class="img-fluid doc-profile-image" src="data:image/*;base64,@(Convert.ToBase64String(@Model.ClaimsInvestigation.AgencyReport?.SupervisorAttachment))">
                                }
                                else
                                {
                                    <img title="enquiry document" id="enquiryDocument" alt="face image" class="img-fluid doc-profile-image" src=@Applicationsettings.NO_IMAGE>
                                }
                            </li>
                            <li class="small">
                                <span class="fa-li">
                                    <i class="far fa-comment"></i>
                                </span>
                                @Model.ClaimsInvestigation.AgencyReport?.SupervisorRemarks <i class="far fa-comment"></i>
                            </li>
                        </ul>
                    </div>

                </div>
            </div>
        </div>
    </div>
}