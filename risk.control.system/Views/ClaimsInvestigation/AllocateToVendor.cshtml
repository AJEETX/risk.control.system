@model risk.control.system.Models.ClaimsInvestigation

@{
    ViewData["Title"] = @Applicationsettings.ALLOCATE_TO_VENDOR;
}
<section class="content pt-2">
    <div class="container-fluid">

        <div class="row">
            <div class="col-md-12">
                <div class="card card-secondary">
                    <div class="card-header">
                        <h3 class="card-title"><i class="fas fa-newspaper"></i> Claim Description</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <dl class="row">
                                    <dt class="col-sm-5">
                                        @Html.DisplayNameFor(model => model.ContractNumber)
                                    </dt>
                                    <dd class="col-sm-5">
                                        @Html.DisplayFor(model => model.ContractNumber)
                                    </dd>
                                    <dt class="col-sm-5">
                                        @Html.DisplayNameFor(model => model.Description)
                                    </dt>
                                    <dd class="col-sm-5">
                                        @Html.DisplayFor(model => model.Description)
                                    </dd>
                                    <dt class="col-sm-5">
                                        @Html.DisplayNameFor(model => model.LineOfBusiness)
                                    </dt>
                                    <dd class="col-sm-5">
                                        @Html.DisplayFor(model => model.LineOfBusiness.Name)
                                    </dd>
                                    
                                    <dt class="col-sm-5">
                                        @Html.DisplayNameFor(model => model.ContractIssueDate)
                                    </dt>
                                    <dd class="col-sm-5">
                                        @Html.DisplayFor(model => model.ContractIssueDate)
                                    </dd>
                                    <dt class="col-sm-5">
                                        @Html.DisplayNameFor(model => model.CustomerName)
                                    </dt>
                                    <dd class="col-sm-5">
                                        @Html.DisplayFor(model => model.CustomerName)
                                    </dd>
                                    <dt class="col-sm-5">
                                        @Html.DisplayNameFor(model => model.CustomerDateOfBirth)
                                    </dt>
                                    <dd class="col-sm-5">
                                        @Html.DisplayFor(model => model.CustomerDateOfBirth)
                                    </dd>
                                    <dt class="col-sm-5">
                                        @Html.DisplayNameFor(model => model.ContactNumber)
                                    </dt>
                                    <dd class="col-sm-5">
                                        @Html.DisplayFor(model => model.ContactNumber)
                                    </dd>
                                    <dt class="col-sm-5">
                                        @Html.DisplayNameFor(model => model.ClaimType)
                                    </dt>
                                    <dd class="col-sm-5">
                                        @Html.DisplayFor(model => model.ClaimType)
                                    </dd>
                                    <dt class="col-sm-5">
                                        @Html.DisplayNameFor(model => model.CustomerIncome)
                                    </dt>
                                    <dd class="col-sm-5">
                                        @Html.DisplayFor(model => model.CustomerIncome)
                                    </dd>
                                    <dt class="col-sm-5">
                                        Document
                                    </dt>
                                    <dd class="col-sm-5">
                                        @if (Model?.DocumentImage is not null)
                                        {
                                            <img id="documentImage" class="form-Image" src="data:image/*;base64,@(Convert.ToBase64String(Model?.DocumentImage))">
                                        }
                                        else
                                        {
                                            <img id="documentImage" class="form-Image" src="@Applicationsettings.NO_IMAGE">
                                        }
                                    </dd>

                                   
                                </dl>
                            </div>
                            <div class="col-md-6">
                                <dl class="row">
                                   
                                    <dt class="col-sm-5">
                                        @Html.DisplayNameFor(model => model.CustomerOccupation)
                                    </dt>
                                    <dd class="col-sm-5">
                                        @Html.DisplayFor(model => model.CustomerOccupation)
                                    </dd>
                                    <dt class="col-sm-5">
                                        @Html.DisplayNameFor(model => model.CustomerEducation)
                                    </dt>
                                    <dd class="col-sm-5">
                                        @Html.DisplayFor(model => model.CustomerEducation)
                                    </dd>

                                    <dt class="col-sm-5">
                                        @Html.DisplayNameFor(model => model.CustomerType)
                                    </dt>
                                    <dd class="col-sm-5">
                                        @Html.DisplayFor(model => model.CustomerType)
                                    </dd>
                                    <dt class="col-sm-5">
                                        @Html.DisplayNameFor(model => model.CostCentre)
                                    </dt>
                                    <dd class="col-sm-5">
                                        @Html.DisplayFor(model => model.CostCentre.Name)
                                    </dd>
                                    <dt class="col-sm-5">
                                        @Html.DisplayNameFor(model => model.CaseEnabler)
                                    </dt>
                                    <dd class="col-sm-5">
                                        @Html.DisplayFor(model => model.CaseEnabler.Name)
                                    </dd>
                                    <dt class="col-sm-5">
                                        @Html.DisplayNameFor(model => model.Comments)
                                    </dt>
                                    <dd class="col-sm-5">
                                        @Html.DisplayFor(model => model.Comments)
                                    </dd>
                                    <dt class="col-sm-5">
                                        @Html.DisplayNameFor(model => model.PinCode)
                                    </dt>
                                    <dd class="col-sm-5">
                                        @Html.DisplayFor(model => model.PinCode.Name)
                                    </dd>
                                    <dt class="col-sm-5">
                                        @Html.DisplayNameFor(model => model.State)
                                    </dt>
                                    <dd class="col-sm-5">
                                        @Html.DisplayFor(model => model.State.Name)
                                    </dd>
                                    <dt class="col-sm-5">
                                        @Html.DisplayNameFor(model => model.Country)
                                    </dt>
                                    <dd class="col-sm-5">
                                        @Html.DisplayFor(model => model.Country.Name)
                                    </dd>
                                    <dt class="col-sm-5">
                                        @Html.DisplayNameFor(model => model.District)
                                    </dt>
                                    <dd class="col-sm-5">
                                        @Html.DisplayFor(model => model.District.Name)
                                    </dd>
                                </dl>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card card-secondary">
                    <div class="card-header">
                        <h3 class="card-title"><i class="fas fa-map-marker-alt"></i> @Applicationsettings.VERIFICTION_LOCATIONS</h3>
                    </div>
                    <div class="card-body">
                        <form id="radioButtons" asp-action="EmpanelledVendors" method="get" enctype="multipart/form-data">
                            <div class="col-md-12">
                                @if (Model.CaseLocations.Count == 0)
                                {
                                    <hr />
                                    <div class="col-md-12 text-center">
                                        <caption>@Applicationsettings.NO_RECORDS_FOUND</caption>
                                    </div>
                                    <hr />
                                }
                                else
                                {
                                    <table id="datatable" class="table table-bordered table-hover dt-responsive nowrap w-100">
                                        <thead>
                                            <tr>
                                                <th></th>
                                                <th>
                                                    Benficiary Name
                                                </th>
                                                <th>
                                                    Benficiary Relation
                                                </th>
                                                <th>
                                                    Address
                                                </th>
                                                <th>
                                                    District
                                                </th>
                                                <th>
                                                    State
                                                </th>

                                                <th>
                                                    Verification Pincodes
                                                </th>

                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.CaseLocations)
                                            {
                                                <tr>
                                                    <td>
                                                        <input id="@item.CaseLocationId" name="selectedcase" class="selected-case" type="radio" value="@item.CaseLocationId" />
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.BeneficiaryName)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.BeneficiaryRelation.Name)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Addressline)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.District.Name)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.State.Name)
                                                    </td>

                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.PinCode.Code)
                                                    </td>

                                                    <td>
                                                        <a class="btn btn-xs btn-info" asp-controller="CaseLocations" asp-action="AssignerDetails" asp-route-id="@item.CaseLocationId"> <i class="fa fa-search"></i>   @Applicationsettings.DETAILS</a>&nbsp;
                                                        </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <button disabled="disabled" id="allocate-case" type="submit" class="btn btn-success">
                                                <i class="fas fa-thumbs-up" aria-hidden="true"></i> @Applicationsettings.SELECT_CASE_TO_ALLOCATE_TO_VENDOR
                                            </button>
                                        </div>
                                    </div>

                                }
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
