@model ClaimsInvestigationVendorsModel

@{
    ViewData["Title"] = "Empanelled Agencies";
}

<section class="content">
    <div id="article" class="card card-secondary">
        <div class="card-header">
            <h3 class="card-title"><i class="fas fa-tasks"></i> Empanelled Agencies 
                <span class="hover-text">
                    <i class="fas fa-info-circle"></i>
                    <span class="tooltip-text" id="information">
                        <li>

                            <i class='far fa-hand-point-right'></i> Claim: <b>
                                <i class="far fa-file-powerpoint"></i>
                                @Model.ClaimsInvestigation?.PolicyDetail?.ContractNumber
                            </b>
                        </li>
                        <li>
                            <i class='far fa-hand-point-right'></i> Select <strong><input type='radio' /></strong> 
                            <strong>AGENCY</strong>
                        </li>
                        <li>
                            <i class='far fa-thumbs-up'></i> 
                            <button class='btn btn-danger btn-xs'><i class='fas fa-external-link-alt'></i> ASSIGN & RE </button></b>
                        </li>

                    </span>
                </span>

            </h3>
        </div>
        @{
            string address = string.Empty;
            string baddress = string.Empty;
            int currentAgeinYrs = 0;
            int currentBAgeinYrs = 0;
            bool customerExist = false;
            bool beneficiaryExist = false;
            if (Model.ClaimsInvestigation != null)
            {
                address = @Model.ClaimsInvestigation?.CustomerDetail.Addressline + " " + @Model.ClaimsInvestigation?.CustomerDetail.District.Name + " " + @Model.ClaimsInvestigation?.CustomerDetail.State.Name + " " + @Model.ClaimsInvestigation?.CustomerDetail.Country.Name + " " + @Model.ClaimsInvestigation?.CustomerDetail.PinCode.Code;
                baddress = @Model.Location != null ? @Model.Location?.Addressline + " " +
                @Model.Location?.District?.Name + " " + @Model.Location?.State?.Name + " " +
                @Model.Location?.Country?.Name + " " + @Model.Location?.PinCode?.Code : string.Empty;
                if (Model.ClaimsInvestigation?.CustomerDetail.CustomerDateOfBirth != null)
                {
                    var age = DateTime.Now.Subtract(Model.ClaimsInvestigation.CustomerDetail.CustomerDateOfBirth).TotalDays;
                    currentAgeinYrs = (int)age / 365;
                }
                if (Model.Location?.BeneficiaryDateOfBirth != null)
                {
                    var age = DateTime.Now.Subtract(Model.Location.BeneficiaryDateOfBirth).TotalDays;
                    currentBAgeinYrs = (int)age / 365;
                }
            }
            if (!string.IsNullOrWhiteSpace(Model.ClaimsInvestigation.PolicyDetail.ContractNumber))
            {
                customerExist = true;
            }
            if (Model.Location?.CaseLocationId > 0)
            {
                beneficiaryExist = true;
            }
            string customerProgressColor = "grey";
            if (@customerExist)
            {
                customerProgressColor = "green";
            }
            string benficiaryProgressColor = "lightgrey";
            if (@customerExist && @beneficiaryExist)
            {
                benficiaryProgressColor = "green";
            }
            if (@customerExist && !@beneficiaryExist)
            {
                benficiaryProgressColor = "grey";
            }
            if (!@customerExist && !@beneficiaryExist)
            {
                benficiaryProgressColor = "lightgrey";
            }

            <article>
                <div class="bb-blog-inner">
                    <div class="card card-light collapsed-card">
                        <div class="card-header">
                            <h3 class="card-title">Claim: <span class="badge badge-light"><i class="far fa-file-powerpoint"></i>  @Model.ClaimsInvestigation?.PolicyDetail?.ContractNumber</span>
                                <span class="hover-text">
                                    <i class="fas fa-info-circle"></i>
                                    <span class="tooltip-text" id="policy-information">
                                        <li>
                                            <i class='far fa-file-powerpoint'></i> Policy details.
                                        </li>
                                        <li>
                                            <i class='fa fa-user-plus'></i> Customer details.
                                        </li>
                                        <li> <i class='fas fa-user-tie'></i> Beneficiary details </li>

                                    </span>
                                </span>
                            </h3>
                            <div class="card-tools">
                                <span data-toggle="tooltip" title="Claim # : @Model.ClaimsInvestigation?.PolicyDetail?.ContractNumber"> <i class='far fa-hand-point-right'></i> </span>
                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                    <i class="fas fa-plus"></i>
                                </button>
                            </div>
                        </div>

                        <div class="card-body">

                            <div class="row">
                                <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch flex-column">
                                    <div class="card bg-light d-flex flex-fill">
                                        <div class="card-header text-muted border-bottom-0">
                                            <i class="far fa-file-powerpoint"></i> Policy Details
                                            <span class="hover-text">
                                                <i class="fas fa-info-circle"></i>
                                                <span class="tooltip-text" id="policy-information">
                                                    <i class='far fa-file-powerpoint'></i> Policy details.
                                                </span>
                                            </span>
                                        </div>
                                        <div class="progress">
                                            <i class="far fa-bookmark bookmark-green"></i>
                                            <div class="progress-bar" role="progressbar" style="width:100%;background-color:green;">
                                                <i class="far fa-file-powerpoint"></i>
                                            </div>
                                        </div>
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col-7">
                                                    <h2 class="lead"><b>@Model.ClaimsInvestigation?.PolicyDetail.ContractNumber</b></h2>
                                                    <p class="text-muted text-sm">
                                                        <b>Policy Type: </b>@Model.ClaimsInvestigation?.PolicyDetail.LineOfBusiness.Name
                                                    </p>
                                                    <ul class="ml-4 mb-0 fa-ul text-muted">
                                                        <li class="small">
                                                            <span class="fa-li">
                                                                <i class="fas fa-money-bill-wave"></i>
                                                            </span>
                                                            Claim Type: <i class="fas fa-rupee-sign"></i>@Model.ClaimsInvestigation?.PolicyDetail.ClaimType
                                                        </li>
                                                        <li class="small">
                                                            <span class="fa-li">
                                                                <i class="fas fa-money-bill-wave"></i>
                                                            </span>
                                                            Amount: <i class="fas fa-rupee-sign"></i>@Model.ClaimsInvestigation?.PolicyDetail.SumAssuredValue
                                                        </li>
                                                        <li class="small">
                                                            <span class="fa-li">
                                                                <i class="fas fa-bolt"></i>
                                                            </span>
                                                            Cause: @Model.ClaimsInvestigation?.PolicyDetail.CauseOfLoss
                                                        </li>
                                                        <li class="small">
                                                            <span class="fa-li">
                                                                <i class="fas fa-tools"></i>
                                                            </span>
                                                            Service: @Model.ClaimsInvestigation?.PolicyDetail.InvestigationServiceType.Name
                                                        </li>
                                                        <li class="small">
                                                            <span class="fa-li">
                                                                <i class="fas fa-money-check-alt"></i>
                                                            </span>
                                                            Budget center: @Model.ClaimsInvestigation?.PolicyDetail.CostCentre.Name
                                                        </li>
                                                        <li class="small">
                                                            <span class="fa-li">
                                                                <i class="fas fa-sun"></i>
                                                            </span>
                                                            Reason: @Model.ClaimsInvestigation?.PolicyDetail.CaseEnabler.Name;
                                                        </li>
                                                        <li class="small">
                                                            <span class="fa-li">
                                                                <i class="far fa-clock"></i>
                                                            </span>
                                                            Issue Date: @Model.ClaimsInvestigation?.PolicyDetail.ContractIssueDate.ToString("dd-MMM-yyyy")
                                                        </li>
                                                        <li class="small">
                                                            <span class="fa-li">
                                                                <i class="far fa-clock"></i>
                                                            </span>
                                                            Incidence Date: @Model.ClaimsInvestigation?.PolicyDetail.DateOfIncident.ToString("dd-MMM-yyyy")
                                                        </li>
                                                    </ul>
                                                </div>
                                                <div class="col-5 text-center">
                                                    <p class="text-muted text-sm">

                                                    </p>
                                                    <p class="text-muted text-sm">
                                                        @if (Model?.ClaimsInvestigation?.PolicyDetail.DocumentImage is not null)
                                                        {
                                                            <img id="documentImage" class="img-fluid" src="data:image/*;base64,@(Convert.ToBase64String(Model?.ClaimsInvestigation?.PolicyDetail.DocumentImage))">
                                                        }
                                                        else
                                                        {
                                                            <img id="documentImage" alt="user-avatar"
                                                                 class="img-fluid form-Image" src=@Applicationsettings.NO_POLICY_IMAGE>
                                                        }
                                                    </p>

                                                </div>
                                            </div>
                                        </div>
                                        <div class="card-footer">
                                            <div class="text-right">
                                                <a id="policy-comments" class="btn btn-sm bg-teal">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a id="policy-detail" class="btn btn-sm btn-info">
                                                    <i class="far fa-file-powerpoint"></i> ...
                                                </a>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch flex-column">
                                    <div class="card bg-light d-flex flex-fill">
                                        <div class="card-header text-muted border-bottom-0">
                                            <i class="fa fa-user-plus"></i> Customer Details
                                            <span class="hover-text">
                                                <i class="fas fa-info-circle"></i>
                                                <span class="tooltip-text" id="customer-information">
                                                    <i class='fa fa-user-plus'></i> Customer details
                                                </span>
                                            </span>
                                        </div>
                                        <div class="progress">
                                            <i class="far fa-bookmark bookmark-green"></i>
                                            <div class="progress-bar" role="progressbar" style="width:100%;background-color:@customerProgressColor;">
                                                <i class="fa fa-user-plus"></i>
                                            </div>
                                        </div>
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col-7">
                                                    <h2 class="lead"><b>@Model.ClaimsInvestigation?.CustomerDetail?.CustomerName</b></h2>
                                                    <p class="text-muted text-sm">
                                                        <b>Occupation: </b> @Model.ClaimsInvestigation?.CustomerDetail?.CustomerOccupation
                                                    </p>
                                                    <ul class="ml-4 mb-0 fa-ul text-muted">
                                                        <li class="small">
                                                            <span class="fa-li">
                                                                <i class="fas fa-user-tag"></i>
                                                            </span>
                                                            Customer Type: @Model.ClaimsInvestigation?.CustomerDetail?.CustomerType
                                                        </li>
                                                        <li class="small">
                                                            <span class="fa-li">
                                                                <i class="fas fa-rupee-sign"></i>
                                                            </span>
                                                            Income: @Model.ClaimsInvestigation?.CustomerDetail?.CustomerIncome
                                                        </li>
                                                        <li class="small">
                                                            <span class="fa-li">
                                                                <i class="fas fa-restroom"></i>
                                                            </span>
                                                            Gender: @Model.ClaimsInvestigation?.CustomerDetail?.Gender
                                                        </li>
                                                        <li class="small">
                                                            <span class="fa-li">
                                                                <i class="fas fa-graduation-cap"></i>
                                                            </span>
                                                            Education: @Model.ClaimsInvestigation?.CustomerDetail?.CustomerEducation
                                                        </li>
                                                        <li class="small">
                                                            <span class="fa-li">
                                                                <i class="fas fa-user-alt"></i>
                                                            </span>
                                                            Age: @currentAgeinYrs
                                                        </li>
                                                        <li class="small">
                                                            <span class="fa-li">
                                                                <i class="fas fa-lg fa-building"></i>
                                                            </span>
                                                            Address: @address
                                                        </li>

                                                        <li class="small">
                                                            <span class="fa-li">
                                                                <i class="fas fa-lg fa-phone"></i>
                                                            </span>
                                                            Phone #: + @Model.ClaimsInvestigation?.CustomerDetail?.ContactNumber
                                                        </li>
                                                    </ul>
                                                </div>
                                                <div class="col-5 text-center">
                                                    <p class="text-muted text-sm">
                                                        @if (Model?.ClaimsInvestigation?.CustomerDetail?.ProfilePicture is not null)
                                                        {
                                                            <img id="profileImage" class="img-fluid block-data" src="data:image/*;base64,@(Convert.ToBase64String(Model?.ClaimsInvestigation?.CustomerDetail?.ProfilePicture))">
                                                        }
                                                        else
                                                        {
                                                            <img id="profileImage" class="img-fluid block-data" src="@Applicationsettings.NO_USER">
                                                        }
                                                    </p>
                                                    <p class="text-muted text-sm">
                                                        <img id="profileImageMap" class="img-fluid block-data" src="@Model?.ClaimsInvestigation?.CustomerDetail?.CustomerLocationMap">
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="card-footer">
                                            <div class="text-right">
                                                <a id="customer-comments" class="btn btn-sm bg-teal">
                                                    <i class="fas fa-comments"></i>
                                                </a>

                                                <a id="customer-detail" class="btn btn-sm btn-warning">
                                                    <i class="fa fa-user-plus"></i> ...
                                                </a>
                                            </div>

                                        </div>
                                    </div>
                                </div>

                                <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch flex-column">
                                    <div class="card bg-light d-flex flex-fill">
                                        <div class="card-header text-muted border-bottom-0">
                                            <i class="fas fa-user-tie"></i>  Beneficiary Details
                                            <span class="hover-text">
                                                <i class="fas fa-info-circle"></i>
                                                <span class="tooltip-text" id="beneficiary-information">

                                                    <i class='fas fa-user-tie'></i> Beneficiary details
                                                </span>
                                            </span>
                                        </div>
                                        <div class="progress">
                                            <i class="far fa-bookmark bookmark-green"></i>
                                            <div class="progress-bar" role="progressbar" style="width:100%;background-color:@benficiaryProgressColor;">
                                                <i class="fas fa-user-tie"></i>
                                            </div>
                                        </div>
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col-7">
                                                    <h2 class="lead"><b>@Model.Location?.BeneficiaryName</b></h2>
                                                    <p class="text-muted text-sm">
                                                        <b>Relation: </b> @Model.Location?.BeneficiaryRelation.Name
                                                    </p>
                                                    <ul class="ml-4 mb-0 fa-ul text-muted">
                                                        <li class="small">
                                                            <span class="fa-li">
                                                                <i class="fas fa-rupee-sign"></i>
                                                            </span>
                                                            Income: @Model.Location?.BeneficiaryIncome
                                                        </li>
                                                        <li class="small">
                                                            <span class="fa-li">
                                                                <i class="fas fa-user-alt"></i>
                                                            </span>
                                                            Age: @currentBAgeinYrs
                                                        </li>

                                                        <li class="small">
                                                            <span class="fa-li">
                                                                <i class="fas fa-lg fa-building"></i>
                                                            </span>
                                                            Address: @baddress
                                                        </li>
                                                        <li class="small">
                                                            <span class="fa-li">
                                                                <i class="fas fa-lg fa-phone"></i>
                                                            </span>
                                                            Phone #: + @Model.Location?.BeneficiaryContactNumber
                                                        </li>
                                                    </ul>
                                                </div>
                                                <div class="col-5 text-center">
                                                    <p class="text-muted text-sm">
                                                        @if (Model?.Location?.ProfilePicture is not null)
                                                        {
                                                            <img id="bImage" class="img-fluid block-data" src="data:image/*;base64,@(Convert.ToBase64String(Model?.Location?.ProfilePicture))">
                                                        }
                                                        else
                                                        {
                                                            <img id="bImage" class="img-fluid block-data" src="@Applicationsettings.NO_USER">
                                                        }
                                                    </p>
                                                    <p class="text-muted text-sm">
                                                        <img id="bImageMap" class="img-fluid block-data" src="@Model?.Location?.BeneficiaryLocationMap">
                                                    </p>

                                                </div>
                                            </div>
                                        </div>

                                        <div class="card-footer">
                                            <div class="text-right">
                                                <a id="beneficiary-comments" class="btn btn-sm bg-teal">
                                                    <i class="fas fa-comments"></i>
                                                </a>

                                                <a id="beneficiary-detail" class="btn btn-sm btn-success">
                                                    <i class="fas fa-user-tie"></i> ...
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div> <!-- class bb-blog-inner -->
            </article>

            <form id="radioButtons" method="post" asp-controller="ClaimsInvestigationPost" asp-action="CaseAllocatedToVendor" enctype="multipart/form-data">

                <div class="card-body">

                    <div class="submit-progress hidden">
                        <i class="fas fa-sync fa-spin fa-4x fa-fw"></i>
                    </div>
                    <div class="table-responsive mailbox-messages">
                        <input type="hidden" id="claimId" name="claimId" value="@Model.ClaimsInvestigation.ClaimsInvestigationId" />
                        <input type="hidden" id="CaseLocationId" name="CaseLocationId" value="@Model.Location.CaseLocationId" />
                        <table id="datatable" class="table table-bordered table-hover dt-responsive nowrap w-100">
                            <thead>
                                <tr>
                                    <th>

                                    </th>
                                    <th>
                                        Document
                                    </th>

                                    <th>
                                        Agency Name
                                    </th>

                                    <th>
                                        Phone #
                                    </th>
                                    <th>
                                        Email
                                    </th>
                                    <th>
                                        Address
                                    </th>
                                    <th>
                                        District
                                    </th>
                                    <th>
                                        State
                                    </th>

                                    <th>
                                        Load
                                    </th>
                                    <th>
                                        <span class="badge badge-light">Service</span> : <span class="badge badge-light">Pincodes</span>
                                    </th>
                                    <th sortable="false"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Vendors)
                                {
                                    var vendorId = item.Vendor.VendorId;
                                    <tr>
                                        <td>
                                            <input id="@item.Vendor.VendorId" name="selectedcase" class="selected-case" type="radio" value="@item.Vendor.VendorId" />
                                        </td>
                                        <td>
                                            @if (item?.Vendor.DocumentUrl is not null)
                                            {
                                                <img title="@item.Vendor.Name" id="profileImage" class="form-Image" src="@item?.Vendor.DocumentUrl" data-toggle="tooltip" />
                                            }
                                            else
                                            {
                                                <img title="..." id="profileImage" class="form-Image" src="@Applicationsettings.NO_IMAGE" data-toggle="tooltip" />
                                            }
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Vendor.Name)
                                            <br />
                                            <img src="~/images/StarFade.gif" alt="Star Rating" align="middle" id="1" class="rating" vendorId="@vendorId" />
                                            <img src="~/images/StarFade.gif" alt="Star Rating" align="middle" id="2" class="rating" vendorId="@vendorId" />
                                            <img src="~/images/StarFade.gif" alt="Star Rating" align="middle" id="3" class="rating" vendorId="@vendorId" />
                                            <img src="~/images/StarFade.gif" alt="Star Rating" align="middle" id="4" class="rating" vendorId="@vendorId" />
                                            <img src="~/images/StarFade.gif" alt="Star Rating" align="middle" id="5" class="rating" vendorId="@vendorId" />
                                            <span class="badge badge-light">
                                                (@item.Vendor.RateCount)
                                            </span>
                                            @if (item.Vendor.RateCount != null && item.Vendor.RateCount > 0)
                                            {
                                                decimal a = @item.Vendor.RateTotal.Value / @item.Vendor.RateCount.Value;
                                                <span class="avr"> @a</span>
                                            }
                                            <br />
                                            <span class="badge badge-light">
                                                <span class="result"></span>
                                            </span>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Vendor.PhoneNumber)
                                        </td>
                                        <td>
                                            <a href="#"> @Html.DisplayFor(modelItem => item.Vendor.Email)</a>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Vendor.Addressline)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Vendor.District.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Vendor.State.Name)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.CaseCount)
                                        </td>
                                        <td>
                                            @foreach (var service in item.Vendor.VendorInvestigationServiceTypes)
                                            {
                                                <span class="badge badge-light">
                                                    @service.LineOfBusiness.Name - @service.InvestigationServiceType.Name
                                                    @foreach (var pincode in service.PincodeServices)
                                                    {
                                                        <span class="badge badge-light">@pincode.Pincode</span>
                                                    }
                                                </span>

                                                <br />
                                            }
                                        </td>

                                        <td>
                                            <a id="empanelled" class="btn btn-xs btn-info" asp-action="VendorDetail" asp-route-selectedcase="@Model.ClaimsInvestigation.ClaimsInvestigationId"
                                               asp-route-backurl="EmpanelledVendors" asp-route-id="@item.Vendor.VendorId" asp-route-CompanyId="@Model.ClaimsInvestigation.PolicyDetail.ClientCompanyId">
                                                <i class="fas fa-building"></i> @Applicationsettings.DETAILS
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>

                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-md-12">
                            <a id="back" asp-controller="ClaimsInvestigation" asp-action="Assigner" class="btn btn-outline-secondary"><i class="fas fa-arrow-left"></i> Back</a>

                            <button disabled="disabled" id="allocate-case" type="submit" class="btn btn-danger">
                                <i class="fas fa-external-link-alt" aria-hidden="true"></i> ASSIGN & RE
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        }
    </div>
</section>
@section Scripts {

    <script type="text/javascript" src="~/js/get-empanelled-vendors.js">
    </script>
}
