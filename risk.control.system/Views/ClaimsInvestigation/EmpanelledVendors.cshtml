@model ClaimsInvestigationVendorsModel

@{
    ViewData["Title"] = @Applicationsettings.SERVICE;
}

<section class="content pt-2">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-secondary">
                    <div class="card-header">
                        <h3 class="card-title"><i class="fas fa-newspaper"></i> Claim Description</h3>

                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <dl class="row">
                                    <dt class="col-sm-5">
                                        @Html.DisplayNameFor(model => model.ClaimsInvestigation.LineOfBusiness)
                                    </dt>
                                    <dd class="col-sm-5">
                                        @Html.DisplayFor(model => model.ClaimsInvestigation.LineOfBusiness.Name)
                                    </dd>
                                    <dt class="col-sm-5">
                                        Policy Type
                                    </dt>
                                    <dd class="col-sm-5">
                                        @Html.DisplayFor(model => model.ClaimsInvestigation.ClaimType)
                                    </dd>
                                    <dt class="col-sm-5">
                                        Policy #
                                    </dt>
                                    <dd class="col-sm-5">
                                        @Html.DisplayFor(model => model.ClaimsInvestigation.ContractNumber)
                                    </dd>
                                    <dt class="col-sm-5">
                                        Issue Date
                                    </dt>
                                    <dd class="col-sm-5">
                                        @Html.DisplayFor(model => model.ClaimsInvestigation.ContractIssueDate)
                                    </dd>
                                    <dt class="col-sm-5">
                                        Policy Document
                                    </dt>
                                    <dd class="col-sm-5">
                                        @if (Model?.ClaimsInvestigation.DocumentImage is not null)
                                        {
                                            <img id="documentImage" class="form-Image" src="data:image/*;base64,@(Convert.ToBase64String(Model?.ClaimsInvestigation.DocumentImage))">
                                        }
                                        else
                                        {
                                            <img id="documentImage" class="form-Image" src="@Applicationsettings.NO_IMAGE">
                                        }
                                    </dd>


                                    <dt class="col-sm-5">
                                        @Html.DisplayNameFor(model => model.ClaimsInvestigation.CostCentre)
                                    </dt>
                                    <dd class="col-sm-5">
                                        @Html.DisplayFor(model => model.ClaimsInvestigation.CostCentre.Name)
                                    </dd>
                                    <dt class="col-sm-5">
                                        @Html.DisplayNameFor(model => model.ClaimsInvestigation.CaseEnabler)
                                    </dt>
                                    <dd class="col-sm-5">
                                        @Html.DisplayFor(model => model.ClaimsInvestigation.CaseEnabler.Name)
                                    </dd>
                                    <dt class="col-sm-5">
                                        @Html.DisplayNameFor(model => model.ClaimsInvestigation.Description)
                                    </dt>
                                    <dd class="col-sm-5">
                                        @Html.DisplayFor(model => model.ClaimsInvestigation.Description)
                                    </dd>
                                    <dt class="col-sm-5">
                                        Status
                                    </dt>
                                    <dd class="col-sm-5">
                                        @Html.DisplayFor(model => model.ClaimsInvestigation.InvestigationCaseStatus.Name)
                                    </dd>
                                    <dt class="col-sm-5">
                                        Customer Photo
                                    </dt>
                                    <dd class="col-sm-5">
                                        @if (Model?.ClaimsInvestigation.ProfilePicture is not null)
                                        {
                                            <img id="profileImage" class="form-Image" src="data:image/*;base64,@(Convert.ToBase64String(Model?.ClaimsInvestigation.ProfilePicture))">
                                        }
                                        else
                                        {
                                            <img id="profileImage" class="form-Image" src="@Applicationsettings.NO_IMAGE">
                                        }
                                    </dd>
                                </dl>
                            </div>
                            <div class="col-md-6">
                                <dl class="row">

                                    <dt class="col-sm-5">
                                        @Html.DisplayNameFor(model => model.ClaimsInvestigation.CustomerName)
                                    </dt>
                                    <dd class="col-sm-5">
                                        @Html.DisplayFor(model => model.ClaimsInvestigation.CustomerName)
                                    </dd>
                                    <dt class="col-sm-5">
                                        @Html.DisplayNameFor(model => model.ClaimsInvestigation.CustomerDateOfBirth)
                                    </dt>
                                    <dd class="col-sm-5">
                                        @Html.DisplayFor(model => model.ClaimsInvestigation.CustomerDateOfBirth)
                                    </dd>
                                    <dt class="col-sm-5">
                                        Phone #
                                    </dt>
                                    <dd class="col-sm-5">
                                        @Html.DisplayFor(model => model.ClaimsInvestigation.ContactNumber)
                                    </dd>


                                    <dt class="col-sm-5">
                                        Address
                                    </dt>
                                    <dd class="col-sm-5">
                                        @Html.DisplayFor(model => model.ClaimsInvestigation.Addressline)
                                    </dd>
                                    <dt class="col-sm-5">
                                        District
                                    </dt>
                                    <dd class="col-sm-5">
                                        @Html.DisplayFor(model => model.ClaimsInvestigation.District.Name)
                                    </dd>
                                    <dt class="col-sm-5">
                                        State
                                    </dt>
                                    <dd class="col-sm-5">
                                        @Html.DisplayFor(model => model.ClaimsInvestigation.State.Name)
                                    </dd>
                                    <dt class="col-sm-5">
                                        Country
                                    </dt>
                                    <dd class="col-sm-5">
                                        @Html.DisplayFor(model => model.ClaimsInvestigation.Country.Name)
                                    </dd>
                                    <dt class="col-sm-5">
                                        PinCode
                                    </dt>
                                    <dd class="col-sm-5">
                                        @Html.DisplayFor(model => model.ClaimsInvestigation.PinCode.Code)
                                    </dd>
                                    <dt class="col-sm-5">
                                        @Html.DisplayNameFor(model => model.ClaimsInvestigation.CustomerIncome)
                                    </dt>
                                    <dd class="col-sm-5">
                                        @Html.DisplayFor(model => model.ClaimsInvestigation.CustomerIncome)
                                    </dd>
                                    <dt class="col-sm-5">
                                        Occupation
                                    </dt>
                                    <dd class="col-sm-5">
                                        @Html.DisplayFor(model => model.ClaimsInvestigation.CustomerOccupation)
                                    </dd>
                                    <dt class="col-sm-5">
                                        Education
                                    </dt>
                                    <dd class="col-sm-5">
                                        @Html.DisplayFor(model => model.ClaimsInvestigation.CustomerEducation)
                                    </dd>

                                    <dt class="col-sm-5">
                                        @Html.DisplayNameFor(model => model.ClaimsInvestigation.CustomerType)
                                    </dt>
                                    <dd class="col-sm-5">
                                        @Html.DisplayFor(model => model.ClaimsInvestigation.CustomerType)
                                    </dd>
                                </dl>

                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <dl class="row">
                                    <dt class="col-sm-5">
                                        Beneficiary Photo
                                    </dt>
                                    <dd class="col-sm-5">
                                        @if (Model?.CaseLocation?.ProfilePicture is not null)
                                        {
                                            <img id="documentImage" class="form-Image" src="data:image/*;base64,@(Convert.ToBase64String(Model?.CaseLocation?.ProfilePicture))">
                                        }
                                        else
                                        {
                                            <img id="documentImage" class="form-Image" src="@Applicationsettings.NO_IMAGE">
                                        }
                                    </dd>
                                    <dt class="col-sm-5">
                                        @Html.DisplayNameFor(model => model.CaseLocation.BeneficiaryName)
                                    </dt>
                                    <dd class="col-sm-5">
                                        @Html.DisplayFor(model => model.CaseLocation.BeneficiaryName)
                                    </dd>

                                    <dt class="col-sm-5">
                                        @Html.DisplayNameFor(model => model.CaseLocation.BeneficiaryRelation)
                                    </dt>
                                    <dd class="col-sm-5">
                                        @Html.DisplayFor(model => model.CaseLocation.BeneficiaryRelation.Name)
                                    </dd>
                                    <dt class="col-sm-5">
                                        Phone #
                                    </dt>
                                    <dd class="col-sm-5">
                                        @Html.DisplayFor(model => model.CaseLocation.BeneficiaryContactNumber)
                                    </dd>
                                </dl>
                            </div>
                            <div class="col-md-6">
                                <dl class="row">

                                    <dt class="col-sm-5">
                                        @Html.DisplayNameFor(model => model.CaseLocation.Addressline)
                                    </dt>
                                    <dd class="col-sm-5">
                                        @Html.DisplayFor(model => model.CaseLocation.Addressline)
                                    </dd>
                                    
                                    <dt class="col-sm-5">
                                        District
                                    </dt>
                                    <dd class="col-sm-5">
                                        @Html.DisplayFor(model => model.CaseLocation.District.Name)
                                    </dd>
                                    <dt class="col-sm-5">
                                        State
                                    </dt>
                                    <dd class="col-sm-5">
                                        @Html.DisplayFor(model => model.CaseLocation.State.Name)
                                    </dd>
                                    <dt class="col-sm-5">
                                        Country
                                    </dt>
                                    <dd class="col-sm-5">
                                        @Html.DisplayFor(model => model.CaseLocation.Country.Name)
                                    </dd>
                                    <dt class="col-sm-5">
                                        PinCode
                                    </dt>
                                    <dd class="col-sm-5">
                                        <span class="badge badge-danger"> @Html.DisplayFor(model => model.CaseLocation.PinCode.Code)</span>
                                    </dd>
                                </dl>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card card-secondary">
                    <div class="card-header">
                        <h3 class="card-title"><i class="fas fa-tasks"></i> Empanelled Agencies</h3>
                    </div>
                    <div class="card-body">
                        <form id="radioButtons" method="post" asp-action="CaseAllocatedToVendor" enctype="multipart/form-data">
                            <input type="hidden" id="claimId" name="claimId" value="@Model.ClaimsInvestigation.ClaimsInvestigationId" />
                            <input type="hidden" id="CaseLocationId" name="CaseLocationId" value="@Model.CaseLocation.CaseLocationId" />
                            <table id="datatable" class="table table-bordered table-hover dt-responsive nowrap w-100">
                                <thead>
                                    <tr>
                                        <th>

                                        </th>
                                        <th>
                                            Agency Document
                                        </th>

                                        <th>
                                            Agency Name
                                        </th>

                                        <th>
                                            Phone #
                                        </th>
                                        <th>
                                            Email
                                        </th>
                                        <th>
                                            Current Cases
                                        </th>
                                        <th>
                                            <span class="badge badge-success">Service-type = <span class="badge badge-light">Pincodes</span></span>
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Vendors)
                                    {
                                        <tr>
                                            <td>
                                                <input id="@item.Vendor.VendorId" name="selectedcase" class="selected-case" type="radio" value="@item.Vendor.VendorId" />
                                            </td>
                                            <td>
                                                @if (item?.Vendor.DocumentUrl is not null)
                                            {
                                                <img id="documentImage" class="form-Image" src="@item?.Vendor.DocumentUrl">
                                            }
                                            else
                                            {
                                                <img id="documentImage" class="form-Image" src="@Applicationsettings.NO_IMAGE">
                                            }
                                            </td>
                                            <td>
                                            @Html.DisplayFor(modelItem => item.Vendor.Name)
                                            </td>
                                            <td>
                                            @Html.DisplayFor(modelItem => item.Vendor.PhoneNumber)
                                            </td>
                                            <td>
                                                <a href="#"> @Html.DisplayFor(modelItem => item.Vendor.Email)</a>
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CaseCount)
                                            </td>
                                            <td>
                                            @foreach (var service in item.Vendor.VendorInvestigationServiceTypes)
                                            {
                                                    <span class="badge badge-light">
                                                    @service.LineOfBusiness.Name - @service.InvestigationServiceType.Name
                                                    @foreach (var pincode in service.PincodeServices)
                                                    {
                                                            <span class="badge badge-info">@pincode.Pincode</span>
                                                    }
                                                    </span>

                                                    <br />
                                            }
                                            </td>

                                            <td>
                                                <a class="btn btn-xs btn-info" asp-action="VendorDetail" asp-route-backurl="EmpanelledVendors" asp-route-id="@item.Vendor.VendorId" asp-route-CompanyId="@ViewBag.CompanyId">
                                                    <i class="fa fa-search"></i> @Applicationsettings.DETAILS
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <div class="row">
                                <div class="col-md-12">
                                    <a asp-action="AllocateToVendor" asp-route-selectedcase="@Model.ClaimsInvestigation.ClaimsInvestigationId" class="btn btn-default"><i class="fas fa-arrow-left"></i> Back</a>

                                    <button disabled="disabled" id="allocate-case" type="submit" class="btn btn-success">
                                        <i class="fas fa-thumbs-up" aria-hidden="true"></i> @Applicationsettings.BROADCAST
                                    </button>
                                </div>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>