@model ClaimTransactionModel


@if (!string.IsNullOrWhiteSpace(Model.ClaimsInvestigation.AgencyReport?.AssessorRemarks))
{
    <div class="col-12 d-flex align-items-stretch flex-column">
        <div class="card bg-light d-flex flex-fill">
            <div class="card-header">
                <h3 class="card-title"><i class="fas fa-user-check"></i> Assessor: <span class="badge badge-light">@Model.ClaimsInvestigation.AgencyReport.AssessorEmail</span> </h3>
                <div class="card-tools">
                    <span data-toggle="tooltip" title="Assessor: : @Model.ClaimsInvestigation.AgencyReport.AssessorEmail" class="badge badge-light"><i class="nav-icon fas fa-clock"></i> @Model.ClaimsInvestigation.AgencyReport?.AssessorRemarksUpdated.Value.ToString("dd-MMM-yy hh:mm tt")</span>
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>

            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-12">
                        <h4 class="lead"><span class="badge badge-light"> @Model?.ClaimsInvestigation.AgencyReport.AssessorEmail</span></h4>
                        <p class="text-muted text-sm">

                            <span>Assessor remarks: </span>
                        </p>
                        <ul class="ml-4 mb-0 fa-ul text-muted">
                            <li class="small">
                                <span class="fa-li">
                                    <i class="far fa-comment"></i>
                                </span>
                                @Model.ClaimsInvestigation.AgencyReport.AssessorRemarks <i class="far fa-comment"></i>
                            </li>
                        </ul>
                    </div>

                </div>
            </div>
        </div>
    </div>
}