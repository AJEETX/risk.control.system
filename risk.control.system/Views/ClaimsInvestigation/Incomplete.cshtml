@model ClaimTransactionModel
@{
    ViewData["Title"] = "Claim: New  ";
}
<section class="content">
    <div id="fullpage" class="card card-secondary">
        <div class="card-header">
            <input type="hidden" id="total-count" value="@Model.AvailableCount" />
            <input type="hidden" id="max-count" value="@Model.TotalCount" />
            <h3 class="card-title"><i class="far fa-edit"></i> New & Draft
               
                <span class="hover-text">
                    <i class="fas fa-info-circle"></i>
                    <span class="tooltip-text" id="information">
                        <span>
                            <i class='far fa-hand-point-right'></i> Start from <button class='badge badge-success btn'><i class='far fa-edit'></i>  NEW & DRAFT </button> link
                            <i class='far fa-thumbs-up'></i> Complete detail through wizard. <b> <i class='fa fa-hand-peace-o'></i> ASSIGN</b> to Agency
                        </span>

                    </span>
                </span>
            </h3>
            <div class="card-tools">
                @if (Model.Trial)
                {
                    <span data-toggle="tooltip" title="TRIAL VERSION. Max limit = @Model.TotalCount"> <i class="fas fa-question-circle" aria-hidden="true"></i> </span>
                }
            </div>
            @* <h3 id="view-type" class="card-title">
            <a href="#" id="map-type" class="input-group-label"> <i class="far fa-map"></i> Map</a>
            <a href="#" id="list-type" class="input-group-label"> <i class="fas fa-server"></i> List</a>
            </h3> *@
        </div>
        <div class="card-body">
            <div class="submit-progress hidden">
                <i class="fas fa-sync fa-spin fa-4x fa-fw"></i>
            </div>
            <form id="checkboxes" asp-action="Assign" method="post" enctype="multipart/form-data">
                <table id="customerTable" class="table table-bordered table-hover dt-responsive nowrap w-100">
                    <thead>
                        <tr>
                            <th><img class="action-image" src="~/headers/policy-doc.gif" title="Policy Document" alt="Policy Document" /></th>
                            <th><img class="action-image" src="~/headers/policy-num.gif" title="Policy Number" alt="Policy Number" /></th>
                            <th><img class="action-image" src="~/headers/amount.gif" title="Insured Amount" alt="Insured Amount" /></th>
                            <th><img class="action-image" src="~/headers/portrait.gif" title="Customer Photo" alt="Customer Photo" /></th>
                            <th><img class="action-image" src="~/headers/customer.gif" title="Customer Name" alt="Customer Name" /></th>
                            <th><img class="action-image" src="~/headers/portrait.gif" title="Beneficiary Photo" alt="Beneficiary Photo" /></th>
                            <th><img class="action-image" src="~/headers/customer.gif" title="Beneficiary Name" alt="Beneficiary Name" /></th>
                            <th><img class="action-image" src="~/headers/claim-type.gif" title="Claim Type" alt="Claim Type" /></th>
                            <th><img class="action-image" src="~/headers/service.gif" title="Service" alt="Service" /></th>
                            <th><img class="action-image" src="~/headers/pincode.gif" title="Pincode" alt="Pincode" /></th>
                            <th><img class="action-image" src="~/headers/status.gif" title="Status" alt="Status" /></th>
                            <th><img class="action-image" src="~/headers/created.gif" title="Created date" alt="Created Date" /></th>
                            <th>
                                <img class="action-image" src="~/headers/timer.gif" title="Days since Active" alt="Days since Active" />
                            </th>
                            <th><img class="action-image" src="~/headers/owner.gif" title="Owner" /></th>
                            <th><img class="action-image" src="~/headers/action.gif" title="Action" /></th>
                        </tr>
                    </thead>
                </table>
            </form>
            <div id="maps" class="col-md-12">
                <div id="map"></div>
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <a id="back" class="btn btn-outline-secondary"><i class="fas fa-arrow-left"></i> @Applicationsettings.BACK</a>
                        @if(Model.AllowedToCreate)
                        {
                            <a class="create-policy btn btn-success" href='#'><i class="fas fa-pen-alt "></i> @Applicationsettings.CREATE New</a>
                        }
                        else
                        {
                            <button disabled class="btn btn-outline-secondary"><i class="fas fa-pen-alt "></i> @Applicationsettings.CREATE New</button>

                            
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts    {
    @* <script src="https://polyfill.io/v3/polyfill.min.js?features=default"></script>
    <script src="~/js/all.js"></script>
    <script src="~/js/map-list.js"></script> *@
    <script src="~/js/company-incomplete.js"></script>

}