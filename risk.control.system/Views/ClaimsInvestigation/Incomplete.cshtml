@model IEnumerable<risk.control.system.Models.ClaimsInvestigation>

@{
    ViewData["Title"] = "Index";
    var hasClientCompany = @ViewBag.HasClientCompany ? "none" : "";
}
<section class="content pt-2">
    <div class="container-fluid">
        
        <div class="row ">
            <div class="col-md-12">
                <div class="card card-secondary">
                    <div class="card-header">
                        <h3 class="card-title"><i class="fas fa-list"></i> Incomplete claims</h3>
                    </div>
                    <div class="card-body">
                        <form id="checkboxes" asp-action="Assign" method="post" enctype="multipart/form-data">
                            <div class="col-md-12">
                                    <table id="datatable" class="table table-bordered table-hover dt-responsive nowrap w-100">
                                        <thead>
                                            <tr>

                                            <th>
                                                Policy Doc
                                            </th>
                                            <th>Customer Photo</th>

                                                <th>
                                                    LOB
                                                </th>
                                                <th>
                                                    Status
                                                </th>
                                                <th>
                                                    Customer Name
                                                </th>
                                                <th>
                                                    Claim Type
                                                </th>
                                                <th>
                                                    Location - Status
                                                </th>
                                                <th>
                                                    Created On
                                                </th>
                                                <th>
                                                    Day since Drafted
                                                </th>
                                            <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                var timePending = DateTime.Now.Subtract(item.Created).Days == 0 ? "< 1" : DateTime.Now.Subtract(item.Created).Days.ToString();
                                                var dateOnly = item.Created.ToString("dd-MM-yyyy");
                                            <tr>
                                                <td>
                                                    @if (item?.DocumentImage is not null)
                                                    {
                                                        <img id="documentImage" class="form-Image" src="data:image/*;base64,@(Convert.ToBase64String(item?.DocumentImage))">
                                                    }
                                                    else
                                                    {
                                                        <img id="documentImage" class="form-Image" src="@Applicationsettings.NO_IMAGE">
                                                    }
                                                </td>
                                                <td>
                                                    @if (item?.ProfilePicture is not null)
                                                    {
                                                        <img id="profileImage" class="form-Image" src="data:image/*;base64,@(Convert.ToBase64String(item?.ProfilePicture))">
                                                    }
                                                    else
                                                    {
                                                        <img id="profileImage" class="form-Image" src="@Applicationsettings.NO_IMAGE">
                                                    }
                                                </td>
                                                <td>
                                                        @Html.DisplayFor(modelItem => item.LineOfBusiness.Name)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.InvestigationCaseStatus.Name)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.CustomerName)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.ClaimType)
                                                    </td>
                                                    <td>
                                                        @{
                                                            if (item.CaseLocations.Count == 0)
                                                            {
                                                            <i class="fas fa-thumbtack"></i>

                                                            <span class="badge badge-danger"> ADD LOCATION</span>
                                                            }
                                                        }
                                                        @{
                                                            foreach (var caseLocation in item.CaseLocations)
                                                            {
                                                                <span class="badge badge-light">@caseLocation.PinCode.Code - @caseLocation?.InvestigationCaseSubStatus?.Name</span>
                                                            }
                                                        }
                                                    </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => dateOnly)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => timePending )
                                                </td>
                                                
                                                    <td>
                                                        <a class="btn btn-xs btn-info" asp-action="Details" asp-route-id="@item.ClaimsInvestigationId">
                                                            <i class="fa fa-search"></i> @Applicationsettings.DETAILS
                                                        </a> &nbsp;
                                                        <a class="btn btn-xs btn-warning" asp-action="Edit" asp-route-id="@item.ClaimsInvestigationId">
                                                            <i class="fas fa-pen"></i> @Applicationsettings.EDIT
                                                        </a> &nbsp;
                                                        @*<a class="btn btn-xs btn-danger" asp-action="Delete" asp-route-id="@item.ClaimsInvestigationId">
                                                            <i class="fas fa-trash"></i> @Applicationsettings.DELETE
                                                        </a>*@
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>

                                    </table>
                                
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
