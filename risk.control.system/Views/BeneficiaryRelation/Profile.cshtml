@model IEnumerable<risk.control.system.Models.BeneficiaryRelation>

@{
    ViewData["Title"] = @Applicationsettings.BENEFICIARY;
}
<section class="content pt-2">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <form asp-action="index">
                    <div class="card card-secondary border-secondary">
                        <div class="card-header">
                            <h3 class="card-title"><i class="fas fa-user-tie"></i> <span class="badge badge-light"> @Applicationsettings.BENEFICIARY s</span></h3>
                            <div class="card-tools">
                                <span data-toggle="tooltip" title="@Applicationsettings.BENEFICIARY s" class="badge badge-light"><i class="fas fa-user-tie"></i></span>
                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body pt-0">

                            <table id="datatable" class="table table-bordered table-hover dt-responsive nowrap w-100">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Name)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Code)
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Code)
                                            </td>
                                            <td>
                                                <a class="btn btn-xs btn-warning" asp-action="Edit" asp-route-id="@item.BeneficiaryRelationId"><i class="fas fa-user-tie"></i> @Applicationsettings.EDIT</a> &nbsp;
                                                <a class="btn btn-xs btn-danger" asp-action="Delete" asp-route-id="@item.BeneficiaryRelationId"><i class="fas fa-trash"></i> @Applicationsettings.DELETE</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="card-footer">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <a id="back" asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-secondary"><i class="fas fa-arrow-left"></i> @Applicationsettings.BACK</a>
                                        <a class="btn btn-success" asp-controller="BeneficiaryRelation" asp-action="Create"><i class="fas fa-user-tie"></i> @Applicationsettings.CREATE New</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        
    </div>
</section>
