@using System.Data;
@model risk.control.system.Models.ViewModel.PinCodeDetails

@{
    ViewData["Title"] = "Pincode List";
}

<section class="content pt-2">
    <div class="container-fluid">
        <form asp-controller="Uploads" asp-action="Index" method="post" enctype="multipart/form-data">
            <div class="row">
            <div class="col-md-12">
                <div class="card card-secondary">
                    <div class="card-header">
                        <h3 class="card-title">Upload</h3>
                    </div>
                    <div class="card-body dataTable-search-form">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                        <div style="display: inline-block;">  <input type="file" name="postedFile" /></div>
                                        <div style="display: inline-block;"> <input type="submit" class="btn btn-danger" value="upload pincodes" /></div>
                                </div>
                            </div>
                            <div class="col-md-6 text-right">
                                <button id="btnClear" type="button" class="btn btn-secondary btn-sm"><i class="fas fa-sync-alt"></i> Clear</button>
                                <button id="btnFilter" type="button" class="btn btn-primary btn-sm"><i class="fas fa-search"></i> Search</button>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card card-secondary">
                    <div class="card-header">
                        <h3 class="card-title">Pincode List</h3>
                    </div>
                    <div class="card-body">
                        @if (Model?.DataTable != null)
                        {
                            <hr />
                                <table class="table table-striped  fixed-with-height">
                                <tr>
                                    @foreach (DataColumn dc in Model.DataTable.Columns)
                                    {
                                        <th>@dc.ColumnName</th>
                                    }
                                </tr>
                                @foreach (DataRow dr in Model.DataTable.Rows)
                                {
                                    <tr>
                                        @foreach (DataColumn dc in Model.DataTable.Columns)
                                        {
                                            <td>@dr[dc.ColumnName]</td>
                                        }
                                    </tr>
                                }
                            </table>
                        }

                    </div>
                </div>
            </div>
        </div>
        </form>
    </div>
</section>