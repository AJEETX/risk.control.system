@{
    ViewData["Title"] = "Category List";
}

<section class="content pt-2">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-secondary">
                    <div class="card-header">
                        <h3 class="card-title">Search</h3>
                    </div>
                    <div class="card-body dataTable-search-form">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <form asp-controller="Product" asp-action="Upload" method="post" enctype="multipart/form-data">
                                        <div style="display: inline-block;">  <input type="file" name="postedFile" /></div>
                                        <div style="display: inline-block;"> <input type="submit" class="btn btn-danger" value="Bulk upload cases" /></div>
                                    </form>
                                </div>
                            </div>
                            <div class="col-md-6 text-right">
                                <button id="btnClear" type="button" class="btn btn-secondary btn-sm"><i class="fas fa-sync-alt"></i> Clear</button>
                                <button id="btnFilter" type="button" class="btn btn-primary btn-sm"><i class="fas fa-search"></i> Search</button>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
</div>
</section>