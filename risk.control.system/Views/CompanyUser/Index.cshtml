@using risk.control.system.AppConstant;
@using risk.control.system.Models.ViewModel;
@model CompanyUsersViewModel

@{
    ViewData["Title"] = @Applicationsettings.USER;
}
<section class="content pt-2">
    <input id="companyId" type="hidden" asp-for="Company.ClientCompanyId" />
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-secondary">
                    <div class="card-header">
                        <h3 class="card-title"><i class="fas fa-building"></i> @Model.Company.Name </i> <i class="fas fa-user-plus"></i> @Applicationsettings.USER</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-6">
                                <div class="card card-light">
                                    <a id="back-button" class="btn btn-default"><i class="fas fa-arrow-left"></i> @Applicationsettings.BACK</a>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="card card-light">
                                    <a class="btn btn-success" asp-controller="CompanyUser" asp-action="Create" asp-route-id="@Model.Company.ClientCompanyId"><i class="fas fa-user-plus"></i> @Applicationsettings.CREATE User</a>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12 d-flex align-items-stretch flex-column">
                                <div class="card card-light bg-light d-flex flex-fill">
                                    <div class="card-header">
                                        <h3 class="card-title"><i class="fas fa-user-friends"></i> <span class="badge badge-light"> Users</span></h3>
                                        <div class="card-tools">
                                            <span data-toggle="tooltip" title="Services" class="badge badge-light"><i class="fas fa-user-friends"></i></span>
                                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                                <i class="fas fa-minus"></i>
                                            </button>
                                        </div>
                                    </div>
                                    <div class="card-body pt-0">
                                        <div class="submit-progress hidden">
                                            <i class="fas fa-sync fa-spin fa-4x fa-fw"></i>
                                        </div>
                                        <table id="customerTable" class="table table-bordered table-hover dt-responsive nowrap w-100">
                                            <thead>
                                                <tr>
                                                    <th>Id</th>
                                                    <th>Photo</th>
                                                    <th>Email</th>
                                                    <th>Name</th>
                                                    <th>Phone</th>
                                                    <th>Address</th>
                                                    <th>District</th>
                                                    <th>State</th>
                                                    <th>Country</th>
                                                    <th>Pincode</th>
                                                    <th>Active</th>
                                                    <th>Roles</th>
                                                    <th>Actions</th>

                                                </tr>
                                            </thead>

                                        </table>

                                        <div class="card-footer">
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="form-group">

                                                        <a id="back" asp-controller="ClientCompany" asp-action="Details" asp-route-id="@Model.Company.ClientCompanyId" class="btn btn-outline-secondary">
                                                            <i class="fas fa-arrow-left"></i>
                                                            Back
                                                        </a>
                                                        <a class="btn btn-success" asp-controller="CompanyUser" asp-action="Create" asp-route-id="@Model.Company.ClientCompanyId"><i class="fas fa-user-plus"></i> @Applicationsettings.CREATE User</a>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
        </div>
    </div>
</section>
@section Scripts {
    <script src="~/js/client-company-users.js">

    </script>
}