@model risk.control.system.Models.ApplicationUser

@{
    ViewData["Title"] = @Applicationsettings.EDIT;
}

<section class="content">
    <div class="container-fluid">
        <form id="edit-form" asp-action="Edit" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-12">
                    <div class="card shadow-lg border-1 rounded-lg">
                        <div class="card-header bg-secondary text-white text-center">
                            <h3 class="card-title"><i class="fas fa-user-plus"></i> @Applicationsettings.EDIT  @Applicationsettings.USER</h3>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <input type="hidden" asp-for="Id" />
                                    <div class="form-group hide-id">
                                        <label asp-for="ClientCompany" class="control-label"></label>
                                        <input asp-for="ClientCompanyId" class="form-control remarks" value="@Model.ClientCompany.ClientCompanyId" />
                                        <span asp-validation-for="ClientCompanyId" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label class="input-group-label"> Email:
                                            @if (@Model.IsPasswordChangeRequired)
                                            {
                                                <i class="fa fa-check-circle text-light-green" title="User Login verified" data-toggle="tooltip"></i>
                                            }
                                            else
                                            {
                                                <i class="fa fa-check-circle text-lightgray" title="User Login not verified" data-toggle="tooltip"></i>
                                            }

                                        </label>
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="email"><i class="fas fa-at"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                                            </div>
                                            <input readonly asp-for="Email" class="form-control readonly-input" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="input-group-label" for="ProfileImage"> Profile Photo:</label>
                                        <div class="input-group mb-3">
                                            <img id="ProfileImage" class="form-Image" src="/Document/GetUserProfileImage/@Model.Id" alt="Profile">

                                            <i class="fa fa-asterisk asterik-style"></i>
                                            <input asp-for="ProfileImage" class="form-control remarks" type="file"  />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="input-group-label" for="FirstName"> First Name:</label>
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text"><i class="fa fa-user"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                                            </div>
                                            <input id="FirstName" type="text" asp-for="FirstName" class="form-control remarks title-name" required placeholder="First Name" maxlength="20" />
                                            <span asp-validation-for="FirstName" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="input-group-label" for="LastName"> Last Name:</label>
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" > <i class="fa fa-user"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                                            </div>
                                            <input id="LastName" type="text" asp-for="LastName" class="form-control remarks title-name" required placeholder="Last Name" maxlength="20" />
                                            <span asp-validation-for="LastName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="input-group-label"> Mobile #:</label>
                                        <div class="input-group">

                                            <div class="input-group-prepend">
                                                @{
                                                    var imgPath = "/flags/" + @Model.Country.Code.ToLower() + ".png";
                                                }
                                                <span class="input-group-text country-code-text" data-toggle="tooltip" title="Country Code :+@Model?.Country.ISDCode">
                                                    <img src="@imgPath" class="flag-icon" data-toggle="tooltip" alt="flag" />  +@Model?.Country.ISDCode<i class="fa fa-asterisk asterik-style"></i>
                                                </span>
                                            </div>
                                            <input id="PhoneNumber" type="text" asp-for="PhoneNumber" class="form-control remarks" required maxlength="10" placeholder="Mobile # only (e.g. 9876543210)" data-bs-toggle="tooltip" />
                                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="input-group-label" for="Role"> Role:</label>
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" asp-for="ClaimType"><i class="nav-icon fas fa-file-invoice"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                                            </div>
                                            <select id="Role" required asp-for="@Model.Role" class="form-control remarks" asp-items="Html.GetEnumSelectList<AppRoles>()">
                                                <option value="">--- SELECT ---</option>
                                            </select>
                                            <span asp-validation-for="@Model.Role" class="text-danger"></span>
                                        </div>
                                    </div>
                                    
                                </div>
                                <div class="col-md-6">
                                    <partial name="_Address" model="@Model" />

                                    <div class="form-group">
                                        <label class="input-group-label" for="Addressline"> Address:</label>
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text"><i class="fa fa-home"></i>  <i class="fa fa-asterisk asterik-style"></i></span>
                                            </div>
                                            <input id="Addressline" type="text" asp-for="Addressline" class="form-control remarks" required placeholder="Street Address..." maxlength="70" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="input-group-label" for="Comments"> Note:</label>
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" ><i class="fas fa-comment"></i> <i class="fa fa-asterisk asterik-style-none"></i></span>
                                            </div>
                                            <input id="Comments" type="text" asp-for="Comments" class="form-control remarks" placeholder="Note (optional)" maxlength="70" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="input-group-label" for="Active"> Status:</label>
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text"><i class="fa fa-toggle-on"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                                            </div>
                                            <div class="input-group-prepend">
                                            </div>
                                            <span class="checkbox">
                                                <input id="Active" asp-for="Active" type="checkbox" data-toggle="toggle" data-on="<i class='fa fa-toggle-on'></i> Active " data-off="<i class='fa fa-toggle-off'></i> Lock" data-onstyle="success" data-offstyle="danger" data-width="120">
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                        </div>
                        <div class="card-footer">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group text-right">
                                        <a id="cancel" asp-controller="CompanyUser" asp-action="Index" asp-route-id="@Model.ClientCompanyId" class="btn btn-secondary">
                                        <i class="fa fa-window-close"></i>
                                        @Applicationsettings.CANCEL
                                    </a>
                                    <button id="edit" type="submit" class="btn btn-warning">
                                        <i class="fas fa-user-plus"></i> Save User
                                    </button>
                                </div>
                            </div>
                        </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/company-admin/client-company-users-edit.js">
 
    </script>
    <script src="~/js/company-admin/pincode.js"></script>
    <script src="~/js/common/form-validation.js"></script>

}
