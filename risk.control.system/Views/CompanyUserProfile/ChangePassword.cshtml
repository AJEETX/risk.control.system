@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
    
}
<section class="content">
    <div class="card bg-light card-secondary">
        <div class="card-header">
            <h3 class="card-title"><i class="fas fa-pen"></i>  Change Password</h3>
        </div>
        <div class="card-body">
            <form id="create-form" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <span class="input-group-label"> Current Password:</span>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="CurrentPassword"><i class="fas fa-key"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                        </div>
                        <input type="text" asp-for="CurrentPassword" class="form-control remarks" required placeholder="Enter Current Password">
                        <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <span class="input-group-label"> New Password:</span>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="NewPassword"><i class="fas fa-unlock-alt"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                        </div>
                        <input type="text" asp-for="NewPassword" class="form-control remarks" required placeholder="Enter New Password">
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <span class="input-group-label"> Confirm Password:</span>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="NewPassword"><i class="fas fa-unlock-alt"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                        </div>
                        <input type="text" asp-for="ConfirmPassword" class="form-control remarks" required placeholder="Confirm New Password">
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <a id="back" asp-controller="Dashboard" asp-action="Index" class="btn btn-secondary">
                    <i class="fa fa-window-close"></i>
                    @Applicationsettings.CANCEL
                </a>
                <button type="submit" class="btn btn-warning">Update</button>
            </form>
        </div>
    </div>
</section>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/common/agency-user-pwd.js">

    </script>
}
