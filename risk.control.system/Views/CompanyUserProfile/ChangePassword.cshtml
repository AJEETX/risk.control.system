@model ChangePasswordViewModel
@{
	ViewData["Title"] = "Change Password";

}
<section class="content">
	<div class="row justify-content-center">
		<div class="col-lg-6 col-md-8 col-sm-12">

			<div class="card card-secondary shadow-sm">
				<div class="card-header">
					<h3 class="card-title"><i class="fa fa-key"></i>  Change Password</h3>
				</div>
				<form id="create-form" asp-action="ChangePassword" asp-controller="CompanyUserProfile" method="post">
					@Html.AntiForgeryToken()
					<input type="hidden" asp-for="Id" />
					<div class="card-body">
						<div class="submit-progress hidden">
							<i class="fas fa-sync fa-spin fa-4x fa-fw"></i>
						</div>
						<div class="form-group">
							<span class="input-group-label"> Current Password:</span>
							<div class="input-group mb-3">
								<div class="input-group-prepend">
									<span class="input-group-text"><i class="fas fa-key"></i> <i class="fa fa-asterisk asterik-style"></i></span>
								</div>
								<input id="CurrentPassword" type="password" asp-for="CurrentPassword" class="form-control remarks" required placeholder="Enter Current Password">
								<span asp-validation-for="CurrentPassword" class="text-danger"></span>
							</div>
						</div>
						<div class="form-group">
							<span class="input-group-label"> New Password:</span>
							<div class="input-group mb-3">
								<div class="input-group-prepend">
									<span class="input-group-text" id="NewPassword"><i class="fas fa-unlock-alt"></i> <i class="fa fa-asterisk asterik-style"></i></span>
								</div>
								<input type="password" asp-for="NewPassword" class="form-control remarks" required placeholder="Enter New Password">
								<span asp-validation-for="NewPassword" class="text-danger"></span>
							</div>
						</div>
						<div class="form-group">
							<span class="input-group-label"> Confirm Password:</span>
							<div class="input-group mb-3">
								<div class="input-group-prepend">
									<span class="input-group-text"><i class="fas fa-unlock-alt"></i> <i class="fa fa-asterisk asterik-style"></i></span>
								</div>
								<input id="ConfirmPassword" type="password" asp-for="ConfirmPassword" class="form-control remarks" required placeholder="Confirm New Password">
								<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
							</div>
						</div>
					</div>
					<div class="card-footer">
						<a id="cancel" asp-controller="Dashboard" asp-action="Index" class="btn btn-secondary">
							<i class="fa fa-window-close"></i>
							@Applicationsettings.CANCEL
						</a>
						<button type="submit" class="btn btn-warning"><i class="fa fa-unlock"></i> Update</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</section>
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
	<script src="~/js/common/user-pwd.js"></script>
}