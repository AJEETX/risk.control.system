@model Speech2TextData

@{
    ViewData["Title"] = "Speech to Text";
    Layout = "~/Views/Shared/_LayoutGuest.cshtml";
}

<section class="content tool-match-section">
    <div id="article" class="card shadow-lg border-0 tts-card">

        <div class="card-header d-flex align-items-center bg-dark">
            <i class="fas fa-microphone-alt mr-2"></i>
            <h5 class="mb-0 font-weight-bold">Speech to Text</h5>

            <div class="ml-auto ms-auto">
                <span id="usageBadge" class="badge usage-badge-custom shadow-sm @(Model.RemainingTries <= 1 ? "badge-soft-danger" : "badge-soft-secondary")">
                    <i class="fas @(Model.RemainingTries <= 1 ? "fa-exclamation-circle" : "fa-clock") mr-1 small"></i>
                    <span id="remainingCount">@Model.RemainingTries</span> tries left
                </span>
            </div>
        </div>

        <div class="card-body">
            <div class="submit-progress hidden">
                <i class="fas fa-sync fa-spin fa-4x fa-fw"></i>
            </div>

            <div class="row">
                <div class="col-md-6 border-right">
                    <div class="text-center">
                        <h5 class="text-muted mb-3"><i class="fas fa-file-audio mr-2"></i>Input</h5>
                    </div>
                    @using (Html.BeginForm("ConvertSpeech", "Speech2Text", FormMethod.Post, new { id = "sttForm", enctype = "multipart/form-data" }))
                    {
                        <div class="form-group">
                            <label class="font-weight-bold" for="audioFile">Upload Audio File (MP3/WAV)</label>
                            <div class="custom-file mb-3">
                                <input type="file" asp-for="SpeechInputData" class="custom-file-input" id="audioFile" accept=".mp3,.wav" required />
                                <label class="custom-file-label" for="audioFile">Choose file...</label>
                            </div>
                            <div class="p-4 border rounded bg-light text-center" id="dropZone">
                                <i class="fas fa-cloud-upload-alt fa-3x text-muted mb-2"></i>
                                <p class="small text-muted mb-0">Selected file will be shown here</p>
                            </div>
                        </div>

                        <div class="mt-3">
                            @if (Model.RemainingTries > 0)
                            {
                                <button type="submit" class="btn btn-outline-secondary btn-block rounded-pill" id="btnConvert">
                                    <i class="fas fa-spell-check mr-2"></i> Transcribe Audio
                                </button>
                            }
                            else
                            {
                                <button class="btn btn-outline-secondary btn-block rounded-pill disabled" disabled>Limit Reached</button>
                            }
                        </div>
                    }
                </div>

                <div class="col-md-6 bg-light">
                    <h5 class="text-muted mb-3 text-center"><i class="fas fa-file-alt mr-2"></i>Output</h5>
                    <hr />

                    @if (!string.IsNullOrEmpty(Model.TextData))
                    {
                        <div class="text-result p-3 animate__animated animate__fadeIn">
                            <div class="text-center mb-3">
                                <i class="fas fa-check-circle fa-3x text-secondary mb-2"></i>
                                <p class="small text-secondary font-weight-bold">Transcription Complete!</p>
                            </div>

                            <div class="form-group">
                                <textarea class="form-control bg-white" rows="10" readonly id="transcriptionBox">@Model.TextData</textarea>
                            </div>

                            <button onclick="copyToClipboard()" class="btn btn-outline-secondary btn-sm btn-block">
                                <i class="fas fa-copy mr-1"></i> Copy to Clipboard
                            </button>
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-5">
                            <i class="fas fa-align-left fa-3x mb-3"></i>
                            <p>Transcribed text will <br /> appear here.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/tool/stt.js"></script>
}