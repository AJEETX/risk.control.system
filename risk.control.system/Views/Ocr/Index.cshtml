@model DocumentOcrData

@{
    ViewData["Title"] = "Document OCR Tool";
    Layout = "~/Views/Shared/_LayoutGuest.cshtml";
}

<section class="content py-4">
    <div id="article" class="card shadow-lg border-0 ocr-card">
        <div class="card-header bg-dark text-white d-flex align-items-center">
            <i class="fas fa-file-invoice mr-2"></i>
            <h5 class="mb-0">OCR Extract</h5>
        </div>
        <div class="card-body">
            <div class="submit-progress hidden">
                <i class="fas fa-sync fa-spin fa-4x fa-fw"></i>
            </div>
            <form id="ocrForm" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label font-weight-bold" for="DocumentImage">Step 1: Upload Document</label>
                        <div id="drop-zone" class="rounded d-flex flex-column align-items-center justify-content-center p-4 bg-light">
                            <input id="DocumentImage" asp-for="DocumentImage" type="file" class="d-none" accept="image/*" required />
                            <div class="text-center" id="drop-zone-content">
                                <img id="previewDoc" src="/img/add-file.png" alt="Preview" class="img-thumbnail mb-2" />
                                <p class="mb-0 text-muted" id="drop-text">Drag document here or <strong>click to browse</strong></p>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 mb-3 std-height">
                        <label class="form-label font-weight-bold" for="ocrResult">Step 2: Extracted Text</label>
                        <div id="loader" class="text-center d-none py-5">
                            <i class="fas fa-circle-notch fa-spin fa-3x text-success"></i>
                            <p class="mt-3 font-weight-bold">AI is reading document lines...</p>
                        </div>
                        <textarea id="ocrResult" class="form-control shadow-sm" placeholder="The extracted data will appear here after processing..." readonly></textarea>

                        <div id="resultActions" class="mt-2 d-none text-right">
                            <button type="button" class="btn btn-sm btn-outline-secondary" onclick="copyToClipboard()">
                                <i class="fas fa-copy"></i> Copy Text
                            </button>
                        </div>
                    </div>
                </div>

                <hr />

                <button type="submit" id="btnSubmit" class="btn btn-success btn-lg w-100 shadow-sm rounded-pill">
                    <i class="fas fa-bolt"></i> Start Extraction
                </button>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/tool/ocr.js"></script>
}