@{
    ViewData["Title"] = @Applicationsettings.PINCODE;
}
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-secondary border-secondary">
                    <div class="submit-progress hidden">
                        <i class="fas fa-sync fa-spin fa-4x fa-fw"></i>
                    </div>
                    <div class="card-header">
                        <h3 class="card-title"><i class="fas fa-map-pin"></i> Pincode</h3>
                        
                    </div>
                    <div class="card-body">
                        <table id="customerTable" class="table table-bordered table-hover dt-responsive nowrap w-100">
                            <thead>
                                <tr>
                                    <th>code</th>
                                    <th>Name</th>
                                    <th>District</th>
                                    <th>State</th>
                                    <th>Country</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- The body will be dynamically populated by DataTables -->
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <a id="back" asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-secondary"><i class="fas fa-arrow-left"></i> @Applicationsettings.BACK</a>
                                    <a class="btn btn-success" asp-controller="Pincodes" asp-action="Create"><i class="fas fa-map-pin"></i>  @Applicationsettings.CREATE New</a>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    <script src="~/js/pincode.js">
    </script>
}
