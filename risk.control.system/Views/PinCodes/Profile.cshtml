@{
    ViewData["Title"] = @Applicationsettings.PINCODE;
}
<section class="content">
    <div id="article" class="card shadow-lg border-1 rounded-lg">
        <div class="card-header bg-secondary text-white text-center">
            <h3 class="card-title"><i class="fas fa-map-pin"></i> Pincode</h3>
        </div>
        <div class="card-body">
            <div class="submit-progress hidden">
                <i class="fas fa-sync fa-spin fa-4x fa-fw"></i>
            </div>
            <form id="antiForgeryForm">
                @Html.AntiForgeryToken()
            </form>
            <table id="customerTable" class="table table-bordered table-hover dt-responsive nowrap w-100">
                <thead>
                    <tr>
                        <th>code</th>
                        <th>Name</th>
                        <th>District</th>
                        <th>State</th>
                        <th>Country</th>
                        <th>Date Updated</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- The body will be dynamically populated by DataTables -->
                </tbody>
            </table>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <a id="back" asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-secondary"><i class="fas fa-arrow-left"></i> @Applicationsettings.BACK</a>
                        <a class="btn btn-success create" asp-controller="Pincodes" asp-action="Create"><i class="fas fa-map-pin"></i>  @Applicationsettings.CREATE Pincode</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    <script src="~/js/company-admin/pincode-edit.js"></script>
}
