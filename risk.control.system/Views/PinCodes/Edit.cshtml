@model risk.control.system.Models.PinCode

@{
    ViewData["Title"] = @Applicationsettings.EDIT;
    
}
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card bg-light card-secondary">
                    <div class="card-header">
                        <h3 class="card-title"> <i class="fas fa-pen"></i>  @Applicationsettings.PINCODE</h3>
                    </div>
                    <div class="card-body">
                        <form id="edit-form" asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="PinCodeId" />
                            <div class="form-group">
                                <span class="input-group-label" for="CountryId"> Country:</span>
                                <div class="input-group mb-3 autocomplete-wrapper">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" for="CountryId">
                                            <i class="fas fa-map-marked-alt"></i>
                                            <i class="fa fa-asterisk asterik-style"></i>
                                        </span>
                                    </div>
                                    <!-- Country Name input -->
                                    <input type="text"
                                           id="CountryId"
                                           readonly
                                           class="form-control remarks auto-dropdown"
                                           data-placeholder="country"
                                           asp-for="CountryId"
                                           required
                                           value="@Model?.Country?.Name" /> <!-- Display country name -->
                                    <span asp-validation-for="CountryId" class="text-danger"></span>

                                    <!-- Hidden input to store the country ID -->
                                    <input asp-for="SelectedCountryId"
                                           type="hidden"
                                           id="SelectedCountryId"
                                           name="SelectedCountryId"
                                           value="@Model?.CountryId" />
                                </div>
                            </div>


                            <div class="form-group">
                                <span class="input-group-label" for="StateId"> State:</span>
                                <div class="input-group mb-3 autocomplete-wrapper">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" for="StateId"><i class="fas fa-map-marker-alt"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                                    </div>
                                    <input type="text" id="StateId" class="form-control remarks auto-dropdown" data-placeholder="state" placeholder="Type state..." asp-for="StateId" required
                                           value="@Model.State.Name" />
                                    <span asp-validation-for="StateId" class="text-danger"></span>
                                    <input asp-for="SelectedStateId" type="hidden" id="SelectedStateId" name="SelectedStateId" value="@Model?.StateId" />
                                </div>
                            </div>
                            <div class="form-group">
                                <span class="input-group-label" for="DistrictId">District:</span>
                                <div class="input-group mb-3 autocomplete-wrapper">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" for="DistrictId">
                                            <i class="fas fa-city"></i>
                                            <i class="fa fa-asterisk asterik-style"></i>
                                        </span>
                                    </div>
                                    <input type="text" id="DistrictId" class="form-control remarks auto-dropdown" data-placeholder="district" placeholder="Type district..." asp-for="DistrictId" required value="@Model.District.Name" />
                                    <span asp-validation-for="DistrictId" class="text-danger"></span>
                                    <input asp-for="SelectedDistrictId" type="hidden" id="SelectedDistrictId" name="SelectedDistrictId" value="@Model?.DistrictId" />
                                    <div id="district-loading" class="loading-spinner">
                                        <i class="fas fa-spinner fa-spin"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <span class="input-group-label"> Pincode:</span>
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="Name"><i class="fas fa-map-pin"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                                    </div>
                                    <input type="text" asp-for="Name" class="form-control remarks title-name" required placeholder="Pincode Name" maxlength="30">
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <span class="input-group-label"> Code:</span>
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="Code"><i class="fas fa-code"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                                    </div>
                                    <input type="text" asp-for="Code" class="form-control remarks title-name" required placeholder="Pincode Code" maxlength="6">
                                    <span asp-validation-for="Code" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group text-right">
                                <a id="back" asp-action="Index" class="btn btn-secondary">
                                    <i class="fa fa-window-close"></i>
                                    @Applicationsettings.CANCEL
                                </a>
                                <button type="submit" class="btn btn-warning">
                                    <i class="fas fa-map-pin"></i> @Applicationsettings.EDIT
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/company-admin/pincode-edit.js"></script>
    @* <script src="~/js/company-admin/pincode.js"></script> *@
    <script src="~/js/common/form-validation.js"></script>
}
