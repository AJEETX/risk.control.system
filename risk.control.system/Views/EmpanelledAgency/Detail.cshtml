@model risk.control.system.Models.Vendor

@{
	ViewData["Title"] = @Applicationsettings.DETAILS;
}

<section class="content">
	<input type="hidden" id="UserCount" value="@Model.SelectedCountryId" />
	<input type="hidden" id="ServiceCount" value="@Model.VendorInvestigationServiceTypes.Count" />
	<input type="hidden" id="Isd" value="@Model?.Country.ISDCode" />
	<input type="hidden" id="countryCode" value="@Model?.Country.Code" />
	<input type="hidden" asp-for="MobileAppUrl" />
	<div class="card shadow-lg border-1 rounded-lg">
		<div class="card-header bg-secondary text-white text-center">
			<h3 class="card-title"><i class="fas fa-building"></i>  Agency Profile</h3>
		</div>
		<div class="card-body">
			<div class="submit-progress hidden">
				<i class="fas fa-sync fa-spin fa-4x fa-fw"></i>
			</div>
			<div class="row">
				<div class="col-md-5 text-center">
					<div class="row">
						<div class="col-md-12">
							<div class="form-group">
								<label class="card-header shadow-lg rounded-lg text-sm bg-light" data-bs-toggle="tooltip" title="Total Cases completed (@Model.SelectedDistrictId)">  Cases completed (@Model.SelectedDistrictId)</label>
								<label class="card-header shadow-lg rounded-lg text-sm bg-light" data-bs-toggle="tooltip" title="Current Cases (@Model.SelectedStateId)"> Current Cases (@Model.SelectedStateId)</label>
							</div>
						</div>
					</div>
					<div class="dropdown-divider"></div>
					<p class="info-box-number">Active Since: @Model.ActivatedDate?.ToString("dd-MMM-yyyy")</p>

					<div class="profile-img-container">
						<img src="/Document/GetAgencyDocument/@Model.VendorId"
							 class="shadow-lg border profile-img" alt="User Profile" title="@Model.Email" data-bs-toggle="tooltip" />
					</div>
					<h5 class="mt-3">@Model.Email</h5>
					<p class="text-muted"><a id="edit-profile" asp-controller="EmpanelledAgency" asp-action="Edit" asp-route-id="@Model.VendorId" class="btn btn-warning"><i class='fas fa-building'></i> Profile</a></p>
					<p class="text-muted text-sm">
						<i class="fa fa-star"></i>  <b>Rating: </b>
					</p>

					<ul class="ml-4 mb-0 fa-ul text-muted">
						<li class="small">
							<div class="col-md-12" id="agency-rating">
								<img src="~/img/StarFade.gif" alt="Star Rating" align="middle" id="1" class="main-rating" vendorId="@Model.VendorId" />
								<img src="~/img/StarFade.gif" alt="Star Rating" align="middle" id="2" class="main-rating" vendorId="@Model.VendorId" />
								<img src="~/img/StarFade.gif" alt="Star Rating" align="middle" id="3" class="main-rating" vendorId="@Model.VendorId" />
								<img src="~/img/StarFade.gif" alt="Star Rating" align="middle" id="4" class="main-rating" vendorId="@Model.VendorId" />
								<img src="~/img/StarFade.gif" alt="Star Rating" align="middle" id="5" class="main-rating" vendorId="@Model.VendorId" />

								<span id="rating-result">
									<span class="badge badge-light">
										(@Model.RateCount)
									</span>
									@if (Model.RateCount != null && Model.RateCount > 0)
									{
										decimal a = @Model.RateTotal.Value / @Model.RateCount.Value;
										<span class="avr"> @a</span>
									}
								</span>
								<div class="badge badge-light">
									<span id="rating-result-data" class="result"></span>
								</div>
							</div>
						</li>
					</ul>
					<div class="dropdown-divider"></div>

					<div class="row">
						<div class="col-md-12">
							<div class="form-group">
								<a id="back" asp-controller="EmpanelledAgency" asp-action="Agencies" class="btn btn-sm btn-outline-secondary" data-bs-toggle="tooltip" title="Back to Active Agencies">
									<i class="fas fa-arrow-left"></i> 
									<span class="badge badge-light"> <i class="fas fa-handshake"></i> </span> @Applicationsettings.BACK
								</a>
								<a asp-controller="EmpanelledAgencyUser" asp-action="Users" asp-route-id="@Model.VendorId" class="btn btn-sm btn-success" data-bs-toggle="tooltip" title="User count = @Model.SelectedCountryId"><i class="fas fa-user-friends"></i>  Users (@Model.SelectedCountryId)</a>
								<a asp-controller="EmpanelledAgencyService" asp-action="Service" asp-route-id="@Model.VendorId" class="btn btn-sm btn-danger" data-bs-toggle="tooltip" title="Agency Services count = @Model.VendorInvestigationServiceTypes.Count"><i class="fas fa-cogs"></i>  @Applicationsettings.SERVICE (@Model.VendorInvestigationServiceTypes.Count)</a>
							</div>
						</div>
					</div>
				</div>
				<div class="col-md-7">
					<div class="row">
						<!-- Left Column -->
						<div class="col-md-6">
							<div class="info-box">
								<span class="info-box-icon bg-primary"><i class="fas fa-envelope"></i></span>
								<div class="info-box-content">
									<span class="info-box-text">Domain</span>
									<span class="info-box-number"><a href="#">@Model.Email</a></span>
								</div>
							</div>

							<div class="info-box">
								<span class="info-box-icon bg-success"><i class="fas fa-phone"></i></span>
								<div class="info-box-content">
									<span class="info-box-text">Mobile #</span>
									<span class="info-box-number">+@Model.Country.ISDCode (0) @Model.PhoneNumber</span>
								</div>
							</div>
							<div class="info-box">
								<span class="info-box-icon bg-info"><i class="fas fa-landmark"></i></span>
								<div class="info-box-content">
									<span class="info-box-text">Bank Name </span>
									<span class="info-box-number">@Model.BankName</span>
								</div>
							</div>

							<div class="info-box">
								<span class="info-box-icon bg-warning"><i class="fas fa-code"></i></span>
								<div class="info-box-content">
									<span class="info-box-text">IFSC Code</span>
									<span class="info-box-number">@Model.IFSCCode</span>
								</div>
							</div>
							<div class="info-box">
								<span class="info-box-icon bg-warning"><i class="fab fa-btc"></i></span>
								<div class="info-box-content">
									<span class="info-box-text">Bank Account #</span>
									<span class="info-box-number">@Model.BankAccountNumber</span>
								</div>
							</div>
						</div>

						<!-- Right Column -->
						<div class="col-md-6">
							<div class="info-box">
								<span class="info-box-icon bg-info"><i class="fas fa-map-marker-alt"></i></span>
								<div class="info-box-content">
									<span class="info-box-text">Address</span>
									<span class="info-box-number">@Model.Addressline</span>
								</div>
							</div>

							<div class="info-box">
								<span class="info-box-icon bg-warning"><i class="fas fa-map-pin"></i></span>
								<div class="info-box-content">
									<span class="info-box-text">Pin Code</span>
									<span class="info-box-number">@Model.PinCode.Code</span>
								</div>
							</div>
							<div class="info-box">
								<span class="info-box-icon bg-secondary"><i class="fas fa-city"></i></span>
								<div class="info-box-content">
									<span class="info-box-text">District</span>
									<span class="info-box-number">@Model.District.Name</span>
								</div>
							</div>

							<div class="info-box">
								<span class="info-box-icon bg-danger"><i class="fas fa-flag"></i></span>
								<div class="info-box-content">
									<span class="info-box-text">State</span>
									<span class="info-box-number">@Model.State.Name</span>
								</div>
							</div>

							<div class="info-box">
								<span class="info-box-icon bg-dark"><i class="fas fa-globe"></i></span>
								<div class="info-box-content">
									<span class="info-box-text">Country</span>
									<span class="info-box-number">@Model.Country.Name</span>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
	<script src="~/js/common/companies.js"></script>
}