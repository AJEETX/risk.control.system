@model ClaimsInvestigationVendorsModel

@{
    ViewData["Title"] = " Send Enquiry";
    <link rel="stylesheet" href="~/plugins/summernote/summernote-bs4.css">
    string digitalIdColor = "grey";
    var borderColor = "";
    if (Model.ClaimsInvestigation.AgencyReport.DigitalIdReport?.DigitalIdImageLongLatTime == null)
    {
        digitalIdColor = "grey";
        borderColor = "";
    }
    else if (Model.ClaimsInvestigation.AgencyReport.DigitalIdReport?.DigitalIdImageLongLatTime != null && string.IsNullOrWhiteSpace(@Model.ClaimsInvestigation.AgencyReport?.DigitalIdReport?.DigitalIdImageMatchConfidence))
    {
        digitalIdColor = "#dc3545!important";
        borderColor = "border-danger";
    }
    else if (Model.ClaimsInvestigation.AgencyReport.DigitalIdReport?.DigitalIdImageLongLatTime != null && !string.IsNullOrWhiteSpace(@Model.ClaimsInvestigation.AgencyReport?.DigitalIdReport?.DigitalIdImageMatchConfidence))
    {
        borderColor = "border-success";
        digitalIdColor = "green";
    }
}
<section class="content">
    <form id="query-form" method="post" asp-controller="ClaimsVendorPost" asp-action="ReplyQuery" enctype="multipart/form-data" autocomplete="off">
        <input type="hidden" id="claimId" name="claimId" value="@Model.ClaimsInvestigation.ClaimsInvestigationId" />
        <div id="article" class="card card-secondary">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-newspaper"></i> Report
                    <span class="hover-text">
                        <i class="fas fa-info-circle"></i>
                        <span class="tooltip-text" id="information">
                            <li>
                                <i class='far fa-hand-point-right'></i> Verify <i class='fas fa-check-circle'></i> Photo ID Image
                            </li>
                            <li>
                                <i class='far fa-hand-point-right'></i> Verify <i class='fas fa-check-circle'></i> PAN card
                            </li>
                            <li>
                                <i class='far fa-hand-point-right'></i> Verify <i class='fas fa-check-circle'></i> Questionnaire
                            </li>
                            <li>
                                <i class='far fa-hand-point-right'></i> Verify <i class='fas fa-check-circle'></i> Questionnaire
                            </li>
                            <li>
                                <i class='far fa-hand-point-right'></i> Review <i class="far fa-comment"></i> remark
                            </li>
                            <li>
                                <i class='far fa-hand-point-right'></i> Complete <i class='fas fa-check-circle'></i> remark
                            </li>
                            <li>
                                <i class='far fa-hand-point-right'></i> Select Submit type <input type="radio">
                            </li>
                            <li>
                                <i class='far fa-thumbs-up'></i> <button class='btn btn-info btn-xs'><i class='fas fa-glasses'></i> <b>SUBMIT</b> </button>
                            </li>

                        </span>
                    </span>
                </h3>
            </div>
            <partial name="_PolicyDetails" model="@Model" />

            <partial name="_AgencyReport" model="@Model" />

            <div class="submit-progress hidden">
                <i class="fas fa-sync fa-spin fa-4x fa-fw"></i>
            </div>
        </div>

        <div class="card card-secondary">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fa fa-edit"></i>  Reply Enquiry
                    <span class="hover-text">
                        <i class="fas fa-info-circle"></i>
                        <span class="tooltip-text" id="information">
                            <li>

                                <i class='far fa-hand-point-right'></i> Enquiry Info  <i class="fas fa-newspaper"></i>
                            </li>
                            <li>
                                <i class='far fa-hand-point-right'></i>  Enquiry Response <i class="far fa-file-powerpoint"></i>
                            </li>
                        </span>
                    </span>
                </h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-6 d-flex align-items-stretch flex-column">

                        <div class="card bg-light d-flex flex-fill">
                            <div class="card-footer text-muted border-bottom-0">
                                <i class="fas fa-newspaper"></i> <strong> Enquiry Info </strong>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <span class="input-group-label"> @Model.ClaimsInvestigation.AgencyReport.EnquiryRequest.Subject:</span>
                                            <label class="control-label">@Model.ClaimsInvestigation.AgencyReport.EnquiryRequest.Description</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-3">

                                        <div class="form-group">
                                            <div class="form-check form-switch">
                                                <input class="form-check-input selected-case" type="radio" name="flexRadioDefault" id="AnswerA" value="a">
                                                <label class="form-check-label" for="AnswerA">
                                                    <span class="process-case"> @Model.ClaimsInvestigation.AgencyReport.EnquiryRequest.AnswerA</span>
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <div class="form-check form-switch">
                                                <input class="form-check-input selected-case" type="radio" name="flexRadioDefault" id="AnswerB" value="b">
                                                <label class="form-check-label" for="AnswerB">
                                                    <span class="process-case"> @Model.ClaimsInvestigation.AgencyReport.EnquiryRequest.AnswerB</span>
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <div class="form-check form-switch">
                                                <input class="form-check-input selected-case" type="radio" name="flexRadioDefault" id="AnswerC" value="c">
                                                <label class="form-check-label" for="AnswerC">
                                                    <span class="process-case"> @Model.ClaimsInvestigation.AgencyReport.EnquiryRequest.AnswerC</span>
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <div class="form-check form-switch">
                                                <input class="form-check-input selected-case" type="radio" name="flexRadioDefault" id="AnswerD" value="d">
                                                <label class="form-check-label" for="AnswerD">
                                                    <span class="process-case"> @Model.ClaimsInvestigation.AgencyReport.EnquiryRequest.AnswerD</span>
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                @{
                                    var fileIcon = "far fa-file-pdf";
                                    var hasAttachment = (@Model.ClaimsInvestigation.AgencyReport.EnquiryRequest.QuestionAttachment != null &&
                                    @Model.ClaimsInvestigation.AgencyReport.EnquiryRequest.QuestionAttachment.Length > 0) ? "" : "none";
                                }
                                <span class="mailbox-attachments d-flex align-items-stretch clearfix">
                                    <div class="mailbox-attachment-info" style="display:@hasAttachment">
                                        <a asp-controller="Download" asp-action="EnquiryFileAttachment"
                                           asp-route-id="@Model.ClaimsInvestigation.AgencyReport.EnquiryRequest.QueryRequestId" class="mailbox-attachment-name">
                                            <i class="fas fa-paperclip"></i> @Model.ClaimsInvestigation.AgencyReport.EnquiryRequest.QuestionFileName
                                        </a>
                                        <span class="mailbox-attachment-size clearfix mt-1">
                                            @{
                                                var size = Model.ClaimsInvestigation.AgencyReport.EnquiryRequest.QuestionAttachment?.Length / 1024;
                                            }
                                            <span> @size  KB</span>
                                            <a asp-controller="Download" asp-action="EnquiryFileAttachment" asp-route-id="@Model.ClaimsInvestigation.AgencyReport.EnquiryRequest.QueryRequestId" class="btn btn-default btn-sm float-right"><i class="fas fa-cloud-download-alt"></i></a>
                                        </span>
                                    </div>
                                </span>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-6 d-flex align-items-stretch flex-column">
                        <div class="card bg-light d-flex flex-fill">
                            <div class="card-footer text-muted border-bottom-0">
                                <i class="far fa-file-powerpoint"></i> <strong> Enquiry Response </strong>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <div class="col-lg-12">
                                                <textarea id="answer" class="form-control remarks message-content" asp-for="ClaimsInvestigation.AgencyReport.EnquiryRequest.Answer"
                                                          placeholder="Enquiry reply description" rows="2">
                                            </textarea>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-footer">
                <div class="row">
                    <div class="col-md-12">
                        <div class="btn btn-default btn-file">
                            <i class="fas fa-paperclip"></i> Attachment
                            <img class="file-image doc-profile-image" id="documentImage0" src=@Applicationsettings.NO_IMAGE>
                            <input id="document" name="document" asp-for="ClaimsInvestigation.AgencyReport.EnquiryRequest.AnswerAttachment" type="file" accept="*.png, *.jpeg" class="form-control remarks" />
                        </div>
                        <span class="help-block">Max. 2MB</span>
                        <div class="float-right">
                            <a asp-controller="ClaimsVendor" asp-action="Allocate" class="btn btn-secondary">
                                <i class="fas fa-times"></i> @Applicationsettings.CANCEL
                            </a>

                            <button id="send-query" type="submit" class="btn btn-warning">
                                <i class="fa fa-edit"></i>  Reply Enquiry
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </form>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDYRB1qIx1AyTxGnV5r5IZC3mk4uYV6MFI&callback=initReportMap">
    </script>
    <script src="~/js/map.js"></script>
    <script src="~/js/get-report.js"></script>

}