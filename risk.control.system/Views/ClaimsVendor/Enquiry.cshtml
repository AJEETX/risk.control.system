@model ClaimTransactionModel

@{
    ViewData["Title"] = "Details";

}

<section class="content">
    <div id="article" class="card card-secondary">
        <div class="card-header">
            <h3 class="card-title">
                <i class="fas fa-newspaper"></i> Details
                <span class="hover-text">
                    <i class="fas fa-info-circle"></i>
                    <span class="tooltip-text" id="information">
                        <li>
                            <i class='far fa-file-powerpoint'></i> Policy details.
                        </li>
                        <li>
                            <i class='fa fa-user-plus'></i> Customer details.
                        </li>
                        <li> <i class='fas fa-user-tie'></i> Beneficiary details </li>
                        <li> <i class="fas fa-newspaper"></i> Agency report </li>
                        <li><i class="far fa-comment"></i> Assessor Remarks </li>
                        <li><i class="fas fa-clock"></i> Timeline </li>
                        <li><i class="fas fa-money-check-alt"></i> Billing Info </li>

                    </span>
                </span>
            </h3>
        </div>
        <partial name="_ApprovedPolicyDetails" model="@Model" />
        <form id="query-form" method="post" asp-controller="ClaimsVendorPost" asp-action="ReplyQuery" enctype="multipart/form-data" autocomplete="off">
        <input type="hidden" id="claimId" value="@Model.ClaimsInvestigation?.ClaimsInvestigationId" />
        <div class="card card-secondary">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fa fa-edit"></i>  Reply Enquiry
                    <span class="hover-text">
                        <i class="fas fa-info-circle"></i>
                        <span class="tooltip-text" id="information">
                            <li>

                                <i class='far fa-hand-point-right'></i> Enquiry Info  <i class="fas fa-newspaper"></i>
                            </li>
                            <li>
                                <i class='far fa-hand-point-right'></i>  Enquiry Response <i class="far fa-file-powerpoint"></i>
                            </li>
                        </span>
                    </span>
                </h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-6 d-flex align-items-stretch flex-column">

                        <div class="card bg-light d-flex flex-fill">
                            <div class="card-footer text-muted border-bottom-0">
                                <i class="fas fa-newspaper"></i> <strong> Enquiry Info </strong>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <span class="input-group-label"> @Model.ClaimsInvestigation.AgencyReport.EnquiryRequest.Subject:</span>
                                            <label class="control-label">@Model.ClaimsInvestigation.AgencyReport.EnquiryRequest.Description</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-3">

                                        <div class="form-group">
                                            <div class="form-check form-switch">
                                                <input class="form-check-input selected-case" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
                                                <label class="form-check-label" for="flexRadioDefault1">
                                                    <span class="process-case"> @Model.ClaimsInvestigation.AgencyReport.EnquiryRequest.AnswerA</span>
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <div class="form-check form-switch">
                                                <input class="form-check-input selected-case" type="radio" name="flexRadioDefault" id="flexRadioDefault2">
                                                <label class="form-check-label" for="flexRadioDefault2">
                                                   <span class="process-case"> @Model.ClaimsInvestigation.AgencyReport.EnquiryRequest.AnswerB</span>
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <div class="form-check form-switch">
                                                <input class="form-check-input selected-case" type="radio" name="flexRadioDefault" id="flexRadioDefault3">
                                                <label class="form-check-label" for="flexRadioDefault3">
                                                    <span class="process-case"> @Model.ClaimsInvestigation.AgencyReport.EnquiryRequest.AnswerC</span>
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <div class="form-check form-switch">
                                                    <input class="form-check-input selected-case" type="radio" name="flexRadioDefault" id="flexRadioDefault4">
                                                    <label class="form-check-label" for="flexRadioDefault4">
                                                        <span class="process-case"> @Model.ClaimsInvestigation.AgencyReport.EnquiryRequest.AnswerD</span>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                </div>

                                @{
                                    var fileIcon = "far fa-file-pdf";
                                    var hasAttachment = (@Model.ClaimsInvestigation.AgencyReport.EnquiryRequest.QuestionImageAttachment != null && 
                                        @Model.ClaimsInvestigation.AgencyReport.EnquiryRequest.QuestionImageAttachment.Length > 0) ? "" : "none";
                                }
                                    <span class="mailbox-attachments d-flex align-items-stretch clearfix">
                                        <div class="mailbox-attachment-info" style="display:@hasAttachment">
                                            <a asp-controller="Download" asp-action="EnquiryFileAttachment"
                                               asp-route-id="@Model.ClaimsInvestigation.AgencyReport.EnquiryRequest.QueryRequestId" class="mailbox-attachment-name">
                                                <i class="fas fa-paperclip"></i> @Model.ClaimsInvestigation.AgencyReport.EnquiryRequest.QuestionImageFileName
                                            </a>
                                            <span class="mailbox-attachment-size clearfix mt-1">
                                                @{
                                                    var size = Model.ClaimsInvestigation.AgencyReport.EnquiryRequest.QuestionImageAttachment?.Length / 1024;
                                                }
                                                <span> @size  KB</span>
                                                <a asp-controller="Download" asp-action="EnquiryFileAttachment" asp-route-id="@Model.ClaimsInvestigation.AgencyReport.EnquiryRequest.QueryRequestId" class="btn btn-default btn-sm float-right"><i class="fas fa-cloud-download-alt"></i></a>
                                            </span>
                                        </div>
                                    </span>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-6 d-flex align-items-stretch flex-column">
                        <div class="card bg-light d-flex flex-fill">
                            <div class="card-footer text-muted border-bottom-0">
                                <i class="far fa-file-powerpoint"></i> <strong> Enquiry Response </strong>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <div class="col-lg-12">
                                                <textarea class="form-control remarks message-content" asp-for="ClaimsInvestigation.AgencyReport.EnquiryRequest.Answer" 
                                                placeholder="Enquiry reply description" rows="2">
                                            </textarea>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-footer">
                <div class="row">
                    <div class="col-md-12">
                        <div class="btn btn-default btn-file">
                            <i class="fas fa-paperclip"></i> Attachment
                            <img class="file-image doc-profile-image" id="documentImage0" src=@Applicationsettings.NO_IMAGE>
                            <input id="document" name="document" asp-for="ClaimsInvestigation.AgencyReport.EnquiryRequest.AnswerImageAttachment" type="file" accept="*.png, *.jpeg" class="form-control remarks" />
                        </div>
                        <span class="help-block">Max. 2MB</span>
                        <div class="float-right">
                            <a asp-controller="ClaimsVendor" asp-action="Allocate" class="btn btn-secondary">
                                <i class="fas fa-times"></i> @Applicationsettings.CANCEL
                            </a>

                            <button id="send-query" type="submit" class="btn btn-warning">
                                <i class="fa fa-edit"></i>  Reply Enquiry
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </form>
    </div>
</section>

@section Scripts {
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDYRB1qIx1AyTxGnV5r5IZC3mk4uYV6MFI&callback=initReportMap">
    </script>
    <script src="~/js/map.js"></script>
    <script src="~/js/get-report.js"></script>
}
