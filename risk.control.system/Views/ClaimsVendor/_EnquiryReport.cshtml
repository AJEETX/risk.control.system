@model ClaimTransactionModel


@if (!string.IsNullOrWhiteSpace(Model.ClaimsInvestigation.AgencyReport?.EnquiryRequest?.Answer))
{
    var createdtime = string.Empty;
    var updatedtime = string.Empty;
    if (@Model.ClaimsInvestigation.AgencyReport.EnquiryRequest.Updated.HasValue)
    {
        createdtime = @Model.ClaimsInvestigation.AgencyReport?.EnquiryRequest.Updated.Value.ToString("dd-MMM-yy hh:mm tt");
    }
    <div class="col-12 d-flex align-items-stretch flex-column">
        <div class="card bg-light d-flex flex-fill">
            <div class="card-header">
                <h3 class="card-title"><i class="fas fa-user-check"></i> Enquiry Reply : <span class="badge badge-light">@Model.ClaimsInvestigation.Vendor.Email</span> </h3>
                <div class="card-tools">
                    <span data-toggle="tooltip" title="Assessor: : @Model.ClaimsInvestigation.Vendor.Email" class="badge badge-light"><i class="nav-icon fas fa-clock"></i> @createdtime</span>
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>

            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-6">
                        <p class="text-muted text-sm">

                            <span>@Model.ClaimsInvestigation.AgencyReport.EnquiryRequest.Subject </span> : <span class="badge badge-light">
                                <i class="far fa-image"></i> @Model.ClaimsInvestigation.AgencyReport.EnquiryRequest.AnswerSelected
                            </span>:
                        </p>
                        <p class="text-muted text-sm">

                            @if (Model.ClaimsInvestigation.AgencyReport?.EnquiryRequest.QuestionAttachment != null)
                            {
                                <img title="enquiry document" id="enquiryDocument" class="img-fluid face-Image" src="data:image/*;base64,@(Convert.ToBase64String(@Model.ClaimsInvestigation.AgencyReport?.EnquiryRequest.QuestionAttachment))">
                            }
                            else
                            {
                                <img title="enquiry document" id="enquiryDocument" alt="face image" class="img-fluid" src=@Applicationsettings.NO_IMAGE>
                            }
                        </p>
                    </div>
                    <div class="col-6">
                        <p class="text-muted text-sm">

                            <span>@Model.ClaimsInvestigation.AgencyReport.EnquiryRequest.Description </span>
                        </p>
                        <p class="text-muted text-sm">

                            <span class="badge badge-light"><i class="far fa-image"></i> @Model.ClaimsInvestigation.AgencyReport.EnquiryRequest.Answer</span>:
                            @if (Model.ClaimsInvestigation.AgencyReport?.EnquiryRequest.AnswerAttachment != null)
                            {
                                <img title="enquiry document" id="enquiryDocument" class="img-fluid face-Image" src="data:image/*;base64,@(Convert.ToBase64String(@Model.ClaimsInvestigation.AgencyReport?.EnquiryRequest.AnswerAttachment))">
                            }
                            else
                            {
                                <img title="enquiry document" id="enquiryDocument" alt="face image" class="img-fluid" src=@Applicationsettings.NO_IMAGE>
                            }
                        </p>

                    </div>
                </div>
            </div>
        </div>
    </div>
}