@model ClaimTransactionModel


@if (!string.IsNullOrWhiteSpace(Model.ClaimsInvestigation.AgencyReport?.EnquiryRequest?.Answer))
{
    var createdtime = string.Empty;
    var updatedtime = string.Empty;
    if (@Model.ClaimsInvestigation.AgencyReport.EnquiryRequest.Updated.HasValue)
    {
        createdtime = @Model.ClaimsInvestigation.AgencyReport?.EnquiryRequest.Updated.Value.ToString("dd-MMM-yy hh:mm tt");
    }
    <div class="col-12 d-flex align-items-stretch flex-column">
        <div class="card bg-light d-flex flex-fill">
            <div class="card-header">
                <h3 class="card-title"><i class="fas fa-user-check"></i> Enquiry Reply : <span class="badge badge-light">@Model.ClaimsInvestigation.Vendor.Email</span> </h3>
                <div class="card-tools">
                    <span data-toggle="tooltip" title="Assessor: : @Model.ClaimsInvestigation.Vendor.Email" class="badge badge-light"><i class="nav-icon fas fa-clock"></i> @createdtime</span>
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>

            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="col-12 d-flex align-items-stretch flex-column">
                            <table id="customerTable" class="table table-bordered table-hover dt-responsive nowrap w-100">
                                <thead>
                                    <tr>
                                        <th>
                                            Query
                                        </th>
                                        <th>
                                            Reply
                                        </th>
                                        <th>
                                            File
                                        </th>
                                    </tr>
                                </thead>
                                <tr>
                                    <td>
                                        @Model.ClaimsInvestigation.AgencyReport.EnquiryRequest.Subject
                                    </td>
                                    <td>
                                        @Model.ClaimsInvestigation.AgencyReport.EnquiryRequest.AnswerSelected
                                    </td>
                                    <td>
                                        @if (Model.ClaimsInvestigation.AgencyReport?.EnquiryRequest.QuestionImageAttachment != null)
                                        {
                                            <img title="enquiry document" id="enquiryDocument" class="img-fluid doc-profile-image" src="data:image/*;base64,@(Convert.ToBase64String(@Model.ClaimsInvestigation.AgencyReport?.EnquiryRequest.QuestionImageAttachment))">
                                        }
                                        else
                                        {
                                            <img title="enquiry document" id="enquiryDocument" alt="face image" class="img-fluid doc-profile-image" src=@Applicationsettings.NO_IMAGE>
                                        }
                                    </td>


                                </tr>
                                <tr>

                                    <td>
                                        @Model.ClaimsInvestigation.AgencyReport.EnquiryRequest.Description
                                    </td>
                                    <td>
                                        <i class="fas fa-user-check"></i> @Model.ClaimsInvestigation.AgencyReport.EnquiryRequest.Answer
                                    </td>
                                    <td>
                                        @if (Model.ClaimsInvestigation.AgencyReport?.EnquiryRequest.AnswerImageAttachment != null)
                                        {
                                            <img title="enquiry document" id="enquiryDocument" class="img-fluid doc-profile-image" src="data:image/*;base64,@(Convert.ToBase64String(@Model.ClaimsInvestigation.AgencyReport?.EnquiryRequest.AnswerImageAttachment))">
                                        }
                                        else
                                        {
                                            <img title="enquiry document" id="enquiryDocument" alt="face image" class="img-fluid doc-profile-image" src=@Applicationsettings.NO_IMAGE>
                                        }

                                    </td>


                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}