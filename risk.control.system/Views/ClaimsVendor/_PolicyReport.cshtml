@model ClaimsInvestigationVendorsModel
@{
    string digitalIdColor = "grey";
    if(Model.Location.ClaimReport.DigitalIdReport?.DigitalIdImageLongLatTime != null)
    {
        digitalIdColor = "green";
    }
    string documentIdColor = "grey";
    if (Model.Location.ClaimReport.DocumentIdReport?.DocumentIdImageLongLat != null)
    {
        documentIdColor = "green";
    }
    string questionaire = "grey";
    if (Model.Location.ClaimReport.AgentRemarks != null)
    {
        questionaire = "green";
    }
}
<article>
    <div class="bb-blog-inner">
        <div class="card card-light">

            <div class="card-header">
                <h3 class="card-title"><i class="fas fa-user-shield"></i> Report: <span class="badge badge-light"> @Model.Location.ClaimReport.AgentEmail </span> </h3>
                <div class="card-tools">
                    <span data-toggle="tooltip" title="Agent report # : @Model.Location.ClaimReport.AgentEmail" class="badge badge-light"><i class="fas fa-user-shield"></i></span>
                </div>
            </div>

            <div class="progress">
                <i class="far fa-bookmark bookmark-green"></i>
                <div class="progress-bar" role="progressbar" style="width:33%;background-color:@digitalIdColor;">
                    digital-id
                </div>
                <i class="far fa-caret-square-right" style="font-size:1.1rem;"></i>
                <div class="progress-bar" role="progressbar" style="width:32.33%;background-color:@documentIdColor">
                    document-id
                </div>
                <i class="far fa-caret-square-right" style="font-size:1.1rem;"></i>

                <div class="progress-bar" role="progressbar" style="width:33.34%;background-color:@questionaire">
                    questionaire
                </div>
                <i class="far fa-bookmark" style="font-size:1.1rem;"></i>
            </div>
            <div class="card-body pb-0">
                <div class="row">
                    <partial name="_DigitalIdReport" model="@Model" />
                    <partial name="_DocumentIdReport" model="@Model" />
                    <partial name="_Questionaire" model="@Model" />
                </div>
            </div>
        </div>
    </div>
</article>
