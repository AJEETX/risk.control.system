                                                    agent remarks
                                                </div>
                                                <i class="far fa-bookmark" style="font-size:1.1rem;"></i>
                                            </div>
                                            <div class="card-body pb-0">
                                                <div class="row">
                                                    <div class="col-12 col-sm-6 d-flex align-items-stretch flex-column">
                                                        <div class="card bg-light d-flex flex-fill">
                                                            <div class="card-header text-muted border-bottom-0">
                                                                @{
                                                                    string agentRemarksUpdated = null;
                                                                    if (@Model.CaseLocation.ClaimReport?.AgentRemarksUpdated != null)
                                                                    {
                                                                        agentRemarksUpdated = Model.CaseLocation.ClaimReport?.AgentRemarksUpdated.Value.ToString("dd-MMM-yy HH:mm");
                                                                    }
                                                                }
                                                                <i class="fas fa-mobile-alt"></i> Investigation data <span style="float:right;"><i class="nav-icon fas fa-clock"></i> @agentRemarksUpdated</span>
                                                            </div>
                                                            <div class="card-body pt-0">
                                                                <div class="row">
                                                                    <div class="col-6  text-center">
                                                                        <p class="text-muted text-sm">
                                                                            @{
                                                                                var QR1 = @Model.CaseLocation?.ClaimReport?.AgentOcrData ?? "PAN DATA";
                                                                                var image = @ViewBag.LocationUrl;
                                                                                var ocrImage = @ViewBag.OcrLocationUrl;
                                                                            }
