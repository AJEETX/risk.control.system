@model ClaimsInvestigationVendorsModel

@{
    var imageCapturedTime = @Model.Location.ClaimReport?.DocumentIdReport?.DocumentIdImageLongLatTime != null ? @Model.Location.ClaimReport?.DocumentIdReport?.DocumentIdImageLongLatTime.Value.ToString("dd-MMM-yy hh:mm tt") : null;

    string documentIdColor = "grey";
    var borderColor = "";
    if (Model.Location.ClaimReport.DocumentIdReport?.DocumentIdImageLongLat == null)
    {

    }
    else if (Model.Location.ClaimReport.DocumentIdReport?.DocumentIdImageLongLat != null && (
    Model.Location.ClaimReport?.DocumentIdReport?.DocumentIdImageValid != null && Model.Location.ClaimReport?.DocumentIdReport?.DocumentIdImageValid == true))
    {
        documentIdColor = "green";
        borderColor = "border-success";
    }
    else
    {
        documentIdColor = "#dc3545!important";
        borderColor = "border-danger";
    }

    <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch flex-column">
        <div class="card bg-light d-flex flex-fill @borderColor">
            <div class="card-header text-muted border-bottom-0">
                <h3 class="card-title">
                    <i class="fas fa-mobile-alt"></i> PAN CARD
                    <span class="hover-text">
                        <i class="fas fa-info-circle"></i>

                        @if (borderColor == "border-danger")
                        {
                            <span class="tooltip-text" id="beneficiary-information">
                                <div>
                                    <i class='far fa-hand-point-right'></i>
                                    <b> Upload</b> Max image size 2 MB
                                </div>
                            <div>
                                <i class='far fa-thumbs-down'></i> <i style='color:orangered;' class='fa fa-times' aria-hidden='true'></i> UnMatched PAN CARD
                                </div>
                            </span>
                        }
                        else if (borderColor == "border-success")
                        {
                            <span class="tooltip-text" id="beneficiary-information">
                                <div>
                                    <i class='far fa-hand-point-right'></i>
                                    <b> Upload</b> Max image size 2 MB
                                </div>
                                <div>
                                <i class='far fa-thumbs-up'></i> <i style='color:green;' class='fas fa-check-circle'></i> Matched PAN CARD
                                </div>
                            </span>
                        }
                        else
                        {
                            <span class="tooltip-text" id="beneficiary-information">
                                <div>
                                    <i class='far fa-hand-point-right'></i>
                                    <b> Upload</b> Max image size 2 MB
                                </div>
                                <div>
                                <i class='far fa-hand-point-right'></i>
                                <button class='btn btn-info btn-xs'>
                                        <span class='badge badge-info btn-xs'>
                                            <i class='fa fa-upload'></i>
                                    </span> Upload 
                                </button>  PAN CARD
                                </div>
                            </span>

                        }

                    </span>
                </h3>
                <div class="card-tools">
                    <span data-toggle="tooltip" title="Agent report # : @Model.Location.ClaimReport.AgentEmail" class="badge badge-light">
                        <i class="nav-icon fas fa-clock"></i>
                        @imageCapturedTime
                    </span>

                </div>
                
            </div>

            <div class="card-footer text-center">
                <span class="badge badge-light"><i class="far fa-image"></i> Valid : </span>
                @if (@documentIdColor == "grey")
                {
                    <i style='color:grey;' class='fa fa-times' aria-hidden='true'></i>
                }
                else if (@Model.Location.ClaimReport?.DocumentIdReport?.DocumentIdImageValid.Value ?? false)
                {
                    <i style='color:green;' class='fas fa-check-circle'></i>
                }

                else
                {
                    <i style='color:orangered;' class='fa fa-times' aria-hidden='true'></i>
                }
            </div>
            <div class="progress">
                <i class="far fa-bookmark bookmark-green"></i>
                <div class="progress-bar" role="progressbar" style="width:100%;background-color:@documentIdColor;">
                    pan-card
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-6">
                        <p class="text-muted text-sm">
                            <span class="badge badge-light"><i class="fas fa-film"></i> Document Image</span>:
                            <br />
                            @{
                                if (Model.Location.ClaimReport?.DocumentIdReport?.DocumentIdImage != null)
                                {
                                    <img title="document image" id="agentOcrPicture" class="img-fluid ocr-Image" src="data:image/*;base64,@(Convert.ToBase64String(@Model.Location.ClaimReport?.DocumentIdReport?.DocumentIdImage))">
                                }
                                else
                                {
                                    <img title="document image" id="agentOcrPicture" alt="ocr-image" class="img-fluid no-Image" src=@Applicationsettings.NO_PHOTO_IMAGE>
                                }
                            }
                        </p>
                        <p class="text-muted text-sm">

                            <span class="badge badge-light"><i class="fas fa-info"></i> Image Scan Info</span>
                            <br />
                            <label class="img-fluid ocr-data"> @Model.Location?.ClaimReport?.DocumentIdReport?.DocumentIdImageData</label>
                        </p>
                    </div>
                    <div class="col-6 text">

                        <p class="text-muted text-sm">
                            <span class="badge badge-light"><i class="fas fa-map-pin"></i> Location visited</span>
                            <br />
                            @if (@Model.Location?.ClaimReport?.DocumentIdReport?.DocumentIdImageLocationUrl != null)
                            {
                                <img class="img-fluid olocationImage" src="@Model.Location?.ClaimReport?.DocumentIdReport?.DocumentIdImageLocationUrl" />
                            }
                            else
                            {
                                <img class="img-fluid no-Image" src="@Applicationsettings.NO_MAP" />
                            }
                        </p>

                        <p class="text-muted text-sm">

                            <span class="badge badge-light"><i class="fas fa-map-marker-alt"></i> Address visited</span>
                            <br />
                            <label class="img-fluid ocr-data"> @Model.Location?.ClaimReport?.DocumentIdReport?.DocumentIdImageLocationAddress</label>
                        </p>
                    </div>
                </div>
            </div>

            <form id="upload-pan" method="post" enctype="multipart/form-data" asp-controller="Uploads" asp-action="PanUpload">
                <input type="hidden" id="documentIdLatitude" name="documentIdLatitude" />
                <input type="hidden" id="documentIdLongitude" name="documentIdLongitude" />
                <input type="hidden" id="selectedclaim" name="selectedclaim" value="@Model.ClaimsInvestigation.ClaimsInvestigationId" />
                <div class="card-footer">

                    <div class="form-group">
                        <span class="input-group-label"> PAN CARD Upload: </span>
                        <div class="input-group mb-3">
                            <img class="form-Image" id="pan-Image" src="@Applicationsettings.NO_IMAGE" title="PAN card" />
                            <input accept=".jpg,jpeg,png" type="file" class="form-control remarks" name="panImage" id="panImage" />
                            <button id="UploadPanImageButton" disabled type="submit" class="btn btn-info"><i class="nav-icon fa fa-upload"></i> Upload</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        @if (@Model.Location?.ClaimReport?.DocumentIdReport?.DocumentIdImageLocationUrl != null)
        {
            <div class="card direct-chat direct-chat-warning collapsed-card">
                <div class="card-header">
                    <i class="fas fa-film"></i> <h3 class="card-title">Map<span class="badge badge-light">Expected and visited</span></h3>

                    <div class="card-tools">
                        <span data-toggle="tooltip" title="Map Location" class="badge badge-light"><i class="fas fa-film"></i></span>
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-plus"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div id="ocr-map">
                    </div>
                    <div id="ocr-msg">
                    </div>
                </div>
            </div>

        }
    </div>
}