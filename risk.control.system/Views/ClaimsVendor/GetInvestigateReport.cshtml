                        <div class="card-body">
                            <div class="=row">
                                <div class="col-md-12 text-right">
                                    <button type="submit" class="btn btn-default" asp-action="ReAllocateReport">
                                        <i class="fa fa-window-close" aria-hidden="true"></i> Re Allocate
                                    </button>
                                    <button disabled id="allocate-case" type="submit" asp-action="ProcessReport" class="btn btn-success">
