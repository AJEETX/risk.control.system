@model ClaimsInvestigationVendorsModel

@{
    ViewData["Title"] = @Applicationsettings.SERVICE;
}

<section class="content pt-2">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <input type="hidden" id="claimId" name="claimId" value="@Model.ClaimsInvestigation.ClaimsInvestigationId" />
                    <input type="hidden" id="CaseLocationId" name="CaseLocationId" value="@Model.CaseLocation.CaseLocationId" />
                    <div class="card card-secondary">
                        <div class="card-header">
                            <h3 class="card-title"><i class="far fa-file-alt"></i> Claim Description</h3>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="row">
                                        <dl class="row">

                                            <dt class="col-sm-5">
                                                @Html.DisplayNameFor(model => model.ClaimsInvestigation.CustomerName)
                                            </dt>
                                            <dd class="col-sm-5">
                                                @Html.DisplayFor(model => model.ClaimsInvestigation.CustomerName)
                                            </dd>
                                            <dt class="col-sm-5">
                                                Phone #
                                            </dt>
                                            <dd class="col-sm-5">
                                                @Html.DisplayFor(model => model.ClaimsInvestigation.ContactNumber)
                                            </dd>

                                            <dt class="col-sm-5">
                                                @Html.DisplayNameFor(model => model.ClaimsInvestigation.PinCode)
                                            </dt>
                                            <dd class="col-sm-5">
                                                @Html.DisplayFor(model => model.ClaimsInvestigation.PinCode.Name)
                                            </dd>

                                            <dt class="col-sm-5">
                                                @Html.DisplayNameFor(model => model.ClaimsInvestigation.District)
                                            </dt>
                                            <dd class="col-sm-5">
                                                @Html.DisplayFor(model => model.ClaimsInvestigation.District.Name)
                                            </dd>
                                            <dt class="col-sm-5">
                                                Document
                                            </dt>
                                            <dd class="col-sm-5">
                                                @if (Model?.ClaimsInvestigation.DocumentImage is not null)
                                                {
                                                    <img id="documentImage" class="form-Image" src="data:image/*;base64,@(Convert.ToBase64String(Model?.ClaimsInvestigation.DocumentImage))">
                                                }
                                                else
                                                {
                                                    <img id="documentImage" class="form-Image" src="@Applicationsettings.NO_IMAGE">
                                                }
                                            </dd>
                                        </dl>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <dl class="row">
                                        <dt class="col-sm-5">
                                            Customer Photo
                                        </dt>
                                        <dd class="col-sm-5">
                                            @if (Model?.ClaimsInvestigation?.ProfilePicture is not null)
                                            {
                                                <img id="documentImage" class="form-Image" src="data:image/*;base64,@(Convert.ToBase64String(Model?.ClaimsInvestigation?.ProfilePicture))">
                                            }
                                            else
                                            {
                                                <img id="documentImage" class="form-Image" src="@Applicationsettings.NO_IMAGE">
                                            }
                                        </dd>
                                        <dt class="col-sm-5">
                                            @Html.DisplayNameFor(model => model.ClaimsInvestigation.CustomerIncome)
                                        </dt>
                                        <dd class="col-sm-5">
                                            @Html.DisplayFor(model => model.ClaimsInvestigation.CustomerIncome)
                                        </dd>
                                        <dt class="col-sm-5">
                                            @Html.DisplayNameFor(model => model.ClaimsInvestigation.CustomerOccupation)
                                        </dt>
                                        <dd class="col-sm-5">
                                            @Html.DisplayFor(model => model.ClaimsInvestigation.CustomerOccupation)
                                        </dd>
                                        <dt class="col-sm-5">
                                            @Html.DisplayNameFor(model => model.ClaimsInvestigation.CustomerEducation)
                                        </dt>
                                        <dd class="col-sm-5">
                                            @Html.DisplayFor(model => model.ClaimsInvestigation.CustomerEducation)
                                        </dd>

                                    </dl>

                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <dl class="row">
                                        <dt class="col-sm-5">
                                            Beneficiary Photo
                                        </dt>
                                        <dd class="col-sm-5">
                                            @if (Model?.CaseLocation?.ProfilePicture is not null)
                                            {
                                                <img id="documentImage" class="form-Image" src="data:image/*;base64,@(Convert.ToBase64String(Model?.CaseLocation?.ProfilePicture))">
                                            }
                                            else
                                            {
                                                <img id="documentImage" class="form-Image" src="@Applicationsettings.NO_IMAGE">
                                            }
                                        </dd>
                                        <dt class="col-sm-5">
                                            @Html.DisplayNameFor(model => model.CaseLocation.BeneficiaryName)
                                        </dt>
                                        <dd class="col-sm-5">
                                            @Html.DisplayFor(model => model.CaseLocation.BeneficiaryName)
                                        </dd>
                                        <dt class="col-sm-5">
                                            @Html.DisplayNameFor(model => model.CaseLocation.BeneficiaryContactNumber)
                                        </dt>
                                        <dd class="col-sm-5">
                                            @Html.DisplayFor(model => model.CaseLocation.BeneficiaryContactNumber)
                                        </dd>

                                    </dl>
                                </div>
                                <div class="col-md-6">
                                    <dl class="row">
                                        <dt class="col-sm-5">
                                            @Html.DisplayNameFor(model => model.CaseLocation.Addressline)
                                        </dt>
                                        <dd class="col-sm-5">
                                            @Html.DisplayFor(model => model.CaseLocation.Addressline)
                                        </dd>
                                        
                                        <dt class="col-sm-5">
                                            @Html.DisplayNameFor(model => model.CaseLocation.District.Name)
                                        </dt>
                                        <dd class="col-sm-5">
                                            @Html.DisplayFor(model => model.CaseLocation.District.Name)
                                        </dd>
                                        <dt class="col-sm-5">
                                            @Html.DisplayNameFor(model => model.CaseLocation.State.Name)
                                        </dt>
                                        <dd class="col-sm-5">
                                            @Html.DisplayFor(model => model.CaseLocation.State.Name)
                                        </dd>
                                        <dt class="col-sm-5">
                                            @Html.DisplayNameFor(model => model.CaseLocation.PinCode.Code)
                                        </dt>
                                        <dd class="col-sm-5">
                                            <span class="badge badge-danger"> @Html.DisplayFor(model => model.CaseLocation.PinCode.Code)</span>
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card card-secondary">
                        <div class="card-header">
                            <h3 class="card-title"><i class="fas fa-folder-open"></i> Agent Report</h3>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-6">
                                    <fieldset>
                                        <legend>
                                            Ocr Image
                                        </legend>
                                        <div class="form-group">
                                            <img id="agentLocationPicture" class="report-image" src="/img/no-photo.png">
                                        </div>
                                    </fieldset>
                                    <fieldset>
                                        <legend>
                                            Image Location
                                        </legend>
                                        <div class="form-group">
                                            <input readonly name="agentLonglat" id="agentLonglat" asp-for="CaseLocation.ClaimReport.LongLat" value="Lucknow road, Kanpur UP 101010" type="text" class="form-control" />
                                        </div>
                                    </fieldset>

                                </div>
                                <div class="col-sm-6">
                                    <fieldset>
                                        <legend>
                                            QR Image
                                        </legend>
                                        <div class="form-group">
                                            <img class="report-image" id="documentImage" src="/img/user.png">
                                        </div>
                                    </fieldset>
                                    <fieldset>
                                        <legend>
                                            OCR Data
                                        </legend>
                                        <div class="form-group">
                                            <input readonly name="agentOcrData" id="agentOcrData" asp-for="CaseLocation.ClaimReport.AgentOcrData" value="PAN Card: ABCXNX10101" type="text" class="form-control" />
                                        </div>
                                    </fieldset>
                                </div>
                            </div>
                            <div class="=row">
                                <div class="col-md-12">
                                    <fieldset>
                                        <legend>
                                            Report Summary
                                        </legend>
                                        <input readonly asp-for="CaseLocation.ClaimReport.AgentRemarks" name="agentRemarks" id="remarks" type="text" class="form-control" value="@Model.CaseLocation.ClaimReport.AgentRemarks" />
                                    </fieldset>
                                </div>

                            </div>
                        </div>

                    </div>
                    <div class="card card-secondary">
                        <div class="card-header">
                            <h3 class="card-title"><i class="fas fa-folder-open"></i> @Applicationsettings.SUBMIT_REPORT</h3>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <fieldset>
                                        <legend>
                                            Additional Document / File
                                        </legend>
                                        <div class="form-group">
                                            <img id="supervisorPicture" class="report-image" id="documentImage" src="/img/no-image.png">
                                            <input asp-for="CaseLocation.ClaimReport.SupervisorDocumentImage" type="file" class="form-control" onchange="document.getElementById('supervisorPicture').src = window.URL.createObjectURL(this.files[0])" />
                                        </div>
                                    </fieldset>
                                    <fieldset>
                                        <legend>
                                            Supervisor Remarks
                                        </legend>
                                        <div class="form-group">
                                            <input name="supervisorRemarks" id="supervisorRemarks" class="form-control" />
                                        </div>
                                    </fieldset>

                                </div>
                            </div>
                        </div>
