@model ClaimsInvestigationVendorsModel

@{
    ViewData["Title"] = "Claim: Report ";
    
}

<section class="content">
    <form id="create-form" method="post" asp-action="ProcessReport" asp-controller="ClaimsVendorPost">
        <input type="hidden" id="claimId" name="claimId" value="@Model.ClaimsInvestigation.ClaimsInvestigationId" />
        <input type="hidden" id="CaseLocationId" name="CaseLocationId" value="@Model.Location.CaseLocationId" />
        <input type="hidden" id="policyDetailId" value="@Model.ClaimsInvestigation?.PolicyDetail.PolicyDetailId" />
        <input type="hidden" id="customerDetailId" value="@Model.ClaimsInvestigation?.CustomerDetail.CustomerDetailId" />
        <input type="hidden" id="beneficiaryId" value="@Model.Location?.CaseLocationId" />
        <div id="article" class="card card-secondary">
            <div class="card-header">
                <h3 class="card-title"><i class="far fa-file-alt"></i> Submit
                    <span class="hover-text">
                        <i class="fas fa-info-circle"></i>
                        <span class="tooltip-text" id="information">
                            <li>
                                <i class='far fa-hand-point-right'></i> Verify <i class='fas fa-check-circle'></i> Uploaded Photo ID Image
                            </li>
                            <li>
                                <i class='far fa-hand-point-right'></i> Verify <i class='fas fa-check-circle'></i> Uploaded PAN card
                            </li>
                            <li>
                                <i class='far fa-hand-point-right'></i> Verify <i class='fas fa-check-circle'></i> Completed  Questionnaire
                            </li>
                            <li>
                                <i class='far fa-thumbs-up'></i>  <b> <button class='badge badge-success btn-lg'><i class='far fa-file-alt'></i> <b>SUBMIT</b> </button></b>  to <b>COMPANY</b>
                            </li>

                        </span>
                    </span>
                </h3>
            </div>

            <partial name="_PolicyDetails" model="@Model" />

            <partial name="_AgentReport" model="@Model" />

            <partial name="_SupervisorRemarks" model="@Model" />
        </div>
    </form>
</section>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDH8T9FvJ8n2LNwxkppRAeOq3Mx7I3qi1E&callback=initReportMap">
    </script>
    <script src="~/js/map.js"></script>
    <script src="~/js/get-investigate-report.js"></script>

}