@model risk.control.system.Models.InvestigationServiceType
@using risk.control.system.AppConstant;

@{
    ViewData["Title"] = @Applicationsettings.CREATE;
}

<section class="content pt-2">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card border-secondary bg-light card-secondary">
                    <div class="card-header">
                        <h3 class="card-title"> <i class="fas fa-tools"></i>  @Applicationsettings.CREATE New </h3>
                    </div>
                    <div class="card-body">
                        <form id="create-form" asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="LineOfBusinessId" class="control-label">Line Of Business</label>
                                <select asp-for="LineOfBusinessId" class="form-control remarks" asp-items="ViewBag.LineOfBusinessId"></select>
                            </div>
                            <div class="form-group">
                                <label asp-for="Name" class="control-label">Service Name</label>
                                <input asp-for="Name" class="form-control remarks" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Code" class="control-label">Service Code</label>
                                <input asp-for="Code" class="form-control remarks" />
                                <span asp-validation-for="Code" class="text-danger"></span>
                            </div>

                            <div class="form-group text-right">
                                <a id="back" asp-action="Index" class="btn btn-secondary">
                                    <i class="fa fa-window-close"></i>
                                    @Applicationsettings.CANCEL
                                </a>
                                <button type="submit" class="btn btn-success">
                                    <i class="fas fa-tools"></i>  @Applicationsettings.CREATE New
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/service-type.js">
        
    </script>
}
