@using risk.control.system.AppConstant;
@model risk.control.system.Models.InvestigationServiceType

@{
    ViewData["Title"] = @Applicationsettings.EDIT;
    
}
<section class="content">
    <div class="card bg-light card-secondary">
        <div class="card-header">
            <h3 class="card-title"><i class="fas fa-tools"></i> @Applicationsettings.EDIT </h3>
        </div>
        <div class="card-body">
            <form id="create-form" asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="InvestigationServiceTypeId" />
                <<div class="form-group">
                    <span class="input-group-label"> Line Of Business:</span>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" for="LineOfBusinessId"><i class="fas fa-business-time"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                        </div>    <select asp-for="LineOfBusinessId" class="form-control remarks" id="LineOfBusinessId" asp-items="ViewBag.LineOfBusinessId" required>
                            <option value="">--- SELECT ---</option>
                        </select>
                        <span asp-validation-for="LineOfBusinessId" class="text-danger"></span>

                    </div>
                </div>

                <div class="form-group">
                    <span class="input-group-label"> Service Name:</span>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="Name"><i class="fas fa-tools"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                        </div>
                        <input type="text" asp-for="Name" class="form-control remarks title-name" required placeholder="Service Name" maxlength="20">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <span class="input-group-label"> Service Code:</span>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="Code"><i class="fas fa-code"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                        </div>
                        <input type="text" asp-for="Code" class="form-control remarks title-name" required placeholder="Service Code" maxlength="5">
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group text-right">
                    <a id="back" asp-action="Index" class="btn btn-secondary">
                        <i class="fa fa-window-close"></i>
                        @Applicationsettings.CANCEL
                    </a>
                    <button type="submit" class="btn btn-warning">
                        <i class="fas fa-tools"></i> @Applicationsettings.EDIT
                    </button>
                </div>
            </form>
        </div>
    </div>
</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/service-type-edit.js">
       
    </script>
}
