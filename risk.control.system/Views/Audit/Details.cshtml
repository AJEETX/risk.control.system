@model risk.control.system.Models.Audit

@{
    ViewData["Title"] = "Audit Details";
}

<section class="content">
    <div class="container-fluid">
        <div class="card card-secondary shadow">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h3 class="card-title mb-0">
                    <i class="fas fa-clipboard-list mr-2"></i>
                    @Applicationsettings.AUDIT_LOGS Details
                </h3>
               
            </div>

            <div class="card-body">
                <div class="submit-progress d-none text-center mb-4">
                    <i class="fas fa-sync fa-spin fa-3x text-muted"></i>
                </div>

                <dl class="row border-top pt-3">
                    <dt class="col-sm-3 font-weight-bold"> @Html.DisplayNameFor(m => m.UserId) </dt>
                    <dd class="col-sm-9 border-bottom pb-2"> @Html.DisplayFor(m => m.UserId) </dd>

                    <dt class="col-sm-3 font-weight-bold"> @Html.DisplayNameFor(m => m.Type) </dt>
                    <dd class="col-sm-9 border-bottom pb-2"> @Html.DisplayFor(m => m.Type) </dd>

                    <dt class="col-sm-3 font-weight-bold"> @Html.DisplayNameFor(m => m.TableName) </dt>
                    <dd class="col-sm-9 border-bottom pb-2"> @Html.DisplayFor(m => m.TableName) </dd>

                    <dt class="col-sm-3 font-weight-bold"> @Html.DisplayNameFor(m => m.DateTime) </dt>
                    <dd class="col-sm-9 border-bottom pb-2"> @Html.DisplayFor(m => m.DateTime) </dd>

                    <dt class="col-sm-3 font-weight-bold"> @Html.DisplayNameFor(m => m.OldValues) </dt>
                    <dd class="col-sm-9 border-bottom pb-2 text-break"> @Html.DisplayFor(m => m.OldValues) </dd>

                    <dt class="col-sm-3 font-weight-bold"> @Html.DisplayNameFor(m => m.NewValues) </dt>
                    <dd class="col-sm-9 border-bottom pb-2 text-break"> @Html.DisplayFor(m => m.NewValues) </dd>

                    <dt class="col-sm-3 font-weight-bold"> @Html.DisplayNameFor(m => m.AffectedColumns) </dt>
                    <dd class="col-sm-9 border-bottom pb-2 text-break"> @Html.DisplayFor(m => m.AffectedColumns) </dd>

                    <dt class="col-sm-3 font-weight-bold"> @Html.DisplayNameFor(m => m.PrimaryKey) </dt>
                    <dd class="col-sm-9 border-bottom pb-2 text-break"> @Html.DisplayFor(m => m.PrimaryKey) </dd>
                </dl>

                <div class="text-right mt-4">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> @Applicationsettings.BACK
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
