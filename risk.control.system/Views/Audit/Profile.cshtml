@{
	ViewData["Title"] = "Audi Log";
}

<section class="content">
	<div id="article" class="card shadow-lg border-1 rounded-lg">
		<div class="card-header bg-secondary text-white text-center">
			<h3 class="card-title"><i class="fa fa-align-center"></i> @Applicationsettings.AUDIT_LOGS</h3>
		</div>
		<div class="card-body">
			<div class="submit-progress hidden">
				<i class="fas fa-sync fa-spin fa-4x fa-fw"></i>
			</div>
			<table id="dataTable" class="table table-bordered table-hover dt-responsive nowrap w-100">
				<thead>
					<tr>
						<th>User</th>
						<th>Type</th>
						<th>TableName</th>
						<th>DateTime</th>
						<th>OldValues</th>
						<th>NewValues</th>
						<th>Action</th>
					</tr>
				</thead>
				<tbody>
					<!-- The table body will be populated dynamically by DataTables -->
				</tbody>
			</table>
		</div>
	</div>
</section>
@section Scripts {
	<script src="~/js/company-admin/audit.js"></script>
}