@model DashboardData;

<div class="row">

@if(Model.AutoAllocation)
{
        <div class="col">

            <div class="small-box bg-warning">
                <div class="inner">
                    <h3 id="new-claims" title="CLAIMS | UNDERWRITINGS" data-toggle="tooltip">@Model.FirstBlockCount | @Model.SecondBlockCount</h3>
                    <span>@Model.FirstBlockName</span>
                </div>
                <div class="icon">
                    <i class="fas fa-random"></i>
                </div>
                <a href="@Model.FirstBlockUrl" class="details-page small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
            </div>
        </div>
    }
    else
    {
        <div class="col">

            <div class="small-box bg-danger">
                <div class="inner">
                    <h3 id="active-claims" title="CLAIMS | UNDERWRITINGS" data-toggle="tooltip">@Model.FirstBlockCount | @Model.SecondBlockCount</h3>
                    <span>@Model.SecondBlockName</span>
                </div>
                <div class="icon">
                    <i class="fas fa-external-link-alt"></i>
                </div>
                <a href="@Model.SecondBlockUrl" class="details-page small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
            </div>
        </div>
    }
   
       @*  <div class="col">

            <div class="small-box bg-danger">
                <div class="inner">
                    <h3 id="active2-claims">@Model.SecondBBlockCountBoth</h3>
                    <span>@Model.SecondBBlockName</span>
                </div>
                <div class="icon">
                    <i class="fas fa-external-link-alt"></i>
                </div>
                <a href="@Model.SecondBBlockUrl" class="details-page small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
            </div>
        </div> *@
        <div class="col">

            <div class="small-box bg-primary">
                <div class="inner">
                    <h3 id="submit-claims">@Model.ThirdBlockCount</h3>
                    <span>@Model.ThirdBlockName</span>
                </div>
                <div class="icon">
                    <i class="fa fa-toggle-on"></i>
                </div>
                <a href="@Model.ThirdBlockUrl" class="details-page small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
            </div>
        </div>

    <div class="col">
        <div class="small-box bg-secondary">
            <div class="inner">
                <h3 id="upload-claims">@Model.BulkUploadBlockCount</h3>
                <span>@Model.BulkUploadBlockName</span>
            </div>
            <div class="icon">
                <i class="fa fa-upload"></i>
            </div>
            <a href="@Model.BulkUploadBlockUrl" class="details-page small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card card-light collapsed-card">
            <div class="card-header">
                <h3 class="card-title"><i class="fas fa-tachometer-alt"></i> Cases Bar Chart</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-plus"></i>
                    </button>
                </div>
            </div>

            <div class="card-body">
                <div id="container-claim" class="container-claim">
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card card-light collapsed-card">
            <div class="card-header">
                <h3 class="card-title"><i class="fas fa-tachometer-alt"></i> Cases Pie Chart</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-plus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <div id="container-claim-pie" class="container-claim">
                </div>
            </div>

        </div>
    </div>
</div>
