@model risk.control.system.Models.ClientCompany

@{
    ViewData["Title"] = Applicationsettings.CREATE;
    
}

<section class="content">
    <div class="card bg-light card-secondary">
        <div class="card-header">
            <h3 class="card-title"><i class="fas fa-building"></i> Add Company</h3>
        </div>
        <div class="card-body">
            <div class="submit-progress hidden">
                <i class="fas fa-sync fa-spin fa-4x fa-fw"></i>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="input-group-label" for="emailAddress"> Domain:<small>(minimum 5 character)</small></label>
                        <div class="input-group mb-3">
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="fa fa-globe"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                            </div>
                            <input asp-for="Email" id="emailAddress" class="form-control email-address remarks" type="text" required
                                   placeholder="domain name" maxlength="15" autocomplete="name" title="Enter unique domain name with minimum 5 character" />
                            <div class="input-group-append">
                                <select id="domain" name="domain" required class="form-control remarks" asp-items="Html.GetEnumSelectList<Domain>()">
                                </select>
                                <div class="input-group-append">
                                    <button disabled id="check-domain" class="input-group-text">
                                        <i class="far fa-question-circle"></i>
                                    </button>
                                    <span id="result"></span>
                                </div>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                div>
        </div>

        <form id="create-form" asp-action="Create" enctype="multipart/form-data">
            <input type="hidden" asp-for="Email" id="mailAddress" name="mailAddress" />
            <input type="hidden" asp-for="Email" id="domainAddress" name="domainAddress" />
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-6">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group text-center">
                            <div class="profile-img-container">
                                    <img id="document-Image" class="form-Image" src="/img/no-image.png" title="Company Logo" alt="Company Logo" data-bs-toggle="tooltip" data-preview-id="createProfileImage" />
                            </div>
                            <label for="createImageInput" class="control-label">Company Logo <i class="fa fa-asterisk asterik-style-logo"></i></label>
                            <input id="createImageInput" accept=".jpg,.jpeg,.png" asp-for="Document" required class="form-control remarks document-image-input" type="file" data-preview-id="createProfileImage" data-title-id="company-document" title="Upload Company Logo" data-bs-toggle="tooltip" />
                            <span asp-validation-for="Document" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label class="input-group-label" for="Name"> Name: </label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-business-time"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                                </div>
                                <input id="Name" type="text" asp-for="Name" class="form-control remarks title-name" required placeholder="Company Name" maxlength="20" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="input-group-label" for="PhoneNumber"> Mobile #: </label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-phone"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                                </div>
                                <input id="PhoneNumber" type="text" asp-for="PhoneNumber" class="form-control remarks" required maxlength="10" placeholder="Mobile # only (e.g. 9876543210)" data-bs-toggle="tooltip" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="input-group-label" for="Branch"> Branch Name: </label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="far fa-building"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                                </div>
                                <input id="Branch" type="text" asp-for="Branch" class="form-control remarks title-name" required placeholder="Branch Name" maxlength="30" />
                                <span asp-validation-for="Branch" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="input-group-label" for="IFSC"> Bank Code: </label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-code"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                                </div>
                                    <input id="IFSC" type="text" asp-for="IFSCCode" class="form-control remarks asterikx" required placeholder="Bank Code" maxlength="20" />
                                <span asp-validation-for="IFSCCode" class="text-danger"></span>
                            </div>
                        </div>

                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="input-group-label" for="BankName"> Bank Name: </label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"> <i class="fas fa-landmark"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                                </div>
                                <input id="BankName" type="text" asp-for="BankName" class="form-control remarks title-name" required placeholder="Bank Name" maxlength="30" />
                                <span asp-validation-for="BankName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="input-group-label" for="BankAccountNumber"> Bank Account #: </label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fab fa-btc"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                                </div>
                                <input id="BankAccountNumber" type="text" asp-for="BankAccountNumber" class="form-control remarks" required placeholder="Bank Account #" maxlength="20" />
                                <span asp-validation-for="BankAccountNumber" class="text-danger"></span>
                            </div>
                        </div>
                        @* <div class="form-group">
                            <span class="input-group-label"> Agreement Date:</span>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" asp-for="DateOfIncident"><i class="nav-icon far fa-calendar-alt"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                                </div>
                                <input required asp-for="AgreementDate" id="dateIncidentId" class="form-control remarks" min="2000-01-01" type="date" />
                                <span asp-validation-for="AgreementDate" class="text-danger"></span>
                            </div>
                        </div> *@
                        <div class="form-group">
                            <label class="input-group-label" for="CountryText"> Country:</label>
                            <div class="input-group mb-3 autocomplete-wrapper">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-map-marked-alt"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                                </div>
                                <input type="text" id="CountryText" class="form-control remarks auto-dropdown" data-placeholder="country" placeholder="Type country..." required  />
                                <span asp-validation-for="CountryId" class="text-danger"></span>
                                <input asp-for="SelectedCountryId" type="hidden" id="SelectedCountryId" name="SelectedCountryId" value="@Model?.CountryId" />
                                <div id="country-loading" class="loading-spinner">
                                    <i class="fas fa-spinner fa-spin"></i>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="input-group-label" for="PinCodeText">Pincode:</label>
                            <div class="input-group mb-3 autocomplete-wrapper">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" for="PinCodeId">
                                        <i class="fas fa-map-pin"></i>
                                        <i class="fa fa-asterisk asterik-style"></i>
                                    </span>
                                </div>
                                <input type="text" id="PinCodeText" class="form-control remarks auto-dropdown" data-placeholder="pincode" placeholder="Type pincode or name"  autocomplete="off" />
                                <span asp-validation-for="PinCodeId" class="text-danger"></span>
                                <input asp-for="SelectedPincodeId" type="hidden" id="SelectedPincodeId" name="SelectedPincodeId" value="@Model?.PinCodeId" />
                                <input type="hidden" asp-for="PinCodeId" id="PinCodeId" />
                                <div id="pincode-loading" class="loading-spinner">
                                    <i class="fas fa-spinner fa-spin"></i>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="input-group-label" for="DistrictText">District:</label>
                            <div class="input-group mb-3 autocomplete-wrapper">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" for="DistrictId">
                                        <i class="fas fa-city"></i>
                                        <i class="fa fa-asterisk asterik-style-disabled"></i>
                                    </span>
                                </div>
                                <input readonly type="text" id="DistrictText" class="form-control remarks" data-placeholder="district" data-bs-toggle="tooltip" placeholder="..."  tabindex="-1" />
                                <span asp-validation-for="DistrictId" class="text-danger"></span>
                                <input asp-for="SelectedDistrictId" type="hidden" id="SelectedDistrictId" name="SelectedDistrictId" value="@Model?.DistrictId" title="Auto-selected based on Pincode" />
                                <input type="hidden" asp-for="DistrictId" id="DistrictId" />
                                <div id="district-loading" class="loading-spinner">
                                    <i class="fas fa-spinner fa-spin"></i>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="input-group-label" for="StateText"> State:</label>
                            <div class="input-group mb-3 autocomplete-wrapper">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="fas fa-flag"></i>
                                        <i class="fa fa-asterisk asterik-style-disabled"></i>
                                    </span>
                                </div>
                                <input readonly type="text" id="StateText" class="form-control remarks" data-placeholder="state" data-bs-toggle="tooltip" placeholder="..."  tabindex="-1" />
                                <span asp-validation-for="StateId" class="text-danger"></span>
                                <input asp-for="SelectedStateId" type="hidden" id="SelectedStateId" name="SelectedStateId" value="@Model?.StateId" title="Auto-selected based on Pincode" />
                                <input type="hidden" asp-for="StateId" id="StateId" />
                                <div id="state-loading" class="loading-spinner">
                                    <i class="fas fa-spinner fa-spin"></i>
                                </div>
                            </div>
                        </div>
                       
                        <div class="form-group">
                            <label class="input-group-label" for="Addressline"> Addressline:</label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fa fa-home"></i>  <i class="fa fa-asterisk asterik-style"></i></span>
                                </div>
                                <input id="Addressline" type="text" asp-for="Addressline" class="form-control remarks" placeholder="Street Address..." maxlength="70" />
                                <span asp-validation-for="Addressline" class="text-danger"></span>
                            </div>
                        </div>

                        
                        @*
                        <div class="form-group">
                        <label asp-for="ActivatedDate" class="control-label"></label>
                        <input asp-for="ActivatedDate" class="form-control remarks" />
                        <span asp-validation-for="ActivatedDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <span class="input-group-label"> Note:</span>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="Comments"><i class="fas fa-edit"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                                </div>
                                <input type="text" asp-for="Description" class="form-control remarks" placeholder="Note" maxlength="50" />
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <span class="input-group-label"> Status:</span>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" for="Status"><i class="fa fa-toggle-on"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                                </div>
                                <select required id="Status" asp-for="Status" class="form-control remarks" asp-items="Html.GetEnumSelectList<CompanyStatus>()">
                                    <option value="">--- SELECT ---</option>
                                </select>
                                <span asp-validation-for="Status" class="text-danger"></span>

                            </div>
                        </div>
                        *@

                        
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="form-group text-right">
                   @*  <button id="reset" type="submit" onclick="clearAllInputs()" class="btn btn-outline-secondary">
                        <i class="fas fa-undo"></i> Reset
                    </button> *@
                    <a id="back" asp-controller="Dashboard" asp-action="Index" class="btn btn-secondary">
                        <i class="fa fa-window-close"></i>
                        @Applicationsettings.CANCEL
                    </a>
                    <button id="create-agency" disabled type="submit" class="btn btn-success">
                        <i class="fas fa-building"></i> Add Company
                    </button>
                </div>
            </div>
        </form>

    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/company-admin/create-company.js"></script>
    <script src="~/js/company-admin/pincode.js"></script>
    <script src="~/js/common/image-upload.js"></script>
    <script src="~/js/common/form-validation.js"></script>
}
