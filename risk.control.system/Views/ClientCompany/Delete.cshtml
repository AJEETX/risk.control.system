@model risk.control.system.Models.ClientCompany

@{
    ViewData["Title"] = @Applicationsettings.DELETE;
}

<section class="content">
    <form id="create-user" asp-action="Delete" method="post">
        <input type="hidden" asp-for="ClientCompanyId" name="ClientCompanyId" id="@Model.ClientCompanyId" />
        <div class="card bg-light card-secondary">
            <div class="card-header">
                <h3 class="card-title"><i class="fas fa-user-minus"></i> Delete @Applicationsettings.CLIENT_COMPANY </h3>
            </div>
            <div class="card-body">
                <div class="submit-progress hidden">
                    <i class="fas fa-sync fa-spin fa-4x fa-fw"></i>
                </div>
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                    <dt class="col-sm-2">
                        Document
                    </dt>
                    <dd class="col-sm-10">
                        @if (Model?.DocumentImage is not null)
                        {
                            <img id="documentImage" src="data:image/*;base64,@(Convert.ToBase64String(Model?.DocumentImage))">
                        }
                        else
                        {
                            <img id="documentImage" src="~/img/no-image.png">
                        }
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Code)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Code)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Description)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Description)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.PhoneNumber)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.PhoneNumber)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Email)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Email)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Branch)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Branch)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Addressline)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Addressline)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.State)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.State.Name)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Country)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Country.Name)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.PinCode)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.PinCode.Name)
                    </dd>
                </dl>
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <a id="back" asp-action="Companies" class="btn btn-secondary"><i class="fa fa-window-close"></i>  @Applicationsettings.CANCEL </a> &nbsp;
                        @if (Model.HasClaims)
                        {
                            <span id="withdraw-information-popup" class="badge badge-light">
                                <div class="btn btn-outline-danger">
                                    <i class="fa fa-trash"></i>  @Applicationsettings.DELETE <span class="badge badge-danger">
                                        <i class="fas fa-info"></i>
                                    </span>
                                </div>
                            </span>
                        }
                        else
                        {
                            <input type="submit" value="Delete" class="btn btn-danger trash-icon" />
                        }
                    </div>
                </div>
            </div>
        </div>
    </form>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/delete-user.js">
    </script>
}