                                                <span class="input-group-text" id="bulk-upload"><i class="fa fa-upload"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                                            </div>

                                            <span class="checkbox">
                                                <input asp-for="BulkUpload" type="checkbox" data-toggle="toggle" data-on="<i class='fas fa-lock-open'></i> Active " data-off="<i class='fas fa-lock'></i> Lock" data-onstyle="success" data-offstyle="danger" data-width="120">
                                            </span>
                                        </div>
                                    </div>


                                </div>
                                <div class="col-md-3">

                                    <div class="form-group">
                                        <span class="input-group-label"> License Type:</span>
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" asp-for="LicenseType"><i class="nav-icon fas fa-file-invoice"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                                            </div>
                                            <select required asp-for="LicenseType" class="form-control remarks ipaddress" asp-items="Html.GetEnumSelectList<LicenseType>()">
                                                <option value="">--- SELECT ---</option>
                                            </select>
                                            <span asp-validation-for="LicenseType" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group">

                                        <span class="input-group-label"> Expiry Date:</span>
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" asp-for="ExpiryDate"><i class="nav-icon far fa-calendar-check"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                                            </div>
                                            <input asp-for="ExpiryDate" id="ExpiryDate" class="form-control remarks date-width" type="date" />
                                            <span asp-validation-for="ExpiryDate" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">

                                        <span class="input-group-label"> Max Allowed Claim [ max 50]:</span>
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" asp-for="SumAssuredValue"><i class="fas fa-coins"></i>  <i class="fa fa-asterisk asterik-style"></i></span>
                                            </div>
                                            <input required asp-for="TotalCreatedClaimAllowed" class="form-control remarks" type="text" placeholder="Max Allowed Claim" oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*)\./g, '$1');" min="5" maxlength="50" />
                                            <span asp-validation-for="TotalCreatedClaimAllowed" class="text-danger"></span>
                                        </div>
                                    </div>


                                </div>
                            </div>

                        </div>
                    </div>
                </div>

            </article>
            <div class="card-footer">
                <div class="row float-right">
                    <div class="col-md-12">
                        <a id="back" asp-action="Details" asp-route-id="@Model.ClientCompanyId" class="btn btn-secondary">
                            <i class="fa fa-window-close"></i>
                            @Applicationsettings.CANCEL
                        </a>
                        <button id="edit-company" type="submit" class="btn btn-warning">
                            <i class="fas fa-building"></i>  @Applicationsettings.EDIT Company
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</section>

