@using risk.control.system.Models.ViewModel;
@model VendorUserRolesViewModel
<section class="content">
    <form id="create-form" method="post" asp-action="update" enctype="multipart/form-data">
        <div class="card bg-light card-secondary">
            <div class="card-header">
                <h3 class="card-title"><i class="fas fa-user-plus"></i> Edit Role: <i> @Model.UserName </i></h3>
            </div>
            <div class="card-body">
                <div class="submit-progress hidden">
                    <i class="fas fa-sync fa-spin fa-4x fa-fw"></i>
                </div>
                <input hidden asp-for="@Model.UserId" />
                <input hidden asp-for="@Model.VendorId" />
                <div class="row">
                    <div class="col-md-12">
                        @for (int i = 0; i < Model.VendorUserRoleViewModel.Count; i++)
                        {
                            <div class="form-radio m-1">
                                <input type="hidden" asp-for="@Model.VendorUserRoleViewModel[i].RoleId" />
                                <input type="hidden" asp-for="@Model.VendorUserRoleViewModel[i].RoleName" />
                                <input asp-for="@Model.VendorUserRoleViewModel[i].Selected" class="form-radio-input" />
                                <label class="form-radio-label" asp-for="@Model.VendorUserRoleViewModel[i].Selected">
                                    @Model.VendorUserRoleViewModel[i].RoleName
                                </label>
                            </div>
                        }

                        <div asp-validation-summary="All" class="text-danger"></div>

                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12  text-right">
                        <a id="back" asp-controller="Agency" asp-action="User" class="btn btn-secondary">
                            <i class="fa fa-window-close"></i>
                            @Applicationsettings.CANCEL
                        </a>
                        <button id="editrole" type="submit" class="btn btn-warning">
                            <i class="fas fa-user-plus"></i> @Applicationsettings.EDIT Role
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/agency-admin/agency-user-roles.js">

    </script>
}