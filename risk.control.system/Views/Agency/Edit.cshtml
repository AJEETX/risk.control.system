@model risk.control.system.Models.Vendor

@{
    ViewData["Title"] = @Applicationsettings.EDIT;
    Layout = "/Views/Shared/AdminLTE/_FormLayout.cshtml";
}
<section class="content pt-2">
    <div class="container-fluid ">
        <form id="create-form" asp-action="Edit" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-secondary">
                        <div class="card-header">
                            <h3 class="card-title"><i class="fas fa-building"></i> Edit  Agency</h3>
                        </div>
                        <div class="card-body">
                            </div>
                        <div class="card-body">

                            <div class="row">
                                <div class="col-sm-6">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <input type="hidden" asp-for="VendorId" />
                                    <div class="form-group">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="email">@@Email Address</span>
                                            </div>
                                            <input readonly asp-for="Email" class="form-control readonly-input" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="FirstName">Agency Name <i class="fa fa-asterisk asterik-style"></i></span>
                                            </div>
                                            <input type="text" asp-for="Name" class="form-control title-name" required placeholder="Enter Agency Name" maxlength="20">
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="Code">Agency Code <i class="fa fa-asterisk asterik-style"></i></span>
                                            </div>
                                            <input type="text" asp-for="Code" class="form-control asterikx" required placeholder="Enter Agency Code" maxlength="5">
                                            <span asp-validation-for="Code" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="PhoneNumber">Phone # <i class="fa fa-asterisk asterik-style"></i></span>
                                            </div>
                                            <input type="number" asp-for="PhoneNumber" class="form-control" required maxlength="10" placeholder="Enter Phone # (10 digit)" min="2222222222" max="9999999999" />
                                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                        </div>
                                    </div>


                                    <div class="form-group">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="Branch">Branch Name <i class="fa fa-asterisk asterik-style"></i></span>
                                            </div>
                                            <input type="text" asp-for="Branch" class="form-control title-name" required placeholder="Enter Branch Name" maxlength="20">
                                            <span asp-validation-for="Branch" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="BankName">Bank Name <i class="fa fa-asterisk asterik-style"></i></span>
                                            </div>
                                            <input type="text" asp-for="BankName" class="form-control title-name" required placeholder="Enter Bank Name" maxlength="20">
                                            <span asp-validation-for="BankName" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="BankAccountNumber">Bank Account # <i class="fa fa-asterisk asterik-style"></i></span>
                                            </div>
                                            <input type="number" asp-for="BankAccountNumber" class="form-control" required placeholder="Bank Account #" maxlength="20">
                                            <span asp-validation-for="BankAccountNumber" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="IFSCCode">Bank IFSC Code <i class="fa fa-asterisk asterik-style"></i></span>
                                            </div>
                                            <input type="text" asp-for="IFSCCode" class="form-control asterikx" required placeholder="Bank IFSC Code" maxlength="10">
                                            <span asp-validation-for="IFSCCode" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">

                                    <div class="form-group">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="AgreementDate">Agreement Date <i class="fa fa-asterisk asterik-style"></i></span>
                                            </div>
                                            <input readonly type="date" asp-for="AgreementDate" class="form-control" required placeholder="Agreement Date">
                                            <span asp-validation-for="AgreementDate" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="ActivatedDate">Activated Date <i class="fa fa-asterisk asterik-style"></i></span>
                                            </div>
                                            <input readonly type="date" asp-for="ActivatedDate" class="form-control" required placeholder="Agreement Date">
                                            <span asp-validation-for="ActivatedDate" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" for="CountryId">Country <i class="fa fa-asterisk asterik-style"></i></span>
                                            </div>
                                            <select asp-for="CountryId" class="form-control" id="inputGroupSelect01" asp-items="ViewBag.CountryId" onchange="loadState(this)" required>
                                                <option value="">--- SELECT ---</option>
                                            </select>
                                            <span asp-validation-for="CountryId" class="text-danger"></span>

                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" for="StateId">State <i class="fa fa-asterisk asterik-style"></i></span>
                                            </div>
                                            <select id="StateId" asp-for="StateId" class="form-control" asp-items="ViewBag.StateId" onchange="loadDistrict(this)" required>
                                                <option value="">--- SELECT ---</option>
                                            </select>

                                            <span asp-validation-for="StateId" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" for="DistrictId">District <i class="fa fa-asterisk asterik-style"></i></span>
                                            </div>
                                            <select id="DistrictId" asp-for="DistrictId" class="form-control" asp-items="ViewBag.DistrictId" onchange="loadPinCode(this)" required>
                                                <option value="">--- SELECT ---</option>
                                            </select>

                                            <span asp-validation-for="DistrictId" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" for="PinCodeId">Pincode <i class="fa fa-asterisk asterik-style"></i></span>
                                            </div>
                                            <select id="PinCodeId" asp-for="PinCodeId" class="form-control" asp-items="ViewBag.PinCodeId" required>
                                                <option value="">--- SELECT ---</option>
                                            </select>
                                            <span asp-validation-for="PinCodeId" class="text-danger"></span>

                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="Addressline">Address line <i class="fa fa-asterisk asterik-style"></i></span>
                                            </div>
                                            <input type="text" asp-for="Addressline" class="form-control" placeholder="Enter Address line"  required maxlength="20"/>
                                            <span asp-validation-for="Addressline" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="DocumentImage">Document Photo</span>
                                            </div>
                                            @if (Model?.DocumentImage is not null)
                                            {
                                                <img id="documentImage" class="form-Image" src="data:image/*;base64,@(Convert.ToBase64String(Model?.DocumentImage))">
                                            }
                                            else
                                            {
                                                <img id="documentImage" class="form-Image" src="/img/no-photo.png">
                                            }
                                            <input asp-for="DocumentImage" type="file" class="form-control" onchange="document.getElementById('documentImage').src = window.URL.createObjectURL(this.files[0])" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="Comments">Remarks <i class="fa fa-asterisk asterik-style"></i></span>
                                            </div>
                                            <input type="text" asp-for="Description" class="form-control"  placeholder="Enter Remarks" maxlength="20" />
                                            <span asp-validation-for="Description" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group text-right">
                                        <a asp-action="Index"class="btn btn-secondary">
                                            <i class="fa fa-window-close"></i>
                                            @Applicationsettings.CANCEL
                                        </a>
                                        <button type="submit" class="btn btn-warning">
                                            <i class="fas fa-building"></i>  Edit Agency
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

     $(document).ready(function () {

            var askConfirmation = true;
            $('#create-form').submit(function (e) {
                if (askConfirmation) {
                    e.preventDefault();
                    $.confirm({
                        title: "Confirm Edit",
                        content: "Are you sure to edit agency?",
                        buttons: {
                            confirm: {
                                text: "Edit agency",
                                btnClass: 'btn-success',
                                action: function () {
                                    askConfirmation = false;
                                    $('#create-form').submit();
                                }
                            },
                            cancel: {
                                text: "Cancel",
                                btnClass: 'btn-default'
                            }
                        }
                    });
                }
            })
       });

}
