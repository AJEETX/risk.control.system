@model risk.control.system.Models.VendorApplicationUser

@{
    ViewData["Title"] = Applicationsettings.CREATE;
    var email = Model.Vendor.Email;
}

<section class="content">
    <div class="card bg-light card-secondary">
        <div class="card-header">
            <h3 class="card-title"><i class="fas fa-user-plus"></i>  Add User</h3>
        </div>
        <div class="card-body">
            <div class="submit-progress hidden">
                <i class="fas fa-sync fa-spin fa-4x fa-fw"></i>
            </div>
            <div class="row">
                <div class="col-md-3">
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <span class="input-group-label"> Email:</span>
                        <div class="input-group mb-3">
                            <div class="input-group-append">
                                <span class="input-group-text" id="emailid"> <i class="fas fa-at"></i> <i class="fa fa-asterisk asterik-style"></i> </span>
                            </div>
                            <input type="text" asp-for="Email" id="emailAddress" class="form-control email-address remarks" value="" onblur="CheckIfEmailValid();"
                                   required placeholder="username" maxlength="15" onkeydown='return alphaOnly(event);' onClick="this.select();" autocomplete="name">
                            <div class="input-group-append">
                                <span class="input-group-text" id="Email">@@@email</span>
                            </div>
                            <div class="input-group-append">
                                <button disabled id="check-email" class="input-group-text" onclick="checkUserEmail();">
                                    <i class="far fa-question-circle"></i>
                                </button>
                            </div>
                            <div class="input-group-append">
                                <span id="result"></span>
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                </div>

            </div>
        </div>

        <form id="create-form" asp-action="CreateUser" enctype="multipart/form-data" autocomplete="off">
            <input type="hidden" asp-for="VendorId" name="vendorId" value="@Model.Vendor.VendorId" />
            <input type="hidden" asp-for="Email" id="mailAddress" />
            <input type="hidden" id="txn" name="txn" value="agency" />
            <input type="hidden" id="emailSuffix" name="emailSuffix" value="@email" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="card-body">

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group hide-id">
                            <input asp-for="VendorId" class="form-control remarks" value="@Model.Vendor.VendorId" />
                        </div>
                        <div class="form-group">
                            <span class="input-group-label"> Photo:</span>
                            <div class="input-group mb-3">
                                <img id="createProfileImage" class="form-Image" data-preview-id="createProfileImage" src="@Applicationsettings.NO_USER" />
                                <i class="fa fa-asterisk asterik-style"></i>
                                <input asp-for="ProfileImage" class="form-control remarks document-image-input" type="file" id="createImageInput" data-preview-id="createProfileImage" required />
                            </div>
                        </div>
                        <div class="form-group">
                            <span class="input-group-label"> First Name:</span>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="FirstName"><i class="fa fa-user"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                                </div>
                                <input type="text" asp-for="FirstName" class="form-control remarks title-name" required placeholder="First Name" value="" maxlength="20">
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <span class="input-group-label"> Last Name:</span>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="LastName"> <i class="fa fa-user"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                                </div>
                                <input type="text" asp-for="LastName" class="form-control remarks title-name" required placeholder="Last Name" value="" maxlength="20">
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>

                        @*<div class="form-group">
                        <span class="input-group-label"> Password:</span>
                        <div class="input-group mb-3">
                        <div class="input-group-prepend">
                        <span class="input-group-text" id="Password"> <i class="fa fa-key"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                        </div>
                        <input type="password" asp-for="Password" class="form-control remarks" required placeholder="Password" value="" maxlength="20" autocomplete="new-password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        </div>*@

                        <div class="form-group">
                            <span class="input-group-label"> Phone #:</span>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="PhoneNumber"><i class="fas fa-phone"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                                </div>
                                <input type="text" asp-for="PhoneNumber" class="form-control remarks" required maxlength="14" value="" placeholder="Phone # with country code"
                                       oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*)\./g, '$1');" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <span class="input-group-label"> Role:</span>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" asp-for="ClaimType"><i class="nav-icon fas fa-file-invoice"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                                </div>
                                @{
                                    // Get the enum values except the one you want to exclude
                                    var roles = Enum.GetValues(typeof(AgencyRole))
                                    .Cast<AgencyRole>()
                                    .Where(role => role != AgencyRole.AGENCY_ADMIN) // Replace RoleToExclude with the actual enum value
                                    .Select(role => new SelectListItem
                                    {
                                        Value = role.ToString(),
                                        Text = role.ToString()
                                    });
                                }
                                <select required asp-for="@Model.UserRole" class="form-control remarks" asp-items="@roles">
                                    <option value="">--- SELECT ---</option>
                                </select>
                                <span asp-validation-for="@Model.UserRole" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <span class="input-group-label"> Note:</span>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="Comments"><i class="fas fa-comment"></i>  <i class="fa fa-asterisk asterik-style-none"></i></span>
                                </div>
                                <input type="text" asp-for="Comments" class="form-control remarks" placeholder="Notes (optional)" value="" maxlength="50" />
                            </div>
                        </div>

                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <span class="input-group-label" for="CountryId"> Country:</span>
                            <div class="input-group mb-3 autocomplete-wrapper">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" for="CountryId"><i class="fas fa-map-marked-alt"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                                </div>
                                <input type="text" id="CountryId" class="form-control remarks auto-dropdown" data-placeholder="country" placeholder="Type country..." asp-for="CountryId" required value="" />
                                <span asp-validation-for="CountryId" class="text-danger"></span>
                                <input asp-for="SelectedCountryId" type="hidden" id="SelectedCountryId" name="SelectedCountryId" value="@Model?.CountryId" />
                                <div id="country-loading" class="loading-spinner">
                                    <i class="fas fa-spinner fa-spin"></i>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <span class="input-group-label" for="StateId"> State:</span>
                            <div class="input-group mb-3 autocomplete-wrapper">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" for="StateId"><i class="fas fa-map-marker-alt"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                                </div>
                                <input type="text" id="StateId" class="form-control remarks auto-dropdown" data-placeholder="state" placeholder="Type state..." asp-for="StateId" required value="" />
                                <span asp-validation-for="StateId" class="text-danger"></span>
                                <input asp-for="SelectedStateId" type="hidden" id="SelectedStateId" name="SelectedStateId" value="@Model?.StateId" />
                                <div id="state-loading" class="loading-spinner">
                                    <i class="fas fa-spinner fa-spin"></i>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <span class="input-group-label" for="DistrictId">District:</span>
                            <div class="input-group mb-3 autocomplete-wrapper">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" for="DistrictId">
                                        <i class="fas fa-city"></i>
                                        <i class="fa fa-asterisk asterik-style"></i>
                                    </span>
                                </div>
                                <input type="text" id="DistrictId" class="form-control remarks auto-dropdown" data-placeholder="district" placeholder="Type district..." asp-for="DistrictId" required value="" />
                                <span asp-validation-for="DistrictId" class="text-danger"></span>
                                <input asp-for="SelectedDistrictId" type="hidden" id="SelectedDistrictId" name="SelectedDistrictId" value="@Model?.DistrictId" />
                                <div id="district-loading" class="loading-spinner">
                                    <i class="fas fa-spinner fa-spin"></i>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <span class="input-group-label" for="PinCodeId">Pincode:</span>
                            <div class="input-group mb-3 autocomplete-wrapper">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" for="PinCodeId">
                                        <i class="fas fa-map-pin"></i>
                                        <i class="fa fa-asterisk asterik-style"></i>
                                    </span>
                                </div>
                                <input type="text" id="PinCodeId" class="form-control remarks auto-dropdown" data-placeholder="pincode" placeholder="Type pincode..." asp-for="PinCodeId" required value="" />
                                <span asp-validation-for="PinCodeId" class="text-danger"></span>
                                <input asp-for="SelectedPincodeId" type="hidden" id="SelectedPincodeId" name="SelectedPincodeId" value="@Model?.PinCodeId" />
                                <div id="pincode-loading" class="loading-spinner">
                                    <i class="fas fa-spinner fa-spin"></i>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <span class="input-group-label"> Address:</span>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="Addressline"><i class="fas fa-home"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                                </div>
                                <input type="text" asp-for="Addressline" class="form-control remarks" placeholder="Enter Address line" value="" maxlength="50" required />
                                <span asp-validation-for="Addressline" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <span class="input-group-label"> Status:</span>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="Addressline"><i class="fa fa-key"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                                </div>
                                <div class="input-group-prepend">
                                </div>
                                <span class="checkbox">
                                    <input asp-for="Active" type="checkbox" data-toggle="toggle" data-on="<i class='fa fa-toggle-on'></i> Active " data-off="<i class='fa fa-toggle-off'></i> Lock" data-onstyle="success" data-offstyle="danger" data-width="120">
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group text-right">
                            @* <button id="reset" type="submit" onclick="clearAllInputs()" class="btn btn-outline-secondary">
                                <i class="fas fa-undo"></i> Reset
                            </button> *@
                            <a id="back" asp-controller="Agency" asp-action="Users" class="btn btn-secondary">
                                <i class="fa fa-window-close"></i>
                                @Applicationsettings.CANCEL
                            </a>
                            <button disabled id="create-agency" type="submit" class="btn btn-success">
                                <i class="fas fa-user-plus"></i> Add User
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </form>

    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/agency-admin/agency-create-user.js">
    </script>
    <script src="~/js/company-admin/pincode.js"></script>
    <script src="~/js/common/profile-image-upload.js"></script>
}