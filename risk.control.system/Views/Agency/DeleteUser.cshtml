@model risk.control.system.Models.VendorApplicationUser

@{
    ViewData["Title"] = Applicationsettings.DELETE;
}
<section class="content">
    <form id="create-form" asp-action="DeleteUser" method="post">
        <div class="card bg-light card-secondary">
            <div class="card-header">
                <h3 class="card-title"><i class="fas fa-user-minus"></i> Delete User </h3>
            </div>
            <div class="card-body">
                <div class="submit-progress hidden">
                    <i class="fas fa-sync fa-spin fa-4x fa-fw"></i>
                </div>
                <div class="form-group">
                    <label>Profile Photo:</label>
                    @if (Model?.ProfilePictureUrl is not null)
                    {
                        <img id="profileImage" class="form-Image" src="@Model?.ProfilePictureUrl">
                    }
                    else
                    {
                        <img id="profileImage" class="form-Image" src="@Applicationsettings.NO_USER">
                    }
                </div>
                <div class="row">

                    <div class="col-md-6">
                        <input type="hidden" asp-for="Email" />
                        
                        <div class="form-group">
                            <label>Email:</label>
                            <input readonly asp-for="Email" class="form-control" />
                        </div>

                        

                        <div class="form-group">
                            <label>First Name:</label>
                            <input readonly asp-for="FirstName" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label>Last Name:</label>
                            <input readonly asp-for="LastName" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label>Phone #:</label>
                            <input readonly asp-for="PhoneNumber" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label>Role:</label>
                            <input readonly value="@Model.UserRole" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label>Note:</label>
                            <input readonly asp-for="Comments" class="form-control" />
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Country:</label>
                            <input readonly value="@Model.Country.Name" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label>State:</label>
                            <input readonly value="@Model.State.Name" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label>District:</label>
                            <input readonly value="@Model.District.Name" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label>Pincode:</label>
                            <input readonly value="@Model.PinCode.Name" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label>Address:</label>
                            <input readonly asp-for="Addressline" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label>Status:</label>
                            <div class="input-group-prepend">
                            </div>
                            <input asp-for="Active" type="checkbox" disabled data-toggle="toggle" data-on="<i class='fa fa-toggle-on'></i> Active " data-off="<i class='fa fa-toggle-off'></i> Lock" data-onstyle="secondary" data-offstyle="default" data-width="120" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-md-12">
                        <a id="back" asp-action="Users" class="btn btn-outline-secondary"><i class="fas fa-arrow-left"></i> @Applicationsettings.BACK</a>
                        <input type="hidden" asp-for="Email" name="email" />
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </div>
                </div>
            </div>
        </div>
    </form>
</section>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/delete-user.js">

    </script>
}